{% extends 'base_sidebar.html.twig' %}

{% block title %}Редактирование товара{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="d-flex align-items-center mb-4">
                <a href="{{ path('app_products_show', {id: product.id}) }}" class="btn btn-outline-secondary me-3">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <h1 class="h3 mb-0">
                    <i class="fas fa-edit me-2"></i>Редактирование товара
                </h1>
            </div>

            <div class="card-modern">
                <div class="card-body-modern">
                    <form method="post">
                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label for="name" class="form-label">Название *</label>
                                <input type="text" class="form-control" id="name" name="name" value="{{ product.name }}" required>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label for="sku" class="form-label">Артикул *</label>
                                <input type="text" class="form-control" id="sku" name="sku" value="{{ product.sku }}" required>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Описание</label>
                            <textarea class="form-control" id="description" name="description" rows="3">{{ product.description }}</textarea>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="category" class="form-label">Категория *</label>
                                <select class="form-select" id="category" name="category" required>
                                    <option value="product" {% if product.category == 'product' %}selected{% endif %}>Товар</option>
                                    <option value="service" {% if product.category == 'service' %}selected{% endif %}>Услуга</option>
                                </select>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="unit" class="form-label">Единица измерения</label>
                                <select class="form-select" id="unit" name="unit">
                                    <option value="">Не указано</option>
                                    <option value="шт" {% if product.unit == 'шт' %}selected{% endif %}>шт</option>
                                    <option value="кг" {% if product.unit == 'кг' %}selected{% endif %}>кг</option>
                                    <option value="л" {% if product.unit == 'л' %}selected{% endif %}>л</option>
                                    <option value="м" {% if product.unit == 'м' %}selected{% endif %}>м</option>
                                    <option value="м2" {% if product.unit == 'м2' %}selected{% endif %}>м²</option>
                                    <option value="м3" {% if product.unit == 'м3' %}selected{% endif %}>м³</option>
                                    <option value="упак" {% if product.unit == 'упак' %}selected{% endif %}>упак</option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="price" class="form-label">Цена (₽) *</label>
                                <input type="number" step="0.01" class="form-control" id="price" name="price" value="{{ product.price }}" required>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="cost" class="form-label">Себестоимость (₽)</label>
                                <input type="number" step="0.01" class="form-control" id="cost" name="cost" value="{{ product.cost }}">
                            </div>
                        </div>

                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="is_active" name="is_active" value="1" {% if product.isActive %}checked{% endif %}>
                            <label class="form-check-label" for="is_active">
                                Активен
                            </label>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Сохранить изменения
                            </button>
                            <a href="{{ path('app_products_show', {id: product.id}) }}" class="btn btn-outline-secondary">
                                Отмена
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
