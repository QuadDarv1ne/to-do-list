{% extends 'base.html.twig' %}

{% block title %}Resource Management{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_dashboard') }}">
                            <i class="fas fa-home"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('app_resource_index') }}">
                            <i class="fas fa-users"></i> Resources
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_task_index') }}">
                            <i class="fas fa-tasks"></i> Tasks
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_budget_index') }}">
                            <i class="fas fa-wallet"></i> Budgets
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Resource Management</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="loadResourceAvailability()">
                            <i class="fas fa-sync-alt"></i> Refresh
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#allocationModal">
                            <i class="fas fa-user-plus"></i> Allocate
                        </button>
                    </div>
                </div>
            </div>

            <!-- Resource Summary Cards -->
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Total Resources</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">{{ resources|length }}</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-users fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Active Resources</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        {% set activeCount = 0 %}
                                        {% for resource in resources %}
                                            {% if resource.isActive %}
                                                {% set activeCount = activeCount + 1 %}
                                            {% endif %}
                                        {% endfor %}
                                        {{ activeCount }}
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-user-check fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-info shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                        Admin Users</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        {% set adminCount = 0 %}
                                        {% for resource in resources %}
                                            {% if resource.hasRole('ROLE_ADMIN') %}
                                                {% set adminCount = adminCount + 1 %}
                                            {% endif %}
                                        {% endfor %}
                                        {{ adminCount }}
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-user-shield fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-warning shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                        Managers</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        {% set managerCount = 0 %}
                                        {% for resource in resources %}
                                            {% if resource.hasRole('ROLE_MANAGER') %}
                                                {% set managerCount = managerCount + 1 %}
                                            {% endif %}
                                        {% endfor %}
                                        {{ managerCount }}
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-user-tie fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Resource Table -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Team Members</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered" id="resourceTable">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Position</th>
                                    <th>Department</th>
                                    <th>Role</th>
                                    <th>Status</th>
                                    <th>Tasks</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for resource in resources %}
                                <tr>
                                    <td>{{ resource.fullName }}</td>
                                    <td>{{ resource.email }}</td>
                                    <td>{{ resource.position|default('N/A') }}</td>
                                    <td>{{ resource.department|default('N/A') }}</td>
                                    <td>
                                        <span class="badge 
                                            {% if resource.hasRole('ROLE_ADMIN') %}bg-danger
                                            {% elseif resource.hasRole('ROLE_MANAGER') %}bg-warning
                                            {% elseif resource.hasRole('ROLE_ANALYST') %}bg-info
                                            {% else %}bg-secondary{% endif %}">
                                            {{ resource.roleDisplayName }}
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge 
                                            {% if resource.isActive %}bg-success{% else %}bg-danger{% endif %}">
                                            {% if resource.isActive %}Active{% else %}Inactive{% endif %}
                                        </span>
                                    </td>
                                    <td>
                                        {% set assignedTasks = resource.assignedTasks|length %}
                                        <span class="badge bg-primary">{{ assignedTasks }} tasks</span>
                                    </td>
                                    <td>
                                        <a href="{{ path('app_resource_workload', {'id': resource.id}) }}" class="btn btn-sm btn-info">Workload</a>
                                        <a href="#" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#viewSkillsModal" data-resource-id="{{ resource.id }}">Skills</a>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="8" class="text-center">No resources found</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<!-- Allocation Modal -->
<div class="modal fade" id="allocationModal" tabindex="-1" aria-labelledby="allocationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="allocationModalLabel">Allocate Resource</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="allocationForm">
                    <div class="mb-3">
                        <label for="taskId" class="form-label">Task</label>
                        <select class="form-select" id="taskId" required>
                            <option value="">Select a task</option>
                            <!-- Options will be populated dynamically -->
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="resourceId" class="form-label">Resource</label>
                        <select class="form-select" id="resourceId" required>
                            <option value="">Select a resource</option>
                            {% for resource in resources %}
                            <option value="{{ resource.id }}">{{ resource.fullName }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="allocateResource()">Allocate</button>
            </div>
        </div>
    </div>
</div>

<!-- View Skills Modal -->
<div class="modal fade" id="viewSkillsModal" tabindex="-1" aria-labelledby="viewSkillsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewSkillsModalLabel">Resource Skills</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="skillsContent">
                    <p>Loading...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
// Загрузка доступных задач для распределения при открытии модального окна
document.getElementById('allocationModal').addEventListener('shown.bs.modal', async function () {
    try {
        const response = await fetch('{{ path('api_tasks_list', {status: 'pending', limit: 50}) }}');
        const data = await response.json();
        
        const select = document.getElementById('taskId');
        select.innerHTML = '<option value="">Select a task</option>';
        
        if (data.data && Array.isArray(data.data)) {
            data.data.forEach(task => {
                const option = document.createElement('option');
                option.value = task.id;
                option.textContent = `${task.title} (${task.status})`;
                select.appendChild(option);
            });
        }
        
        console.log('Загружено задач:', data.data?.length || 0);
    } catch (error) {
        console.error('Ошибка загрузки задач:', error);
        alert('Не удалось загрузить список задач');
    }
});

// Обработка просмотра навыков
document.querySelectorAll('[data-bs-toggle="modal"][data-resource-id]').forEach(button => {
    button.addEventListener('click', function() {
        const resourceId = this.getAttribute('data-resource-id');
        loadResourceSkills(resourceId);
    });
});

async function loadResourceSkills(resourceId) {
    try {
        const response = await fetch(`/resource/${resourceId}/skills`);
        
        if (response.ok) {
            const data = await response.json();
            renderSkills(data);
        } else {
            // Если навыка нет, показываем сообщение
            document.getElementById('skillsContent').innerHTML = `
                <h6>Навыки ресурса</h6>
                <p class="text-muted">У этого ресурса пока нет добавленных навыков.</p>
                <button class="btn btn-sm btn-primary" onclick="showAddSkillForm(${resourceId})">
                    <i class="fas fa-plus"></i> Добавить навык
                </button>
            `;
        }
    } catch (error) {
        console.error('Ошибка загрузки навыков:', error);
        document.getElementById('skillsContent').innerHTML = `
            <h6>Навыки ресурса</h6>
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle"></i>
                Навыки не загружены. Попробуйте обновить страницу.
            </div>
        `;
    }
}

function renderSkills(skills) {
    if (!skills || skills.length === 0) {
        document.getElementById('skillsContent').innerHTML = '<p>Навыки не найдены</p>';
        return;
    }
    
    let html = '<h6>Навыки ресурса</h6><div class="list-group">';
    
    skills.forEach(skill => {
        html += `
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <strong>${skill.name || 'Без названия'}</strong>
                    ${skill.level ? `<span class="badge bg-info ms-2">${skill.level}</span>` : ''}
                    ${skill.description ? `<br><small class="text-muted">${skill.description}</small>` : ''}
                </div>
                <button class="btn btn-sm btn-outline-danger" onclick="removeSkill(${skill.id})">
                    <i class="fas fa-trash"></i>
                </button>
            </div>
        `;
    });
    
    html += '</div>';
    document.getElementById('skillsContent').innerHTML = html;
}

async function loadResourceAvailability() {
    try {
        const response = await fetch('{{ path('app_resource_availability') }}');
        const data = await response.json();

        if (data.success) {
            console.log('Доступность ресурсов обновлена');
            location.reload();
        }
    } catch (error) {
        console.error('Ошибка загрузки доступности:', error);
        alert('Не удалось обновить доступность ресурсов');
    }
}

async function allocateResource() {
    const taskId = document.getElementById('taskId').value;
    const resourceId = document.getElementById('resourceId').value;

    if (!taskId || !resourceId) {
        alert('Пожалуйста, выберите задачу и ресурс');
        return;
    }

    try {
        const response = await fetch('{{ path('app_resource_allocation') }}', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-CSRF-TOKEN': '{{ csrf_token("allocate") }}'
            },
            body: JSON.stringify({
                task_id: taskId,
                resource_id: resourceId
            })
        });

        const result = await response.json();

        if (result.success) {
            alert('Ресурс успешно назначен!');
            document.getElementById('allocationModal').querySelector('.btn-close').click();
            location.reload();
        } else {
            alert('Ошибка назначения ресурса: ' + result.message);
        }
    } catch (error) {
        console.error('Ошибка назначения ресурса:', error);
        alert('Ошибка назначения ресурса');
    }
}

function showAddSkillForm(resourceId) {
    const skillName = prompt('Введите название навыка:');
    if (skillName) {
        // Здесь будет логика добавления навыка
        alert('Функция добавления навыка в разработке');
    }
}

async function removeSkill(skillId) {
    if (confirm('Вы уверены, что хотите удалить этот навык?')) {
        try {
            const response = await fetch(`/resource/skills/${skillId}`, {
                method: 'DELETE'
            });
            
            if (response.ok) {
                alert('Навык удалён');
                // Перезагрузить список навыков
            } else {
                alert('Ошибка удаления навыка');
            }
        } catch (error) {
            console.error('Ошибка удаления навыка:', error);
            alert('Ошибка удаления навыка');
        }
    }
}
</script>
{% endblock %}