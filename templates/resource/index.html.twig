{% extends 'base_modern.html.twig' %}

{% block title %}Resource Management{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_dashboard') }}">
                            <i class="fas fa-home"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('app_resource_index') }}">
                            <i class="fas fa-users"></i> Resources
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_task_index') }}">
                            <i class="fas fa-tasks"></i> Tasks
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_budget_index') }}">
                            <i class="fas fa-wallet"></i> Budgets
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Resource Management</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="loadResourceAvailability()">
                            <i class="fas fa-sync-alt"></i> Refresh
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#allocationModal">
                            <i class="fas fa-user-plus"></i> Allocate
                        </button>
                    </div>
                </div>
            </div>

            <!-- Resource Summary Cards -->
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Total Resources</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">{{ resources|length }}</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-users fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Active Resources</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        {% set activeCount = 0 %}
                                        {% for resource in resources %}
                                            {% if resource.isActive %}
                                                {% set activeCount = activeCount + 1 %}
                                            {% endif %}
                                        {% endfor %}
                                        {{ activeCount }}
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-user-check fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-info shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                        Admin Users</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        {% set adminCount = 0 %}
                                        {% for resource in resources %}
                                            {% if resource.hasRole('ROLE_ADMIN') %}
                                                {% set adminCount = adminCount + 1 %}
                                            {% endif %}
                                        {% endfor %}
                                        {{ adminCount }}
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-user-shield fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-warning shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                        Managers</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">
                                        {% set managerCount = 0 %}
                                        {% for resource in resources %}
                                            {% if resource.hasRole('ROLE_MANAGER') %}
                                                {% set managerCount = managerCount + 1 %}
                                            {% endif %}
                                        {% endfor %}
                                        {{ managerCount }}
                                    </div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-user-tie fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Resource Table -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Team Members</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered" id="resourceTable">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Position</th>
                                    <th>Department</th>
                                    <th>Role</th>
                                    <th>Status</th>
                                    <th>Tasks</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for resource in resources %}
                                <tr>
                                    <td>{{ resource.fullName }}</td>
                                    <td>{{ resource.email }}</td>
                                    <td>{{ resource.position|default('N/A') }}</td>
                                    <td>{{ resource.department|default('N/A') }}</td>
                                    <td>
                                        <span class="badge 
                                            {% if resource.hasRole('ROLE_ADMIN') %}bg-danger
                                            {% elseif resource.hasRole('ROLE_MANAGER') %}bg-warning
                                            {% elseif resource.hasRole('ROLE_ANALYST') %}bg-info
                                            {% else %}bg-secondary{% endif %}">
                                            {{ resource.roleDisplayName }}
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge 
                                            {% if resource.isActive %}bg-success{% else %}bg-danger{% endif %}">
                                            {% if resource.isActive %}Active{% else %}Inactive{% endif %}
                                        </span>
                                    </td>
                                    <td>
                                        {% set assignedTasks = resource.assignedTasks|length %}
                                        <span class="badge bg-primary">{{ assignedTasks }} tasks</span>
                                    </td>
                                    <td>
                                        <a href="{{ path('app_resource_workload', {'id': resource.id}) }}" class="btn btn-sm btn-info">Workload</a>
                                        <a href="#" class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#viewSkillsModal" data-resource-id="{{ resource.id }}">Skills</a>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="8" class="text-center">No resources found</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<!-- Allocation Modal -->
<div class="modal fade" id="allocationModal" tabindex="-1" aria-labelledby="allocationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="allocationModalLabel">Allocate Resource</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="allocationForm">
                    <div class="mb-3">
                        <label for="taskId" class="form-label">Task</label>
                        <select class="form-select" id="taskId" required>
                            <option value="">Select a task</option>
                            <!-- Options will be populated dynamically -->
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="resourceId" class="form-label">Resource</label>
                        <select class="form-select" id="resourceId" required>
                            <option value="">Select a resource</option>
                            {% for resource in resources %}
                            <option value="{{ resource.id }}">{{ resource.fullName }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="allocateResource()">Allocate</button>
            </div>
        </div>
    </div>
</div>

<!-- View Skills Modal -->
<div class="modal fade" id="viewSkillsModal" tabindex="-1" aria-labelledby="viewSkillsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewSkillsModalLabel">Resource Skills</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="skillsContent">
                    <p>Loading...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
async function loadResourceAvailability() {
    try {
        const response = await fetch('{{ path('app_resource_availability') }}');
        const data = await response.json();
        
        // Update the table with availability information
        console.log('Resource availability loaded:', data);
    } catch (error) {
        console.error('Error loading resource availability:', error);
    }
}

async function allocateResource() {
    const taskId = document.getElementById('taskId').value;
    const resourceId = document.getElementById('resourceId').value;
    
    if (!taskId || !resourceId) {
        alert('Please select both task and resource');
        return;
    }
    
    try {
        const response = await fetch('{{ path('app_resource_allocation') }}', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-CSRF-TOKEN': '{{ csrf_token("allocate") }}'
            },
            body: JSON.stringify({
                task_id: taskId,
                resource_id: resourceId
            })
        });
        
        const result = await response.json();
        
        if (result.success) {
            alert('Resource allocated successfully!');
            document.getElementById('allocationModal').querySelector('.btn-close').click();
            // Refresh the page to show updated assignments
            location.reload();
        } else {
            alert('Error allocating resource: ' + result.message);
        }
    } catch (error) {
        console.error('Error allocating resource:', error);
        alert('Error allocating resource');
    }
}

// Load available tasks for allocation when modal opens
document.getElementById('allocationModal').addEventListener('shown.bs.modal', async function () {
    try {
        // In a real application, you would fetch available tasks from the backend
        // For now, we'll simulate it with placeholder data
        console.log('Loading available tasks...');
    } catch (error) {
        console.error('Error loading tasks:', error);
    }
});

// Handle view skills modal
document.querySelectorAll('[data-bs-toggle="modal"][data-resource-id]').forEach(button => {
    button.addEventListener('click', function() {
        const resourceId = this.getAttribute('data-resource-id');
        loadResourceSkills(resourceId);
    });
});

async function loadResourceSkills(resourceId) {
    try {
        // In a real application, you would fetch skills from the backend
        // For now, we'll show a placeholder
        document.getElementById('skillsContent').innerHTML = `
            <h6>Skills for Resource ID: ${resourceId}</h6>
            <p>This would show the specific skills and specialties for this resource.</p>
        `;
    } catch (error) {
        console.error('Error loading skills:', error);
        document.getElementById('skillsContent').innerHTML = '<p>Error loading skills information.</p>';
    }
}
</script>
{% endblock %}