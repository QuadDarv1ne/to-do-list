{% extends 'base.html.twig' %}

{% block title %}Уведомления{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Панель управления</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Уведомления</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <h2 class="h3 mb-4">
                <i class="fas fa-bell me-2"></i>Уведомления
            </h2>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Список уведомлений</h5>
                    <a href="{{ path('app_task_notification_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus me-1"></i>Создать уведомление
                    </a>
                </div>
                <div class="card-body">
                    {% if task_notifications %}
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Тип</th>
                                    <th>Тема</th>
                                    <th>Отправитель</th>
                                    <th>Статус</th>
                                    <th>Дата создания</th>
                                    <th>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for notification in task_notifications %}
                                <tr>
                                    <td>
                                        {% if notification.type == 'assignment' %}
                                            <span class="badge bg-info">Назначение</span>
                                        {% elseif notification.type == 'update' %}
                                            <span class="badge bg-warning">Обновление</span>
                                        {% elseif notification.type == 'completion' %}
                                            <span class="badge bg-success">Выполнение</span>
                                        {% elseif notification.type == 'reminder' %}
                                            <span class="badge bg-secondary">Напоминание</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path('app_task_notification_show', {'id': notification.id}) }}">
                                            {{ notification.subject }}
                                        </a>
                                    </td>
                                    <td>{{ notification.sender.fullName }}</td>
                                    <td>
                                        {% if notification.isIsRead %}
                                            <span class="badge bg-success">Прочитано</span>
                                        {% else %}
                                            <span class="badge bg-warning">Непрочитано</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ notification.createdAt|date('d.m.Y H:i') }}</td>
                                    <td>
                                        <a href="{{ path('app_task_notification_show', {'id': notification.id}) }}" class="btn btn-sm btn-outline-primary me-1">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_task_notification_edit', {'id': notification.id}) }}" class="btn btn-sm btn-outline-warning me-1">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" action="{{ path('app_task_notification_delete', {'id': notification.id}) }}" style="display: inline-block;" onsubmit="return confirm('Вы уверены, что хотите удалить это уведомление?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ notification.id) }}">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% else %}
                    <p class="text-muted">Уведомлений пока нет.</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}