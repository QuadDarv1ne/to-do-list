{# templates/task/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Задачи{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .task-card {
            border-left: 4px solid #3498db;
            transition: transform 0.2s;
        }
        .task-card.completed {
            border-left-color: #2ecc71;
        }
        .task-card.in-progress {
            border-left-color: #f39c12;
        }
        .task-actions {
            opacity: 0;
            transition: opacity 0.3s;
        }
        .task-card:hover .task-actions {
            opacity: 1;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-tasks me-2"></i>Задачи
        </h1>
        <a href="{{ path('app_task_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Создать задачу
        </a>
    </div>

    {% if tasks|length > 0 %}
        <div class="row">
            {% for task in tasks %}
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card task-card {{ task.isDone ? 'completed' : 'in-progress' }}">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h5 class="card-title">
                                        {% if task.isDone %}
                                            <del>{{ task.name }}</del>
                                        {% else %}
                                            {{ task.name }}
                                        {% endif %}
                                    </h5>
                                    <p class="card-text text-muted small">
                                        {{ task.description|nl2br }}
                                    </p>
                                </div>
                                {% if task.isDone %}
                                    <span class="badge bg-success">Выполнено</span>
                                {% else %}
                                    <span class="badge bg-warning text-dark">В работе</span>
                                {% endif %}
                            </div>
                            
                            <div class="mt-3">
                                <small class="text-muted">
                                    <i class="fas fa-user me-1"></i>
                                    {{ task.assignedUser.fullName }}
                                </small>
                                <br>
                                <small class="text-muted">
                                    <i class="fas fa-calendar me-1"></i>
                                    {{ task.createdAt|date('d.m.Y H:i') }}
                                </small>
                            </div>
                            
                            <div class="task-actions mt-3">
                                <div class="btn-group btn-group-sm">
                                    <a href="{{ path('app_task_show', {'id': task.id}) }}" 
                                       class="btn btn-outline-info" 
                                       title="Просмотр">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_task_edit', {'id': task.id}) }}" 
                                       class="btn btn-outline-warning" 
                                       title="Редактировать">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    {% if not task.isDone %}
                                        <form action="{{ path('app_task_toggle', {'id': task.id}) }}" 
                                              method="post" 
                                              class="d-inline">
                                            <button type="submit" 
                                                    class="btn btn-outline-success" 
                                                    title="Отметить как выполнено">
                                                <i class="fas fa-check"></i>
                                            </button>
                                        </form>
                                    {% else %}
                                        <form action="{{ path('app_task_toggle', {'id': task.id}) }}" 
                                              method="post" 
                                              class="d-inline">
                                            <button type="submit" 
                                                    class="btn btn-outline-secondary" 
                                                    title="Вернуть в работу">
                                                <i class="fas fa-redo"></i>
                                            </button>
                                        </form>
                                    {% endif %}
                                    <form action="{{ path('app_task_delete', {'id': task.id}) }}" 
                                          method="post" 
                                          class="d-inline"
                                          onsubmit="return confirm('Вы уверены, что хотите удалить эту задачу?')">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
                                        <button type="submit" 
                                                class="btn btn-outline-danger" 
                                                title="Удалить">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="text-center py-5">
            <i class="fas fa-tasks fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">Задачи не найдены</h4>
            <p class="text-muted">Создайте первую задачу, нажав кнопку выше</p>
            <a href="{{ path('app_task_new') }}" class="btn btn-primary">Создать задачу</a>
        </div>
    {% endif %}
</div>
{% endblock %}