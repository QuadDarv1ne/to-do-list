{% extends 'base_sidebar.html.twig' %}

{% block page_title %}{{ task.title }}{% endblock %}

{% block body %}
<!-- Breadcrumb -->
<nav style="margin-bottom: 20px;">
    <ol style="list-style: none; padding: 0; display: flex; gap: 10px; color: var(--text-secondary); font-size: 14px;">
        <li><a href="{{ path('app_dashboard') }}" style="color: var(--text-secondary); text-decoration: none;">Панель</a></li>
        <li>/</li>
        <li><a href="{{ path('app_task_index') }}" style="color: var(--text-secondary); text-decoration: none;">Задачи</a></li>
        {% if task.parent %}
        <li>/</li>
        <li><a href="{{ path('app_task_show', {'id': task.parent.id}) }}" style="color: var(--text-secondary); text-decoration: none;">{{ task.parent.title }}</a></li>
        {% endif %}
        <li>/</li>
        <li style="color: var(--text-primary);">{{ task.title }}</li>
    </ol>
</nav>

<!-- Header -->
<div style="display: flex; justify-content: space-between; align-items: start; margin-bottom: 30px;">
    <div style="flex: 1;">
        <h2 style="margin: 0 0 10px 0; font-size: 32px; font-weight: 600;">{{ task.title }}</h2>
        <div style="display: flex; gap: 10px; flex-wrap: wrap;">
            {% if task.status == 'completed' %}
                <span class="status-badge success">
                    <i class="fas fa-check me-1"></i>Завершено
                </span>
            {% elseif task.status == 'in_progress' %}
                <span class="status-badge warning">
                    <i class="fas fa-spinner me-1"></i>В процессе
                </span>
            {% else %}
                <span class="status-badge danger">
                    <i class="fas fa-clock me-1"></i>В ожидании
                </span>
            {% endif %}
            
            {% if task.priority == 'high' %}
                <span class="status-badge" style="background: rgba(255, 107, 203, 0.2); color: var(--color-bonuses);">
                    <i class="fas fa-arrow-up me-1"></i>Высокий приоритет
                </span>
            {% elseif task.priority == 'medium' %}
                <span class="status-badge" style="background: rgba(255, 217, 61, 0.2); color: var(--color-orders);">
                    <i class="fas fa-minus me-1"></i>Средний приоритет
                </span>
            {% else %}
                <span class="status-badge" style="background: rgba(77, 212, 172, 0.2); color: var(--color-sales);">
                    <i class="fas fa-arrow-down me-1"></i>Низкий приоритет
                </span>
            {% endif %}
        </div>
    </div>
    
    <div style="display: flex; gap: 10px;">
        <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn" style="background: var(--bg-secondary); border: 1px solid var(--border-color); color: var(--text-primary); padding: 12px 20px; border-radius: 10px; font-weight: 600;">
            <i class="fas fa-edit me-2"></i>Редактировать
        </a>
        <form method="post" action="{{ path('app_task_delete', {'id': task.id}) }}" style="display: inline;" onsubmit="return confirm('Удалить задачу?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
            <button type="submit" class="btn" style="background: rgba(255, 107, 203, 0.1); border: 1px solid var(--color-bonuses); color: var(--color-bonuses); padding: 12px 20px; border-radius: 10px; font-weight: 600;">
                <i class="fas fa-trash me-2"></i>Удалить
            </button>
        </form>
    </div>
</div>

<!-- Content Grid -->
<div style="display: grid; grid-template-columns: 2fr 1fr; gap: 20px;">
    <!-- Main Content -->
    <div>
        <!-- Description -->
        <div class="card" style="margin-bottom: 20px;">
            <div class="card-header">
                <h3 class="card-title">Описание</h3>
            </div>
            <div class="card-body">
                {% if task.description %}
                    <p style="color: var(--text-primary); line-height: 1.6; margin: 0;">{{ task.description }}</p>
                {% else %}
                    <p style="color: var(--text-secondary); margin: 0;">Описание отсутствует</p>
                {% endif %}
            </div>
        </div>
        
        <!-- Subtasks -->
        <div class="card" style="margin-bottom: 20px;">
            <div class="card-header" style="display: flex; justify-content: space-between; align-items: center;">
                <h3 class="card-title" style="margin: 0;">
                    Подзадачи
                    {% if subtasks is not empty %}
                        <span style="font-size: 12px; background: var(--bg-secondary); padding: 2px 8px; border-radius: 10px; margin-left: 8px; color: var(--text-secondary);">{{ subtasks|length }}</span>
                    {% endif %}
                </h3>
                <a href="{{ path('app_task_new', {'parent': task.id}) }}"
                   style="font-size: 13px; background: var(--color-sales); color: #000; padding: 6px 14px; border-radius: 8px; text-decoration: none; font-weight: 600;">
                    <i class="fas fa-plus me-1"></i>Добавить
                </a>
            </div>
            <div class="card-body" style="padding: 0;">
                {% if subtasks is empty %}
                    <p style="color: var(--text-secondary); margin: 0; padding: 20px; text-align: center; font-size: 14px;">
                        <i class="fas fa-sitemap me-2" style="opacity: 0.4;"></i>Подзадач нет
                    </p>
                {% else %}
                    <!-- Progress bar -->
                    {% set pct = task.completionPercentage %}
                    <div style="padding: 16px 20px 8px;">
                        <div style="display: flex; justify-content: space-between; margin-bottom: 6px; font-size: 13px; color: var(--text-secondary);">
                            <span>Прогресс</span>
                            <span style="font-weight: 600; color: var(--text-primary);">{{ pct }}%</span>
                        </div>
                        <div style="height: 6px; background: var(--bg-secondary); border-radius: 3px; overflow: hidden;">
                            <div style="height: 100%; width: {{ pct }}%; background: var(--color-sales); border-radius: 3px; transition: width 0.3s;"></div>
                        </div>
                    </div>
                    <!-- Subtask list -->
                    <ul style="list-style: none; margin: 0; padding: 8px 0 4px;">
                        {% for subtask in subtasks %}
                        <li style="display: flex; align-items: center; gap: 12px; padding: 10px 20px; border-top: 1px solid var(--border-color);">
                            <!-- Complete toggle -->
                            {% if subtask.status != 'completed' %}
                            <form method="post" action="{{ path('app_task_complete', {'id': subtask.id}) }}" style="margin: 0;">
                                <input type="hidden" name="_token" value="{{ csrf_token('complete' ~ subtask.id) }}">
                                <button type="submit" title="Завершить" style="width: 20px; height: 20px; border-radius: 50%; border: 2px solid var(--border-color); background: transparent; cursor: pointer; flex-shrink: 0;"></button>
                            </form>
                            {% else %}
                            <span style="width: 20px; height: 20px; border-radius: 50%; background: var(--color-sales); display: flex; align-items: center; justify-content: center; flex-shrink: 0;">
                                <i class="fas fa-check" style="font-size: 10px; color: #000;"></i>
                            </span>
                            {% endif %}

                            <!-- Title -->
                            <a href="{{ path('app_task_show', {'id': subtask.id}) }}"
                               style="flex: 1; color: var(--text-primary); text-decoration: none; font-size: 14px; {% if subtask.status == 'completed' %}opacity: 0.5; text-decoration: line-through;{% endif %}">
                                {{ subtask.title }}
                            </a>

                            <!-- Priority badge -->
                            {% if subtask.priority == 'urgent' %}
                                <span style="font-size: 11px; padding: 2px 8px; border-radius: 6px; background: rgba(255,107,203,0.15); color: var(--color-bonuses);">Критический</span>
                            {% elseif subtask.priority == 'high' %}
                                <span style="font-size: 11px; padding: 2px 8px; border-radius: 6px; background: rgba(255,107,203,0.15); color: var(--color-bonuses);">Высокий</span>
                            {% elseif subtask.priority == 'medium' %}
                                <span style="font-size: 11px; padding: 2px 8px; border-radius: 6px; background: rgba(255,217,61,0.15); color: var(--color-orders);">Средний</span>
                            {% else %}
                                <span style="font-size: 11px; padding: 2px 8px; border-radius: 6px; background: rgba(77,212,172,0.15); color: var(--color-sales);">Низкий</span>
                            {% endif %}

                            <!-- Due date -->
                            {% if subtask.dueDate %}
                                <span style="font-size: 12px; color: {% if subtask.isOverdue %}var(--color-bonuses){% else %}var(--text-secondary){% endif %};">
                                    <i class="fas fa-clock me-1"></i>{{ subtask.dueDate|date('d.m.Y') }}
                                </span>
                            {% endif %}
                        </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        </div>

        <!-- Tags -->
        {% if task.tags is not empty %}
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Теги</h3>
            </div>
            <div class="card-body">
                <div style="display: flex; gap: 8px; flex-wrap: wrap;">
                    {% for tag in task.tags %}
                        <span style="padding: 8px 16px; background: {{ tag.color }}; color: #fff; border-radius: 8px; font-size: 13px; font-weight: 500;">
                            {{ tag.name }}
                        </span>
                    {% endfor %}
                </div>
            </div>
        </div>
        {% endif %}
    </div>
    
    <!-- Sidebar -->
    <div>
        <!-- Details Card -->
        <div class="card" style="margin-bottom: 20px;">
            <div class="card-header">
                <h3 class="card-title">Детали</h3>
            </div>
            <div class="card-body">
                <div style="display: flex; flex-direction: column; gap: 16px;">
                    <!-- Progress -->
                    <div>
                        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 6px;">
                            <div style="color: var(--text-secondary); font-size: 12px; text-transform: uppercase;">Прогресс</div>
                            <span style="font-size: 13px; font-weight: 700; color: var(--text-primary);">{{ task.progress }}%</span>
                        </div>
                        <div style="height: 8px; background: var(--bg-secondary); border-radius: 4px; overflow: hidden;">
                            <div style="height: 100%; width: {{ task.progress }}%; border-radius: 4px; transition: width 0.4s ease;
                                background: {% if task.progress == 100 %}var(--color-sales){% elseif task.progress >= 50 %}var(--color-orders){% else %}var(--color-bonuses){% endif %};"></div>
                        </div>
                    </div>

                    <!-- Category -->
                    <div>
                        <div style="color: var(--text-secondary); font-size: 12px; text-transform: uppercase; margin-bottom: 4px;">Категория</div>
                        <div style="color: var(--text-primary); font-weight: 500;">
                            {% if task.category %}
                                <i class="fas fa-folder me-2" style="color: var(--color-orders);"></i>{{ task.category.name }}
                            {% else %}
                                <span style="color: var(--text-secondary);">Не указана</span>
                            {% endif %}
                        </div>
                    </div>
                    
                    <!-- Created -->
                    <div>
                        <div style="color: var(--text-secondary); font-size: 12px; text-transform: uppercase; margin-bottom: 4px;">Создано</div>
                        <div style="color: var(--text-primary); font-weight: 500;">
                            <i class="fas fa-calendar me-2" style="color: var(--color-sales);"></i>{{ task.createdAt|date('d.m.Y H:i') }}
                        </div>
                    </div>
                    
                    <!-- Due Date -->
                    {% if task.dueDate %}
                    <div>
                        <div style="color: var(--text-secondary); font-size: 12px; text-transform: uppercase; margin-bottom: 4px;">Срок выполнения</div>
                        <div style="color: var(--text-primary); font-weight: 500;">
                            <i class="fas fa-clock me-2" style="color: var(--color-bonuses);"></i>{{ task.dueDate|date('d.m.Y') }}
                        </div>
                    </div>
                    {% endif %}
                    
                    <!-- Assigned To -->
                    {% if task.assignedUser %}
                    <div>
                        <div style="color: var(--text-secondary); font-size: 12px; text-transform: uppercase; margin-bottom: 4px;">Назначено</div>
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <div style="width: 32px; height: 32px; border-radius: 50%; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center; color: #fff; font-weight: 600;">
                                {{ task.assignedUser.firstName|first }}
                            </div>
                            <div style="color: var(--text-primary); font-weight: 500;">{{ task.assignedUser.fullName }}</div>
                        </div>
                    </div>
                    {% endif %}
                    
                    <!-- Created By -->
                    <div>
                        <div style="color: var(--text-secondary); font-size: 12px; text-transform: uppercase; margin-bottom: 4px;">Автор</div>
                        <div style="display: flex; align-items: center; gap: 10px;">
                            <div style="width: 32px; height: 32px; border-radius: 50%; background: linear-gradient(135deg, #4dd4ac 0%, #38ef7d 100%); display: flex; align-items: center; justify-content: center; color: #000; font-weight: 600;">
                                {{ task.createdBy.firstName|first }}
                            </div>
                            <div style="color: var(--text-primary); font-weight: 500;">{{ task.createdBy.fullName }}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Quick Actions -->
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Быстрые действия</h3>
            </div>
            <div class="card-body">
                <div style="display: flex; flex-direction: column; gap: 10px;">
                    {% if task.status != 'completed' %}
                    <form method="post" action="{{ path('app_task_complete', {'id': task.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('complete' ~ task.id) }}">
                        <button type="submit" class="btn w-100" style="background: var(--color-sales); border: none; color: #000; padding: 12px; border-radius: 10px; font-weight: 600;">
                            <i class="fas fa-check me-2"></i>Завершить задачу
                        </button>
                    </form>
                    {% endif %}
                    
                    <a href="{{ path('app_task_index') }}" class="btn w-100" style="background: var(--bg-secondary); border: 1px solid var(--border-color); color: var(--text-primary); padding: 12px; border-radius: 10px; font-weight: 600; text-align: center; text-decoration: none;">
                        <i class="fas fa-arrow-left me-2"></i>Назад к списку
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
