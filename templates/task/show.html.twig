{# templates/task/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}{{ task.title }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center bg-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-tasks me-2 text-primary"></i>{{ task.title }}
                    </h3>
                    <span class="badge badge-{{ task.status|lower }}">
                        {{ task.status|trans }}
                    </span>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p><strong>Название:</strong> {{ task.title }}</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Статус:</strong> 
                                <span class="badge badge-{{ task.status|lower }}">
                                    {{ task.status|trans }}
                                </span>
                            </p>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p><strong>Приоритет:</strong> 
                                {% if task.priority == 'high' %}
                                    <span class="badge bg-danger">
                                        <i class="fas fa-exclamation-triangle me-1"></i>Высокий
                                    </span>
                                {% elseif task.priority == 'medium' %}
                                    <span class="badge bg-warning text-dark">
                                        <i class="fas fa-exclamation me-1"></i>Средний
                                    </span>
                                {% else %}
                                    <span class="badge bg-success">
                                        <i class="fas fa-arrow-down me-1"></i>Низкий
                                    </span>
                                {% endif %}
                            </p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Срок:</strong> 
                                {% if task.dueDate %}
                                    <span {% if task.isOverdue %}class="text-danger fw-bold"{% endif %}>
                                        {{ task.dueDate|date('d.m.Y') }}
                                        {% if task.isOverdue %}
                                            <span class="badge bg-danger ms-1">Просрочено</span>
                                        {% endif %}
                                    </span>
                                {% else %}
                                    <span class="text-muted">Не указан</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>
                    
                    {% if task.category %}
                    <div class="row mb-3">
                        <div class="col-12">
                            <p><strong>Категория:</strong></p>
                            <span class="badge bg-secondary">{{ task.category.name }}</span>
                        </div>
                    </div>
                    {% endif %}
                    
                    <div class="mb-3">
                        <p><strong>Описание:</strong></p>
                        <div class="border p-3 bg-light rounded">
                            {% if task.description %}
                                {{ task.description|nl2br }}
                            {% else %}
                                <span class="text-muted">Описание отсутствует</span>
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p><strong>Назначена:</strong> 
                                {% if task.assignedUser %}
                                    {{ task.assignedUser.fullName }}
                                {% else %}
                                    <span class="text-muted">Не назначена</span>
                                {% endif %}
                            </p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Создана:</strong> {{ task.createdAt|date('d.m.Y H:i') }}</p>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p><strong>Обновлена:</strong> {{ task.updatedAt|date('d.m.Y H:i') }}</p>
                        </div>
                    </div>
                    
                    {% if task.tags is not empty %}
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <p><strong>Теги:</strong></p>
                            <div class="mt-2">
                                {% for tag in task.tags %}
                                    <span class="badge me-1" style="background-color: {{ tag.color }}; color: white;">{{ tag.name }}</span>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                    {% endif %}
                                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="{{ path('app_task_index') }}" class="btn btn-outline-secondary me-md-2">
                            <i class="fas fa-arrow-left me-2"></i>Назад
                        </a>
                        <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-warning me-md-2">
                            <i class="fas fa-edit me-2"></i>Редактировать
                        </a>
                        {% if task.status != 'completed' %}
                            <form action="{{ path('app_task_toggle', {'id': task.id}) }}" 
                                  method="post" 
                                  class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ task.id) }}">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-check me-2"></i>Отметить выполненным
                                </button>
                            </form>
                        {% else %}
                            <form action="{{ path('app_task_toggle', {'id': task.id}) }}" 
                                  method="post" 
                                  class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ task.id) }}">
                                <button type="submit" class="btn btn-secondary">
                                    <i class="fas fa-redo me-2"></i>Вернуть в работу
                                </button>
                            </form>
                        {% endif %}
                        <form action="{{ path('app_task_clone', {'id': task.id}) }}" 
                              method="post" 
                              class="d-inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('clone' ~ task.id) }}">
                            <button type="submit" class="btn btn-info" 
                                    onclick="return confirm('Вы уверены, что хотите скопировать эту задачу?')">
                                <i class="fas fa-copy me-2"></i>Клонировать
                            </button>
                        </form>
                        <a href="{{ path('app_task_recurrence', {'id': task.id}) }}" class="btn btn-primary">
                            <i class="fas fa-sync-alt me-2"></i>Повторение
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}