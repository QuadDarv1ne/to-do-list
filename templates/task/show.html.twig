{# templates/task/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}{{ task.name }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-tasks me-2"></i>{{ task.name }}
                    </h3>
                    {% if task.isDone %}
                        <span class="badge bg-success">Выполнено</span>
                    {% else %}
                        {% if task.isOverdue %}
                            <span class="badge bg-danger">Просрочено</span>
                        {% else %}
                            <span class="badge bg-warning text-dark">В работе</span>
                        {% endif %}
                    {% endif %}
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p><strong>Название:</strong> {{ task.name }}</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Статус:</strong> 
                                {% if task.isDone %}
                                    <span class="badge bg-success">Выполнено</span>
                                {% else %}
                                    {% if task.isOverdue %}
                                        <span class="badge bg-danger">Просрочено</span>
                                    {% else %}
                                        <span class="badge bg-warning text-dark">В работе</span>
                                    {% endif %}
                                {% endif %}
                            </p>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p><strong>Приоритет:</strong> <span class="{{ task.priorityClass }}">{{ task.priorityLabel }}</span></p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Срок:</strong> 
                                {% if task.deadline %}
                                    <span {% if task.isOverdue %}class="text-danger fw-bold"{% endif %}>{{ task.deadline|date('d.m.Y') }}</span>
                                {% else %}
                                    <span class="text-muted">Не указан</span>
                                {% endif %}
                            </p>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <p><strong>Описание:</strong></p>
                        <div class="border p-3 bg-light">
                            {{ task.description|nl2br }}
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p><strong>Назначена:</strong> {{ task.assignedUser.fullName }}</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Создана:</strong> {{ task.createdAt|date('d.m.Y H:i') }}</p>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <p><strong>Обновлена:</strong> {{ task.updateAt|date('d.m.Y H:i') }}</p>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="{{ path('app_task_index') }}" class="btn btn-secondary me-md-2">
                            <i class="fas fa-arrow-left me-2"></i>Назад
                        </a>
                        <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-warning me-md-2">
                            <i class="fas fa-edit me-2"></i>Редактировать
                        </a>
                        {% if not task.isDone %}
                            <form action="{{ path('app_task_toggle', {'id': task.id}) }}" 
                                  method="post" 
                                  class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ task.id) }}">
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-check me-2"></i>Отметить выполненным
                                </button>
                            </form>
                        {% else %}
                            <form action="{{ path('app_task_toggle', {'id': task.id}) }}" 
                                  method="post" 
                                  class="d-inline">
                                <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ task.id) }}">
                                <button type="submit" class="btn btn-secondary">
                                    <i class="fas fa-redo me-2"></i>Вернуть в работу
                                </button>
                            </form>
                        {% endif %}
                    </div>
                    
                    <div class="mt-3 text-end">
                        <form action="{{ path('app_task_delete', {'id': task.id}) }}" 
                              method="post" 
                              class="d-inline"
                              onsubmit="return confirm('Вы уверены, что хотите удалить эту задачу? Все данные будут потеряны.')">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-2"></i>Удалить задачу
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}