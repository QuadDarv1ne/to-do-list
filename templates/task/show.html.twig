{% extends 'base.html.twig' %}

{% block title %}{{ task.title }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
.task-detail-container {
    animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.task-header {
    background: var(--gradient-primary);
    color: white;
    padding: 2rem;
    border-radius: 16px 16px 0 0;
    margin-bottom: 0;
}

.task-content {
    background: var(--bg-card);
    border-radius: 0 0 16px 16px;
    box-shadow: 0 10px 40px rgba(0,0,0,0.1);
}

.info-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 16px;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
}

.info-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.12);
}

.info-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--border);
}

.info-row:last-child {
    border-bottom: none;
}

.info-label {
    font-weight: 600;
    color: var(--text-secondary);
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.info-value {
    font-weight: 500;
    color: var(--text-primary);
}

.description-box {
    background: var(--bg-card);
    border-left: 4px solid var(--primary);
    padding: 1.5rem;
    border-radius: 8px;
    margin: 1.5rem 0;
    border: 1px solid var(--border);
}

.action-buttons {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;
}

.timeline-item {
    position: relative;
    padding-left: 2rem;
    padding-bottom: 1.5rem;
}

.timeline-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--border);
}

.timeline-item::after {
    content: '';
    position: absolute;
    left: -4px;
    top: 0;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: var(--primary);
}

.timeline-item:last-child::before {
    display: none;
}
</style>
{% endblock %}

{% block body %}
{{ include('components/breadcrumbs.html.twig', {
    items: [
        {label: 'Главная', url: path('app_dashboard')},
        {label: 'Задачи', url: path('app_task_index')},
        {label: task.title, active: true}
    ]
}) }}

<div class="container task-detail-container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-sm mb-4">
                <div class="task-header">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="flex-grow-1">
                            <h1 class="mb-2">
                                <i class="fas fa-tasks me-2"></i>{{ task.title }}
                            </h1>
                            <div class="d-flex gap-2 flex-wrap">
                                <span class="status-indicator status-{{ task.status|lower }}" data-bs-toggle="tooltip" title="Статус задачи"></span>
                                <span class="priority-badge priority-{{ task.priority }}" data-bs-toggle="tooltip" title="Приоритет задачи">
                                    {{ task.priority|trans }}
                                </span>
                                {% if task.isOverdue %}
                                    <span class="badge-modern badge-danger-modern">
                                        <i class="fas fa-exclamation-circle me-1"></i>Просрочено
                                    </span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="task-content p-4">
                    <div class="row">
                        <div class="col-lg-8">
                            <!-- Description -->
                            <div class="mb-4">
                                <h5 class="mb-3">
                                    <i class="fas fa-align-left me-2 text-primary"></i>
                                    Описание
                                </h5>
                                <div class="description-box">
                                    {% if task.description %}
                                        {{ task.description|nl2br }}
                                    {% else %}
                                        <span class="text-muted">Описание отсутствует</span>
                                    {% endif %}
                                </div>
                            </div>
                            
                            <!-- Tags -->
                            {% if task.tags is not empty %}
                            <div class="mb-4">
                                <h5 class="mb-3">
                                    <i class="fas fa-tags me-2 text-primary"></i>
                                    Теги
                                </h5>
                                <div class="d-flex gap-2 flex-wrap">
                                    {% for tag in task.tags %}
                                        <span class="tag-modern" style="background-color: {{ tag.color }}; color: white;">
                                            {{ tag.name }}
                                        </span>
                                    {% endfor %}
                                </div>
                            </div>
                            {% endif %}
                            
                            <!-- Dependencies -->
                            <div class="mb-4">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h5 class="mb-0">
                                        <i class="fas fa-link me-2 text-primary"></i>
                                        Зависимости
                                    </h5>
                                    <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addDependencyModal">
                                        <i class="fas fa-plus me-1"></i>Добавить
                                    </button>
                                </div>
                                <div id="dependencies-container">
                                    {{ include('components/loading_skeleton.html.twig', {type: 'list', count: 2}) }}
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-lg-4">
                            <!-- Info Card -->
                            <div class="info-card">
                                <h6 class="mb-3">
                                    <i class="fas fa-info-circle me-2"></i>
                                    Информация
                                </h6>
                                
                                <div class="info-row">
                                    <span class="info-label">
                                        <i class="fas fa-user"></i>
                                        Назначена
                                    </span>
                                    <span class="info-value">
                                        {% if task.assignedUser %}
                                            {{ task.assignedUser.fullName }}
                                        {% else %}
                                            <span class="text-muted">Не назначена</span>
                                        {% endif %}
                                    </span>
                                </div>
                                
                                <div class="info-row">
                                    <span class="info-label">
                                        <i class="fas fa-calendar-plus"></i>
                                        Создана
                                    </span>
                                    <span class="info-value">
                                        {{ task.createdAt|date('d.m.Y H:i') }}
                                    </span>
                                </div>
                                
                                <div class="info-row">
                                    <span class="info-label">
                                        <i class="fas fa-calendar-check"></i>
                                        Обновлена
                                    </span>
                                    <span class="info-value">
                                        {{ task.updatedAt|date('d.m.Y H:i') }}
                                    </span>
                                </div>
                                
                                {% if task.dueDate %}
                                <div class="info-row">
                                    <span class="info-label">
                                        <i class="fas fa-clock"></i>
                                        Срок
                                    </span>
                                    <span class="info-value {% if task.isOverdue %}text-danger fw-bold{% endif %}">
                                        {{ task.dueDate|date('d.m.Y') }}
                                    </span>
                                </div>
                                {% endif %}
                                
                                {% if task.category %}
                                <div class="info-row">
                                    <span class="info-label">
                                        <i class="fas fa-folder"></i>
                                        Категория
                                    </span>
                                    <span class="info-value">
                                        <span class="badge bg-secondary">{{ task.category.name }}</span>
                                    </span>
                                </div>
                                {% endif %}
                            </div>
                            
                            <!-- Actions -->
                            <div class="action-buttons">
                                <a href="{{ path('app_task_edit', {'id': task.id}) }}" class="btn btn-warning btn-enhanced flex-fill">
                                    <i class="fas fa-edit me-2"></i>Редактировать
                                </a>
                                
                                {% if task.status != 'completed' %}
                                    <form action="{{ path('app_task_toggle', {'id': task.id}) }}" method="post" class="flex-fill">
                                        <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ task.id) }}">
                                        <button type="submit" class="btn btn-success btn-enhanced w-100">
                                            <i class="fas fa-check me-2"></i>Завершить
                                        </button>
                                    </form>
                                {% else %}
                                    <form action="{{ path('app_task_toggle', {'id': task.id}) }}" method="post" class="flex-fill">
                                        <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ task.id) }}">
                                        <button type="submit" class="btn btn-secondary btn-enhanced w-100">
                                            <i class="fas fa-redo me-2"></i>Вернуть
                                        </button>
                                    </form>
                                {% endif %}
                                
                                <form action="{{ path('app_task_clone', {'id': task.id}) }}" method="post" class="flex-fill">
                                    <input type="hidden" name="_token" value="{{ csrf_token('clone' ~ task.id) }}">
                                    <button type="submit" class="btn btn-info btn-enhanced w-100" 
                                            onclick="return confirm('Клонировать задачу?')">
                                        <i class="fas fa-copy me-2"></i>Клонировать
                                    </button>
                                </form>
                                
                                <a href="{{ path('app_task_index') }}" class="btn btn-outline-secondary btn-enhanced flex-fill">
                                    <i class="fas fa-arrow-left me-2"></i>Назад
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Dependency Modal -->
<div class="modal fade" id="addDependencyModal" tabindex="-1" aria-labelledby="addDependencyModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addDependencyModalLabel">Добавить зависимость</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
            </div>
            <div class="modal-body">
                <form id="addDependencyForm">
                    <div class="mb-3">
                        <label for="dependencyTaskSelect" class="form-label">Выберите задачу</label>
                        <select class="form-select form-select-enhanced" id="dependencyTaskSelect" required>
                            <option value="">Выберите задачу...</option>
                            <!-- Options will be populated by JavaScript -->
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="dependencyType" class="form-label">Тип зависимости</label>
                        <select class="form-select form-select-enhanced" id="dependencyType" required>
                            <option value="blocking">Блокирующая</option>
                            <option value="related">Связанная</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-enhanced" data-bs-dismiss="modal">Отмена</button>
                <button type="button" class="btn btn-primary btn-enhanced" id="saveDependencyBtn">
                    <i class="fas fa-save me-1"></i>Сохранить
                </button>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const taskId = {{ task.id }};
            
            // Load dependencies
            loadDependencies(taskId);
            
            // Load available tasks for dependency selection
            loadAvailableTasks(taskId);
            
            // Bind events
            document.getElementById('saveDependencyBtn').addEventListener('click', function() {
                addDependency(taskId);
            });
        });
        
        function loadDependencies(taskId) {
            fetch(`/api/tasks/${taskId}/dependencies`)
                .then(response => response.json())
                .then(data => {
                    displayDependencies(data);
                })
                .catch(error => {
                    console.error('Error loading dependencies:', error);
                    document.getElementById('dependencies-container').innerHTML = 
                        '<div class="alert alert-danger">Ошибка загрузки зависимостей</div>';
                });
        }
        
        function displayDependencies(dependencies) {
            const container = document.getElementById('dependencies-container');
            
            if (dependencies.length === 0) {
                container.innerHTML = '<div class="text-center py-4 text-muted">Нет зависимостей</div>';
                return;
            }
            
            let html = '<div class="list-group">';
            
            dependencies.forEach(dep => {
                const statusClass = dep.is_satisfied ? 'success' : 'warning';
                const statusText = dep.is_satisfied ? 'Выполнена' : 'Не выполнена';
                const typeText = dep.type === 'blocking' ? 'Блокирующая' : 'Связанная';
                
                html += `
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="mb-1">${dep.dependency_task_name}</h6>
                            <small class="text-muted">
                                <span class="badge bg-secondary me-2">${typeText}</span>
                                <span class="badge bg-${statusClass}">${statusText}</span>
                            </small>
                        </div>
                        <button class="btn btn-danger btn-enhanced btn-sm" onclick="removeDependency(${dep.id}, ${taskId})">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                `;
            });
            
            html += '</div>';
            container.innerHTML = html;
        }
        
        function loadAvailableTasks(currentTaskId) {
            fetch('/api/tasks')
                .then(response => response.json())
                .then(data => {
                    const select = document.getElementById('dependencyTaskSelect');
                    select.innerHTML = '<option value="">Выберите задачу...</option>';
                    
                    data.forEach(task => {
                        if (task.id != currentTaskId) {
                            const option = document.createElement('option');
                            option.value = task.id;
                            option.textContent = task.title;
                            select.appendChild(option);
                        }
                    });
                })
                .catch(error => {
                    console.error('Error loading tasks:', error);
                });
        }
        
        function addDependency(taskId) {
            const dependencyTaskId = document.getElementById('dependencyTaskSelect').value;
            const type = document.getElementById('dependencyType').value;
            
            if (!dependencyTaskId) {
                showToast('Выберите задачу для зависимости', 'warning');
                return;
            }
            
            const btn = document.getElementById('saveDependencyBtn');
            btn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Сохранение...';
            btn.disabled = true;
            
            fetch(`/api/tasks/${taskId}/dependencies`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest',
                    'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
                },
                body: JSON.stringify({
                    dependency_task_id: dependencyTaskId,
                    type: type
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.error) {
                    showToast(data.error, 'error');
                } else {
                    showToast('Зависимость добавлена', 'success');
                    document.getElementById('addDependencyModal').querySelector('.btn-close').click();
                    loadDependencies(taskId);
                    document.getElementById('addDependencyForm').reset();
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showToast('Ошибка при добавлении зависимости', 'error');
            })
            .finally(() => {
                btn.innerHTML = '<i class="fas fa-save me-1"></i>Сохранить';
                btn.disabled = false;
            });
        }
        
        function removeDependency(dependencyId, taskId) {
            if (!confirm('Вы уверены, что хотите удалить эту зависимость?')) {
                return;
            }
            
            fetch(`/api/tasks/${taskId}/dependencies/${dependencyId}`, {
                method: 'DELETE',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest',
                    'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showToast('Зависимость удалена', 'success');
                    loadDependencies(taskId);
                } else {
                    showToast('Ошибка при удалении зависимости', 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showToast('Ошибка при удалении зависимости', 'error');
            });
        }
        
        function showToast(message, type = 'info') {
            const toast = document.createElement('div');
            toast.className = `toast align-items-center text-white bg-${type === 'error' ? 'danger' : type} border-0`;
            toast.setAttribute('role', 'alert');
            toast.innerHTML = `
                <div class="d-flex">
                    <div class="toast-body">${message}</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                </div>
            `;
            
            document.querySelector('.toast-container').appendChild(toast);
            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();
            
            toast.addEventListener('hidden.bs.toast', () => {
                toast.remove();
            });
        }
    </script>
{% endblock %}