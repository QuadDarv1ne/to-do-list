{# templates/task/new.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Создать задачу{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .task-form-container {
            animation: slideUp 0.5s ease-out;
        }
        
        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .form-section {
            background: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: 16px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        }
        
        .form-section-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .form-control-modern:focus, .form-select-modern:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(var(--primary-rgb), 0.1);
        }
        
        .priority-badge {
            display: inline-block;
            padding: 0.35em 0.65em;
            font-size: 0.75em;
            font-weight: 700;
            border-radius: 0.375rem;
            text-align: center;
            vertical-align: baseline;
            white-space: nowrap;
        }
        
        .priority-low { 
            background: var(--gradient-success);
            color: white; 
        }
        .priority-medium { 
            background: var(--gradient-warning);
            color: white; 
        }
        .priority-high { 
            background: var(--gradient-danger);
            color: white; 
        }
        .priority-urgent { 
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            color: white; 
        }
        
        .tag-creator {
            background: var(--bg-card);
            border: 2px dashed var(--border);
            border-radius: 16px;
            padding: 1.5rem;
            margin-top: 1rem;
            transition: all 0.3s;
        }
        
        .tag-creator:hover {
            border-color: var(--primary);
            background: var(--bg-hover);
        }
        
        .quick-tag-preview {
            display: inline-block;
            padding: 0.35em 0.65em;
            border-radius: 0.375rem;
            font-size: 0.75em;
            margin-top: 0.5rem;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-4 task-form-container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header -->
            <div class="card-modern mb-4">
                <div class="card-header-modern">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="mb-1">
                                <i class="fas fa-plus-circle me-2 text-primary"></i>
                                Создать новую задачу
                            </h2>
                            <p class="text-muted mb-0">Заполните информацию о задаче</p>
                        </div>
                        <a href="{{ path('app_task_index') }}" class="btn btn-outline-secondary-modern">
                            <i class="fas fa-arrow-left me-2"></i>Назад к списку
                        </a>
                    </div>
                </div>
            </div>

            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
            
            <!-- Basic Information -->
            <div class="card-modern mb-4">
                <div class="card-header-modern">
                    <div class="form-section-title">
                        <i class="fas fa-info-circle text-primary"></i>
                        Основная информация
                    </div>
                </div>
                <div class="card-body-modern">
                    <div class="row">
                        <div class="col-12 mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-heading me-2"></i>Название задачи
                                <span class="text-danger">*</span>
                            </label>
                            {{ form_widget(form.title, {
                                'attr': {
                                    'class': 'form-control-modern form-control-lg',
                                    'placeholder': 'Введите название задачи...'
                                }
                            }) }}
                            {{ form_errors(form.title) }}
                        </div>
                        
                        <div class="col-12 mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-align-left me-2"></i>Описание
                            </label>
                            {{ form_widget(form.description, {
                                'attr': {
                                    'class': 'form-control-modern',
                                    'rows': '5',
                                    'placeholder': 'Подробное описание задачи...'
                                }
                            }) }}
                            {{ form_errors(form.description) }}
                            <small class="text-muted">
                                <i class="fas fa-lightbulb me-1"></i>
                                Опишите детали задачи, требования и ожидаемый результат
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Status and Priority -->
            <div class="card-modern mb-4">
                <div class="card-header-modern">
                    <div class="form-section-title">
                        <i class="fas fa-sliders-h text-success"></i>
                        Статус и приоритет
                    </div>
                </div>
                <div class="card-body-modern">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-flag me-2"></i>Статус
                            </label>
                            {{ form_widget(form.status, {
                                'attr': {'class': 'form-select-modern'}
                            }) }}
                            {{ form_errors(form.status) }}
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-exclamation-triangle me-2"></i>Приоритет
                            </label>
                            {{ form_widget(form.priority, {
                                'attr': {'class': 'form-select-modern', 'id': 'priority-select'}
                            }) }}
                            {{ form_errors(form.priority) }}
                            <div id="priority-preview" class="mt-2"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Assignment and Deadline -->
            <div class="card-modern mb-4">
                <div class="card-header-modern">
                    <div class="form-section-title">
                        <i class="fas fa-calendar-alt text-warning"></i>
                        Назначение и сроки
                    </div>
                </div>
                <div class="card-body-modern">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-folder me-2"></i>Категория
                            </label>
                            {{ form_widget(form.category, {
                                'attr': {'class': 'form-select-modern'}
                            }) }}
                            {{ form_errors(form.category) }}
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-clock me-2"></i>Срок выполнения
                            </label>
                            {{ form_widget(form.dueDate, {
                                'attr': {'class': 'form-control-modern'}
                            }) }}
                            {{ form_errors(form.dueDate) }}
                        </div>
                        
                        <div class="col-12 mb-3">
                            <label class="form-label fw-bold">
                                <i class="fas fa-user me-2"></i>Назначить исполнителя
                            </label>
                            {{ form_widget(form.assignedUser, {
                                'attr': {'class': 'form-select-modern'}
                            }) }}
                            {{ form_errors(form.assignedUser) }}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tags -->
            <div class="card-modern mb-4">
                <div class="card-header-modern">
                    <div class="form-section-title">
                        <i class="fas fa-tags text-info"></i>
                        Теги
                    </div>
                </div>
                <div class="card-body-modern">
                    <div class="mb-3">
                        {{ form_widget(form.tags, {
                            'attr': {'class': 'form-select-enhanced', 'multiple': 'multiple', 'size': '5'}
                        }) }}
                        {{ form_errors(form.tags) }}
                        <small class="text-muted">
                            <i class="fas fa-info-circle me-1"></i>
                            Удерживайте Ctrl (Cmd на Mac) для выбора нескольких тегов
                        </small>
                    </div>
                    
                    <div class="card-modern p-3">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <strong>
                                <i class="fas fa-plus-circle me-2"></i>
                                Создать новый тег
                            </strong>
                        </div>
                        <div class="row g-2">
                            <div class="col-md-6">
                                <input type="text" 
                                       id="quick-tag-input" 
                                       class="form-control-modern" 
                                       placeholder="Название тега...">
                            </div>
                            <div class="col-md-3">
                                <input type="color" 
                                       id="quick-tag-color" 
                                       class="form-control-modern form-control-color w-100" 
                                       value="#667eea" 
                                       title="Цвет тега">
                            </div>
                            <div class="col-md-3">
                                <button type="button" 
                                        class="btn btn-primary-modern w-100" 
                                        id="create-quick-tag-btn">
                                    <i class="fas fa-plus me-2"></i>Создать
                                </button>
                            </div>
                        </div>
                        <div id="tag-preview-container"></div>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="card-modern">
                <div class="card-body-modern">
                    <div class="d-flex justify-content-between align-items-center">
                        <a href="{{ path('app_task_index') }}" class="btn btn-outline-secondary-modern btn-lg">
                            <i class="fas fa-times me-2"></i>Отмена
                        </a>
                        <button type="submit" class="btn btn-primary-modern btn-lg">
                            <i class="fas fa-save me-2"></i>Создать задачу
                        </button>
                    </div>
                </div>
            </div>
            
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Priority preview
    const prioritySelect = document.getElementById('priority-select');
    const priorityPreview = document.getElementById('priority-preview');
    
    if (prioritySelect && priorityPreview) {
        function updatePriorityPreview() {
            const value = prioritySelect.value;
            const labels = {
                'low': 'Низкий приоритет',
                'medium': 'Средний приоритет',
                'high': 'Высокий приоритет',
                'urgent': 'Срочно'
            };
            
            if (value) {
                priorityPreview.innerHTML = `
                    <span class="priority-badge priority-${value}">
                        <i class="fas fa-flag me-1"></i>${labels[value] || value}
                    </span>
                `;
            }
        }
        
        prioritySelect.addEventListener('change', updatePriorityPreview);
        updatePriorityPreview();
    }
    
    // Tag creator
    const quickTagInput = document.getElementById('quick-tag-input');
    const quickTagColor = document.getElementById('quick-tag-color');
    const createQuickTagBtn = document.getElementById('create-quick-tag-btn');
    const tagPreviewContainer = document.getElementById('tag-preview-container');
    const tagsSelect = document.querySelector('select[multiple]');
    
    // Live preview of tag
    if (quickTagInput && quickTagColor && tagPreviewContainer) {
        function updateTagPreview() {
            const name = quickTagInput.value.trim();
            const color = quickTagColor.value;
            
            if (name) {
                tagPreviewContainer.innerHTML = `
                    <div class="mt-2">
                        <small class="text-muted">Предпросмотр:</small>
                        <span class="quick-tag-preview ms-2" style="background-color: ${color}; color: white;">
                            ${name}
                        </span>
                    </div>
                `;
            } else {
                tagPreviewContainer.innerHTML = '';
            }
        }
        
        quickTagInput.addEventListener('input', updateTagPreview);
        quickTagColor.addEventListener('change', updateTagPreview);
    }
    
    if (createQuickTagBtn) {
        createQuickTagBtn.addEventListener('click', function() {
            const tagName = quickTagInput.value.trim();
            const tagColor = quickTagColor.value;
            
            if (!tagName) {
                showNotification('Пожалуйста, введите название тега', 'warning');
                quickTagInput.focus();
                return;
            }
            
            // Disable button and show loading
            const originalText = createQuickTagBtn.innerHTML;
            createQuickTagBtn.disabled = true;
            createQuickTagBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Создание...';
            
            // Make AJAX request to create the tag
            fetch('{{ path('app_tag_create_ajax') }}', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: JSON.stringify({
                    name: tagName,
                    color: tagColor,
                    description: ''
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Add the new tag to the select element
                    const option = document.createElement('option');
                    option.value = data.tag.id;
                    option.text = data.tag.name;
                    option.selected = true;
                    tagsSelect.appendChild(option);
                    
                    // Clear inputs
                    quickTagInput.value = '';
                    tagPreviewContainer.innerHTML = '';
                    
                    // Show success
                    showNotification('Тег успешно создан!', 'success');
                    
                    // Reset button
                    createQuickTagBtn.innerHTML = originalText;
                    createQuickTagBtn.disabled = false;
                } else {
                    showNotification(data.message || 'Ошибка при создании тега', 'error');
                    createQuickTagBtn.innerHTML = originalText;
                    createQuickTagBtn.disabled = false;
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showNotification('Произошла ошибка при создании тега', 'error');
                createQuickTagBtn.innerHTML = originalText;
                createQuickTagBtn.disabled = false;
            });
        });
    }
    
    // Form validation
    const form = document.querySelector('.needs-validation');
    if (form) {
        form.addEventListener('submit', function(event) {
            if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
                showNotification('Пожалуйста, заполните все обязательные поля', 'warning');
            }
            form.classList.add('was-validated');
        });
    }
    
    // Helper function to show notifications
    function showNotification(message, type = 'info') {
        const colors = {
            'success': '#28a745',
            'error': '#dc3545',
            'warning': '#ffc107',
            'info': '#17a2b8'
        };
        
        const notification = document.createElement('div');
        notification.className = 'alert position-fixed top-0 end-0 m-3';
        notification.style.zIndex = '9999';
        notification.style.backgroundColor = colors[type];
        notification.style.color = 'white';
        notification.style.minWidth = '300px';
        notification.style.animation = 'slideInRight 0.3s ease-out';
        
        const icons = {
            'success': 'check-circle',
            'error': 'exclamation-circle',
            'warning': 'exclamation-triangle',
            'info': 'info-circle'
        };
        
        notification.innerHTML = `
            <i class="fas fa-${icons[type]} me-2"></i>${message}
        `;
        
        document.body.appendChild(notification);
        
        setTimeout(() => {
            notification.style.animation = 'slideOutRight 0.3s ease-out';
            setTimeout(() => notification.remove(), 300);
        }, 3000);
    }
    
    // Add animation styles
    const style = document.createElement('style');
    style.textContent = `
        @keyframes slideInRight {
            from {
                transform: translateX(100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }
        
        @keyframes slideOutRight {
            from {
                transform: translateX(0);
                opacity: 1;
            }
            to {
                transform: translateX(100%);
                opacity: 0;
            }
        }
    `;
    document.head.appendChild(style);
});
</script>
{% endblock %}