{# templates/task/edit.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Редактировать задачу{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-edit me-2 text-primary"></i>Редактировать задачу
                    </h3>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            {{ form_row(form.title) }}
                        </div>
                        <div class="col-md-12 mb-3">
                            {{ form_row(form.description) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.status) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.priority) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.category) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.dueDate) }}
                        </div>
                        <div class="col-md-12 mb-3">
                            {{ form_row(form.assignedUser) }}
                        </div>
                        <div class="col-md-12 mb-3">
                            {{ form_row(form.tags) }}
                            <div class="d-flex align-items-center mt-2">
                                <input type="text" id="quick-tag-input" class="form-control me-2" placeholder="Введите название нового тега...">
                                <input type="color" id="quick-tag-color" class="form-control form-control-color" value="#007bff" title="Выберите цвет тега">
                                <button type="button" class="btn btn-outline-primary ms-2" id="create-quick-tag-btn">
                                    <i class="fas fa-plus"></i> Создать тег
                                </button>
                            </div>
                            <small class="form-text text-muted">Выберите существующие теги или создайте новые</small>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="{{ path('app_task_show', {'id': task.id}) }}" class="btn btn-outline-secondary me-md-2">
                            <i class="fas fa-arrow-left me-2"></i>Назад
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Обновить
                        </button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const quickTagInput = document.getElementById('quick-tag-input');
    const quickTagColor = document.getElementById('quick-tag-color');
    const createQuickTagBtn = document.getElementById('create-quick-tag-btn');
    const tagsSelect = document.querySelector('#task_tags'); // Adjust selector based on actual form field ID
    
    if (createQuickTagBtn) {
        createQuickTagBtn.addEventListener('click', function() {
            const tagName = quickTagInput.value.trim();
            
            if (!tagName) {
                alert('Пожалуйста, введите название тега');
                return;
            }
            
            // Make AJAX request to create the tag
            fetch('{{ path('app_tag_create_ajax') }}', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest',
                    'X-CSRF-Token': document.querySelector('[name="_token"]').value
                },
                body: JSON.stringify({
                    name: tagName,
                    color: quickTagColor.value,
                    description: ''
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Add the new tag to the select element
                    const option = document.createElement('option');
                    option.value = data.tag.id;
                    option.text = data.tag.name;
                    option.selected = true; // Select the newly created tag
                    tagsSelect.appendChild(option);
                    
                    // Clear the input field
                    quickTagInput.value = '';
                    
                    // Show success message
                    alert(data.message);
                } else {
                    alert(data.message || 'Ошибка при создании тега');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Произошла ошибка при создании тега');
            });
        });
    }
});
</script>
{% endblock %}