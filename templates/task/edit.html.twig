{# templates/task/edit.html.twig #}

{% extends 'base_sidebar.html.twig' %}

{% block page_title %}Редактировать задачу{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .task-edit-container {
            animation: fadeIn 0.6s ease-out;
        }
        
        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
        
        .edit-header {
            background: var(--gradient-primary);
            color: white;
            padding: 2rem;
            border-radius: 16px 16px 0 0;
            margin-bottom: 0;
        }
        
        .form-section {
            background: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: 16px;
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        }
        
        .form-section-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .form-control-modern:focus, .form-select-modern:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(var(--primary-rgb), 0.1);
        }
        
        .tag-creator {
            background: var(--bg-card);
            border: 2px dashed var(--border);
            border-radius: 16px;
            padding: 1.5rem;
            margin-top: 1rem;
            transition: all 0.3s;
        }
        
        .tag-creator:hover {
            border-color: var(--primary);
            background: var(--bg-hover);
        }
    </style>
{% endblock %}

{% block body %}
{{ include('components/breadcrumbs.html.twig', {
    items: [
        {label: 'Главная', url: path('app_dashboard')},
        {label: 'Задачи', url: path('app_task_index')},
        {label: 'Редактировать', active: true}
    ]
}) }}

<div class="container py-4 task-edit-container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card-modern shadow-lg">
                <div class="card-header-modern bg-gradient-primary text-white rounded-top-4 p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="mb-1">
                                <i class="fas fa-edit me-2"></i>
                                Редактировать задачу
                            </h2>
                            <p class="mb-0 opacity-75">Обновите информацию о задаче</p>
                        </div>
                        <a href="{{ path('app_task_show', {'id': task.id}) }}" class="btn btn-outline-light-modern">
                            <i class="fas fa-arrow-left me-2"></i>Назад
                        </a>
                    </div>
                </div>
                
                <div class="card-body-modern p-0">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    
                    <!-- Basic Information -->
                    <div class="card-modern mb-4">
                        <div class="card-header-modern">
                            <div class="form-section-title">
                                <i class="fas fa-info-circle text-primary"></i>
                                Основная информация
                            </div>
                        </div>
                        <div class="card-body-modern">
                            <div class="row">
                                <div class="col-12 mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-heading me-2"></i>Название задачи
                                    </label>
                                    {{ form_widget(form.title, {
                                        'attr': {
                                            'class': 'form-control-modern form-control-lg',
                                            'placeholder': 'Введите название задачи...'
                                        }
                                    }) }}
                                    {{ form_errors(form.title) }}
                                </div>
                                
                                <div class="col-12 mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-align-left me-2"></i>Описание
                                    </label>
                                    {{ form_widget(form.description, {
                                        'attr': {
                                            'class': 'form-control-modern',
                                            'rows': '5',
                                            'placeholder': 'Подробное описание задачи...'
                                        }
                                    }) }}
                                    {{ form_errors(form.description) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Status and Priority -->
                    <div class="card-modern mb-4">
                        <div class="card-header-modern">
                            <div class="form-section-title">
                                <i class="fas fa-sliders-h text-info"></i>
                                Статус и приоритет
                            </div>
                        </div>
                        <div class="card-body-modern">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-tasks me-2"></i>Статус
                                    </label>
                                    {{ form_widget(form.status, {'attr': {'class': 'form-select-modern'}}) }}
                                    {{ form_errors(form.status) }}
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-exclamation-triangle me-2"></i>Приоритет
                                    </label>
                                    {{ form_widget(form.priority, {'attr': {'class': 'form-select-modern'}}) }}
                                    {{ form_errors(form.priority) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Category and Due Date -->
                    <div class="card-modern mb-4">
                        <div class="card-header-modern">
                            <div class="form-section-title">
                                <i class="fas fa-calendar-alt text-warning"></i>
                                Категория и сроки
                            </div>
                        </div>
                        <div class="card-body-modern">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-folder me-2"></i>Категория
                                    </label>
                                    {{ form_widget(form.category, {'attr': {'class': 'form-select-modern'}}) }}
                                    {{ form_errors(form.category) }}
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-clock me-2"></i>Срок выполнения
                                    </label>
                                    {{ form_widget(form.dueDate, {'attr': {'class': 'form-control-modern'}}) }}
                                    {{ form_errors(form.dueDate) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Assignment and Tags -->
                    <div class="card-modern mb-4">
                        <div class="card-header-modern">
                            <div class="form-section-title">
                                <i class="fas fa-user-tag text-success"></i>
                                Назначение и теги
                            </div>
                        </div>
                        <div class="card-body-modern">
                            <div class="row">
                                <div class="col-12 mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-user me-2"></i>Исполнитель
                                    </label>
                                    {{ form_widget(form.assignedUser, {'attr': {'class': 'form-select-modern'}}) }}
                                    {{ form_errors(form.assignedUser) }}
                                </div>
                                
                                <div class="col-12 mb-3">
                                    <label class="form-label fw-bold">
                                        <i class="fas fa-tags me-2"></i>Теги
                                    </label>
                                    {{ form_widget(form.tags, {'attr': {'class': 'form-select-enhanced', 'multiple': 'multiple'}}) }}
                                    {{ form_errors(form.tags) }}
                                    
                                    <div class="card-modern p-3 mt-3">
                                        <div class="d-flex align-items-center gap-2">
                                            <input type="text" id="quick-tag-input" class="form-control-modern" placeholder="Создать новый тег...">
                                            <input type="color" id="quick-tag-color" class="form-control form-control-color" value="#667eea" title="Цвет тега">
                                            <button type="button" class="btn btn-primary-modern" id="create-quick-tag-btn">
                                                <i class="fas fa-plus me-1"></i>Создать
                                            </button>
                                        </div>
                                        <small class="text-muted mt-2 d-block">
                                            <i class="fas fa-lightbulb me-1"></i>
                                            Выберите существующие теги или создайте новые
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Actions -->
                    <div class="card-modern">
                        <div class="card-body-modern">
                            <div class="d-flex gap-2 justify-content-end">
                                <a href="{{ path('app_task_show', {'id': task.id}) }}" class="btn btn-outline-secondary-modern">
                                    <i class="fas fa-times me-2"></i>Отмена
                                </a>
                                <button type="submit" class="btn btn-primary-modern">
                                    <i class="fas fa-save me-2"></i>Сохранить изменения
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const quickTagInput = document.getElementById('quick-tag-input');
    const quickTagColor = document.getElementById('quick-tag-color');
    const createQuickTagBtn = document.getElementById('create-quick-tag-btn');
    const tagsSelect = document.querySelector('select[multiple]');
    
    if (createQuickTagBtn) {
        createQuickTagBtn.addEventListener('click', function() {
            const tagName = quickTagInput.value.trim();
            
            if (!tagName) {
                showToast('Введите название тега', 'warning');
                return;
            }
            
            fetch('{{ path('app_tag_create_ajax') }}', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: JSON.stringify({
                    name: tagName,
                    color: quickTagColor.value
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Add the new tag to the select element
                    const option = document.createElement('option');
                    option.value = data.tag.id;
                    option.text = data.tag.name;
                    option.selected = true; // Select the newly created tag
                    tagsSelect.appendChild(option);
                    
                    // Clear the input field
                    quickTagInput.value = '';
                    
                    // Show success message
                    alert(data.message);
                } else {
                    alert(data.message || 'Ошибка при создании тега');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Произошла ошибка при создании тега');
            });
        });
    }
});
</script>
{% endblock %}