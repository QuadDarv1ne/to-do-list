{% extends 'base.html.twig' %}

{% block title %}Отчеты{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <h1><i class="fas fa-chart-bar"></i> Отчеты</h1>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <h5>Готовые отчеты</h5>
                </div>
                <div class="list-group list-group-flush">
                    {% for key, report in predefined_reports %}
                    <a href="#" class="list-group-item list-group-item-action predefined-report" data-key="{{ key }}">
                        {{ report.title }}
                    </a>
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    <h5>Результаты отчета</h5>
                </div>
                <div class="card-body" id="report-results">
                    <p class="text-muted">Выберите отчет из списка слева</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.querySelectorAll('.predefined-report').forEach(link => {
    link.addEventListener('click', async (e) => {
        e.preventDefault();
        const key = e.target.dataset.key;
        
        const response = await fetch(`/reports/predefined/${key}`);
        const report = await response.json();
        
        displayReport(report);
    });
});

function displayReport(report) {
    const container = document.getElementById('report-results');
    
    let html = `<h3>${report.title}</h3>`;
    html += `<p class="text-muted">Период: ${report.period}</p>`;
    html += `<hr>`;
    
    for (const [key, value] of Object.entries(report.data)) {
        html += `<div class="mb-3">`;
        html += `<strong>${key}:</strong> ${JSON.stringify(value)}`;
        html += `</div>`;
    }
    
    container.innerHTML = html;
}
</script>
{% endblock %}
