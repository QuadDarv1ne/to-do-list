{% extends 'base.html.twig' %}

{% block title %}Редактирование webhook{% endblock %}

{% block body %}
<div class="container-fluid page-transition">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center mb-4">
                <a href="{{ path('app_webhook_index') }}" class="btn btn-outline-secondary me-3">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <div class="d-flex align-items-center">
                    <div class="icon-wrapper bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                        <i class="fas fa-bolt fa-xl text-primary"></i>
                    </div>
                    <div>
                        <h1 class="mb-1">Редактирование webhook</h1>
                        <p class="text-muted mb-0">{{ webhook.name }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    {{ form_start(form, {attr: {class: 'webhook-form'}}) }}
                    
                    <div class="mb-4">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name) }}
                        {{ form_errors(form.name) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.url) }}
                        {{ form_widget(form.url) }}
                        {{ form_help(form.url) }}
                        {{ form_errors(form.url) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.secret) }}
                        {{ form_widget(form.secret) }}
                        {{ form_help(form.secret) }}
                        {{ form_errors(form.secret) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.events) }}
                        {{ form_widget(form.events) }}
                        {{ form_help(form.events) }}
                        {{ form_errors(form.events) }}
                    </div>

                    <div class="mb-4">
                        <div class="form-check">
                            {{ form_widget(form.isActive) }}
                            {{ form_label(form.isActive) }}
                        </div>
                        {{ form_errors(form.isActive) }}
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary btn-lg px-4">
                            <i class="fas fa-save me-2"></i>
                            Сохранить
                        </button>
                        <a href="{{ path('app_webhook_show', {id: webhook.id}) }}" class="btn btn-outline-secondary btn-lg px-4">
                            Отмена
                        </a>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-4">
                    <h5 class="mb-3">Информация</h5>
                    <dl class="mb-0">
                        <dt class="text-muted small">Создан</dt>
                        <dd class="mb-3">{{ webhook.createdAt|date('d.m.Y H:i') }}</dd>
                        
                        <dt class="text-muted small">Последняя активация</dt>
                        <dd class="mb-3">
                            {{ webhook.lastTriggeredAt ? webhook.lastTriggeredAt|date('d.m.Y H:i') : 'Никогда' }}
                        </dd>
                        
                        <dt class="text-muted small">Статус</dt>
                        <dd>
                            <span class="badge bg-{{ webhook.isActive ? 'success' : 'secondary' }}">
                                {{ webhook.isActive ? 'Активен' : 'Неактивен' }}
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
