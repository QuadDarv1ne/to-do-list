{% extends 'base.html.twig' %}

{% block title %}Логи webhook{% endblock %}

{% block body %}
<div class="container-fluid page-transition">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex align-items-center mb-4">
                <a href="{{ path('app_webhook_show', {id: webhook.id}) }}" class="btn btn-outline-secondary me-3">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <div class="d-flex align-items-center">
                    <div class="icon-wrapper bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                        <i class="fas fa-history fa-xl text-primary"></i>
                    </div>
                    <div>
                        <h1 class="mb-1">Логи webhook</h1>
                        <p class="text-muted mb-0">{{ webhook.name }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            {% if logs is not empty %}
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th>ID</th>
                                <th>Событие</th>
                                <th>Статус</th>
                                <th>Код</th>
                                <th>Время</th>
                                <th>Дата</th>
                                <th>Детали</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for log in logs %}
                                <tr class="{{ log.isSuccess ? 'table-success' : 'table-danger' }}">
                                    <td class="text-muted small">#{{ log.id }}</td>
                                    <td>
                                        <code class="small">{{ log.event }}</code>
                                    </td>
                                    <td>
                                        {% if log.isSuccess %}
                                            <span class="badge bg-success">
                                                <i class="fas fa-check me-1"></i>Успех
                                            </span>
                                        {% else %}
                                            <span class="badge bg-danger">
                                                <i class="fas fa-times me-1"></i>Ошибка
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {{ log.statusCode ?: '—' }}
                                    </td>
                                    <td>{{ log.responseTimeMs }} мс</td>
                                    <td class="text-muted small">{{ log.createdAt|date('d.m.Y H:i:s') }}</td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-primary" 
                                                type="button" 
                                                data-bs-toggle="collapse" 
                                                data-bs-target="#log-details-{{ log.id }}">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="7" class="p-0">
                                        <div class="collapse" id="log-details-{{ log.id }}">
                                            <div class="p-3 bg-light">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <h6 class="small text-muted mb-2">Payload:</h6>
                                                        <pre class="bg-dark text-light p-2 rounded small overflow-auto" style="max-height: 200px;"><code>{{ log.payload|json_encode(constant('JSON_PRETTY_PRINT')) }}</code></pre>
                                                    </div>
                                                    {% if log.response %}
                                                        <div class="col-md-6">
                                                            <h6 class="small text-muted mb-2">Response:</h6>
                                                            <pre class="bg-dark text-light p-2 rounded small overflow-auto" style="max-height: 200px;"><code>{{ log.response|json_encode(constant('JSON_PRETTY_PRINT')) }}</code></pre>
                                                        </div>
                                                    {% endif %}
                                                </div>
                                                {% if log.errorMessage %}
                                                    <div class="alert alert-danger small mb-0 mt-2">
                                                        <i class="fas fa-exclamation-triangle me-1"></i>
                                                        <strong>Ошибка:</strong> {{ log.errorMessage }}
                                                    </div>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="text-center py-5">
                    <i class="fas fa-history text-muted" style="font-size: 4rem; opacity: 0.3;"></i>
                    <h5 class="text-muted mt-3">Логи отсутствуют</h5>
                    <p class="text-muted">Webhook ещё не отправлял уведомления</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
