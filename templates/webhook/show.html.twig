{% extends 'base.html.twig' %}

{% block title %}{{ webhook.name }}{% endblock %}

{% block body %}
<div class="container-fluid page-transition">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-3 mb-4">
                <div class="d-flex align-items-center">
                    <a href="{{ path('app_webhook_index') }}" class="btn btn-outline-secondary me-3">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                    <div class="d-flex align-items-center">
                        <div class="icon-wrapper bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                            <i class="fas fa-bolt fa-xl text-primary"></i>
                        </div>
                        <div>
                            <h1 class="mb-1">{{ webhook.name }}</h1>
                            <p class="text-muted mb-0">Детали webhook</p>
                        </div>
                    </div>
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-primary" onclick="testWebhook()">
                        <i class="fas fa-flask me-2"></i>
                        Тест
                    </button>
                    <a href="{{ path('app_webhook_edit', {id: webhook.id}) }}" class="btn btn-primary">
                        <i class="fas fa-edit me-2"></i>
                        Редактировать
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <div class="mb-2">
                        <i class="fas fa-paper-plane text-primary fa-2x"></i>
                    </div>
                    <h3 class="mb-0">{{ stats.total ?: 0 }}</h3>
                    <p class="text-muted mb-0 small">Отправлено (7 дней)</p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <div class="mb-2">
                        <i class="fas fa-check-circle text-success fa-2x"></i>
                    </div>
                    <h3 class="mb-0">{{ stats.successful ?: 0 }}</h3>
                    <p class="text-muted mb-0 small">Успешно</p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <div class="mb-2">
                        <i class="fas fa-times-circle text-danger fa-2x"></i>
                    </div>
                    <h3 class="mb-0">{{ stats.failed ?: 0 }}</h3>
                    <p class="text-muted mb-0 small">Ошибки</p>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center p-4">
                    <div class="mb-2">
                        <i class="fas fa-chart-line text-info fa-2x"></i>
                    </div>
                    <h3 class="mb-0">{{ successRate is not empty ? successRate ~ '%' : 'N/A' }}</h3>
                    <p class="text-muted mb-0 small">Успехов</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <!-- Details -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Информация</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">URL</dt>
                        <dd class="col-sm-8"><code>{{ webhook.url }}</code></dd>

                        <dt class="col-sm-4 text-muted">События</dt>
                        <dd class="col-sm-8">
                            {% for event in webhook.events %}
                                <span class="badge bg-light text-dark border me-1 mb-1">
                                    {{ event }}
                                </span>
                            {% endfor %}
                        </dd>

                        <dt class="col-sm-4 text-muted">Статус</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-{{ webhook.isActive ? 'success' : 'secondary' }}">
                                {{ webhook.isActive ? 'Активен' : 'Неактивен' }}
                            </span>
                        </dd>

                        <dt class="col-sm-4 text-muted">Создан</dt>
                        <dd class="col-sm-8">{{ webhook.createdAt|date('d.m.Y H:i:s') }}</dd>

                        <dt class="col-sm-4 text-muted">Обновлен</dt>
                        <dd class="col-sm-8">{{ webhook.updatedAt ? webhook.updatedAt|date('d.m.Y H:i:s') : '—' }}</dd>

                        <dt class="col-sm-4 text-muted">Последняя активация</dt>
                        <dd class="col-sm-8">{{ webhook.lastTriggeredAt ? webhook.lastTriggeredAt|date('d.m.Y H:i:s') : 'Никогда' }}</dd>
                    </dl>
                </div>
            </div>

            <!-- Recent Logs -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-history me-2"></i>Последние логи</h5>
                    <a href="{{ path('app_webhook_logs', {id: webhook.id}) }}" class="btn btn-sm btn-outline-primary">
                        Все логи <i class="fas fa-arrow-right ms-1"></i>
                    </a>
                </div>
                <div class="card-body p-0">
                    {% if logs is not empty %}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th>Событие</th>
                                        <th>Статус</th>
                                        <th>Время</th>
                                        <th>Дата</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for log in logs|slice(0, 10) %}
                                        <tr>
                                            <td>
                                                <code class="small">{{ log.event }}</code>
                                            </td>
                                            <td>
                                                {% if log.isSuccess %}
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check me-1"></i>{{ log.statusCode }}
                                                    </span>
                                                {% else %}
                                                    <span class="badge bg-danger">
                                                        <i class="fas fa-times me-1"></i>Ошибка
                                                    </span>
                                                {% endif %}
                                            </td>
                                            <td>{{ log.responseTimeMs }} мс</td>
                                            <td class="text-muted small">{{ log.createdAt|date('d.m.Y H:i') }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <p class="text-muted mb-0">Логи пока отсутствуют</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Actions -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-cog me-2"></i>Действия</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <button class="btn btn-outline-primary" onclick="testWebhook()">
                            <i class="fas fa-flask me-2"></i>
                            Тестировать webhook
                        </button>
                        <a href="{{ path('app_webhook_retry', {id: webhook.id}) }}" class="btn btn-outline-secondary">
                            <i class="fas fa-redo me-2"></i>
                            Повторить отправку
                        </a>
                        <hr>
                        <form method="post" action="{{ path('app_webhook_toggle', {id: webhook.id}) }}" class="d-inline">
                            <button class="btn btn-{{ webhook.isActive ? 'warning' : 'success' }} w-100">
                                <i class="fas fa-{{ webhook.isActive ? 'pause' : 'play' }} me-2"></i>
                                {{ webhook.isActive ? 'Деактивировать' : 'Активировать' }}
                            </button>
                        </form>
                        <hr>
                        <form method="post" action="{{ path('app_webhook_delete', {id: webhook.id}) }}" 
                              onsubmit="return confirm('Вы уверены? Это действие нельзя отменить.');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ webhook.id) }}">
                            <button class="btn btn-outline-danger w-100">
                                <i class="fas fa-trash me-2"></i>
                                Удалить webhook
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Security Info -->
            <div class="card border-0 shadow-sm bg-light">
                <div class="card-body">
                    <h6 class="mb-2">
                        <i class="fas fa-shield-alt text-success me-2"></i>
                        Безопасность
                    </h6>
                    {% if webhook.secret %}
                        <p class="small text-muted mb-2">
                            Webhook защищён HMAC-подписью. Заголовки запросов включают:
                        </p>
                        <ul class="small text-muted mb-0">
                            <li><code>X-Webhook-Signature</code></li>
                            <li><code>X-Webhook-Event</code></li>
                            <li><code>X-Webhook-Timestamp</code></li>
                        </ul>
                    {% else %}
                        <p class="text-warning small mb-0">
                            <i class="fas fa-exclamation-triangle me-1"></i>
                            Webhook не имеет секретного ключа. Рекомендуется добавить его.
                        </p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function testWebhook() {
    fetch('{{ path('app_webhook_test', {id: webhook.id}) }}', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            alert('✅ Тест пройден успешно!');
        } else {
            alert('❌ Ошибка: ' + data.message);
        }
    })
    .catch(error => {
        alert('❌ Ошибка соединения: ' + error);
    });
}
</script>
{% endblock %}
