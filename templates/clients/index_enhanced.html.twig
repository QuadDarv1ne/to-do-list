{% extends 'base_sidebar.html.twig' %}

{% block page_title %}Клиенты{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/enhanced-cards.css') }}">
{% endblock %}

{% block body %}
<div class="animate-fade-in">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4 stagger-item">
        <div>
            <h2 style="margin: 0; font-size: 28px; font-weight: 600;">
                <i class="fas fa-users me-2"></i>База клиентов
            </h2>
            <p style="color: var(--text-secondary); margin: 5px 0 0 0;">Управление клиентской базой</p>
        </div>
        <a href="{{ path('app_clients_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Добавить клиента
        </a>
    </div>

    <!-- Stats -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="stat-card-modern stagger-item delay-100" data-animate-on-scroll>
                <div class="stat-card-header">
                    <div class="stat-card-icon" style="background: rgba(99, 102, 241, 0.1); color: #6366f1;">
                        <i class="fas fa-users"></i>
                    </div>
                </div>
                <div class="stat-card-value" data-counter="{{ clients|length }}">0</div>
                <div class="stat-card-label">Всего клиентов</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card-modern stagger-item delay-150" data-animate-on-scroll>
                <div class="stat-card-header">
                    <div class="stat-card-icon" style="background: rgba(16, 185, 129, 0.1); color: #10b981;">
                        <i class="fas fa-star"></i>
                    </div>
                </div>
                <div class="stat-card-value" data-counter="{{ clients|filter(c => c.category == 'vip')|length }}">0</div>
                <div class="stat-card-label">VIP клиенты</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card-modern stagger-item delay-200" data-animate-on-scroll>
                <div class="stat-card-header">
                    <div class="stat-card-icon" style="background: rgba(245, 158, 11, 0.1); color: #f59e0b;">
                        <i class="fas fa-user-plus"></i>
                    </div>
                </div>
                <div class="stat-card-value" data-counter="{{ clients|filter(c => c.category == 'new')|length }}">0</div>
                <div class="stat-card-label">Новые</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card-modern stagger-item delay-250" data-animate-on-scroll>
                <div class="stat-card-header">
                    <div class="stat-card-icon" style="background: rgba(139, 92, 246, 0.1); color: #8b5cf6;">
                        <i class="fas fa-chart-line"></i>
                    </div>
                </div>
                <div class="stat-card-value" data-counter="{{ clients|filter(c => c.category == 'regular')|length }}">0</div>
                <div class="stat-card-label">Постоянные</div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card-enhanced mb-4 stagger-item delay-300" data-animate-on-scroll>
        <div class="d-flex gap-3 flex-wrap align-items-center">
            <div class="flex-grow-1">
                <input type="text" 
                       class="form-control" 
                       placeholder="Поиск по названию, ИНН, контакту..."
                       data-advanced-search
                       style="border-radius: 12px;">
            </div>
            
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-outline-primary" data-quick-filter="all">
                    Все
                </button>
                <button type="button" class="btn btn-outline-primary" data-quick-filter="category" data-filter-value="vip">
                    VIP
                </button>
                <button type="button" class="btn btn-outline-primary" data-quick-filter="category" data-filter-value="regular">
                    Постоянные
                </button>
                <button type="button" class="btn btn-outline-primary" data-quick-filter="category" data-filter-value="new">
                    Новые
                </button>
            </div>
            
            <button class="btn btn-outline-secondary" data-filter-builder>
                <i class="fas fa-filter me-2"></i>Фильтры
            </button>
        </div>
    </div>

    <!-- Active Filters -->
    <div data-filters-container class="mb-3"></div>

    <!-- Clients Grid -->
    <div class="row g-4" data-tasks-container>
        {% for client in clients %}
        <div class="col-md-6 col-lg-4" 
             data-filterable-item
             data-category="{{ client.category }}"
             data-segment="{{ client.segment }}"
             data-animate-on-scroll>
            <div class="interactive-card">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div class="flex-grow-1">
                        <h5 class="mb-1" data-task-title>
                            <a href="{{ path('app_clients_show', {id: client.id}) }}" 
                               class="text-decoration-none"
                               style="color: var(--text-primary);">
                                {{ client.companyName }}
                            </a>
                        </h5>
                        {% if client.inn %}
                        <small class="text-muted">ИНН: {{ client.inn }}</small>
                        {% endif %}
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-sm btn-link text-muted" 
                                type="button" 
                                data-bs-toggle="dropdown">
                            <i class="fas fa-ellipsis-v"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item" href="{{ path('app_clients_show', {id: client.id}) }}">
                                    <i class="fas fa-eye me-2"></i>Просмотр
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="{{ path('app_clients_edit', {id: client.id}) }}">
                                    <i class="fas fa-edit me-2"></i>Редактировать
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form method="post" action="{{ path('app_clients_delete', {id: client.id}) }}" 
                                      onsubmit="return confirm('Удалить клиента?');">
                                    <button type="submit" class="dropdown-item text-danger">
                                        <i class="fas fa-trash me-2"></i>Удалить
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="mb-3">
                    <span class="badge" style="
                        background: {{ client.category == 'vip' ? 'rgba(139, 92, 246, 0.1)' : 
                                      (client.category == 'regular' ? 'rgba(16, 185, 129, 0.1)' : 
                                      (client.category == 'new' ? 'rgba(245, 158, 11, 0.1)' : 'rgba(99, 102, 241, 0.1)')) }};
                        color: {{ client.category == 'vip' ? '#8b5cf6' : 
                                 (client.category == 'regular' ? '#10b981' : 
                                 (client.category == 'new' ? '#f59e0b' : '#6366f1')) }};
                        padding: 6px 12px;
                        border-radius: 20px;
                        font-size: 12px;
                        font-weight: 600;">
                        {% if client.category == 'vip' %}
                            <i class="fas fa-star me-1"></i>VIP
                        {% elseif client.category == 'regular' %}
                            <i class="fas fa-check-circle me-1"></i>Постоянный
                        {% elseif client.category == 'new' %}
                            <i class="fas fa-user-plus me-1"></i>Новый
                        {% else %}
                            <i class="fas fa-user me-1"></i>Потенциальный
                        {% endif %}
                    </span>
                    
                    <span class="badge bg-secondary ms-2">
                        {{ client.segment == 'retail' ? 'Розница' : 'Опт' }}
                    </span>
                </div>

                {% if client.contactPerson %}
                <div class="mb-2">
                    <i class="fas fa-user text-muted me-2"></i>
                    <small>{{ client.contactPerson }}</small>
                </div>
                {% endif %}

                {% if client.phone %}
                <div class="mb-2">
                    <i class="fas fa-phone text-muted me-2"></i>
                    <small>{{ client.phone }}</small>
                </div>
                {% endif %}

                {% if client.email %}
                <div class="mb-3">
                    <i class="fas fa-envelope text-muted me-2"></i>
                    <small>{{ client.email }}</small>
                </div>
                {% endif %}

                <div class="border-top pt-3 mt-3">
                    <div class="row text-center">
                        <div class="col-4">
                            <div style="font-size: 18px; font-weight: 700; color: var(--primary-color);">
                                {{ client.completedDealsCount }}
                            </div>
                            <small class="text-muted">Сделок</small>
                        </div>
                        <div class="col-4">
                            <div style="font-size: 18px; font-weight: 700; color: var(--success);">
                                {{ (client.totalRevenue / 1000)|number_format(0) }}к
                            </div>
                            <small class="text-muted">Выручка</small>
                        </div>
                        <div class="col-4">
                            <div style="font-size: 18px; font-weight: 700; color: var(--warning);">
                                {{ (client.averageCheck / 1000)|number_format(0) }}к
                            </div>
                            <small class="text-muted">Ср. чек</small>
                        </div>
                    </div>
                </div>

                {% if client.manager %}
                <div class="border-top pt-3 mt-3">
                    <div class="d-flex align-items-center gap-2">
                        <div style="
                            width: 32px;
                            height: 32px;
                            border-radius: 50%;
                            background: var(--primary-color);
                            color: white;
                            display: flex;
                            align-items: center;
                            justify-content: center;
                            font-size: 12px;
                            font-weight: 600;">
                            {{ client.manager.firstName|slice(0, 1) }}{{ client.manager.lastName|slice(0, 1) }}
                        </div>
                        <div>
                            <small class="text-muted d-block">Менеджер</small>
                            <small style="font-weight: 600;">{{ client.manager.fullName }}</small>
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
        {% else %}
        <div class="col-12">
            <div class="text-center py-5">
                <i class="fas fa-users" style="font-size: 64px; opacity: 0.2; margin-bottom: 20px;"></i>
                <h4>Нет клиентов</h4>
                <p class="text-muted">Добавьте первого клиента</p>
                <a href="{{ path('app_clients_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus me-2"></i>Добавить клиента
                </a>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
