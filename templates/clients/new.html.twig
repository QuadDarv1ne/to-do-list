{% extends 'base_sidebar.html.twig' %}

{% block title %}Новый клиент{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="d-flex align-items-center mb-4">
                <a href="{{ path('app_clients_index') }}" class="btn btn-outline-secondary me-3">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <h1 class="h3 mb-0">
                    <i class="fas fa-user-plus me-2"></i>Новый клиент
                </h1>
            </div>

            <div class="card-modern">
                <div class="card-body-modern">
                    <form method="post">
                        <h5 class="mb-3">Основная информация</h5>
                        
                        <div class="mb-3">
                            <label for="company_name" class="form-label">Название организации *</label>
                            <input type="text" class="form-control" id="company_name" name="company_name" required>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="inn" class="form-label">ИНН</label>
                                <input type="text" class="form-control" id="inn" name="inn" pattern="\d{10}|\d{12}" placeholder="10 или 12 цифр">
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="kpp" class="form-label">КПП</label>
                                <input type="text" class="form-control" id="kpp" name="kpp" pattern="\d{9}" placeholder="9 цифр">
                            </div>
                        </div>

                        <hr class="my-4">
                        <h5 class="mb-3">Контактная информация</h5>

                        <div class="mb-3">
                            <label for="contact_person" class="form-label">Контактное лицо</label>
                            <input type="text" class="form-control" id="contact_person" name="contact_person">
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="phone" class="form-label">Телефон</label>
                                <input type="tel" class="form-control" id="phone" name="phone" pattern="\+7\d{10}" placeholder="+79991234567">
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="email">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="address" class="form-label">Адрес</label>
                            <textarea class="form-control" id="address" name="address" rows="2"></textarea>
                        </div>

                        <hr class="my-4">
                        <h5 class="mb-3">Классификация</h5>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="segment" class="form-label">Сегмент *</label>
                                <select class="form-select" id="segment" name="segment" required>
                                    <option value="retail">Розница</option>
                                    <option value="wholesale">Опт</option>
                                </select>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="category" class="form-label">Категория *</label>
                                <select class="form-select" id="category" name="category" required>
                                    <option value="new">Новый</option>
                                    <option value="regular">Постоянный</option>
                                    <option value="vip">VIP</option>
                                    <option value="potential">Потенциальный</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="notes" class="form-label">Заметки</label>
                            <textarea class="form-control" id="notes" name="notes" rows="3"></textarea>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Создать клиента
                            </button>
                            <a href="{{ path('app_clients_index') }}" class="btn btn-outline-secondary">
                                Отмена
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
