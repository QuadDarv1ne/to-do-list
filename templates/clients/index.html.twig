{% extends 'base.html.twig' %}

{% block title %}Клиенты{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
.stats-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-bottom: 2rem;
}

.stat-card-client {
    background: white;
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    transition: all 0.3s ease;
    border-left: 4px solid;
}

.stat-card-client:nth-child(1) { border-left-color: #667eea; }
.stat-card-client:nth-child(2) { border-left-color: #28a745; }
.stat-card-client:nth-child(3) { border-left-color: #ffc107; }
.stat-card-client:nth-child(4) { border-left-color: #17a2b8; }

.stat-card-client:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 20px rgba(0,0,0,0.12);
}

.stat-number-client {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.25rem;
}

.stat-label-client {
    color: #6c757d;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.client-card {
    background: white;
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 1rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    transition: all 0.3s ease;
    border-left: 4px solid #667eea;
}

.client-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.12);
}

.client-avatar {
    width: 60px;
    height: 60px;
    border-radius: 12px;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 700;
    flex-shrink: 0;
}

.client-info h5 {
    margin: 0 0 0.5rem 0;
    font-weight: 600;
}

.client-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.75rem;
}

.client-badge {
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
}

.search-box {
    background: white;
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    margin-bottom: 2rem;
}

.form-control-modern {
    border-radius: 10px;
    border: 2px solid #e9ecef;
    padding: 0.75rem 1rem;
    transition: all 0.3s ease;
}

.form-control-modern:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
}
</style>
{% endblock %}

{% block body %}
{{ include('components/breadcrumbs.html.twig', {
    items: [
        {label: 'Главная', url: path('app_dashboard')},
        {label: 'Клиенты', active: true}
    ]
}) }}

<div class="container-fluid py-4 animate-fade-in">
    <div class="page-header stagger-item">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
            <div>
                <h1 class="mb-1">
                    <i class="fas fa-users me-2"></i>
                    Клиенты
                </h1>
                <p class="mb-0 opacity-75">Управление базой клиентов</p>
            </div>
            <a href="{{ path('app_clients_new') }}" class="btn btn-gradient-primary">
                <i class="fas fa-plus me-2"></i>
                Добавить клиента
            </a>
        </div>
    </div>

    {% if clients is not empty %}
        <div class="stats-row">
            <div class="stat-card-client stagger-item delay-100">
                <div class="stat-number-client text-primary">{{ clients|length }}</div>
                <div class="stat-label-client">Всего клиентов</div>
            </div>
            <div class="stat-card-client stagger-item delay-200">
                <div class="stat-number-client text-success">{{ clients|filter(c => c.category == 'vip')|length }}</div>
                <div class="stat-label-client">VIP клиенты</div>
            </div>
            <div class="stat-card-client stagger-item delay-300">
                <div class="stat-number-client text-warning">{{ clients|filter(c => c.category == 'new')|length }}</div>
                <div class="stat-label-client">Новые</div>
            </div>
            <div class="stat-card-client stagger-item delay-400">
                <div class="stat-number-client text-info">{{ clients|filter(c => c.segment == 'wholesale')|length }}</div>
                <div class="stat-label-client">Оптовые</div>
            </div>
        </div>

        <div class="search-box">
            <div class="row g-3">
                <div class="col-md-6">
                    <input type="text" class="form-control form-control-modern" id="searchInput" placeholder="Поиск по названию, контакту, email...">
                </div>
                <div class="col-md-3">
                    <select class="form-select form-control-modern" id="segmentFilter">
                        <option value="">Все сегменты</option>
                        <option value="wholesale">Опт</option>
                        <option value="retail">Розница</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select form-control-modern" id="categoryFilter">
                        <option value="">Все категории</option>
                        <option value="new">Новый</option>
                        <option value="regular">Постоянный</option>
                        <option value="vip">VIP</option>
                        <option value="potential">Потенциальный</option>
                    </select>
                </div>
            </div>
        </div>

        <div id="clientsList">
            {% for client in clients %}
                <div class="client-card" 
                     data-company="{{ client.companyName|lower }}"
                     data-contact="{{ client.contactPerson|default('')|lower }}"
                     data-email="{{ client.email|default('')|lower }}"
                     data-segment="{{ client.segment }}"
                     data-category="{{ client.category }}">
                    <div class="d-flex align-items-start gap-3">
                        <div class="client-avatar avatar-primary">
                            {{ client.companyName|slice(0, 2)|upper }}
                        </div>
                        <div class="flex-grow-1">
                            <div class="d-flex justify-content-between align-items-start flex-wrap gap-2">
                                <div class="client-info">
                                    <h5>
                                        <a href="{{ path('app_clients_show', {id: client.id}) }}" class="text-decoration-none text-dark">
                                            {{ client.companyName }}
                                        </a>
                                    </h5>
                                    <div class="text-muted small">
                                        {% if client.contactPerson %}
                                            <i class="fas fa-user me-1"></i>{{ client.contactPerson }}
                                        {% endif %}
                                        {% if client.phone %}
                                            <span class="mx-2">•</span>
                                            <i class="fas fa-phone me-1"></i>{{ client.phone }}
                                        {% endif %}
                                        {% if client.email %}
                                            <span class="mx-2">•</span>
                                            <i class="fas fa-envelope me-1"></i>{{ client.email }}
                                        {% endif %}
                                    </div>
                                    <div class="client-meta">
                                        <span class="client-badge bg-{{ client.segment == 'wholesale' ? 'primary' : 'secondary' }} text-white">
                                            <i class="fas fa-{{ client.segment == 'wholesale' ? 'boxes' : 'shopping-cart' }} me-1"></i>
                                            {{ client.segment == 'wholesale' ? 'Опт' : 'Розница' }}
                                        </span>
                                        <span class="client-badge bg-{{ client.category == 'vip' ? 'warning' : (client.category == 'new' ? 'info' : 'success') }} text-white">
                                            <i class="fas fa-{{ client.category == 'vip' ? 'crown' : (client.category == 'new' ? 'star' : 'check') }} me-1"></i>
                                            {% if client.category == 'new' %}Новый
                                            {% elseif client.category == 'regular' %}Постоянный
                                            {% elseif client.category == 'vip' %}VIP
                                            {% else %}Потенциальный{% endif %}
                                        </span>
                                        {% if client.manager %}
                                            <span class="client-badge bg-light text-dark">
                                                <i class="fas fa-user-tie me-1"></i>{{ client.manager.fullName }}
                                            </span>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="d-flex gap-2">
                                    <a href="{{ path('app_clients_show', {id: client.id}) }}" class="btn btn-sm btn-info btn-modern">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_clients_edit', {id: client.id}) }}" class="btn btn-sm btn-warning btn-modern">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        {{ include('components/empty_state.html.twig', {
            icon: 'fa-users',
            title: 'Нет клиентов',
            message: 'Создайте первого клиента для начала работы',
            action_url: path('app_clients_new'),
            action_text: 'Добавить клиента'
        }) }}
    {% endif %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('searchInput');
    const segmentFilter = document.getElementById('segmentFilter');
    const categoryFilter = document.getElementById('categoryFilter');
    const clientCards = document.querySelectorAll('.client-card');
    
    function filterClients() {
        const searchTerm = searchInput ? searchInput.value.toLowerCase() : '';
        const selectedSegment = segmentFilter ? segmentFilter.value : '';
        const selectedCategory = categoryFilter ? categoryFilter.value : '';
        
        let visibleCount = 0;
        
        clientCards.forEach(card => {
            const company = card.dataset.company || '';
            const contact = card.dataset.contact || '';
            const email = card.dataset.email || '';
            const segment = card.dataset.segment || '';
            const category = card.dataset.category || '';
            
            const matchesSearch = !searchTerm || 
                company.includes(searchTerm) || 
                contact.includes(searchTerm) || 
                email.includes(searchTerm);
            
            const matchesSegment = !selectedSegment || segment === selectedSegment;
            const matchesCategory = !selectedCategory || category === selectedCategory;
            
            if (matchesSearch && matchesSegment && matchesCategory) {
                card.style.display = '';
                visibleCount++;
            } else {
                card.style.display = 'none';
            }
        });
        
        // Show empty state if no results
        const clientsList = document.getElementById('clientsList');
        let emptyState = clientsList.querySelector('.empty-state');
        
        if (visibleCount === 0 && !emptyState) {
            emptyState = document.createElement('div');
            emptyState.className = 'empty-state text-center py-5';
            emptyState.innerHTML = `
                <i class="fas fa-search fa-4x text-muted mb-3"></i>
                <h4>Ничего не найдено</h4>
                <p class="text-muted">Попробуйте изменить параметры поиска</p>
            `;
            clientsList.appendChild(emptyState);
        } else if (visibleCount > 0 && emptyState) {
            emptyState.remove();
        }
    }
    
    if (searchInput) searchInput.addEventListener('input', filterClients);
    if (segmentFilter) segmentFilter.addEventListener('change', filterClients);
    if (categoryFilter) categoryFilter.addEventListener('change', filterClients);
});
</script>
{% endblock %}
