{% extends 'base.html.twig' %}

{% block title %}Клиенты{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-users me-2"></i>Клиенты</h1>
        <a href="{{ path('app_clients_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Добавить клиента
        </a>
    </div>

    {% if clients is empty %}
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            Нет клиентов. <a href="{{ path('app_clients_new') }}">Создайте первого клиента</a>
        </div>
    {% else %}
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Компания</th>
                                <th>Контакт</th>
                                <th>Телефон</th>
                                <th>Email</th>
                                <th>Сегмент</th>
                                <th>Категория</th>
                                <th>Менеджер</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for client in clients %}
                                <tr>
                                    <td>
                                        <a href="{{ path('app_clients_show', {id: client.id}) }}">
                                            {{ client.companyName }}
                                        </a>
                                    </td>
                                    <td>{{ client.contactPerson ?? '-' }}</td>
                                    <td>{{ client.phone ?? '-' }}</td>
                                    <td>{{ client.email ?? '-' }}</td>
                                    <td>
                                        <span class="badge bg-{{ client.segment == 'wholesale' ? 'primary' : 'secondary' }}">
                                            {{ client.segment == 'wholesale' ? 'Опт' : 'Розница' }}
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-{{ client.category == 'vip' ? 'warning' : 'info' }}">
                                            {% if client.category == 'new' %}Новый
                                            {% elseif client.category == 'regular' %}Постоянный
                                            {% elseif client.category == 'vip' %}VIP
                                            {% else %}Потенциальный{% endif %}
                                        </span>
                                    </td>
                                    <td>{{ client.manager ? client.manager.fullName : '-' }}</td>
                                    <td>
                                        <a href="{{ path('app_clients_show', {id: client.id}) }}" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_clients_edit', {id: client.id}) }}" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
