{% extends 'base_sidebar.html.twig' %}

{% block title %}CRM Панель{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="fas fa-chart-line me-2"></i>CRM Панель
        </h1>
        <div class="d-flex gap-2">
            <a href="{{ path('app_clients_new') }}" class="btn btn-outline-primary">
                <i class="fas fa-user-plus me-2"></i>Новый клиент
            </a>
            <a href="{{ path('app_deals_new') }}" class="btn btn-primary">
                <i class="fas fa-handshake me-2"></i>Новая сделка
            </a>
        </div>
    </div>

    <!-- KPI Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card-modern">
                <div class="card-body-modern">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">Всего клиентов</p>
                            <h3 class="mb-0">{{ totalClients }}</h3>
                            <small class="text-success">
                                <i class="fas fa-star me-1"></i>{{ vipClients }} VIP
                            </small>
                        </div>
                        <div class="icon-box bg-primary bg-opacity-10 text-primary">
                            <i class="fas fa-building"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card-modern">
                <div class="card-body-modern">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">Активные сделки</p>
                            <h3 class="mb-0">{{ dealsStats.in_progress }}</h3>
                            <small class="text-muted">
                                из {{ dealsStats.total }} всего
                            </small>
                        </div>
                        <div class="icon-box bg-info bg-opacity-10 text-info">
                            <i class="fas fa-handshake"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card-modern">
                <div class="card-body-modern">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">Общая выручка</p>
                            <h3 class="mb-0">{{ totalRevenue|number_format(0, '.', ' ') }}</h3>
                            <small class="text-muted">₽</small>
                        </div>
                        <div class="icon-box bg-success bg-opacity-10 text-success">
                            <i class="fas fa-ruble-sign"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="card-modern">
                <div class="card-body-modern">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-1">Конверсия</p>
                            <h3 class="mb-0">{{ conversionRate|number_format(1) }}%</h3>
                            <small class="text-muted">
                                {{ dealsStats.won }} / {{ dealsStats.won + dealsStats.lost }}
                            </small>
                        </div>
                        <div class="icon-box bg-warning bg-opacity-10 text-warning">
                            <i class="fas fa-percentage"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Воронка продаж -->
        <div class="col-lg-8 mb-4">
            <div class="card-modern">
                <div class="card-body-modern">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="mb-0"><i class="fas fa-filter me-2"></i>Воронка продаж</h5>
                        <a href="{{ path('app_deals_funnel') }}" class="btn btn-sm btn-outline-primary">
                            Подробнее
                        </a>
                    </div>

                    <div class="funnel-chart">
                        {% set totalAmount = 0 %}
                        {% for stage in dealsByStage %}
                            {% set totalAmount = totalAmount + stage.total %}
                        {% endfor %}

                        {% for stage in dealsByStage %}
                            {% set percentage = totalAmount > 0 ? (stage.total / totalAmount * 100) : 0 %}
                            <div class="funnel-stage mb-3">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="fw-bold">
                                        {% if stage.stage == 'lead' %}Лид
                                        {% elseif stage.stage == 'qualification' %}Квалификация
                                        {% elseif stage.stage == 'proposal' %}Предложение
                                        {% elseif stage.stage == 'negotiation' %}Переговоры
                                        {% elseif stage.stage == 'closing' %}Закрытие
                                        {% endif %}
                                    </span>
                                    <span class="text-muted">
                                        {{ stage.count }} сделок • {{ stage.total|number_format(0, '.', ' ') }} ₽
                                    </span>
                                </div>
                                <div class="progress" style="height: 30px;">
                                    <div class="progress-bar bg-primary" style="width: {{ percentage }}%">
                                        {{ percentage|number_format(1) }}%
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Боковая панель -->
        <div class="col-lg-4">
            <!-- Просроченные сделки -->
            {% if overdueDeals|length > 0 %}
                <div class="card-modern mb-4">
                    <div class="card-body-modern">
                        <h5 class="mb-3 text-danger">
                            <i class="fas fa-exclamation-triangle me-2"></i>Просроченные сделки
                        </h5>
                        {% for deal in overdueDeals|slice(0, 3) %}
                            <div class="mb-3 p-2 bg-light rounded">
                                <a href="{{ path('app_deals_show', {id: deal.id}) }}" class="text-decoration-none">
                                    <strong>{{ deal.title }}</strong>
                                </a>
                                <div class="small text-muted">
                                    {{ deal.client.companyName }}
                                </div>
                                <div class="small text-danger">
                                    Ожидалось: {{ deal.expectedCloseDate|date('d.m.Y') }}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}

            <!-- Статистика по товарам -->
            <div class="card-modern mb-4">
                <div class="card-body-modern">
                    <h5 class="mb-3"><i class="fas fa-box me-2"></i>Товары</h5>
                    <div class="d-flex justify-content-between mb-2">
                        <span>Всего товаров:</span>
                        <strong>{{ totalProducts }}</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Активных:</span>
                        <strong class="text-success">{{ activeProducts }}</strong>
                    </div>
                    <a href="{{ path('app_products_index') }}" class="btn btn-outline-primary w-100">
                        Перейти к каталогу
                    </a>
                </div>
            </div>

            <!-- Быстрые действия -->
            <div class="card-modern">
                <div class="card-body-modern">
                    <h5 class="mb-3"><i class="fas fa-bolt me-2"></i>Быстрые действия</h5>
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_clients_new') }}" class="btn btn-outline-primary">
                            <i class="fas fa-user-plus me-2"></i>Добавить клиента
                        </a>
                        <a href="{{ path('app_deals_new') }}" class="btn btn-outline-success">
                            <i class="fas fa-handshake me-2"></i>Создать сделку
                        </a>
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('app_products_new') }}" class="btn btn-outline-info">
                                <i class="fas fa-box me-2"></i>Добавить товар
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Последние сделки -->
    <div class="card-modern mt-4">
        <div class="card-body-modern">
            <h5 class="mb-3"><i class="fas fa-history me-2"></i>Последние сделки</h5>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Название</th>
                            <th>Клиент</th>
                            <th>Сумма</th>
                            <th>Этап</th>
                            <th>Статус</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for deal in recentDeals %}
                            <tr>
                                <td>
                                    <a href="{{ path('app_deals_show', {id: deal.id}) }}">
                                        {{ deal.title }}
                                    </a>
                                </td>
                                <td>{{ deal.client.companyName }}</td>
                                <td>{{ deal.amount|number_format(0, '.', ' ') }} ₽</td>
                                <td><span class="badge bg-info">{{ deal.stageDisplayName }}</span></td>
                                <td>
                                    {% if deal.status == 'in_progress' %}
                                        <span class="badge bg-primary">{{ deal.statusDisplayName }}</span>
                                    {% elseif deal.status == 'won' %}
                                        <span class="badge bg-success">{{ deal.statusDisplayName }}</span>
                                    {% else %}
                                        <span class="badge bg-secondary">{{ deal.statusDisplayName }}</span>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
.icon-box {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
}
</style>
{% endblock %}
