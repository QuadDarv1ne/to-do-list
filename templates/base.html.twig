        function handleVoiceCommand(command) {
            console.log('Voice command received:', command);
            
            // Navigation commands
            if (command.includes('панель') || command.includes('dashboard')) {
                window.location.href = '{{ path('app_dashboard') }}';
                showVoiceFeedback('Переход на панель управления', 'success');
