    <script src="{{ asset('js/components/interactive-elements.js') }}" defer></script>
    <script src="{{ asset('js/components/form-validator.js') }}" defer></script>
    <script src="{{ asset('js/components/global-interactions.js') }}"></script>

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}

        <!-- Environment flag -->
        <meta name="environment" content="{{ app.environment }}" data-environment="{{ app.environment }}">

        <!-- CSP Nonce -->
        {% set nonce = app.environment == 'prod' ? csp_nonce('script') : '' %}
        {% set nonce_attr = nonce ? 'nonce="' ~ nonce ~ '"' : '' %}

        <!-- Critical functions -->
        <script {{ nonce_attr }} src="{{ asset('js/core/unified-core.js') }}"></script>

        <!-- Core scripts -->
        <script {{ nonce_attr }} src="{{ asset('js/components/navbar-enhanced.js') }}" defer></script>
        <script {{ nonce_attr }} src="{{ asset('js/components/mobile-interactions.js') }}" defer></script>

        {% if app.user %}
            <script {{ nonce_attr }} src="{{ asset('js/components/notifications-realtime.js') }}" defer></script>
        {% endif %}

        <!-- Page-specific scripts -->
        {% if app.request.attributes.get('_route') starts with 'app_task' %}
            <script {{ nonce_attr }} src="{{ asset('js/components/table-enhancements.js') }}" defer></script>
        {% endif %}
        {% if app.request.attributes.get('_route') == 'app_kanban_board' %}
            <script {{ nonce_attr }} src="{{ asset('js/pages/kanban-enhanced.js') }}?v={{ 'now'|date('U') }}" defer></script>
        {% endif %}
        {% if app.request.attributes.get('_route') == 'app_calendar' %}
            <script {{ nonce_attr }} src="{{ asset('js/pages/calendar-enhanced.js') }}" defer></script>
        {% endif %}
        {% if app.request.attributes.get('_route') starts with 'app_dashboard' or app.request.attributes.get('_route') starts with 'app_analytics' %}
            <script {{ nonce_attr }} src="{{ asset('js/components/dashboard-widgets.js') }}" defer></script>
        {% endif %}
        {% if app.request.attributes.get('_route') starts with 'app_settings' %}
            <script {{ nonce_attr }} src="{{ asset('js/pages/settings-enhanced.js') }}" defer></script>
        {% endif %}
    {% endblock %}

    <!-- Flash messages через Notification System -->
    {% set nonce = app.environment == 'prod' ? csp_nonce('script') : '' %}
    {% set nonce_attr = nonce ? 'nonce="' ~ nonce ~ '"' : '' %}
    
    <script {{ nonce_attr }}>
        window.addEventListener('DOMContentLoaded', function() {
            {% for flash_message in app.session.flashbag.get('success') %}
            setTimeout(() => {
                if (window.notify) window.notify.success('{{ flash_message|e('js') }}');
            }, 100);
            {% endfor %}
            {% for flash_message in app.session.flashbag.get('error') %}
            setTimeout(() => {
                if (window.notify) window.notify.error('{{ flash_message|e('js') }}');
            }, 100);
            {% endfor %}
            {% for flash_message in app.session.flashbag.get('warning') %}
            setTimeout(() => {
                if (window.notify) window.notify.warning('{{ flash_message|e('js') }}');
            }, 100);
            {% endfor %}
            {% for flash_message in app.session.flashbag.get('info') %}
            setTimeout(() => {
                if (window.notify) window.notify.info('{{ flash_message|e('js') }}');
            }, 100);
            {% endfor %}
        });
    </script>

    {% block additional_javascripts %}{% endblock %}
</body>
</html>
