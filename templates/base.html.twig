<!DOCTYPE html>
<html lang="ru" class="no-js">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{% block meta_description %}CRM система для управления задачами и продажами{% endblock %}">
    <meta name="robots" content="index, follow">
    
    <title>{% block title %}CRM система: Управление задачами{% endblock %}</title>

    <!-- Favicon -->
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

    <!-- PWA Manifest -->
    <link rel="manifest" href="{{ asset('manifest.json') }}">
    <meta name="theme-color" content="#667eea">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-title" content="CRM Tasks">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">

    <!-- CSRF Token -->
    <meta name="csrf-token" content="{{ csrf_token('authenticate') }}">

    <!-- CSP Nonce для production -->
    {% if app.environment == 'prod' %}
    <meta name="csp-nonce" content="{{ csp_nonce('script') }}">
    {% endif %}

    <!-- DNS Prefetch -->
    <link rel="dns-prefetch" href="https://cdn.jsdelivr.net">
    <link rel="dns-prefetch" href="https://cdnjs.cloudflare.com">
    <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin>
    <link rel="preconnect" href="https://cdnjs.cloudflare.com" crossorigin>

    <!-- Critical CSS Inline -->
    <style>
        :root{
            --primary:#667eea;
            --primary-dark:#5568d3;
            --secondary:#764ba2;
            --success:#10b981;
            --danger:#ef4444;
            --warning:#f59e0b;
            --info:#3b82f6;
            --light:#f8f9fa;
            --dark:#1e293b;
        }
        *{margin:0;padding:0;box-sizing:border-box}
        html{font-size:16px;scroll-behavior:smooth}
        body{
            font-family:-apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,sans-serif;
            line-height:1.6;color:#333;background:#f5f6fa;
            opacity:0;transition:opacity 0.4s ease;
        }
        body.loaded{opacity:1}
        body.no-js{opacity:1}
        .visually-hidden{
            position:absolute;width:1px;height:1px;padding:0;margin:-1px;
            overflow:hidden;clip:rect(0,0,0,0);border:0;
        }
        .page-loader{
            position:fixed;top:0;left:0;width:100%;height:100%;
            background:linear-gradient(135deg,#667eea 0%,#764ba2 100%);
            display:flex;justify-content:center;align-items:center;
            z-index:9999;transition:opacity 0.5s ease,visibility 0.5s ease;
        }
        .page-loader.hidden{opacity:0;visibility:hidden}
        .spinner{
            width:60px;height:60px;border:6px solid rgba(255,255,255,0.2);
            border-top-color:#fff;border-radius:50%;
            animation:spin 1s linear infinite;
            box-shadow:0 0 30px rgba(255,255,255,0.3);
        }
        @keyframes spin{to{transform:rotate(360deg)}}
        .skip-link{
            position:absolute;top:-50px;left:20px;
            background:linear-gradient(135deg,#667eea 0%,#764ba2 100%);
            color:#fff;padding:12px 24px;border-radius:8px;
            z-index:10000;text-decoration:none;font-weight:500;
            box-shadow:0 4px 15px rgba(102,126,234,0.4);
            transition:top 0.3s ease,transform 0.3s ease;
        }
        .skip-link:focus{top:20px;transform:translateY(2px)}
    </style>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    {% block stylesheets %}
        <!-- Application CSS -->
        <link rel="stylesheet" href="{{ asset('css/themes-bundle.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/components-bundle.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/navbar-enhanced.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/base-layout.css') }}">
        <link rel="stylesheet" href="{{ asset('css/ui-enhancements.css') }}">
        <link rel="stylesheet" href="{{ asset('css/app-enhanced.css') }}">
    {% endblock %}
</head>
<body>
    <!-- Page Loader -->
    <div class="page-loader" id="pageLoader">
        <div class="spinner"></div>
    </div>

    <!-- Skip Link -->
    <a href="#main-content" class="skip-link visually-hidden">
        <i class="fas fa-arrow-down me-2"></i>Перейти к основному контенту
    </a>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-enhanced sticky-top" role="navigation" aria-label="Основная навигация">
        <div class="container-fluid">
            <a class="navbar-brand-enhanced" href="{{ path('app_dashboard') }}">
                <div class="brand-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <div class="brand-text d-none d-sm-block">
                    <div class="brand-title">CRM</div>
                    <div class="brand-subtitle">Task Management</div>
                </div>
            </a>

            <button class="navbar-toggler navbar-toggler-enhanced" type="button"
                    data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false"
                    aria-label="Переключить навигацию">
                <span class="navbar-toggler-icon navbar-toggler-icon-enhanced"></span>
            </button>

            <div class="collapse navbar-collapse navbar-collapse-enhanced" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link nav-link-enhanced" href="{{ path('app_dashboard') }}">
                                <i class="fas fa-home"></i><span>Панель</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-enhanced" href="{{ path('app_task_index') }}">
                                <i class="fas fa-tasks"></i><span>Задачи</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-enhanced" href="{{ path('app_kanban_board') }}">
                                <i class="fas fa-columns"></i><span>Канбан</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-enhanced" href="{{ path('app_calendar') }}">
                                <i class="fas fa-calendar"></i><span>Календарь</span>
                            </a>
                        </li>
                    {% endif %}
                </ul>

                {% if app.user %}
                <ul class="navbar-nav ms-auto align-items-center">
                    <!-- Quick Actions -->
                    <li class="nav-item d-none d-lg-block me-2">
                        <a class="quick-action-btn-enhanced" href="{{ path('app_task_new') }}" 
                           title="Новая задача" aria-label="Новая задача">
                            <i class="fas fa-plus"></i>
                        </a>
                    </li>

                    <!-- Theme Switcher -->
                    <li class="nav-item me-2">
                        {% include 'components/theme_switcher.html.twig' %}
                    </li>

                    <!-- Notifications -->
                    <li class="nav-item dropdown me-2">
                        <a class="quick-action-btn-enhanced position-relative"
                           href="#" role="button" data-bs-toggle="dropdown"
                           aria-expanded="false" aria-label="Уведомления">
                            <i class="fas fa-bell"></i>
                            <span class="notification-badge-enhanced" id="notificationCount">
                                {{ app.user.unreadNotifications|default(0) }}
                            </span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" style="min-width: 300px;">
                            <li><h6 class="dropdown-header">Уведомления</h6></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="{{ path('app_notification_index') }}">
                                    <i class="fas fa-bell text-primary me-2"></i>
                                    <div>
                                        <div class="fw-semibold">Просмотреть все</div>
                                        <small class="text-muted">{{ app.user.unreadNotifications|default(0) }} непрочитанных</small>
                                    </div>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!-- User Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link p-0" href="#" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="user-avatar-enhanced">
                                {{ app.user.firstName|first }}{{ app.user.lastName|first }}
                            </div>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><div class="dropdown-header">
                                <strong>{{ app.user.fullName }}</strong>
                                <div class="text-muted small">{{ app.user.email }}</div>
                            </div></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="{{ path('app_profile_show') }}">
                                    <i class="fas fa-user me-2"></i>Мой профиль
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="{{ path('app_settings') }}">
                                    <i class="fas fa-cog me-2"></i>Настройки
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item text-danger" href="#" data-bs-toggle="modal" data-bs-target="#logoutModal">
                                    <i class="fas fa-sign-out-alt me-2"></i>Выход
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
                {% else %}
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link nav-link-enhanced" href="{{ path('app_login') }}">
                            <i class="fas fa-sign-in-alt"></i>Вход
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-enhanced" href="{{ path('app_register') }}">
                            <i class="fas fa-user-plus"></i>Регистрация
                        </a>
                    </li>
                </ul>
                {% endif %}
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container-fluid mt-4" id="main-content" role="main" aria-label="Основное содержимое">
        {% block body %}{% endblock %}
    </main>

    <!-- Mobile Bottom Navigation -->
    {% if app.user %}
    <nav class="bottom-nav" role="navigation" aria-label="Мобильная навигация">
        <div class="bottom-nav-items">
            <a href="{{ path('app_dashboard') }}" class="bottom-nav-item{{ app.request.attributes.get('_route') == 'app_dashboard' ? ' active' : '' }}">
                <i class="fas fa-home bottom-nav-item-icon"></i>
                <span class="bottom-nav-item-label">Главная</span>
            </a>
            <a href="{{ path('app_task_index') }}" class="bottom-nav-item{{ 'app_task' in app.request.attributes.get('_route') ? ' active' : '' }}">
                <i class="fas fa-tasks bottom-nav-item-icon"></i>
                <span class="bottom-nav-item-label">Задачи</span>
            </a>
            <a href="{{ path('app_task_new') }}" class="bottom-nav-item quick-action">
                <i class="fas fa-plus bottom-nav-item-icon"></i>
                <span class="bottom-nav-item-label">Новая</span>
            </a>
            <a href="{{ path('app_kanban_board') }}" class="bottom-nav-item{{ app.request.attributes.get('_route') == 'app_kanban_board' ? ' active' : '' }}">
                <i class="fas fa-columns bottom-nav-item-icon"></i>
                <span class="bottom-nav-item-label">Канбан</span>
            </a>
            <a href="{{ path('app_calendar') }}" class="bottom-nav-item{{ app.request.attributes.get('_route') == 'app_calendar' ? ' active' : '' }}">
                <i class="fas fa-calendar bottom-nav-item-icon"></i>
                <span class="bottom-nav-item-label">Календарь</span>
            </a>
        </div>
    </nav>

    <!-- FAB Button -->
    <button class="bottom-nav-fab" id="fabButton" onclick="toggleFabMenu()" aria-label="Быстрые действия">
        <i class="fas fa-plus"></i>
    </button>

    <!-- FAB Menu -->
    <div class="bottom-nav-fab-menu" id="fabMenu">
        <a href="{{ path('app_task_new') }}" class="bottom-nav-fab-menu-item">
            <i class="fas fa-tasks"></i><span>Новая задача</span>
        </a>
        <a href="{{ path('app_deals_new') }}" class="bottom-nav-fab-menu-item">
            <i class="fas fa-handshake"></i><span>Новая сделка</span>
        </a>
        <a href="{{ path('app_clients_new') }}" class="bottom-nav-fab-menu-item">
            <i class="fas fa-users"></i><span>Новый клиент</span>
        </a>
    </div>
    <div class="bottom-nav-fab-backdrop" id="fabBackdrop" onclick="toggleFabMenu()"></div>
    {% endif %}

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" defer></script>
    
    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}

        <!-- Environment flag -->
        <meta name="environment" content="{{ app.environment }}" data-environment="{{ app.environment }}">

        <!-- CSP Nonce -->
        {% set nonce = app.environment == 'prod' ? csp_nonce('script') : '' %}
        {% set nonce_attr = nonce ? 'nonce="' ~ nonce ~ '"' : '' %}

        <!-- Critical functions - load first without defer -->
        <script {{ nonce_attr }} src="{{ asset('js/critical-functions.js') }}"></script>

        <!-- Utility scripts -->
        <script {{ nonce_attr }} src="{{ asset('js/console-wrapper.js') }}"></script>
        <script {{ nonce_attr }} src="{{ asset('js/logger.js') }}" defer></script>
        <script {{ nonce_attr }} src="{{ asset('js/timer-manager.js') }}" defer></script>
        <script {{ nonce_attr }} src="{{ asset('js/event-manager.js') }}" defer></script>

        <!-- Core bundle -->
        <script {{ nonce_attr }} src="{{ asset('js/core-bundle.min.js') }}" defer></script>
        <script {{ nonce_attr }} src="{{ asset('js/navbar-enhanced.js') }}" defer></script>
        <script {{ nonce_attr }} src="{{ asset('js/theme-switcher.js') }}" defer></script>

        {% if app.user %}
            <script {{ nonce_attr }} src="{{ asset('js/common-bundle.min.js') }}" defer></script>
            <script {{ nonce_attr }} src="{{ asset('js/notifications-realtime.js') }}" defer></script>
        {% endif %}

        <!-- Page-specific scripts -->
        {% if app.request.attributes.get('_route') starts with 'app_task' %}
            <script {{ nonce_attr }} src="{{ asset('js/table-enhancements.js') }}" defer></script>
        {% endif %}
        {% if app.request.attributes.get('_route') == 'app_kanban_board' %}
            <script {{ nonce_attr }} src="{{ asset('js/kanban-enhanced.js') }}" defer></script>
        {% endif %}
        {% if app.request.attributes.get('_route') == 'app_calendar' %}
            <script {{ nonce_attr }} src="{{ asset('js/calendar-enhanced.js') }}" defer></script>
        {% endif %}
        {% if app.request.attributes.get('_route') starts with 'app_dashboard' or app.request.attributes.get('_route') starts with 'app_analytics' %}
            <script {{ nonce_attr }} src="{{ asset('js/dashboard-widgets.js') }}" defer></script>
        {% endif %}
        {% if app.request.attributes.get('_route') starts with 'app_settings' %}
            <script {{ nonce_attr }} src="{{ asset('js/settings-enhanced.js') }}" defer></script>
        {% endif %}
    {% endblock %}

    <!-- Flash messages -->
    {% set nonce = app.environment == 'prod' ? csp_nonce('script') : '' %}
    {% set nonce_attr = nonce ? 'nonce="' ~ nonce ~ '"' : '' %}
    
    <script {{ nonce_attr }}>
        window.addEventListener('DOMContentLoaded', function() {
            {% for flash_message in app.session.flashbag.get('success') %}
            setTimeout(() => showToast('{{ flash_message|e('js') }}', 'success'), 100);
            {% endfor %}
            {% for flash_message in app.session.flashbag.get('error') %}
            setTimeout(() => showToast('{{ flash_message|e('js') }}', 'error'), 100);
            {% endfor %}
            {% for flash_message in app.session.flashbag.get('warning') %}
            setTimeout(() => showToast('{{ flash_message|e('js') }}', 'warning'), 100);
            {% endfor %}
        });
    </script>

    {% block additional_javascripts %}{% endblock %}
</body>
</html>
