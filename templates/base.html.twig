<!DOCTYPE html>
<html lang="ru" class="no-js">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{% block meta_description %}CRM система для управления задачами и продажами{% endblock %}">
    <meta name="robots" content="index, follow">
    
    <title>{% block title %}CRM система: Управление задачами{% endblock %}</title>

    <!-- Favicon -->
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

    <!-- PWA Manifest -->
    <link rel="manifest" href="{{ asset('manifest.json') }}">
    <meta name="theme-color" content="#667eea">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-title" content="CRM Tasks">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">

    <!-- CSRF Token -->
    <meta name="csrf-token" content="{{ csrf_token('authenticate') }}">

    <!-- CSP Nonce для production -->
    {% if app.environment == 'prod' %}
    <meta name="csp-nonce" content="{{ csp_nonce('script') }}">
    {% endif %}

    <!-- DNS Prefetch -->
    <link rel="dns-prefetch" href="https://cdn.jsdelivr.net">
    <link rel="dns-prefetch" href="https://cdnjs.cloudflare.com">
    <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin>
    <link rel="preconnect" href="https://cdnjs.cloudflare.com" crossorigin>

    <!-- Critical CSS Inline - Design System v2.0 -->
    <style>
        :root{--font-size-base:16px;--primary:#6366f1;--primary-hover:#4f46e5;--success:#10b981;--danger:#f43f5e;--warning:#f59e0b;--info:#0ea5e9;--text-primary:#0f172a;--text-secondary:#475569;--bg-primary:#ffffff;--bg-secondary:#f8fafc;--border-primary:#e2e8f0;--shadow:0 4px 6px -1px rgba(0,0,0,0.1);--radius-lg:0.75rem;--transition-base:200ms;--transition-ease:cubic-bezier(0.4,0,0.2,1)}
        *,*::before,*::after{box-sizing:border-box;margin:0;padding:0}
        html{font-size:var(--font-size-base);scroll-behavior:smooth;-webkit-text-size-adjust:100%}
        body{font-family:'Inter',system-ui,-apple-system,sans-serif;line-height:1.6;color:var(--text-primary);background:var(--bg-secondary);opacity:0;transition:opacity 0.4s ease}
        body.loaded{opacity:1}
        body.no-js{opacity:1}
        .visually-hidden{position:absolute;width:1px;height:1px;padding:0;margin:-1px;overflow:hidden;clip:rect(0,0,0,0);border:0}
        .page-loader{position:fixed;top:0;left:0;width:100%;height:100%;background:linear-gradient(135deg,var(--primary) 0%,#8b5cf6 100%);display:flex;justify-content:center;align-items:center;z-index:var(--z-toast,1080);transition:opacity 0.5s ease,visibility 0.5s ease}
        .page-loader.hidden{opacity:0;visibility:hidden}
        .spinner{width:60px;height:60px;border:6px solid rgba(255,255,255,0.2);border-top-color:#fff;border-radius:50%;animation:spin 1s linear infinite;box-shadow:0 0 30px rgba(255,255,255,0.3)}
        @keyframes spin{to{transform:rotate(360deg)}}
        .skip-link{position:absolute;top:-100%;left:1rem;z-index:var(--z-tooltip,1070);padding:0.75rem 1rem;background:var(--primary);color:#fff;border-radius:var(--radius-lg);text-decoration:none;font-weight:500;transition:top var(--transition-base) var(--transition-ease)}
        .skip-link:focus{top:1rem}
        .page-transition{animation:fadeIn 0.4s ease}
        @keyframes fadeIn{from{opacity:0}to{opacity:1}}
    </style>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    {% block stylesheets %}
        <!-- Unified Styles v3.0 - Оптимизированная система без дублирования -->
        <link rel="stylesheet" href="{{ asset('css/unified-styles.min.css') }}">

        <!-- Page-specific styles (только при необходимости) -->
        {% if app.request.attributes.get('_route') starts with 'app_dashboard' %}
            <link rel="stylesheet" href="{{ asset('css/dashboard-enhanced.min.css') }}">
        {% endif %}
        {% if app.request.attributes.get('_route') starts with 'app_task' %}
            <link rel="stylesheet" href="{{ asset('css/tasks-enhanced.min.css') }}">
        {% endif %}
        {% if app.request.attributes.get('_route') == 'app_kanban_board' %}
            <link rel="stylesheet" href="{{ asset('css/kanban-enhanced.min.css') }}">
        {% endif %}
        {% if app.request.attributes.get('_route') == 'app_calendar' %}
            <link rel="stylesheet" href="{{ asset('css/calendar-enhanced.min.css') }}">
        {% endif %}
    {% endblock %}
</head>
<body>
    <!-- Page Loader -->
    <div class="page-loader" id="pageLoader">
        <div class="spinner"></div>
    </div>

    <!-- Skip Link -->
    <a href="#main-content" class="skip-link visually-hidden">
        <i class="fas fa-arrow-down me-2"></i>Перейти к основному контенту
    </a>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-enhanced sticky-top" role="navigation" aria-label="Основная навигация">
        <div class="container-fluid">
            <a class="navbar-brand-enhanced" href="{{ path('app_dashboard') }}">
                <div class="brand-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <div class="brand-text d-none d-sm-block">
                    <div class="brand-title">CRM</div>
                    <div class="brand-subtitle">Task Management</div>
                </div>
            </a>

            <button class="navbar-toggler navbar-toggler-enhanced" type="button"
                    data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false"
                    aria-label="Переключить навигацию">
                <span class="navbar-toggler-icon navbar-toggler-icon-enhanced"></span>
            </button>

            <div class="collapse navbar-collapse navbar-collapse-enhanced" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link nav-link-enhanced" href="{{ path('app_dashboard') }}">
                                <i class="fas fa-home"></i><span>Панель</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-enhanced" href="{{ path('app_task_index') }}">
                                <i class="fas fa-tasks"></i><span>Задачи</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-enhanced" href="{{ path('app_kanban_board') }}">
                                <i class="fas fa-columns"></i><span>Канбан</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-link-enhanced" href="{{ path('app_calendar') }}">
                                <i class="fas fa-calendar"></i><span>Календарь</span>
                            </a>
                        </li>
                    {% endif %}
                </ul>

                {% if app.user %}
                <ul class="navbar-nav ms-auto align-items-center">
                    <!-- Quick Actions -->
                    <li class="nav-item d-none d-lg-block me-2">
                        <a class="quick-action-btn-enhanced" href="{{ path('app_task_new') }}" 
                           title="Новая задача" aria-label="Новая задача">
                            <i class="fas fa-plus"></i>
                        </a>
                    </li>

                    <!-- Theme Switcher -->
                    <li class="nav-item me-2">
                        {% include 'components/theme_switcher.html.twig' %}
                    </li>

                    <!-- Notifications -->
                    <li class="nav-item dropdown me-2">
                        <a class="quick-action-btn-enhanced position-relative"
                           href="#" role="button" data-bs-toggle="dropdown"
                           aria-expanded="false" aria-label="Уведомления">
                            <i class="fas fa-bell"></i>
                            <span class="notification-badge-enhanced" id="notificationCount">
                                {{ app.user.unreadNotifications|default(0) }}
                            </span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" style="min-width: 300px;">
                            <li><h6 class="dropdown-header">Уведомления</h6></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="{{ path('app_notification_index') }}">
                                    <i class="fas fa-bell text-primary me-2"></i>
                                    <div>
                                        <div class="fw-semibold">Просмотреть все</div>
                                        <small class="text-muted">{{ app.user.unreadNotifications|default(0) }} непрочитанных</small>
                                    </div>
                                </a>
                            </li>
                        </ul>
                    </li>

                    <!-- User Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link p-0" href="#" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="user-avatar-enhanced">
                                {{ app.user.firstName|first }}{{ app.user.lastName|first }}
                            </div>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><div class="dropdown-header">
                                <strong>{{ app.user.fullName }}</strong>
                                <div class="text-muted small">{{ app.user.email }}</div>
                            </div></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="{{ path('app_profile_show') }}">
                                    <i class="fas fa-user me-2"></i>Мой профиль
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="{{ path('app_settings') }}">
                                    <i class="fas fa-cog me-2"></i>Настройки
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item text-danger" href="#" data-bs-toggle="modal" data-bs-target="#logoutModal">
                                    <i class="fas fa-sign-out-alt me-2"></i>Выход
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
                {% else %}
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link nav-link-enhanced" href="{{ path('app_login') }}">
                            <i class="fas fa-sign-in-alt"></i>Вход
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link nav-link-enhanced" href="{{ path('app_register') }}">
                            <i class="fas fa-user-plus"></i>Регистрация
                        </a>
                    </li>
                </ul>
                {% endif %}
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container-fluid mt-4" id="main-content" role="main" aria-label="Основное содержимое">
        {% block body %}{% endblock %}
    </main>

    <!-- Footer -->
    <footer class="footer mt-5 py-4 bg-light border-top">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4 mb-3 mb-md-0">
                    <h5 class="fw-bold mb-3">
                        <i class="fas fa-chart-line me-2 text-primary"></i>CRM Task Management
                    </h5>
                    <p class="text-muted small">
                        Профессиональная система управления задачами и CRM для вашего бизнеса
                    </p>
                </div>
                <div class="col-md-2 mb-3 mb-md-0">
                    <h6 class="fw-semibold mb-3">Навигация</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="{{ path('app_dashboard') }}" class="text-muted text-decoration-none"><i class="fas fa-home me-2"></i>Панель</a></li>
                        <li class="mb-2"><a href="{{ path('app_task_index') }}" class="text-muted text-decoration-none"><i class="fas fa-tasks me-2"></i>Задачи</a></li>
                        <li class="mb-2"><a href="{{ path('app_kanban_board') }}" class="text-muted text-decoration-none"><i class="fas fa-columns me-2"></i>Канбан</a></li>
                        <li class="mb-2"><a href="{{ path('app_calendar') }}" class="text-muted text-decoration-none"><i class="fas fa-calendar me-2"></i>Календарь</a></li>
                    </ul>
                </div>
                <div class="col-md-2 mb-3 mb-md-0">
                    <h6 class="fw-semibold mb-3">CRM</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="{{ path('app_deals_index') }}" class="text-muted text-decoration-none"><i class="fas fa-handshake me-2"></i>Сделки</a></li>
                        <li class="mb-2"><a href="{{ path('app_clients_index') }}" class="text-muted text-decoration-none"><i class="fas fa-users me-2"></i>Клиенты</a></li>
                        <li class="mb-2"><a href="{{ path('app_analytics_dashboard') }}" class="text-muted text-decoration-none"><i class="fas fa-chart-bar me-2"></i>Аналитика</a></li>
                    </ul>
                </div>
                <div class="col-md-2 mb-3 mb-md-0">
                    <h6 class="fw-semibold mb-3">Личное</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="{{ path('app_goals_index') }}" class="text-muted text-decoration-none"><i class="fas fa-bullseye me-2"></i>Цели</a></li>
                        <li class="mb-2"><a href="{{ path('app_habits_index') }}" class="text-muted text-decoration-none"><i class="fas fa-fire me-2"></i>Привычки</a></li>
                        <li class="mb-2"><a href="{{ path('app_profile_show') }}" class="text-muted text-decoration-none"><i class="fas fa-user me-2"></i>Профиль</a></li>
                    </ul>
                </div>
                <div class="col-md-2">
                    <h6 class="fw-semibold mb-3">Поддержка</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none"><i class="fas fa-question-circle me-2"></i>Помощь</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none"><i class="fas fa-book me-2"></i>Документация</a></li>
                        <li class="mb-2"><a href="#" class="text-muted text-decoration-none"><i class="fas fa-envelope me-2"></i>Контакты</a></li>
                    </ul>
                </div>
            </div>
            <hr class="my-4">
            <div class="row align-items-center">
                <div class="col-md-6 text-center text-md-start">
                    <p class="text-muted small mb-0">
                        &copy; {{ "now"|date("Y") }} CRM Task Management. Все права защищены.
                    </p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <p class="text-muted small mb-0">
                        Версия 2.0 | <a href="#" class="text-decoration-none">Политика конфиденциальности</a> | <a href="#" class="text-decoration-none">Условия использования</a>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Mobile Bottom Navigation -->
    {% if app.user %}
    <nav class="bottom-nav" role="navigation" aria-label="Мобильная навигация">
        <div class="bottom-nav-items">
            <a href="{{ path('app_dashboard') }}" class="bottom-nav-item{{ app.request.attributes.get('_route') == 'app_dashboard' ? ' active' : '' }}">
                <i class="fas fa-home bottom-nav-item-icon"></i>
                <span class="bottom-nav-item-label">Главная</span>
            </a>
            <a href="{{ path('app_task_index') }}" class="bottom-nav-item{{ 'app_task' in app.request.attributes.get('_route') ? ' active' : '' }}">
                <i class="fas fa-tasks bottom-nav-item-icon"></i>
                <span class="bottom-nav-item-label">Задачи</span>
            </a>
            <a href="{{ path('app_task_new') }}" class="bottom-nav-item quick-action">
                <i class="fas fa-plus bottom-nav-item-icon"></i>
                <span class="bottom-nav-item-label">Новая</span>
            </a>
            <a href="{{ path('app_kanban_board') }}" class="bottom-nav-item{{ app.request.attributes.get('_route') == 'app_kanban_board' ? ' active' : '' }}">
                <i class="fas fa-columns bottom-nav-item-icon"></i>
                <span class="bottom-nav-item-label">Канбан</span>
            </a>
            <a href="{{ path('app_calendar') }}" class="bottom-nav-item{{ app.request.attributes.get('_route') == 'app_calendar' ? ' active' : '' }}">
                <i class="fas fa-calendar bottom-nav-item-icon"></i>
                <span class="bottom-nav-item-label">Календарь</span>
            </a>
        </div>
    </nav>

    <!-- FAB Button -->
    <button class="bottom-nav-fab" id="fabButton" onclick="toggleFabMenu()" aria-label="Быстрые действия">
        <i class="fas fa-plus"></i>
    </button>

    <!-- FAB Menu -->
    <div class="bottom-nav-fab-menu" id="fabMenu">
        <a href="{{ path('app_task_new') }}" class="bottom-nav-fab-menu-item">
            <i class="fas fa-tasks"></i><span>Новая задача</span>
        </a>
        <a href="{{ path('app_deals_new') }}" class="bottom-nav-fab-menu-item">
            <i class="fas fa-handshake"></i><span>Новая сделка</span>
        </a>
        <a href="{{ path('app_clients_new') }}" class="bottom-nav-fab-menu-item">
            <i class="fas fa-users"></i><span>Новый клиент</span>
        </a>
    </div>
    <div class="bottom-nav-fab-backdrop" id="fabBackdrop" onclick="toggleFabMenu()"></div>
    {% endif %}

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" defer></script>

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}

        <!-- Environment flag -->
        <meta name="environment" content="{{ app.environment }}" data-environment="{{ app.environment }}">

        <!-- CSP Nonce -->
        {% set nonce = app.environment == 'prod' ? csp_nonce('script') : '' %}
        {% set nonce_attr = nonce ? 'nonce="' ~ nonce ~ '"' : '' %}

        <!-- Critical functions -->
        <script {{ nonce_attr }} src="{{ asset('js/unified-core.min.js') }}"></script>

        <!-- Core scripts -->
        <script {{ nonce_attr }} src="{{ asset('js/navbar-enhanced.min.js') }}" defer></script>
        <script {{ nonce_attr }} src="{{ asset('js/theme-switcher.min.js') }}" defer></script>
        <script {{ nonce_attr }} src="{{ asset('js/mobile-interactions.min.js') }}" defer></script>

        {% if app.user %}
            <script {{ nonce_attr }} src="{{ asset('js/notifications-realtime.min.js') }}" defer></script>
        {% endif %}

        <!-- Page-specific scripts -->
        {% if app.request.attributes.get('_route') starts with 'app_task' %}
            <script {{ nonce_attr }} src="{{ asset('js/table-enhancements.min.js') }}" defer></script>
        {% endif %}
        {% if app.request.attributes.get('_route') == 'app_kanban_board' %}
            <script {{ nonce_attr }} src="{{ asset('js/kanban-enhanced.min.js') }}" defer></script>
        {% endif %}
        {% if app.request.attributes.get('_route') == 'app_calendar' %}
            <script {{ nonce_attr }} src="{{ asset('js/calendar-enhanced.min.js') }}" defer></script>
        {% endif %}
        {% if app.request.attributes.get('_route') starts with 'app_dashboard' or app.request.attributes.get('_route') starts with 'app_analytics' %}
            <script {{ nonce_attr }} src="{{ asset('js/dashboard-widgets.min.js') }}" defer></script>
        {% endif %}
        {% if app.request.attributes.get('_route') starts with 'app_settings' %}
            <script {{ nonce_attr }} src="{{ asset('js/settings-enhanced.min.js') }}" defer></script>
        {% endif %}
    {% endblock %}

    <!-- Flash messages -->
    {% set nonce = app.environment == 'prod' ? csp_nonce('script') : '' %}
    {% set nonce_attr = nonce ? 'nonce="' ~ nonce ~ '"' : '' %}
    
    <script {{ nonce_attr }}>
        window.addEventListener('DOMContentLoaded', function() {
            {% for flash_message in app.session.flashbag.get('success') %}
            setTimeout(() => showToast('{{ flash_message|e('js') }}', 'success'), 100);
            {% endfor %}
            {% for flash_message in app.session.flashbag.get('error') %}
            setTimeout(() => showToast('{{ flash_message|e('js') }}', 'error'), 100);
            {% endfor %}
            {% for flash_message in app.session.flashbag.get('warning') %}
            setTimeout(() => showToast('{{ flash_message|e('js') }}', 'warning'), 100);
            {% endfor %}
        });
    </script>

    {% block additional_javascripts %}{% endblock %}
</body>
</html>
