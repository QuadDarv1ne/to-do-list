<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}To-Do List{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    
    <!-- CSRF Token -->
    <meta name="csrf-token" content="{{ csrf_token('authenticate') }}">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
    {% endblock %}
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_dashboard') }}">
                <i class="fas fa-tasks"></i> To-Do List
            </a>
            
            <!-- Theme Toggle -->
            <button class="theme-toggle me-3" id="themeToggle" title="Переключить тему">
                <i class="fas fa-moon"></i>
            </button>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <!-- Keyboard Shortcuts Help -->
                    <li class="nav-item me-2">
                        <button class="btn btn-outline-light btn-sm" id="showShortcuts" title="Горячие клавиши">
                            <i class="fas fa-keyboard"></i>
                        </button>
                    </li>
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_dashboard') }}">Панель</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_task_index') }}">Задачи</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_task_category_index') }}">Категории</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_profile_show') }}">Профиль</a>
                        </li>
                        {% if app.user.hasRole('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_user_index') }}">Пользователи</a>
                            </li>
                        {% endif %}
                    {% endif %}
                </ul>
                
                {% if app.user %}
                <ul class="navbar-nav">
                    <!-- Notifications Dropdown -->
                    <li class="nav-item dropdown me-3">
                        <a class="nav-link dropdown-toggle position-relative" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-bell"></i>
                            {% set unreadNotifications = app.user.notifications|filter(n => not n.isRead)|length %}
                            {% if unreadNotifications > 0 %}
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                    {{ unreadNotifications }}
                                </span>
                            {% endif %}
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" style="min-width: 350px; max-height: 400px; overflow-y: auto;">
                            <li class="dropdown-header">
                                <i class="fas fa-bell me-2"></i>Уведомления
                                {% if unreadNotifications > 0 %}
                                    <span class="badge bg-primary">{{ unreadNotifications }} непрочитанных</span>
                                {% endif %}
                            </li>
                            {% set notifications = app.user.notifications|slice(0, 10) %}
                            {% if notifications is empty %}
                                <li><a class="dropdown-item disabled" href="#">Нет уведомлений</a></li>
                            {% else %}
                                {% for notification in notifications %}
                                    <li>
                                        <a class="dropdown-item d-flex flex-column {% if not notification.isRead %}fw-bold{% endif %}" href="{{ notification.task ? path('app_task_show', {'id': notification.task.id}) : '#' }}">
                                            <div class="d-flex justify-content-between">
                                                <span>{{ notification.title }}</span>
                                                <small class="text-muted">{{ notification.createdAt|date('d.m.Y H:i') }}</small>
                                            </div>
                                            <div class="text-muted small">{{ notification.message|striptags }}</div>
                                        </a>
                                    </li>
                                {% endfor %}
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="{{ path('app_notification_index') }}">Просмотреть все уведомления</a></li>
                            {% endif %}
                        </ul>
                    </li>
                    
                    <!-- User Dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                            <i class="fas fa-user"></i> {{ app.user.fullName }}
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="{{ path('app_profile_show') }}"><i class="fas fa-user me-2"></i>Мой профиль</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_profile_change_password') }}"><i class="fas fa-key me-2"></i>Сменить пароль</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt me-2"></i>Выход</a></li>
                        </ul>
                    </li>
                </ul>
                {% else %}
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Вход</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_register') }}">Регистрация</a>
                    </li>
                </ul>
                {% endif %}
            </div>
        </div>
    </nav>
    
    <main class="container-fluid mt-4">
        {% for flash_message in app.session.flashbag.get('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ flash_message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
        
        {% for flash_message in app.session.flashbag.get('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ flash_message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
        
        {% block body %}{% endblock %}
    </main>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Toast Container -->
    <div class="toast-container"></div>
    
    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
    
    <!-- Quick Task Modal -->
    <div class="modal fade" id="quickTaskModal" tabindex="-1" aria-labelledby="quickTaskModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="quickTaskModalLabel">Быстрое создание задачи</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="quick-task-form">
                        <div class="mb-3">
                            <label for="quick-task-title" class="form-label">Название задачи *</label>
                            <input type="text" class="form-control" id="quick-task-title" required placeholder="Введите название задачи">
                        </div>
                        <div class="mb-3">
                            <label for="quick-task-description" class="form-label">Описание</label>
                            <textarea class="form-control" id="quick-task-description" rows="3" placeholder="Добавьте описание задачи"></textarea>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="quick-task-priority" class="form-label">Приоритет</label>
                                <select class="form-select" id="quick-task-priority">
                                    <option value="low">Низкий</option>
                                    <option value="medium" selected>Средний</option>
                                    <option value="high">Высокий</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="quick-task-due-date" class="form-label">Срок выполнения</label>
                                <input type="date" class="form-control" id="quick-task-due-date">
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="quick-task-category" class="form-label">Категория</label>
                            <select class="form-select" id="quick-task-category">
                                <option value="">Без категории</option>
                                {% if app.user %}
                                    {% for category in app.user.taskCategories %}
                                        <option value="{{ category.id }}">{{ category.name }}</option>
                                    {% endfor %}
                                {% endif %}
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="quick-task-assigned-user" class="form-label">Назначить пользователю</label>
                            <select class="form-select" id="quick-task-assigned-user">
                                <option value="">Назначить себе</option>
                                {% if app.user %}
                                    <option value="{{ app.user.id }}">{{ app.user.fullName }}</option>
                                    <!-- This will be populated dynamically via JavaScript -->
                                {% endif %}
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="quick-task-tags" class="form-label">Теги</label>
                            <select class="form-select" id="quick-task-tags" multiple>
                                <!-- This will be populated dynamically via JavaScript -->
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                    <button type="button" class="btn btn-primary" id="save-quick-task">Создать задачу</button>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Floating Quick Task Button -->
    <button type="button" class="btn btn-primary btn-lg rounded-circle shadow position-fixed" 
            style="bottom: 30px; right: 30px; z-index: 1000; width: 60px; height: 60px;" 
            id="quick-task-fab" 
            data-bs-toggle="modal" 
            data-bs-target="#quickTaskModal">
        <i class="fas fa-plus"></i>
    </button>
    
    <script>
        // Theme Management
        document.addEventListener('DOMContentLoaded', function() {
            const themeToggle = document.getElementById('themeToggle');
            const themeIcon = themeToggle.querySelector('i');
            
            // Load saved theme
            const savedTheme = localStorage.getItem('theme') || 'light';
            document.documentElement.setAttribute('data-theme', savedTheme);
            updateThemeIcon(savedTheme);
            
            // Theme toggle functionality
            themeToggle.addEventListener('click', function() {
                const currentTheme = document.documentElement.getAttribute('data-theme');
                const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
                
                document.documentElement.setAttribute('data-theme', newTheme);
                localStorage.setItem('theme', newTheme);
                updateThemeIcon(newTheme);
                
                showToast(`Тема переключена на ${newTheme === 'dark' ? 'темную' : 'светлую'}`, 'success');
            });
            
            function updateThemeIcon(theme) {
                if (theme === 'dark') {
                    themeIcon.className = 'fas fa-sun';
                    themeToggle.title = 'Переключить на светлую тему';
                } else {
                    themeIcon.className = 'fas fa-moon';
                    themeToggle.title = 'Переключить на темную тему';
                }
            }
            
            // Keyboard Shortcuts
            const shortcuts = {
                'n': () => {
                    if (document.getElementById('quick-task-fab')) {
                        document.getElementById('quick-task-fab').click();
                    }
                },
                't': () => window.location.href = '{{ path('app_task_index') }}',
                'd': () => window.location.href = '{{ path('app_dashboard') }}',
                'c': () => window.location.href = '{{ path('app_task_category_index') }}',
                'p': () => window.location.href = '{{ path('app_profile_show') }}',
                '?': () => showKeyboardShortcuts()
            };
            
            document.addEventListener('keydown', function(e) {
                // Ignore if typing in input/textarea
                if (e.target.tagName === 'INPUT' || e.target.tagName === 'TEXTAREA') return;
                
                const key = e.key.toLowerCase();
                if (shortcuts[key] && (e.ctrlKey || !Object.keys(shortcuts).includes(key))) {
                    e.preventDefault();
                    shortcuts[key]();
                }
            });
            
            // Show shortcuts modal
            document.getElementById('showShortcuts').addEventListener('click', showKeyboardShortcuts);
            
            function showKeyboardShortcuts() {
                const modalHtml = `
                    <div class="modal fade" id="shortcutsModal" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title"><i class="fas fa-keyboard me-2"></i>Горячие клавиши</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h6>Навигация</h6>
                                            <ul class="list-unstyled">
                                                <li class="mb-2"><kbd class="kbd-shortcut">d</kbd> Панель управления</li>
                                                <li class="mb-2"><kbd class="kbd-shortcut">t</kbd> Задачи</li>
                                                <li class="mb-2"><kbd class="kbd-shortcut">c</kbd> Категории</li>
                                                <li class="mb-2"><kbd class="kbd-shortcut">p</kbd> Профиль</li>
                                            </ul>
                                        </div>
                                        <div class="col-md-6">
                                            <h6>Действия</h6>
                                            <ul class="list-unstyled">
                                                <li class="mb-2"><kbd class="kbd-shortcut">n</kbd> Быстрое создание задачи</li>
                                                <li class="mb-2"><kbd class="kbd-shortcut">?</kbd> Показать горячие клавиши</li>
                                                <li class="mb-2"><kbd class="kbd-shortcut">Esc</kbd> Закрыть модальные окна</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Закрыть</button>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                
                // Remove existing modal if present
                const existingModal = document.getElementById('shortcutsModal');
                if (existingModal) existingModal.remove();
                
                document.body.insertAdjacentHTML('beforeend', modalHtml);
                const modal = new bootstrap.Modal(document.getElementById('shortcutsModal'));
                modal.show();
                
                // Clean up after modal is hidden
                document.getElementById('shortcutsModal').addEventListener('hidden.bs.modal', function() {
                    this.remove();
                });
            }
            
            // Toast notifications
            window.showToast = function(message, type = 'info') {
                const toastContainer = document.querySelector('.toast-container');
                const toastId = 'toast-' + Date.now();
                
                const toastHtml = `
                    <div id="${toastId}" class="toast toast-${type}" role="alert">
                        <div class="toast-body">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : type === 'warning' ? 'exclamation-triangle' : 'info-circle'} me-2"></i>
                                <span>${message}</span>
                                <button type="button" class="btn-close ms-auto" data-bs-dismiss="toast"></button>
                            </div>
                        </div>
                    </div>
                `;
                
                toastContainer.insertAdjacentHTML('beforeend', toastHtml);
                const toastEl = document.getElementById(toastId);
                const toast = new bootstrap.Toast(toastEl, { delay: 3000 });
                toast.show();
                
                // Remove toast after it's hidden
                toastEl.addEventListener('hidden.bs.toast', function() {
                    this.remove();
                });
            };
            // Quick Task functionality
            const quickTaskFab = document.getElementById('quick-task-fab');
            const saveQuickTaskBtn = document.getElementById('save-quick-task');
            const quickTaskForm = document.getElementById('quick-task-form');
            
            // Function to populate dropdowns when modal is shown
            const quickTaskModal = document.getElementById('quickTaskModal');
            quickTaskModal.addEventListener('shown.bs.modal', function() {
                // Populate categories dropdown
                const categorySelect = document.getElementById('quick-task-category');
                // Clear existing options except the first one
                while (categorySelect.options.length > 1) {
                    categorySelect.remove(1);
                }
                
                fetch('{{ path('app_api_categories') }}')
                    .then(resp => resp.json())
                    .then(categories => {
                        categories.forEach(category => {
                            const option = document.createElement('option');
                            option.value = category.id;
                            option.textContent = category.name;
                            categorySelect.appendChild(option);
                        });
                    })
                    .catch(error => {
                        console.error('Error loading categories:', error);
                    });
                
                // Populate users dropdown
                const userSelect = document.getElementById('quick-task-assigned-user');
                // Clear existing options except the first one
                while (userSelect.options.length > 1) {
                    userSelect.remove(1);
                }
                
                // Add current user option (if user is authenticated)
                {% if app.user %}
                const currentUserOption = document.createElement('option');
                currentUserOption.value = '{{ app.user.id }}';
                currentUserOption.textContent = '{{ app.user.fullName }}';
                userSelect.appendChild(currentUserOption);
                {% endif %}
                
                fetch('{{ path('app_api_users') }}')
                    .then(resp => resp.json())
                    .then(users => {
                        users.forEach(user => {
                            // Don't add the current user again (only applicable when user is logged in)
                            {% if app.user %}
                            if (user.id != '{{ app.user.id }}') {
                            {% endif %}
                                const option = document.createElement('option');
                                option.value = user.id;
                                option.textContent = user.fullName;
                                userSelect.appendChild(option);
                            {% if app.user %}
                            }
                            {% endif %}
                        });
                    })
                    .catch(error => {
                        console.error('Error loading users:', error);
                    });
                
                // Populate tags dropdown
                const tagSelect = document.getElementById('quick-task-tags');
                // Clear all options
                tagSelect.innerHTML = '';
                
                fetch('{{ path('app_api_tags') }}')
                    .then(resp => resp.json())
                    .then(tags => {
                        tags.forEach(tag => {
                            const option = document.createElement('option');
                            option.value = tag.id;
                            option.textContent = tag.name;
                            tagSelect.appendChild(option);
                        });
                    })
                    .catch(error => {
                        console.error('Error loading tags:', error);
                    });
            });
            
            // Alternative approach: Create API endpoints and populate from them
            // For now, let's create a simpler solution that loads the data when modal opens
            
            saveQuickTaskBtn.addEventListener('click', function() {
                const title = document.getElementById('quick-task-title').value.trim();
                
                if (!title) {
                    alert('Пожалуйста, введите название задачи');
                    return;
                }
                
                // Collect form data
                const formData = {
                    title: title,
                    description: document.getElementById('quick-task-description').value,
                    priority: document.getElementById('quick-task-priority').value,
                    dueDate: document.getElementById('quick-task-due-date').value,
                    category: document.getElementById('quick-task-category').value,
                    assignedUser: document.getElementById('quick-task-assigned-user').value,
                    tags: Array.from(document.getElementById('quick-task-tags').selectedOptions).map(option => option.value)
                };
                
                // Send AJAX request to create the task
                fetch('{{ path('app_task_quick_create') }}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest',
                        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
                    },
                    body: JSON.stringify(formData)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Close modal
                        const modal = bootstrap.Modal.getInstance(document.getElementById('quickTaskModal'));
                        if (modal) {
                            modal.hide();
                        }
                        
                        // Reset form
                        quickTaskForm.reset();
                        
                        // Show success message
                        alert(data.message);
                        
                        // Optionally redirect to task list or show the new task
                        window.location.reload(); // Refresh the page to show the new task
                    } else {
                        alert(data.message || 'Ошибка при создании задачи');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Произошла ошибка при создании задачи');
                });
            });
        });
    </script>
</body>
</html>