<!DOCTYPE html>
<html lang="ru" class="no-js">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{% block meta_description %}CRM система для управления задачами и продажами{% endblock %}">
    <meta name="robots" content="index, follow">
    
    <title>{% block title %}CRM система: Управление задачами{% endblock %}</title>

    <!-- Favicon -->
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

    <!-- PWA Manifest -->
    <link rel="manifest" href="{{ asset('manifest.json') }}">
    <meta name="theme-color" content="#667eea">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-title" content="CRM Tasks">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="default">

    <!-- CSRF Token -->
    <meta name="csrf-token" content="{{ csrf_token('authenticate') }}">

    <!-- CSP Nonce для production -->
    {% if app.environment == 'prod' %}
    <meta name="csp-nonce" content="{{ csp_nonce('script') }}">
    {% endif %}

    <!-- DNS Prefetch -->
    <link rel="dns-prefetch" href="https://cdn.jsdelivr.net">
    <link rel="dns-prefetch" href="https://cdnjs.cloudflare.com">
    <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin>
    <link rel="preconnect" href="https://cdnjs.cloudflare.com" crossorigin>

    <!-- Critical CSS Inline - Design System v2.0 -->
    <style>
        :root{--font-size-base:16px;--primary:#6366f1;--primary-hover:#4f46e5;--success:#10b981;--danger:#f43f5e;--warning:#f59e0b;--info:#0ea5e9;--text-primary:#0f172a;--text-secondary:#475569;--bg-primary:#ffffff;--bg-secondary:#f8fafc;--border-primary:#e2e8f0;--shadow:0 4px 6px -1px rgba(0,0,0,0.1);--radius-lg:0.75rem;--transition-base:200ms;--transition-ease:cubic-bezier(0.4,0,0.2,1)}
        *,*::before,*::after{box-sizing:border-box;margin:0;padding:0}
        html{font-size:var(--font-size-base);scroll-behavior:smooth;-webkit-text-size-adjust:100%}
        body{font-family:'Inter',system-ui,-apple-system,sans-serif;line-height:1.6;color:var(--text-primary);background:var(--bg-secondary);opacity:0;transition:opacity 0.4s ease}
        body.loaded{opacity:1}
        body.no-js{opacity:1}
        .visually-hidden{position:absolute;width:1px;height:1px;padding:0;margin:-1px;overflow:hidden;clip:rect(0,0,0,0);border:0}
        .page-loader{position:fixed;top:0;left:0;width:100%;height:100%;background:linear-gradient(135deg,var(--primary) 0%,#8b5cf6 100%);display:flex;justify-content:center;align-items:center;z-index:var(--z-toast,1080);transition:opacity 0.5s ease,visibility 0.5s ease}
        .page-loader.hidden{opacity:0;visibility:hidden}
        .spinner{width:60px;height:60px;border:6px solid rgba(255,255,255,0.2);border-top-color:#fff;border-radius:50%;animation:spin 1s linear infinite;box-shadow:0 0 30px rgba(255,255,255,0.3)}
        @keyframes spin{to{transform:rotate(360deg)}}
        .skip-link{position:absolute;top:-100%;left:1rem;z-index:var(--z-tooltip,1070);padding:0.75rem 1rem;background:var(--primary);color:#fff;border-radius:var(--radius-lg);text-decoration:none;font-weight:500;transition:top var(--transition-base) var(--transition-ease)}
        .skip-link:focus{top:1rem}
        .page-transition{animation:fadeIn 0.4s ease}
        @keyframes fadeIn{from{opacity:0}to{opacity:1}}
    </style>

    <!-- Bootstrap CSS (локальная копия) -->
    <link rel="stylesheet" href="{{ asset('css/vendor/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/vendor/fontawesome.min.css') }}">
    
    <!-- Theme System -->
    <link rel="stylesheet" href="{{ asset('css/themes/topbar-layout.css') }}">
    <link rel="stylesheet" href="{{ asset('css/core/ui-improvements.css') }}">
    <link rel="stylesheet" href="{{ asset('css/core/common-styles.css') }}">
    <link rel="stylesheet" href="{{ asset('css/core/advanced-animations.css') }}">
    <link rel="stylesheet" href="{{ asset('css/core/responsive.css') }}">
    <link rel="stylesheet" href="{{ asset('css/core/adaptive-grid.css') }}">
    
    <!-- Enhanced Theme Manager -->
    <script src="{{ asset('js/core/theme-manager-enhanced.js') }}"></script>

    {% block stylesheets %}
        <!-- Page-specific styles (только при необходимости) -->
        {% if app.request.attributes.get('_route') starts with 'app_dashboard' %}
            <link rel="stylesheet" href="{{ asset('css/pages/dashboard-enhanced.css') }}">
        {% endif %}
        {% if app.request.attributes.get('_route') starts with 'app_task' %}
            <link rel="stylesheet" href="{{ asset('css/pages/tasks-enhanced.css') }}">
        {% endif %}
        {% if app.request.attributes.get('_route') == 'app_kanban_board' %}
            <link rel="stylesheet" href="{{ asset('css/pages/kanban-enhanced.css') }}">
        {% endif %}
        {% if app.request.attributes.get('_route') == 'app_calendar' %}
            <link rel="stylesheet" href="{{ asset('css/pages/calendar-enhanced.css') }}">
        {% endif %}
    {% endblock %}
</head>
<body>
    <!-- Page Loader -->
    <div class="page-loader" id="pageLoader">
        <div class="spinner"></div>
    </div>

    <!-- Skip Link -->
    <a href="#main-content" class="skip-link visually-hidden">
        <i class="fas fa-arrow-down me-2"></i>Перейти к основному контенту
    </a>

    <!-- Modern Header Navigation -->
    <style>
        .modern-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            padding: 0;
        }
        
        .modern-header .container-fluid {
            padding: 1rem 2rem;
        }
        
        .modern-brand {
            display: flex;
            align-items: center;
            gap: 1rem;
            text-decoration: none;
            color: white;
            font-weight: 700;
            font-size: 1.5rem;
            transition: transform 0.2s;
        }
        
        .modern-brand:hover {
            transform: scale(1.05);
            color: white;
        }
        
        .modern-brand-icon {
            width: 45px;
            height: 45px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.3rem;
            backdrop-filter: blur(10px);
        }
        
        .modern-nav-link {
            color: rgba(255, 255, 255, 0.9) !important;
            padding: 0.75rem 1.25rem !important;
            border-radius: 10px;
            transition: all 0.2s;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .modern-nav-link:hover {
            background: rgba(255, 255, 255, 0.15);
            color: white !important;
            transform: translateY(-2px);
        }
        
        .modern-nav-link.active {
            background: rgba(255, 255, 255, 0.25);
            color: white !important;
        }
        
        .modern-action-btn {
            width: 42px;
            height: 42px;
            border-radius: 10px;
            background: rgba(255, 255, 255, 0.15);
            border: none;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.2s;
            position: relative;
            backdrop-filter: blur(10px);
        }
        
        .modern-action-btn:hover {
            background: rgba(255, 255, 255, 0.25);
            transform: scale(1.1);
        }
        
        .modern-notification-badge {
            position: absolute;
            top: -5px;
            right: -5px;
            background: #ef4444;
            color: white;
            border-radius: 10px;
            padding: 0.125rem 0.4rem;
            font-size: 0.7rem;
            font-weight: 700;
            min-width: 20px;
            text-align: center;
        }
        
        .modern-user-avatar {
            width: 42px;
            height: 42px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.25);
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            color: white;
            cursor: pointer;
            transition: all 0.2s;
            border: 2px solid rgba(255, 255, 255, 0.3);
        }
        
        .modern-user-avatar:hover {
            transform: scale(1.1);
            border-color: white;
        }
        
        .modern-search {
            position: relative;
            max-width: 400px;
        }
        
        .modern-search input {
            background: rgba(255, 255, 255, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 12px;
            padding: 0.75rem 1rem 0.75rem 3rem;
            color: white;
            backdrop-filter: blur(10px);
            transition: all 0.2s;
        }
        
        .modern-search input::placeholder {
            color: rgba(255, 255, 255, 0.6);
        }
        
        .modern-search input:focus {
            background: rgba(255, 255, 255, 0.25);
            border-color: white;
            outline: none;
            box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.1);
        }
        
        .modern-search-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: rgba(255, 255, 255, 0.7);
        }
        
        .navbar-toggler {
            border-color: rgba(255, 255, 255, 0.3);
            padding: 0.5rem;
        }
        
        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='rgba(255, 255, 255, 0.9)' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
        }
        
        @media (max-width: 991px) {
            .modern-header .container-fluid {
                padding: 1rem;
            }
            
            .modern-nav-link {
                margin: 0.25rem 0;
            }
        }
    </style>
    
    <nav class="navbar navbar-expand-lg modern-header sticky-top" role="navigation" aria-label="Основная навигация">
        <div class="container-fluid">
            <a class="modern-brand" href="{{ path('app_dashboard') }}">
                <div class="modern-brand-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <span class="d-none d-sm-inline">CRM</span>
            </a>

            <button class="navbar-toggler" type="button"
                    data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false"
                    aria-label="Переключить навигацию">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto ms-lg-4">
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link modern-nav-link {{ app.request.attributes.get('_route') starts with 'app_analytics' ? 'active' : '' }}" 
                               href="{{ path('app_analytics_dashboard') }}">
                                <i class="fas fa-chart-bar"></i><span>Аналитика</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link modern-nav-link {{ app.request.attributes.get('_route') starts with 'app_deals' ? 'active' : '' }}" 
                               href="{{ path('app_deals_index') }}">
                                <i class="fas fa-handshake"></i><span>Сделки</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link modern-nav-link {{ app.request.attributes.get('_route') starts with 'app_clients' ? 'active' : '' }}" 
                               href="{{ path('app_clients_index') }}">
                                <i class="fas fa-users"></i><span>Клиенты</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link modern-nav-link {{ app.request.attributes.get('_route') starts with 'app_user' ? 'active' : '' }}" 
                               href="{{ path('app_user_index') }}">
                                <i class="fas fa-user-friends"></i><span>Команда</span>
                            </a>
                        </li>
                    {% endif %}
                </ul>

                {% if app.user %}
                <div class="d-flex align-items-center gap-2 mt-3 mt-lg-0">
                    <!-- Search -->
                    <div class="modern-search d-none d-lg-block">
                        <i class="modern-search-icon fas fa-search"></i>
                        <input type="text" class="form-control" placeholder="Поиск...">
                    </div>
                    
                    <!-- Quick Action -->
                    <button class="modern-action-btn d-none d-lg-flex" 
                            onclick="window.location.href='{{ path('app_task_new') }}'"
                            title="Новая задача" aria-label="Новая задача">
                        <i class="fas fa-plus"></i>
                    </button>

                    <!-- Notifications -->
                    <div class="dropdown">
                        <button class="modern-action-btn dropdown-toggle" type="button"
                                data-bs-toggle="dropdown" aria-expanded="false" aria-label="Уведомления">
                            <i class="fas fa-bell"></i>
                            {% if app.user.unreadNotifications|default(0) > 0 %}
                            <span class="modern-notification-badge">{{ app.user.unreadNotifications }}</span>
                            {% endif %}
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" style="min-width: 320px;">
                            <li><h6 class="dropdown-header">Уведомления</h6></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="{{ path('app_notification_index') }}">
                                    <i class="fas fa-bell text-primary me-2"></i>
                                    <div>
                                        <div class="fw-semibold">Просмотреть все</div>
                                        <small class="text-muted">{{ app.user.unreadNotifications|default(0) }} непрочитанных</small>
                                    </div>
                                </a>
                            </li>
                        </ul>
                    </div>

                    <!-- User Menu -->
                    <div class="dropdown">
                        <button class="modern-user-avatar dropdown-toggle" type="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                            {{ app.user.firstName|first }}{{ app.user.lastName|first }}
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><div class="dropdown-header">
                                <strong>{{ app.user.fullName }}</strong>
                                <div class="text-muted small">{{ app.user.email }}</div>
                            </div></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="{{ path('app_profile_show') }}">
                                    <i class="fas fa-user me-2"></i>Мой профиль
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="{{ path('app_settings') }}">
                                    <i class="fas fa-cog me-2"></i>Настройки
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item text-danger" href="{{ path('app_logout') }}">
                                    <i class="fas fa-sign-out-alt me-2"></i>Выход
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                {% else %}
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link modern-nav-link" href="{{ path('app_login') }}">
                            <i class="fas fa-sign-in-alt"></i>Вход
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link modern-nav-link" href="{{ path('app_register') }}">
                            <i class="fas fa-user-plus"></i>Регистрация
                        </a>
                    </li>
                </ul>
                {% endif %}
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container-fluid mt-4" id="main-content" role="main" aria-label="Основное содержимое">
        {% block body %}{% endblock %}
    </main>

    <!-- Footer -->
    <footer class="footer mt-5 py-4 bg-light border-top">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4 mb-3 mb-md-0">
                    <h5 class="fw-bold mb-3">
                        <i class="fas fa-chart-line me-2 text-primary"></i>CRM Task Management
                    </h5>
                    <p class="text-muted small">
                        Профессиональная система управления задачами и CRM для вашего бизнеса
                    </p>
                </div>
                <div class="col-md-2 mb-3 mb-md-0">
                    <h6 class="fw-semibold mb-3">Навигация</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="{{ path('app_dashboard') }}" class="text-muted text-decoration-none"><i class="fas fa-home me-2"></i>Панель</a></li>
                        <li class="mb-2"><a href="{{ path('app_task_index') }}" class="text-muted text-decoration-none"><i class="fas fa-tasks me-2"></i>Задачи</a></li>
                        <li class="mb-2"><a href="{{ path('app_kanban_board') }}" class="text-muted text-decoration-none"><i class="fas fa-columns me-2"></i>Канбан</a></li>
                        <li class="mb-2"><a href="{{ path('app_calendar') }}" class="text-muted text-decoration-none"><i class="fas fa-calendar me-2"></i>Календарь</a></li>
                    </ul>
                </div>
                <div class="col-md-2 mb-3 mb-md-0">
                    <h6 class="fw-semibold mb-3">CRM</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="{{ path('app_deals_index') }}" class="text-muted text-decoration-none"><i class="fas fa-handshake me-2"></i>Сделки</a></li>
                        <li class="mb-2"><a href="{{ path('app_clients_index') }}" class="text-muted text-decoration-none"><i class="fas fa-users me-2"></i>Клиенты</a></li>
                        <li class="mb-2"><a href="{{ path('app_analytics_dashboard') }}" class="text-muted text-decoration-none"><i class="fas fa-chart-bar me-2"></i>Аналитика</a></li>
                    </ul>
                </div>
                <div class="col-md-2 mb-3 mb-md-0">
                    <h6 class="fw-semibold mb-3">Личное</h6>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="{{ path('app_goals_index') }}" class="text-muted text-decoration-none"><i class="fas fa-bullseye me-2"></i>Цели</a></li>
                        <li class="mb-2"><a href="{{ path('app_habits_index') }}" class="text-muted text-decoration-none"><i class="fas fa-fire me-2"></i>Привычки</a></li>
                        <li class="mb-2"><a href="{{ path('app_profile_show') }}" class="text-muted text-decoration-none"><i class="fas fa-user me-2"></i>Профиль</a></li>
