                window.location.href = '{{ path('app_task_index') }}';
                showVoiceFeedback('Переход к задачам', 'success');
            } else if (command.includes('категории') || command.includes('categories')) {
                window.location.href = '{{ path('app_task_category_index') }}';
                showVoiceFeedback('Переход к категориям', 'success');
            } else if (command.includes('профиль') || command.includes('profile')) {
                window.location.href = '{{ path('app_profile_show') }}';
                showVoiceFeedback('Переход к профилю', 'success');
            } else if (command.includes('календарь') || command.includes('calendar')) {
                window.location.href = '{{ path('app_calendar_index') }}';
                showVoiceFeedback('Переход к календарю', 'success');
            }
            
            // Action commands
            else if (command.includes('новая задача') || command.includes('create task')) {
                window.location.href = '{{ path('app_task_new') }}';
                showVoiceFeedback('Создание новой задачи', 'success');
            } else if (command.includes('быстрая задача') || command.includes('quick task')) {
                const fabButton = document.getElementById('quick-task-fab');
                if (fabButton) {
                    fabButton.click();
                    showVoiceFeedback('Быстрое создание задачи', 'success');
                }
            } else if (command.includes('поиск') || command.includes('search')) {
                const searchInput = document.getElementById('search');
                if (searchInput) {
                    searchInput.focus();
                    showVoiceFeedback('Фокус на поиске', 'success');
                }
            } else if (command.includes('тема') || command.includes('theme')) {
                const themeToggle = document.getElementById('themeToggle');
                if (themeToggle) {
                    themeToggle.click();
                    showVoiceFeedback('Переключение темы', 'success');
                }
            } else if (command.includes('обновить') || command.includes('refresh') || command.includes('reload')) {
                window.location.reload();
                showVoiceFeedback('Страница обновлена', 'success');
            }
            
            // Help command
            else if (command.includes('помощь') || command.includes('help') || command.includes('команды')) {
                showVoiceCommandsHelp();
            }
            
            // Unknown command
            else {
                showVoiceFeedback('Команда не распознана: ' + command, 'warning');
            }
        }
        
