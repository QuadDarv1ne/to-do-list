{% extends 'base.html.twig' %}

{% block title %}Расширенный поиск{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-sliders-h"></i> Расширенный поиск</h1>
        <a href="{{ path('app_search') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Обычный поиск
        </a>
    </div>

    <form method="post" class="card">
        <div class="card-body">
            <div class="row">
                <!-- Text Search -->
                <div class="col-md-12 mb-3">
                    <label class="form-label">Текст поиска</label>
                    <input type="text" name="query" class="form-control" placeholder="Введите текст для поиска">
                </div>

                <!-- Status -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Статус</label>
                    <select name="status[]" class="form-select" multiple>
                        <option value="pending">В ожидании</option>
                        <option value="in_progress">В процессе</option>
                        <option value="completed">Завершено</option>
                        <option value="cancelled">Отменено</option>
                    </select>
                </div>

                <!-- Priority -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Приоритет</label>
                    <select name="priority[]" class="form-select" multiple>
                        <option value="urgent">Срочный</option>
                        <option value="high">Высокий</option>
                        <option value="medium">Средний</option>
                        <option value="low">Низкий</option>
                    </select>
                </div>

                <!-- Date Range -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Дата создания от</label>
                    <input type="date" name="date_from" class="form-control">
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Дата создания до</label>
                    <input type="date" name="date_to" class="form-control">
                </div>

                <!-- Deadline Range -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Дедлайн от</label>
                    <input type="date" name="deadline_from" class="form-control">
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Дедлайн до</label>
                    <input type="date" name="deadline_to" class="form-control">
                </div>

                <!-- Checkboxes -->
                <div class="col-md-12 mb-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="is_overdue" id="is_overdue">
                        <label class="form-check-label" for="is_overdue">
                            Только просроченные
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="has_deadline" id="has_deadline">
                        <label class="form-check-label" for="has_deadline">
                            Только с дедлайном
                        </label>
                    </div>
                </div>

                <!-- Sort -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Сортировать по</label>
                    <select name="sort_by" class="form-select">
                        <option value="createdAt">Дате создания</option>
                        <option value="updatedAt">Дате обновления</option>
                        <option value="deadline">Дедлайну</option>
                        <option value="priority">Приоритету</option>
                        <option value="title">Названию</option>
                    </select>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Порядок</label>
                    <select name="sort_order" class="form-select">
                        <option value="DESC">По убыванию</option>
                        <option value="ASC">По возрастанию</option>
                    </select>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> Искать
                </button>
                <button type="button" class="btn btn-outline-secondary" id="save-search">
                    <i class="fas fa-save"></i> Сохранить поиск
                </button>
            </div>
        </div>
    </form>

    <!-- Results -->
    {% if results is not empty %}
        <div class="card mt-4">
            <div class="card-header">
                <h5>Результаты поиска ({{ results|length }})</h5>
            </div>
            <div class="card-body">
                <div class="list-group">
                    {% for task in results %}
                        <a href="{{ path('app_task_show', {id: task.id}) }}" 
                           class="list-group-item list-group-item-action">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <h6 class="mb-1">{{ task.title }}</h6>
                                    <p class="mb-1 text-muted small">{{ task.description|slice(0, 100) }}...</p>
                                    <small>
                                        <span class="badge bg-{{ task.priority == 'urgent' ? 'danger' : 'info' }}">
                                            {{ task.priority }}
                                        </span>
                                        <span class="badge bg-secondary">{{ task.status }}</span>
                                        {% if task.deadline %}
                                            <span class="badge bg-warning">{{ task.deadline|date('d.m.Y') }}</span>
                                        {% endif %}
                                    </small>
                                </div>
                            </div>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
</div>

<script>
document.getElementById('save-search')?.addEventListener('click', function() {
    const name = prompt('Название сохраненного поиска:');
    if (!name) return;
    
    const form = document.querySelector('form');
    const formData = new FormData(form);
    const filters = Object.fromEntries(formData);
    
    fetch('{{ path('app_search_save') }}', {
        method: 'POST',
        headers: {'Content-Type': 'application/json'},
        body: JSON.stringify({name: name, filters: filters})
    })
    .then(r => r.json())
    .then(data => {
        alert('Поиск сохранен!');
    });
});
</script>
{% endblock %}
