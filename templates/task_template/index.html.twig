{% extends 'base.html.twig' %}

{% block title %}Шаблоны задач{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <h1 class="mb-0">
                        <i class="fas fa-clone me-3 text-primary"></i>
                        Шаблоны задач
                    </h1>
                    <p class="text-muted mb-0">Используйте готовые шаблоны для быстрого создания задач</p>
                </div>
                <div class="d-flex gap-2">
                    <a href="{{ path('app_task_template_custom') }}" class="btn btn-success btn-lg">
                        <i class="fas fa-plus-circle me-2"></i>
                        Создать свой шаблон
                    </a>
                    <a href="{{ path('app_task_index') }}" class="btn btn-outline-primary btn-lg">
                        <i class="fas fa-tasks me-2"></i>
                        Мои задачи
                    </a>
                </div>
            </div>
        </div>
    </div>

    {# ── Сохранённые шаблоны пользователя ── #}
    {% if savedTemplates is not empty %}
    <div class="row mb-2">
        <div class="col-12">
            <h4 class="mb-3"><i class="fas fa-bookmark me-2 text-success"></i>Мои шаблоны</h4>
        </div>
    </div>
    <div class="row mb-4">
        {% for tpl in savedTemplates %}
        <div class="col-lg-6 col-xl-3 mb-4">
            <div class="card h-100 border-0 shadow-sm" style="border-left: 4px solid #198754 !important;">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <h5 class="card-title mb-0">{{ tpl.name }}</h5>
                        <form method="post" action="{{ path('app_task_template_saved_delete', {'id': tpl.id}) }}"
                              onsubmit="return confirm('Удалить шаблон «{{ tpl.name }}»?')">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete-template-' ~ tpl.id) }}">
                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Удалить">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </form>
                    </div>
                    {% if tpl.description %}
                        <p class="text-muted small mb-2">{{ tpl.description }}</p>
                    {% endif %}
                    <div class="mb-3 flex-grow-1">
                        <h6 class="mb-2">Задачи ({{ tpl.items|length }}):</h6>
                        <ul class="list-unstyled small">
                            {% for item in tpl.items %}
                            <li class="mb-1">
                                <span class="badge bg-{% if item.priority == 'urgent' or item.priority == 'high' %}danger{% elseif item.priority == 'medium' %}warning text-dark{% else %}success{% endif %} me-1">
                                    {{ item.priority == 'urgent' ? 'Крит.' : item.priority == 'high' ? 'Высокий' : item.priority == 'medium' ? 'Средний' : 'Низкий' }}
                                </span>
                                {{ item.title }}
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="mt-auto">
                        <small class="text-muted d-block mb-2">
                            <i class="fas fa-calendar me-1"></i>{{ tpl.createdAt|date('d.m.Y') }}
                        </small>
                        <a href="{{ path('app_task_template_saved_apply', {'id': tpl.id}) }}"
                           class="btn btn-success w-100"
                           onclick="return confirm('Создать {{ tpl.items|length }} задач из шаблона «{{ tpl.name }}»?')">
                            <i class="fas fa-bolt me-2"></i>Применить
                        </a>
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
    {% endif %}

    {# ── Системные шаблоны ── #}
    {% if templates is not empty %}
    <div class="row mb-2">
        <div class="col-12">
            <h4 class="mb-3"><i class="fas fa-star me-2 text-primary"></i>Готовые шаблоны</h4>
        </div>
    </div>
        <div class="row">
            {% for template in templates %}
                <div class="col-lg-6 col-xl-3 mb-4">
                    <div class="card dashboard-card dashboard-card-enhanced h-100 border-0 shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <div class="text-center mb-3">
                                <div class="rounded-circle bg-primary bg-opacity-10 p-3 d-inline-block mb-3">
                                    <i class="fas fa-file-alt fa-2x text-primary"></i>
                                </div>
                                <h5 class="card-title">{{ template.name }}</h5>
                                <p class="text-muted small">{{ template.description }}</p>
                            </div>

                            <div class="mb-3 flex-grow-1">
                                <h6 class="mb-2">Задачи в шаблоне:</h6>
                                <ul class="list-unstyled small">
                                    {% for task in template.tasks %}
                                        <li class="mb-1">
                                            <span class="badge bg-{% if task.priority == 'high' %}danger{% elseif task.priority == 'medium' %}warning text-dark{% else %}success{% endif %} me-1">
                                                {{ task.priority == 'high' ? 'Высокий' : task.priority == 'medium' ? 'Средний' : 'Низкий' }}
                                            </span>
                                            {{ task.title }}
                                        </li>
                                    {% endfor %}
                                </ul>
                            </div>

                            <div class="mt-auto">
                                <a href="{{ path('app_task_template_apply', {'templateIndex': loop.index0}) }}"
                                   class="btn btn-primary w-100"
                                   onclick="return confirm('Создать {{ template.tasks|length }} задач из шаблона \"{{ template.name }}\"?')">
                                    <i class="fas fa-bolt me-2"></i>
                                    Использовать шаблон
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        {{ include('components/empty_state.html.twig', {
            icon: 'fa-clone',
            title: 'Нет доступных шаблонов',
            message: 'Создайте свой первый шаблон задач',
            action_url: path('app_task_template_custom'),
            action_text: 'Создать шаблон'
        }) }}
    {% endif %}
    
    <!-- Keyboard Shortcuts Info -->
    <div class="card border-0 shadow-sm mt-4">
        <div class="card-header bg-white">
            <h5 class="mb-0">
                <i class="fas fa-keyboard me-2 text-info"></i>
                Горячие клавиши
            </h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <ul class="list-unstyled">
                        <li class="mb-2"><kbd class="kbd-shortcut">T</kbd> Перейти к задачам</li>
                        <li class="mb-2"><kbd class="kbd-shortcut">N</kbd> Быстрое создание задачи</li>
                    </ul>
                </div>
                <div class="col-md-6">
                    <ul class="list-unstyled">
                        <li class="mb-2"><kbd class="kbd-shortcut">D</kbd> Панель управления</li>
                        <li class="mb-2"><kbd class="kbd-shortcut">?</kbd> Помощь по горячим клавишам</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}