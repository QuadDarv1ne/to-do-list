                                <div class="author-avatar">A</div>
                                <small>Admin</small>
                            </div>
                            <div class="d-flex gap-3">
                                <span class="article-date"><i class="far fa-calendar"></i> 18.01.2026</span>
                                <span class="article-views"><i class="far fa-eye"></i> 156</span>
                            </div>
