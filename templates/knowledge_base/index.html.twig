<script>
// Search functionality
const searchInput = document.querySelector('.search-input');
const searchForm = searchInput.closest('form');

searchForm.addEventListener('submit', function(e) {
    const query = searchInput.value.trim();
    if (!query) {
        e.preventDefault();
        searchInput.focus();
        searchInput.style.borderColor = '#f5576c';
        setTimeout(() => {
            searchInput.style.borderColor = '#e9ecef';
        }, 2000);
    }
});

// Track article clicks
document.querySelectorAll('.article-card, .trending-item').forEach(link => {
    link.addEventListener('click', function() {
        const href = this.getAttribute('href');
        if (href && href !== '#') {
            // Track click for analytics
            fetch('/kb/track', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({url: href})
            }).catch(() => {});
        }
    });
});

// Load dynamic content
async function loadKbContent() {
    try {
        const response = await fetch('{{ path('app_knowledge_base_api') }}');
        const data = await response.json();
        console.log('KB Stats:', data);
    } catch (error) {
        console.error('Error loading KB content:', error);
    }
}

document.addEventListener('DOMContentLoaded', function() {
    loadKbContent();
});
</script>
