<div class="kanban-card" data-task-id="{{ task.id }}" draggable="true">
    <div class="kanban-card-title">
        <a href="{{ path('app_task_show', {id: task.id}) }}" class="text-decoration-none text-dark">
            {{ task.title }}
        </a>
    </div>
    
    {% if task.description %}
    <div class="kanban-card-description text-muted small">
        {{ task.description|length > 100 ? task.description|slice(0, 100) ~ '...' : task.description }}
    </div>
    {% endif %}
    
    <div class="kanban-card-meta">
        <div class="d-flex justify-content-between align-items-center mb-2">
            <span class="priority-badge priority-{{ task.priority }}">
                {% if task.priority == 'low' %}
                    <i class="fas fa-arrow-down"></i> Низкий
                {% elseif task.priority == 'medium' %}
                    <i class="fas fa-minus"></i> Средний
                {% elseif task.priority == 'high' %}
                    <i class="fas fa-arrow-up"></i> Высокий
                {% else %}
                    <i class="fas fa-exclamation"></i> Срочный
                {% endif %}
            </span>
            
            {% if task.category %}
            <span class="badge bg-info">
                {{ task.category.name }}
            </span>
            {% endif %}
        </div>
        
        {% if task.deadline %}
        <div class="mb-2">
            <i class="fas fa-calendar-alt me-1"></i>
            <small class="{% if task.deadline < date() and task.status != 'completed' %}text-danger{% endif %}">
                {{ task.deadline|date('d.m.Y') }}
                {% if task.deadline < date() and task.status != 'completed' %}
                    <span class="badge bg-danger ms-1">Просрочено</span>
                {% endif %}
            </small>
        </div>
        {% endif %}
        
        {% if task.assignedUser %}
        <div class="d-flex align-items-center">
            <i class="fas fa-user me-1"></i>
            <small>{{ task.assignedUser.fullName }}</small>
        </div>
        {% endif %}
        
        {% if task.tags is not empty %}
        <div class="mt-2">
            {% for tag in task.tags %}
                <span class="badge bg-secondary me-1">{{ tag.name }}</span>
            {% endfor %}
        </div>
        {% endif %}
        
        {% if task.comments is not empty %}
        <div class="mt-2">
            <i class="fas fa-comments me-1"></i>
            <small>{{ task.comments|length }} комментариев</small>
        </div>
        {% endif %}
    </div>
</div>
