{% extends 'base.html.twig' %}

{% block title %}{{ task_category.name }} - Категория{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="mb-0">
                        <i class="fas fa-tag me-3 text-primary"></i>
                        {{ task_category.name }}
                    </h1>
                    <p class="text-muted mb-0">Просмотр категории задач</p>
                </div>
                <div>
                    <a href="{{ path('app_task_category_edit', {'id': task_category.id}) }}" class="btn btn-primary btn-enhanced me-2">
                        <i class="fas fa-edit me-2"></i>Редактировать
                    </a>
                    <a href="{{ path('app_task_category_index') }}" class="btn btn-outline-secondary btn-enhanced">
                        <i class="fas fa-arrow-left me-2"></i>Назад к списку
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        Информация о категории
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Название:</strong>
                        </div>
                        <div class="col-md-8">
                            {{ task_category.name }}
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Описание:</strong>
                        </div>
                        <div class="col-md-8">
                            {% if task_category.description %}
                                {{ task_category.description }}
                            {% else %}
                                <span class="text-muted">Нет описания</span>
                            {% endif %}
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Дата создания:</strong>
                        </div>
                        <div class="col-md-8">
                            {{ task_category.createdAt|date('d.m.Y H:i') }}
                        </div>
                    </div>
                    
                    {% if task_category.updatedAt %}
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Последнее обновление:</strong>
                        </div>
                        <div class="col-md-8">
                            {{ task_category.updatedAt|date('d.m.Y H:i') }}
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>

            {% if task_category.tasks|length > 0 %}
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-tasks me-2"></i>
                        Задачи в этой категории ({{ task_category.tasks|length }})
                    </h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        {% for task in task_category.tasks|slice(0, 10) %}
                        <a href="{{ path('app_task_show', {'id': task.id}) }}" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">{{ task.title }}</h6>
                                <small>
                                    <span class="badge bg-{{ task.status == 'completed' ? 'success' : (task.status == 'in_progress' ? 'primary' : 'secondary') }}">
                                        {{ task.status }}
                                    </span>
                                </small>
                            </div>
                            {% if task.description %}
                            <p class="mb-1 text-muted">{{ task.description|slice(0, 100) }}...</p>
                            {% endif %}
                        </a>
                        {% endfor %}
                    </div>
                    {% if task_category.tasks|length > 10 %}
                    <div class="text-center mt-3">
                        <a href="{{ path('app_task_index', {'category': task_category.id}) }}" class="btn btn-outline-primary">
                            Показать все задачи
                        </a>
                    </div>
                    {% endif %}
                </div>
            </div>
            {% endif %}
        </div>

        <div class="col-md-4">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-bar me-2"></i>
                        Статистика
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Всего задач:</span>
                            <strong>{{ task_category.tasks|length }}</strong>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Завершено:</span>
                            <strong class="text-success">
                                {{ task_category.tasks|filter(t => t.status == 'completed')|length }}
                            </strong>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>В работе:</span>
                            <strong class="text-primary">
                                {{ task_category.tasks|filter(t => t.status == 'in_progress')|length }}
                            </strong>
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <span>Новые:</span>
                            <strong class="text-secondary">
                                {{ task_category.tasks|filter(t => t.status == 'new')|length }}
                            </strong>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0">
                        <i class="fas fa-cog me-2"></i>
                        Действия
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_task_category_edit', {'id': task_category.id}) }}" class="btn btn-primary">
                            <i class="fas fa-edit me-2"></i>Редактировать
                        </a>
                        <form method="post" action="{{ path('app_task_category_delete', {'id': task_category.id}) }}" 
                              onsubmit="return confirm('Вы уверены, что хотите удалить эту категорию?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task_category.id) }}">
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="fas fa-trash me-2"></i>Удалить
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
