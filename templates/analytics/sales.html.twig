{% extends 'base.html.twig' %}

{% block title %}Аналитика продаж{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
.sales-header {
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    color: white;
    padding: 2rem;
    border-radius: 16px;
    margin-bottom: 2rem;
}

.sales-metric-card {
    background: white;
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: 0 2px 12px rgba(0,0,0,0.08);
    transition: all 0.3s ease;
    height: 100%;
}

.sales-metric-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 20px rgba(0,0,0,0.12);
}

.sales-icon {
    width: 60px;
    height: 60px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    margin-bottom: 1rem;
}

.sales-value {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
}

.sales-label {
    color: #6c757d;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.sales-trend {
    font-size: 0.875rem;
    margin-top: 0.5rem;
}

.trend-up { color: #28a745; }
.trend-down { color: #dc3545; }

.chart-card {
    background: white;
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: 0 2px 12px rgba(0,0,0,0.08);
    margin-bottom: 2rem;
}

.chart-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
}

.chart-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0;
}

.period-selector {
    display: flex;
    gap: 0.5rem;
}

.period-btn {
    padding: 0.5rem 1rem;
    border: 1px solid #dee2e6;
    background: white;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s;
}

.period-btn:hover {
    background: #f8f9fa;
}

.period-btn.active {
    background: #f5576c;
    color: white;
    border-color: #f5576c;
}

.top-deals-list {
    list-style: none;
    padding: 0;
    margin: 0;
}

.deal-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    border-bottom: 1px solid #f0f0f0;
    transition: background 0.2s;
}

.deal-item:hover {
    background: #f8f9fa;
}

.deal-item:last-child {
    border-bottom: none;
}

.deal-name {
    font-weight: 600;
    margin-bottom: 0.25rem;
}

.deal-client {
    font-size: 0.875rem;
    color: #6c757d;
}

.deal-amount {
    font-size: 1.25rem;
    font-weight: 700;
    color: #f5576c;
}

/* Responsive */
@media (max-width: 767.98px) {
    .sales-header {
        padding: 1.5rem 1rem;
    }
    
    .sales-value {
        font-size: 2rem;
    }
    
    .sales-icon {
        width: 50px;
        height: 50px;
        font-size: 1.25rem;
    }
    
    .chart-card {
        padding: 1rem;
    }
    
    .period-selector {
        flex-wrap: wrap;
    }
    
    .period-btn {
        padding: 0.375rem 0.75rem;
        font-size: 0.875rem;
    }
}

@media (max-width: 575.98px) {
    .sales-header h1 {
        font-size: 1.5rem;
    }
    
    .sales-value {
        font-size: 1.75rem;
    }
    
    .deal-amount {
        font-size: 1rem;
    }
}
</style>
{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="sales-header">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
            <div>
                <h1 class="mb-1">
                    <i class="fas fa-dollar-sign me-2"></i>
                    Аналитика продаж
                </h1>
                <p class="mb-0 opacity-75">Детальный анализ продаж и сделок</p>
            </div>
            <div class="d-flex gap-2 flex-wrap">
                <a href="{{ path('app_analytics_export_csv') }}" class="btn btn-light">
                    <i class="fas fa-download me-2"></i>Экспорт
                </a>
                <button class="btn btn-light" onclick="location.reload()">
                    <i class="fas fa-sync-alt me-2"></i>Обновить
                </button>
            </div>
        </div>
    </div>

    <!-- Key Sales Metrics -->
    <div class="row g-4 mb-4">
        <div class="col-md-3 col-sm-6">
            <div class="sales-metric-card">
                <div class="sales-icon bg-success bg-opacity-10">
                    <i class="fas fa-dollar-sign text-success"></i>
                </div>
                <div class="sales-value text-success">{{ sales.total_revenue|default('0')|number_format(0, '.', ' ') }} ₽</div>
                <div class="sales-label">Общая выручка</div>
                <div class="sales-trend trend-up">
                    <i class="fas fa-arrow-up me-1"></i>
                    +{{ sales.revenue_growth|default('0') }}% за месяц
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="sales-metric-card">
                <div class="sales-icon bg-primary bg-opacity-10">
                    <i class="fas fa-handshake text-primary"></i>
                </div>
                <div class="sales-value text-primary">{{ sales.total_deals|default('0') }}</div>
                <div class="sales-label">Всего сделок</div>
                <div class="sales-trend">
                    <i class="fas fa-check-circle me-1"></i>
                    {{ sales.closed_deals|default('0') }} закрыто
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="sales-metric-card">
                <div class="sales-icon bg-info bg-opacity-10">
                    <i class="fas fa-chart-line text-info"></i>
                </div>
                <div class="sales-value text-info">{{ sales.avg_deal_value|default('0')|number_format(0, '.', ' ') }} ₽</div>
                <div class="sales-label">Средний чек</div>
                <div class="sales-trend">
                    <i class="fas fa-calculator me-1"></i>
                    На одну сделку
                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-6">
            <div class="sales-metric-card">
                <div class="sales-icon bg-warning bg-opacity-10">
                    <i class="fas fa-percentage text-warning"></i>
                </div>
                <div class="sales-value text-warning">{{ sales.conversion_rate|default('0') }}%</div>
                <div class="sales-label">Конверсия</div>
                <div class="sales-trend">
                    <i class="fas fa-funnel-dollar me-1"></i>
                    Закрытие сделок
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row">
        <div class="col-lg-8 mb-4">
            <div class="chart-card">
                <div class="chart-header">
                    <h5 class="chart-title">
                        <i class="fas fa-chart-area me-2 text-success"></i>
                        Динамика продаж
                    </h5>
                    <div class="period-selector">
                        <button class="period-btn active" data-period="week">Неделя</button>
                        <button class="period-btn" data-period="month">Месяц</button>
                        <button class="period-btn" data-period="year">Год</button>
                    </div>
                </div>
                <canvas id="salesTrendChart" height="80"></canvas>
            </div>
        </div>

        <div class="col-lg-4 mb-4">
            <div class="chart-card">
                <div class="chart-header">
                    <h5 class="chart-title">
                        <i class="fas fa-chart-pie me-2 text-primary"></i>
                        Воронка продаж
                    </h5>
                </div>
                <canvas id="funnelChart" height="200"></canvas>
            </div>
        </div>
    </div>

    <!-- Top Deals & Products -->
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="chart-card">
                <div class="chart-header">
                    <h5 class="chart-title">
                        <i class="fas fa-trophy me-2 text-warning"></i>
                        Топ сделок
                    </h5>
                </div>
                <ul class="top-deals-list">
                    {% if sales.top_deals is defined and sales.top_deals|length > 0 %}
                        {% for deal in sales.top_deals %}
                            <li class="deal-item">
                                <div>
                                    <div class="deal-name">{{ deal.name }}</div>
                                    <div class="deal-client">{{ deal.client }}</div>
                                </div>
                                <div class="deal-amount">{{ deal.amount|number_format(0, '.', ' ') }} ₽</div>
                            </li>
                        {% endfor %}
                    {% else %}
                        <li class="deal-item">
                            <div class="text-muted">Нет данных о сделках</div>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="chart-card">
                <div class="chart-header">
                    <h5 class="chart-title">
                        <i class="fas fa-users me-2 text-info"></i>
                        Продажи по менеджерам
                    </h5>
                </div>
                <canvas id="managersChart" height="200"></canvas>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
<script>
document.addEventListener('DOMContentLoaded', function() {
    const sales = {{ sales|default('{}')|json_encode|raw }};
    
    // Sales Trend Chart
    const salesTrendCtx = document.getElementById('salesTrendChart');
    if (salesTrendCtx) {
        new Chart(salesTrendCtx, {
            type: 'line',
            data: {
                labels: sales.trend_labels || ['Пн', 'Вт', 'Ср', 'Чт', 'Пт', 'Сб', 'Вс'],
                datasets: [{
                    label: 'Выручка (₽)',
                    data: sales.trend_data || [0, 0, 0, 0, 0, 0, 0],
                    borderColor: '#f5576c',
                    backgroundColor: 'rgba(245, 87, 108, 0.1)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return value.toLocaleString('ru-RU') + ' ₽';
                            }
                        }
                    }
                }
            }
        });
    }

    // Funnel Chart
    const funnelCtx = document.getElementById('funnelChart');
    if (funnelCtx) {
        new Chart(funnelCtx, {
            type: 'doughnut',
            data: {
                labels: ['Новые', 'В работе', 'Закрыто', 'Отклонено'],
                datasets: [{
                    data: [
                        sales.funnel?.new || 0,
                        sales.funnel?.in_progress || 0,
                        sales.funnel?.closed || 0,
                        sales.funnel?.rejected || 0
                    ],
                    backgroundColor: ['#0dcaf0', '#ffc107', '#198754', '#dc3545'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });
    }

    // Managers Chart
    const managersCtx = document.getElementById('managersChart');
    if (managersCtx) {
        new Chart(managersCtx, {
            type: 'bar',
            data: {
                labels: sales.managers_labels || ['Менеджер 1', 'Менеджер 2', 'Менеджер 3'],
                datasets: [{
                    label: 'Выручка (₽)',
                    data: sales.managers_data || [0, 0, 0],
                    backgroundColor: '#f5576c',
                    borderRadius: 8
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                indexAxis: 'y',
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    x: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return value.toLocaleString('ru-RU') + ' ₽';
                            }
                        }
                    }
                }
            }
        });
    }

    // Period selector
    document.querySelectorAll('.period-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            document.querySelectorAll('.period-btn').forEach(b => b.classList.remove('active'));
            this.classList.add('active');
            // Here you would reload data for the selected period
        });
    });
});
</script>
{% endblock %}
