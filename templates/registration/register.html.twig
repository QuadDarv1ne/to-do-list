{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block body %}
<div class="container-fluid vh-100 d-flex align-items-center">
    <div class="row justify-content-center w-100">
        <div class="col-md-8 col-lg-6 col-xl-5">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-primary text-white text-center py-4">
                    <div class="mb-3">
                        <i class="fas fa-user-plus fa-2x"></i>
                    </div>
                    <h3 class="card-title mb-0">Регистрация нового пользователя</h3>
                    <p class="mb-0 mt-2 text-white-50">Создайте аккаунт для начала работы</p>
                </div>
                <div class="card-body p-4">
                    {# Общие ошибки формы #}
                    {% if registration_form.vars.errors|length > 0 %}
                        <div class="alert alert-danger alert-dismissible fade show">
                            {{ form_errors(registration_form) }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endif %}
                    
                    {# Flash-сообщения #}
                    {% for flash_error in app.flashes('verify_email_error') %}
                        <div class="alert alert-danger alert-dismissible fade show">
                            {{ flash_error }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}
                    
                    {{ form_start(registration_form, {'attr': {'novalidate': 'novalidate'}}) }}
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            {{ form_row(registration_form.firstName, {
                                'attr': {'class': 'form-control'},
                                'row_attr': {'class': 'form-group'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(registration_form.lastName, {
                                'attr': {'class': 'form-control'},
                                'row_attr': {'class': 'form-group'}
                            }) }}
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_row(registration_form.username, {
                            'attr': {'class': 'form-control'},
                            'row_attr': {'class': 'form-group'}
                        }) }}
                    </div>
                    
                    <div class="mb-3">
                        {{ form_row(registration_form.email, {
                            'attr': {'class': 'form-control'},
                            'row_attr': {'class': 'form-group'}
                        }) }}
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            {{ form_row(registration_form.plainPassword.first, {
                                'attr': {'class': 'form-control'},
                                'row_attr': {'class': 'form-group'},
                                'label': 'Пароль'
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(registration_form.plainPassword.second, {
                                'attr': {'class': 'form-control'},
                                'row_attr': {'class': 'form-group'},
                                'label': 'Подтверждение пароля'
                            }) }}
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_row(registration_form.phone, {
                            'attr': {'class': 'form-control'},
                            'row_attr': {'class': 'form-group'}
                        }) }}
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            {{ form_row(registration_form.position, {
                                'attr': {'class': 'form-control'},
                                'row_attr': {'class': 'form-group'}
                            }) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(registration_form.department, {
                                'attr': {'class': 'form-control'},
                                'row_attr': {'class': 'form-group'}
                            }) }}
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 mb-4">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-user-plus me-2"></i>Зарегистрироваться
                        </button>
                    </div>
                    
                    {{ form_end(registration_form) }}
                    
                    <div class="text-center">
                        <p class="mb-2 text-muted">Уже есть аккаунт?</p>
                        <a href="{{ path('app_login') }}" class="btn btn-outline-primary">
                            <i class="fas fa-sign-in-alt me-2"></i>Войти в систему
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="text-center mt-4">
                <a href="{{ path('app_dashboard') }}" class="text-muted">
                    <i class="fas fa-home me-1"></i>Вернуться на главную
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}