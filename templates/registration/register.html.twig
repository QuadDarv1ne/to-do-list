{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title text-center">Регистрация нового пользователя</h3>
                </div>
                <div class="card-body">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    
                    {{ form_start(registration_form) }}
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(registration_form.firstName) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(registration_form.lastName) }}
                        </div>
                    </div>
                    {{ form_row(registration_form.username) }}
                    {{ form_row(registration_form.email) }}
                    {{ form_row(registration_form.plainPassword) }}
                    {{ form_row(registration_form.phone) }}
                    {{ form_row(registration_form.position) }}
                    {{ form_row(registration_form.department) }}
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
                    </div>
                    {{ form_end(registration_form) }}
                    
                    <div class="text-center mt-3">
                        <p>Уже есть аккаунт? <a href="{{ path('app_login') }}">Войти</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}