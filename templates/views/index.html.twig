{% extends 'base.html.twig' %}

{% block title %}Представления{% endblock %}

{% block body %}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <h1><i class="fas fa-eye"></i> Представления</h1>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <h5>Доступные представления</h5>
                </div>
                <div class="list-group list-group-flush">
                    {% for key, view in views %}
                    <a href="#" class="list-group-item list-group-item-action view-link" data-key="{{ key }}">
                        <i class="fas {{ view.icon }}"></i>
                        {{ view.name }}
                    </a>
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <h5>Задачи</h5>
                    <div>
                        <button class="btn btn-sm btn-outline-primary" id="exportBtn">
                            <i class="fas fa-download"></i> Экспорт
                        </button>
                    </div>
                </div>
                <div class="card-body" id="tasks-container">
                    <p class="text-muted">Выберите представление из списка слева</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
let currentView = null;

document.querySelectorAll('.view-link').forEach(link => {
    link.addEventListener('click', async (e) => {
        e.preventDefault();
        const key = e.target.closest('.view-link').dataset.key;
        currentView = key;
        
        const response = await fetch(`/views/api/apply/${key}`);
        const tasks = await response.json();
        
        displayTasks(tasks);
    });
});

document.getElementById('exportBtn').addEventListener('click', () => {
    if (currentView) {
        window.location.href = `/views/export/${currentView}?format=csv`;
    }
});

function displayTasks(tasks) {
    const container = document.getElementById('tasks-container');
    
    if (tasks.length === 0) {
        container.innerHTML = '<p class="text-muted">Задачи не найдены</p>';
        return;
    }
    
    let html = '<div class="table-responsive"><table class="table table-hover">';
    html += '<thead><tr><th>ID</th><th>Название</th><th>Статус</th><th>Приоритет</th></tr></thead>';
    html += '<tbody>';
    
    tasks.forEach(task => {
        html += `<tr>`;
        html += `<td>${task.id}</td>`;
        html += `<td>${task.title}</td>`;
        html += `<td>${task.status}</td>`;
        html += `<td>${task.priority}</td>`;
        html += `</tr>`;
    });
    
    html += '</tbody></table></div>';
    container.innerHTML = html;
}
</script>
{% endblock %}
