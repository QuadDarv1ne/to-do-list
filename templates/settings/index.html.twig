{% extends 'base.html.twig' %}

{% block title %}Настройки{% endblock %}

{% block body %}
{{ include('components/breadcrumbs.html.twig', {
    items: [
        {label: 'Главная', url: path('app_dashboard')},
        {label: 'Настройки', active: true}
    ]
}) }}

<div class="container-fluid py-4">
    <div class="card-modern shadow-lg mb-4">
        <div class="gradient-bg px-4 py-4">
            <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                <div>
                    <h1 class="mb-1 text-white">
                        <i class="fas fa-cog me-2"></i>
                        Настройки
                    </h1>
                    <p class="mb-0 opacity-75 text-white">Персонализируйте свой опыт работы</p>
                </div>
                <a href="{{ path('app_dashboard') }}" class="btn btn-outline-light">
                    <i class="fas fa-arrow-left me-2"></i>
                    Назад
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3">
            <div class="card-modern shadow-sm sticky-top" style="top: 20px;">
                <div class="card-header-modern">
                    <h5 class="mb-0 text-primary">
                        <i class="fas fa-bars me-2"></i>
                        Меню настроек
                    </h5>
                </div>
                <div class="list-group list-group-flush">
                    <a href="#profile" class="list-group-item list-group-item-action active" data-bs-toggle="tab">
                        <i class="fas fa-user me-2"></i> Профиль
                    </a>
                    <a href="#dashboard" class="list-group-item list-group-item-action" data-bs-toggle="tab">
                        <i class="fas fa-th-large me-2"></i> Дашборд
                    </a>
                    <a href="#notifications" class="list-group-item list-group-item-action" data-bs-toggle="tab">
                        <i class="fas fa-bell me-2"></i> Уведомления
                    </a>
                    <a href="#theme" class="list-group-item list-group-item-action" data-bs-toggle="tab">
                        <i class="fas fa-palette me-2"></i> Тема
                    </a>
                    <a href="{{ path('app_settings_shortcuts') }}" class="list-group-item list-group-item-action">
                        <i class="fas fa-keyboard me-2"></i> Горячие клавиши
                    </a>
                    <a href="#export" class="list-group-item list-group-item-action" data-bs-toggle="tab">
                        <i class="fas fa-download me-2"></i> Экспорт данных
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="tab-content">
                <!-- Profile Tab -->
                <div class="tab-pane fade show active" id="profile">
                    <div class="card-modern">
                        <div class="card-header-modern">
                            <h5 class="mb-0 text-primary">
                                <i class="fas fa-user me-2"></i>
                                Настройки профиля
                            </h5>
                        </div>
                        <div class="card-body-modern">
                            <div class="row mb-3">
                                <div class="col-md-3 text-center">
                                    <img src="{{ app.user.getAvatarUrl() }}" alt="{{ app.user.fullName }}" 
                                         class="profile-avatar rounded-circle border border-4 border-primary shadow-sm" style="width: 120px; height: 120px;">
                                    <p class="mt-3 text-muted small">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Аватар через Gravatar
                                    </p>
                                </div>
                                <div class="col-md-9">
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-user-circle me-2 text-primary"></i>
                                            Имя пользователя
                                        </label>
                                        <input type="text" class="form-control-modern" value="{{ app.user.username }}" readonly>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-envelope me-2 text-primary"></i>
                                            Email
                                        </label>
                                        <input type="email" class="form-control-modern" value="{{ app.user.email }}" readonly>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="fas fa-id-card me-2 text-primary"></i>
                                            Полное имя
                                        </label>
                                        <input type="text" class="form-control-modern" value="{{ app.user.fullName }}" readonly>
                                    </div>
                                    <div class="alert alert-info border-0 shadow-sm">
                                        <i class="fas fa-info-circle me-2"></i> 
                                        Для изменения профиля обратитесь к администратору
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Dashboard Tab -->
                <div class="tab-pane fade" id="dashboard">
                    <div class="card-modern">
                        <div class="card-header-modern">
                            <h5 class="mb-0 text-primary">
                                <i class="fas fa-th-large me-2"></i>
                                Настройки дашборда
                            </h5>
                        </div>
                        <div class="card-body-modern">
                            <p class="text-muted mb-4">
                                <i class="fas fa-info-circle me-2"></i>
                                Выберите виджеты для отображения на главной странице
                            </p>
                            
                            <div class="row" id="widget-selector">
                                {% for id, widget in available_widgets %}
                                <div class="col-md-6 mb-3">
                                    <div class="card-modern widget-card h-100 {% if id in user_widgets %}selected{% endif %}" 
                                         data-widget-id="{{ id }}">
                                        <div class="card-body-modern">
                                            <div class="d-flex align-items-start">
                                                <div class="form-check me-3">
                                                    <input class="form-check-input widget-checkbox" 
                                                           type="checkbox" 
                                                           value="{{ id }}" 
                                                           id="widget_{{ id }}"
                                                           {% if id in user_widgets %}checked{% endif %}>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <label class="form-check-label w-100" for="widget_{{ id }}" style="cursor: pointer;">
                                                        <div class="d-flex align-items-center mb-2">
                                                            <i class="fas {{ widget.icon }} fa-2x text-primary me-3"></i>
                                                            <h6 class="mb-0">{{ widget.name }}</h6>
                                                        </div>
                                                        <small class="text-muted">{{ widget.description }}</small>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                            
                            <div class="d-flex justify-content-end mt-4">
                                <button type="button" class="btn btn-primary-modern btn-lg" id="save-widgets">
                                    <i class="fas fa-save me-2"></i>Сохранить настройки
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Notifications Tab -->
                <div class="tab-pane fade" id="notifications">
                    <div class="card-modern">
                        <div class="card-header-modern">
                            <h5 class="mb-0 text-warning">
                                <i class="fas fa-bell me-2"></i>
                                Настройки уведомлений
                            </h5>
                        </div>
                        <div class="card-body-modern">
                            <p class="text-muted mb-4">
                                <i class="fas fa-info-circle me-2"></i>
                                Управляйте способами получения уведомлений
                            </p>
                            
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="card-modern h-100 notification-card">
                                        <div class="card-body-modern">
                                            <div class="d-flex align-items-center mb-3">
                                                <div class="flex-shrink-0">
                                                    <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                                                        <i class="fas fa-envelope fa-2x text-primary"></i>
                                                    </div>
                                                </div>
                                                <div class="flex-grow-1 ms-3">
                                                    <h6 class="mb-0">Email уведомления</h6>
                                                    <small class="text-muted">Получать письма на почту</small>
                                                </div>
                                            </div>
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" id="email_notifications" checked>
                                                <label class="form-check-label" for="email_notifications">
                                                    Включено
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col-md-6 mb-4">
                                    <div class="card-modern h-100 notification-card">
                                        <div class="card-body-modern">
                                            <div class="d-flex align-items-center mb-3">
                                                <div class="flex-shrink-0">
                                                    <div class="rounded-circle bg-success bg-opacity-10 p-3">
                                                        <i class="fas fa-mobile-alt fa-2x text-success"></i>
                                                    </div>
                                                </div>
                                                <div class="flex-grow-1 ms-3">
                                                    <h6 class="mb-0">Push уведомления</h6>
                                                    <small class="text-muted">Уведомления в браузере</small>
                                                </div>
                                            </div>
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" id="push_notifications" checked>
                                                <label class="form-check-label" for="push_notifications">
                                                    Включено
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col-md-6 mb-4">
                                    <div class="card-modern h-100 notification-card">
                                        <div class="card-body-modern">
                                            <div class="d-flex align-items-center mb-3">
                                                <div class="flex-shrink-0">
                                                    <div class="rounded-circle bg-danger bg-opacity-10 p-3">
                                                        <i class="fas fa-clock fa-2x text-danger"></i>
                                                    </div>
                                                </div>
                                                <div class="flex-grow-1 ms-3">
                                                    <h6 class="mb-0">Напоминания о дедлайнах</h6>
                                                    <small class="text-muted">За день до срока</small>
                                                </div>
                                            </div>
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" id="deadline_reminders" checked>
                                                <label class="form-check-label" for="deadline_reminders">
                                                    Включено
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col-md-6 mb-4">
                                    <div class="card-modern h-100 notification-card">
                                        <div class="card-body-modern">
                                            <div class="d-flex align-items-center mb-3">
                                                <div class="flex-shrink-0">
                                                    <div class="rounded-circle bg-info bg-opacity-10 p-3">
                                                        <i class="fas fa-tasks fa-2x text-info"></i>
                                                    </div>
                                                </div>
                                                <div class="flex-grow-1 ms-3">
                                                    <h6 class="mb-0">Назначение задач</h6>
                                                    <small class="text-muted">Новые задачи для вас</small>
                                                </div>
                                            </div>
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" id="task_assignments" checked>
                                                <label class="form-check-label" for="task_assignments">
                                                    Включено
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="d-flex justify-content-end mt-4">
                                <button type="button" class="btn btn-primary-modern btn-lg btn-save" id="save-notifications">
                                    <i class="fas fa-save me-2"></i>Сохранить настройки
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Theme Tab -->
                <div class="tab-pane fade" id="theme">
                    <div class="card-modern">
                        <div class="card-header-modern">
                            <h5 class="mb-0 text-primary">
                                <i class="fas fa-palette me-2"></i>
                                Настройки темы
                            </h5>
                        </div>
                        <div class="card-body-modern">
                            <p class="text-muted mb-4">
                                <i class="fas fa-info-circle me-2"></i>
                                Выберите тему оформления
                            </p>
                            
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="card-modern theme-card h-100" data-theme="light">
                                        <div class="card-body-modern text-center py-5">
                                            <div class="mb-3">
                                                <i class="fas fa-sun fa-4x text-warning"></i>
                                            </div>
                                            <h5 class="mb-2">Светлая тема</h5>
                                            <p class="text-muted mb-0">Классическое светлое оформление</p>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="col-md-6 mb-3">
                                    <div class="card-modern theme-card h-100" data-theme="dark">
                                        <div class="card-body-modern text-center py-5">
                                            <div class="mb-3">
                                                <i class="fas fa-moon fa-4x text-primary"></i>
                                            </div>
                                            <h5 class="mb-2">Темная тема</h5>
                                            <p class="text-muted mb-0">Темное оформление для работы ночью</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Export Tab -->
                <div class="tab-pane fade" id="export">
                    <div class="card-modern">
                        <div class="card-header-modern">
                            <h5 class="mb-0 text-success">
                                <i class="fas fa-download me-2"></i>
                                Экспорт данных
                            </h5>
                        </div>
                        <div class="card-body-modern">
                            <p class="text-muted mb-4">
                                <i class="fas fa-info-circle me-2"></i>
                                Экспортируйте свои данные в формате JSON
                            </p>
                            
                            <div class="alert alert-info border-0 shadow-sm">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-info-circle fa-2x"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        Экспорт включает информацию о вашем профиле и настройках
                                    </div>
                                </div>
                            </div>
                            
                            <div class="d-flex gap-2 flex-wrap">
                                <a href="{{ path('app_settings_export_data') }}" class="btn btn-primary-modern btn-lg btn-save">
                                    <i class="fas fa-download me-2"></i> Экспортировать данные
                                </a>
                                
                                <button type="button" class="btn btn-warning-modern btn-lg" id="clearLocalStorageBtn">
                                    <i class="fas fa-broom me-2"></i> Очистить кэш браузера
                                </button>
                            </div>
                            
                            <div class="alert alert-warning border-0 shadow-sm mt-3" style="display: none;" id="clearStorageInfo">
                                <div class="d-flex align-items-center">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-exclamation-triangle fa-2x"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <strong>Внимание!</strong> Это действие очистит все локальные настройки (тема, виджеты, фильтры) и не может быть отменено.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Widget card click handling
    document.querySelectorAll('.widget-card').forEach(card => {
        card.addEventListener('click', function(e) {
            if (e.target.type !== 'checkbox') {
                const checkbox = this.querySelector('.widget-checkbox');
                checkbox.checked = !checkbox.checked;
                this.classList.toggle('selected', checkbox.checked);
            } else {
                this.classList.toggle('selected', e.target.checked);
            }
        });
    });
    
    // Save widgets with animation
    document.getElementById('save-widgets')?.addEventListener('click', function() {
        const button = this;
        const originalText = button.innerHTML;
        
        button.disabled = true;
        button.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Сохранение...';
        
        const widgets = Array.from(document.querySelectorAll('.widget-checkbox:checked'))
            .map(cb => cb.value);
        
        fetch('{{ path('app_settings_widgets') }}', {
            method: 'POST',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify({widgets: widgets})
        })
        .then(r => r.json())
        .then(data => {
            button.innerHTML = '<i class="fas fa-check me-2"></i>Сохранено!';
            button.classList.remove('btn-primary');
            button.classList.add('btn-success');
            
            setTimeout(() => {
                button.innerHTML = originalText;
                button.classList.remove('btn-success');
                button.classList.add('btn-primary');
                button.disabled = false;
            }, 2000);
        })
        .catch(error => {
            button.innerHTML = '<i class="fas fa-times me-2"></i>Ошибка';
            button.classList.add('btn-danger');
            button.disabled = false;
            
            setTimeout(() => {
                button.innerHTML = originalText;
                button.classList.remove('btn-danger');
                button.classList.add('btn-primary');
            }, 2000);
        });
    });
    
    // Save notifications with animation
    document.getElementById('save-notifications')?.addEventListener('click', function() {
        const button = this;
        const originalText = button.innerHTML;
        
        button.disabled = true;
        button.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Сохранение...';
        
        const preferences = {
            email_notifications: document.getElementById('email_notifications').checked,
            push_notifications: document.getElementById('push_notifications').checked,
            deadline_reminders: document.getElementById('deadline_reminders').checked,
            task_assignments: document.getElementById('task_assignments').checked
        };
        
        fetch('{{ path('app_settings_notifications') }}', {
            method: 'POST',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify(preferences)
        })
        .then(r => r.json())
        .then(data => {
            button.innerHTML = '<i class="fas fa-check me-2"></i>Сохранено!';
            button.classList.remove('btn-primary');
            button.classList.add('btn-success');
            
            setTimeout(() => {
                button.innerHTML = originalText;
                button.classList.remove('btn-success');
                button.classList.add('btn-primary');
                button.disabled = false;
            }, 2000);
        })
        .catch(error => {
            button.innerHTML = '<i class="fas fa-times me-2"></i>Ошибка';
            button.classList.add('btn-danger');
            button.disabled = false;
            
            setTimeout(() => {
                button.innerHTML = originalText;
                button.classList.remove('btn-danger');
                button.classList.add('btn-primary');
            }, 2000);
        });
    });
    
    // Theme selection with animation
    document.querySelectorAll('.theme-card').forEach(card => {
        card.addEventListener('click', function() {
            const theme = this.dataset.theme;
            
            // Remove selected class from all cards
            document.querySelectorAll('.theme-card').forEach(c => c.classList.remove('selected'));
            this.classList.add('selected');
            
            fetch('{{ path('app_settings_theme') }}', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({theme: theme})
            })
            .then(r => r.json())
            .then(data => {
                document.body.classList.toggle('dark-theme', theme === 'dark');
                
                // Show success toast
                const toast = document.createElement('div');
                toast.className = 'alert alert-success position-fixed top-0 end-0 m-3';
                toast.style.zIndex = '9999';
                toast.innerHTML = `<i class="fas fa-check-circle me-2"></i>Тема изменена на: ${theme === 'dark' ? 'Темная' : 'Светлая'}`;
                document.body.appendChild(toast);
                
                setTimeout(() => toast.remove(), 3000);
            });
        });
    });
    
    // Add smooth scroll to tabs
    document.querySelectorAll('[data-bs-toggle="tab"]').forEach(tab => {
        tab.addEventListener('shown.bs.tab', function() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });
    });
    
    // Clear localStorage button handler
    const clearBtn = document.getElementById('clearLocalStorageBtn');
    const clearInfo = document.getElementById('clearStorageInfo');
    
    if (clearBtn) {
        clearBtn.addEventListener('click', function() {
            if (clearInfo.style.display === 'none') {
                // Show warning first
                clearInfo.style.display = 'block';
                clearBtn.innerHTML = '<i class="fas fa-check me-2"></i> Подтвердить очистку';
                clearBtn.classList.remove('btn-warning');
                clearBtn.classList.add('btn-danger');
            } else {
                // Confirm and clear
                if (confirm('Вы уверены? Все локальные настройки будут удалены.')) {
                    // Clear localStorage
                    localStorage.clear();
                    
                    // Show success message
                    const toast = document.createElement('div');
                    toast.className = 'alert alert-success position-fixed top-0 end-0 m-3';
                    toast.style.zIndex = '9999';
                    toast.innerHTML = '<i class="fas fa-check-circle me-2"></i>Кэш браузера очищен. Страница будет перезагружена.';
                    document.body.appendChild(toast);
                    
                    // Reload page after 2 seconds
                    setTimeout(() => {
                        window.location.reload();
                    }, 2000);
                }
            }
        });
    }
});
</script>
{% endblock %}
