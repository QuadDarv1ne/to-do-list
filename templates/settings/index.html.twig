{% extends 'base.html.twig' %}

{% block title %}Настройки{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/pages/settings-enhanced.css') }}">
    
    {# Загружаем тему из localStorage или используем light по умолчанию #}
    <script>
        (function() {
            const theme = localStorage.getItem('theme') || 'light';
            document.documentElement.setAttribute('data-theme', theme);
            
            // Загружаем CSS файл темы
            const themeLink = document.createElement('link');
            themeLink.rel = 'stylesheet';
            themeLink.href = '/css/themes/topbar-theme-' + theme + '.css';
            themeLink.setAttribute('data-theme-css', 'true');
            document.head.appendChild(themeLink);
        })();
    </script>
{% endblock %}

{% block body %}
<div class="page-header-settings">
    <h2>Настройки</h2>
    <p>Персонализация и конфигурация системы</p>
</div>

<div class="settings-container">
    <div class="settings-sidebar">
        <div class="card">
            <div class="card-body settings-nav-wrapper">
                <nav class="settings-nav">
                    <a href="#appearance" class="settings-nav-item active" data-section="appearance">
                        <i class="fas fa-palette"></i>
                        <span>Внешний вид</span>
                    </a>
                    <a href="#notifications" class="settings-nav-item" data-section="notifications">
                        <i class="fas fa-bell"></i>
                        <span>Уведомления</span>
                    </a>
                    <a href="#security" class="settings-nav-item" data-section="security">
                        <i class="fas fa-shield-alt"></i>
                        <span>Безопасность</span>
                    </a>
                    <a href="#preferences" class="settings-nav-item" data-section="preferences">
                        <i class="fas fa-cog"></i>
                        <span>Предпочтения</span>
                    </a>
                </nav>
            </div>
        </div>
    </div>
    
    <div class="settings-content">
        <div class="settings-section" id="appearance">
            <div class="card settings-card">
                <div class="card-header">
                    <h3 class="card-title">Тема оформления</h3>
                </div>
                <div class="card-body">
                    <div class="theme-grid">
                        <div class="theme-option" data-theme="light">
                            <div class="theme-preview theme-preview-light">
                                <div class="theme-preview-header">
                                    <div class="theme-preview-icon"></div>
                                    <div class="theme-preview-bar"></div>
                                </div>
                                <div class="theme-preview-content"></div>
                            </div>
                            <div class="theme-label">Светлая</div>
                        </div>
                        
                        <div class="theme-option" data-theme="dark">
                            <div class="theme-preview theme-preview-dark">
                                <div class="theme-preview-header">
                                    <div class="theme-preview-icon"></div>
                                    <div class="theme-preview-bar"></div>
                                </div>
                                <div class="theme-preview-content"></div>
                            </div>
                            <div class="theme-label">Тёмная</div>
                        </div>
                        
                        <div class="theme-option" data-theme="orange">
                            <div class="theme-preview theme-preview-orange">
                                <div class="theme-preview-header">
                                    <div class="theme-preview-icon"></div>
                                    <div class="theme-preview-bar"></div>
                                </div>
                                <div class="theme-preview-content"></div>
                            </div>
                            <div class="theme-label">Оранжевая</div>
                        </div>
                        
                        <div class="theme-option" data-theme="purple">
                            <div class="theme-preview theme-preview-purple">
                                <div class="theme-preview-header">
                                    <div class="theme-preview-icon"></div>
                                    <div class="theme-preview-bar"></div>
                                </div>
                                <div class="theme-preview-content"></div>
                            </div>
                            <div class="theme-label">Фиолетовая</div>
                        </div>
                        
                        <div class="theme-option" data-theme="custom">
                            <div class="theme-preview theme-preview-custom">
                                <div class="theme-preview-header">
                                    <div class="theme-preview-icon"></div>
                                    <div class="theme-preview-bar"></div>
                                </div>
                                <div class="theme-preview-content"></div>
                            </div>
                            <div class="theme-label">Зелёная</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="settings-section" id="notifications" style="display: none;">
            <div class="card settings-card">
                <div class="card-header">
                    <h3 class="card-title">Настройки уведомлений</h3>
                </div>
                <div class="card-body">
                    <div class="settings-options">
                        <div class="settings-option">
                            <div class="settings-option-info">
                                <div class="settings-option-title">Email уведомления</div>
                                <div class="settings-option-desc">Получать уведомления на email</div>
                            </div>
                            <label class="switch">
                                <input type="checkbox" checked>
                                <span class="slider"></span>
                            </label>
                        </div>
                        
                        <div class="settings-option">
                            <div class="settings-option-info">
                                <div class="settings-option-title">Push уведомления</div>
                                <div class="settings-option-desc">Показывать уведомления в браузере</div>
                            </div>
                            <label class="switch">
                                <input type="checkbox" checked>
                                <span class="slider"></span>
                            </label>
                        </div>
                        
                        <div class="settings-option">
                            <div class="settings-option-info">
                                <div class="settings-option-title">Звуковые уведомления</div>
                                <div class="settings-option-desc">Воспроизводить звук при новых уведомлениях</div>
                            </div>
                            <label class="switch">
                                <input type="checkbox">
                                <span class="slider"></span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="settings-section" id="security" style="display: none;">
            <div class="card settings-card">
                <div class="card-header">
                    <h3 class="card-title">Безопасность</h3>
                </div>
                <div class="card-body">
                    <div class="settings-options">
                        <a href="{{ path('app_profile_change_password') }}" class="settings-link">
                            <div class="settings-option-info">
                                <div class="settings-option-title">Сменить пароль</div>
                                <div class="settings-option-desc">Обновите свой пароль</div>
                            </div>
                            <i class="fas fa-chevron-right"></i>
                        </a>
                        
                        <div class="settings-option">
                            <div class="settings-option-info">
                                <div class="settings-option-title">Двухфакторная аутентификация</div>
                                <div class="settings-option-desc">Дополнительная защита аккаунта</div>
                            </div>
                            <button class="btn btn-primary btn-sm">Настроить</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="settings-section" id="preferences" style="display: none;">
            <div class="card settings-card">
                <div class="card-header">
                    <h3 class="card-title">Предпочтения</h3>
                </div>
                <div class="card-body">
                    <div class="settings-options">
                        <div class="settings-field">
                            <label class="settings-label">Язык интерфейса</label>
                            <select class="form-select settings-select">
                                <option value="ru">Русский</option>
                                <option value="en">English</option>
                            </select>
                        </div>
                        
                        <div class="settings-field">
                            <label class="settings-label">Часовой пояс</label>
                            <select class="form-select settings-select">
                                <option value="Europe/Moscow">Москва (UTC+3)</option>
                                <option value="Europe/Kiev">Киев (UTC+2)</option>
                                <option value="Europe/Minsk">Минск (UTC+3)</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/pages/settings-enhanced.js') }}"></script>
{% endblock %}
