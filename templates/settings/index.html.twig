                                    <i class="fas fa-save me-2"></i>Сохранить настройки
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Theme Tab -->
                <div class="tab-pane fade" id="theme">
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white border-0">
