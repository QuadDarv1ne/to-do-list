{% extends 'base.html.twig' %}

{% block title %}Магазин наград{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">Магазин наград</h2>
                    <p class="text-muted mb-0">Обменяйте XP на награды</p>
                </div>
                <div class="text-end">
                    <div class="badge bg-primary fs-5 px-3 py-2">
                        <i class="fas fa-star me-2"></i>{{ user_xp }} XP
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        {% for item in items %}
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <div class="flex-shrink-0">
                            <div class="avatar avatar-lg bg-{{ item.rarity }}-subtle text-{{ item.rarity }}">
                                <i class="fas {{ item.icon }} fa-2x"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h5 class="mb-0">{{ item.name }}</h5>
                            <span class="badge bg-{{ item.rarity }}-subtle text-{{ item.rarity }}">
                                {{ item.rarity|capitalize }}
                            </span>
                        </div>
                    </div>
                    
                    <p class="text-muted mb-3">{{ item.description }}</p>
                    
                    <div class="d-flex justify-content-between align-items-center">
                        <span class="fw-bold text-primary">
                            <i class="fas fa-star me-1"></i>{{ item.cost }} XP
                        </span>
                        {% if user_xp >= item.cost %}
                        <button class="btn btn-sm btn-primary" 
                                onclick="purchaseItem('{{ item.id }}')">
                            <i class="fas fa-shopping-cart me-1"></i>Купить
                        </button>
                        {% else %}
                        <button class="btn btn-sm btn-secondary" disabled>
                            Недостаточно XP
                        </button>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        {% else %}
        <div class="col-12">
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                В магазине пока нет доступных наград
            </div>
        </div>
        {% endfor %}
    </div>
</div>

<script>
function purchaseItem(itemId) {
    if (!confirm('Вы уверены, что хотите купить эту награду?')) {
        return;
    }
    
    fetch(`/gamification/shop/purchase/${itemId}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
            'X-Requested-With': 'XMLHttpRequest'
        }
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            window.location.reload();
        } else {
            alert(data.message || 'Ошибка при покупке');
        }
    })
    .catch(() => {
        alert('Произошла ошибка');
    });
}
</script>
{% endblock %}
