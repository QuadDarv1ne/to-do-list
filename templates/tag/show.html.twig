{% extends 'base.html.twig' %}

{% block title %}{{ tag.name }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">
                        <i class="fas fa-tag me-2 text-primary"></i>
                        {{ tag.name }}
                    </h3>
                    <div class="btn-group">
                        <a href="{{ path('app_tag_edit', {'id': tag.id}) }}" class="btn btn-primary">
                            <i class="fas fa-edit me-2"></i>
                            Редактировать
                        </a>
                        <a href="{{ path('app_tag_index') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>
                            Назад
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Название</label>
                                <p class="mb-0">
                                    <span class="badge" style="background-color: {{ tag.color }}; color: white;">{{ tag.name }}</span>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Цвет</label>
                                <p class="mb-0">
                                    <span class="badge" style="background-color: {{ tag.color }}; color: white;">{{ tag.color }}</span>
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Описание</label>
                                <p class="mb-0">{{ tag.description ?: 'Нет описания' }}</p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Дата создания</label>
                                <p class="mb-0">{{ tag.createdAt|date('d.m.Y H:i:s') }}</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Дата обновления</label>
                                <p class="mb-0">{{ tag.updatedAt ? tag.updatedAt|date('d.m.Y H:i:s') : 'Не обновлялось' }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}