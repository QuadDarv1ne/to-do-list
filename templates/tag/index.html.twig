{% extends 'base.html.twig' %}

{% block title %}Теги{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="mb-0">
                    <i class="fas fa-tags me-3 text-primary"></i>
                    Теги
                </h1>
                <a href="{{ path('app_tag_new') }}" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus me-2"></i>
                    Новый тег
                </a>
            </div>
        </div>
    </div>

    {% if tags is not empty %}
        <div class="row">
            {% for tag in tags %}
                <div class="col-md-4 mb-4">
                    <div class="card h-100 border-0 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title mb-0">
                                    <span class="badge" style="background-color: {{ tag.color }}; color: white;">{{ tag.name }}</span>
                                </h5>
                                <div class="dropdown">
                                    <button class="btn btn-light btn-sm" type="button" data-bs-toggle="dropdown">
                                        <i class="fas fa-ellipsis-v"></i>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="{{ path('app_tag_show', {'id': tag.id}) }}">
                                            <i class="fas fa-eye me-2"></i>Просмотр
                                        </a></li>
                                        <li><a class="dropdown-item" href="{{ path('app_tag_edit', {'id': tag.id}) }}">
                                            <i class="fas fa-edit me-2"></i>Редактировать
                                        </a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form method="post" action="{{ path('app_tag_delete', {'id': tag.id}) }}" onsubmit="return confirm('Вы уверены, что хотите удалить тег \"' + '{{ tag.name|e('js') }}' + '\"?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tag.id) }}">
                                                <button class="dropdown-item text-danger">
                                                    <i class="fas fa-trash me-2"></i>Удалить
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            
                            {% if tag.description %}
                                <p class="card-text text-muted">{{ tag.description }}</p>
                            {% endif %}
                            
                            <div class="mt-2">
                                <small class="text-muted">
                                    Создан: {{ tag.createdAt|date('d.m.Y H:i') }}
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="empty-state py-5">
            <i class="fas fa-tags mb-3"></i>
            <h4 class="mb-3">Теги не найдены</h4>
            <p class="mb-4">Создайте первый тег для начала организации задач</p>
            <a href="{{ path('app_tag_new') }}" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Создать тег
            </a>
        </div>
    {% endif %}
</div>
{% endblock %}