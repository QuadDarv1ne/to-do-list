<!DOCTYPE html>
<html lang="ru" data-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}CRM{% endblock %}</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/app-bundle.min.css">
    <link rel="stylesheet" href="/css/themes-bundle.min.css">
    <link rel="stylesheet" href="/css/components-bundle.min.css">
    
    {% block stylesheets %}{% endblock %}
</head>
<body>
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-logo">CRM</div>
        
        <nav class="sidebar-nav">
            <a href="{{ path('app_dashboard') }}" class="{% if app.request.attributes.get('_route') == 'app_dashboard' %}active{% endif %}" title="Панель">
                <i class="fas fa-home"></i>
            </a>
            <a href="{{ path('app_task_index') }}" class="{% if app.request.attributes.get('_route') starts with 'app_task' %}active{% endif %}" title="Задачи">
                <i class="fas fa-shopping-bag"></i>
            </a>
            <a href="{{ path('app_task_category_index') }}" title="Категории">
                <i class="fas fa-history"></i>
            </a>
            <a href="#" title="Клиенты">
                <i class="fas fa-users"></i>
            </a>
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_user_index') }}" title="Пользователи">
                <i class="fas fa-user-cog"></i>
            </a>
            {% endif %}
        </nav>
        
        <div style="margin-top: auto;">
            <a href="#" title="Настройки">
                <i class="fas fa-cog"></i>
            </a>
            <a href="{{ path('app_logout') }}" title="Выход" style="margin-top: 20px;">
                <i class="fas fa-sign-out-alt"></i>
            </a>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Top Bar -->
        <div class="top-bar">
            <div class="search-box">
                <i class="fas fa-search"></i>
                <input type="text" placeholder="Поиск">
            </div>
            
            <div class="user-menu">
                <button class="theme-toggle" id="themeToggle" title="Переключить тему">
                    <i class="fas fa-moon"></i>
                </button>
                
                <div class="notification-icon">
                    <i class="fas fa-bell"></i>
                    <span class="notification-badge">3</span>
                </div>
                
                <div class="dropdown">
                    <div class="user-avatar" 
                         data-bs-toggle="dropdown" 
                         aria-expanded="false"
                         role="button"
                         style="cursor: pointer;"
                         title="{{ app.user.fullName }}">
                        {{ app.user.firstName|first }}
                    </div>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <div class="dropdown-header">
                                <strong>{{ app.user.fullName }}</strong>
                                <div class="small text-muted">{{ app.user.email }}</div>
                            </div>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item" href="{{ path('app_profile_show') }}">
                                <i class="fas fa-user me-2"></i>Мой профиль
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="{{ path('app_settings') }}">
                                <i class="fas fa-cog me-2"></i>Настройки
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="{{ path('app_2fa_setup') }}">
                                <i class="fas fa-shield-alt me-2"></i>Безопасность
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item text-danger" href="#" data-bs-toggle="modal" data-bs-target="#logoutModal">
                                <i class="fas fa-sign-out-alt me-2"></i>Выход
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Flash Messages -->
        {% for flash_message in app.session.flashbag.get('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ flash_message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
        
        {% for flash_message in app.session.flashbag.get('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ flash_message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {% block body %}{% endblock %}
    </main>

    <!-- Logout Confirmation Modal -->
    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-0">
                    <h5 class="modal-title" id="logoutModalLabel">
                        <i class="fas fa-sign-out-alt me-2 text-danger"></i>Выход из системы
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center py-4">
                    <div class="mb-3">
                        <i class="fas fa-question-circle fa-3x text-warning"></i>
                    </div>
                    <h6 class="mb-3">Вы уверены, что хотите выйти?</h6>
                    <p class="text-muted mb-0">
                        Вы сможете войти снова, используя свои учетные данные
                    </p>
                </div>
                <div class="modal-footer border-0 justify-content-center">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Отмена
                    </button>
                    <a href="{{ path('app_logout') }}" class="btn btn-danger">
                        <i class="fas fa-sign-out-alt me-2"></i>Да, выйти
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="{{ asset('js/notifications.js') }}"></script>
    
    <script>
        // Theme Toggle
        const themeToggle = document.getElementById('themeToggle');
        const html = document.documentElement;
        const icon = themeToggle.querySelector('i');
        
        // Load saved theme
        const savedTheme = localStorage.getItem('theme') || 'dark';
        html.setAttribute('data-theme', savedTheme);
        updateIcon(savedTheme);
        
        themeToggle.addEventListener('click', () => {
            const currentTheme = html.getAttribute('data-theme');
            const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
            
            html.setAttribute('data-theme', newTheme);
            localStorage.setItem('theme', newTheme);
            updateIcon(newTheme);
        });
        
        function updateIcon(theme) {
            icon.className = theme === 'dark' ? 'fas fa-sun' : 'fas fa-moon';
        }
    </script>
    
    {% block javascripts %}{% endblock %}
</body>
</html>
