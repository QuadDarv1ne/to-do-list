<!DOCTYPE html>
<html lang="ru" data-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="{% block meta_description %}CRM система для управления задачами и продажами{% endblock %}">
    <meta name="theme-color" content="#6366f1">
    <title>{% block title %}CRM система: Управление задачами{% endblock %}</title>

    <!-- Favicon -->
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Design System & Themes -->
    <link rel="stylesheet" href="{{ asset('css/design-system.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/theme-system.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/themes-bundle.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/components-bundle.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/base-layout.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/navbar-enhanced.min.css') }}">

    <!-- Page-specific styles -->
    {% if app.request.attributes.get('_route') starts with 'app_dashboard' %}
        <link rel="stylesheet" href="{{ asset('css/dashboard-enhanced.min.css') }}">
    {% endif %}
    {% if app.request.attributes.get('_route') starts with 'app_task' %}
        <link rel="stylesheet" href="{{ asset('css/tasks-enhanced.min.css') }}">
    {% endif %}
    {% if app.request.attributes.get('_route') == 'app_kanban_board' %}
        <link rel="stylesheet" href="{{ asset('css/kanban-enhanced.min.css') }}">
    {% endif %}
    {% if app.request.attributes.get('_route') == 'app_calendar' %}
        <link rel="stylesheet" href="{{ asset('css/calendar-enhanced.min.css') }}">
    {% endif %}

    {% block stylesheets %}{% endblock %}
</head>
<body>
    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-logo">CRM</div>
        
        <nav class="sidebar-nav">
            <a href="{{ path('app_dashboard') }}" class="{% if app.request.attributes.get('_route') == 'app_dashboard' %}active{% endif %}" title="Панель">
                <i class="fas fa-home"></i>
            </a>
            <a href="{{ path('app_task_index') }}" class="{% if app.request.attributes.get('_route') starts with 'app_task' %}active{% endif %}" title="Задачи">
                <i class="fas fa-shopping-bag"></i>
            </a>
            <a href="{{ path('app_task_category_index') }}" title="Категории">
                <i class="fas fa-history"></i>
            </a>
            <a href="#" title="Клиенты">
                <i class="fas fa-users"></i>
            </a>
            {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_user_index') }}" title="Пользователи">
                <i class="fas fa-user-cog"></i>
            </a>
            {% endif %}
        </nav>
        
        <div style="margin-top: auto;">
            <a href="#" title="Настройки">
                <i class="fas fa-cog"></i>
            </a>
            <a href="{{ path('app_logout') }}" title="Выход" style="margin-top: 20px;">
                <i class="fas fa-sign-out-alt"></i>
            </a>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Top Bar -->
        <div class="top-bar">
            <div class="search-box">
                <i class="fas fa-search"></i>
                <input type="text" placeholder="Поиск">
            </div>
            
            <div class="user-menu">
                <button class="theme-toggle" id="themeToggle" title="Переключить тему">
                    <i class="fas fa-moon"></i>
                </button>
                
                <div class="notification-icon">
                    <i class="fas fa-bell"></i>
                    <span class="notification-badge">3</span>
                </div>
                
                <div class="dropdown">
                    <div class="user-avatar" 
                         data-bs-toggle="dropdown" 
                         aria-expanded="false"
                         role="button"
                         style="cursor: pointer;"
                         title="{{ app.user.fullName }}">
                        {{ app.user.firstName|first }}
                    </div>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <div class="dropdown-header">
                                <strong>{{ app.user.fullName }}</strong>
                                <div class="small text-muted">{{ app.user.email }}</div>
                            </div>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item" href="{{ path('app_profile_show') }}">
                                <i class="fas fa-user me-2"></i>Мой профиль
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="{{ path('app_settings') }}">
                                <i class="fas fa-cog me-2"></i>Настройки
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="{{ path('app_2fa_setup') }}">
                                <i class="fas fa-shield-alt me-2"></i>Безопасность
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item text-danger" href="#" data-bs-toggle="modal" data-bs-target="#logoutModal">
                                <i class="fas fa-sign-out-alt me-2"></i>Выход
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Flash Messages -->
        {% for flash_message in app.session.flashbag.get('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{ flash_message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}
        
        {% for flash_message in app.session.flashbag.get('error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                {{ flash_message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        {% endfor %}

        {% block body %}{% endblock %}
    </main>

    <!-- Logout Confirmation Modal -->
    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-0">
                    <h5 class="modal-title" id="logoutModalLabel">
                        <i class="fas fa-sign-out-alt me-2 text-danger"></i>Выход из системы
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center py-4">
                    <div class="mb-3">
                        <i class="fas fa-question-circle fa-3x text-warning"></i>
                    </div>
                    <h6 class="mb-3">Вы уверены, что хотите выйти?</h6>
                    <p class="text-muted mb-0">
                        Вы сможете войти снова, используя свои учетные данные
                    </p>
                </div>
                <div class="modal-footer border-0 justify-content-center">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-2"></i>Отмена
                    </button>
                    <a href="{{ path('app_logout') }}" class="btn btn-danger">
                        <i class="fas fa-sign-out-alt me-2"></i>Да, выйти
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" defer></script>

    <!-- Critical functions -->
    <script src="{{ asset('js/critical-functions.min.js') }}"></script>

    <!-- Core bundles -->
    <script src="{{ asset('js/design-system-utils.min.js') }}" defer></script>
    <script src="{{ asset('js/core-bundle.min.js') }}" defer></script>
    <script src="{{ asset('js/navbar-enhanced.min.js') }}" defer></script>
    <script src="{{ asset('js/theme-switcher.min.js') }}" defer></script>
    <script src="{{ asset('js/console-wrapper.min.js') }}" defer></script>
    <script src="{{ asset('js/logger.min.js') }}" defer></script>
    <script src="{{ asset('js/event-manager.min.js') }}" defer></script>

    {% if app.user %}
        <script src="{{ asset('js/common-bundle.min.js') }}" defer></script>
        <script src="{{ asset('js/notifications-realtime.min.js') }}" defer></script>
    {% endif %}

    <!-- Page-specific scripts -->
    {% if app.request.attributes.get('_route') starts with 'app_task' %}
        <script src="{{ asset('js/table-enhancements.min.js') }}" defer></script>
    {% endif %}
    {% if app.request.attributes.get('_route') == 'app_kanban_board' %}
        <script src="{{ asset('js/kanban-enhanced.min.js') }}" defer></script>
    {% endif %}
    {% if app.request.attributes.get('_route') == 'app_calendar' %}
        <script src="{{ asset('js/calendar-enhanced.min.js') }}" defer></script>
    {% endif %}
    {% if app.request.attributes.get('_route') starts with 'app_dashboard' or app.request.attributes.get('_route') starts with 'app_analytics' %}
        <script src="{{ asset('js/dashboard-widgets.min.js') }}" defer></script>
    {% endif %}
    {% if app.request.attributes.get('_route') starts with 'app_settings' %}
        <script src="{{ asset('js/settings-enhanced.min.js') }}" defer></script>
    {% endif %}

    <script src="{{ asset('js/notifications.min.js') }}"></script>

    {% block javascripts %}{% endblock %}
</body>
</html>
