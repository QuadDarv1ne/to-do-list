                    <p class="mb-0 opacity-75">Будьте в курсе всех событий</p>
                </div>
                <div class="d-flex gap-2">
                    {% set unreadCount = notifications|filter(n => not n.isRead)|length %}
                    {% if unreadCount > 0 %}
                        <button class="btn btn-light" onclick="markAllAsRead()">
                            <i class="fas fa-check-double me-2"></i>
                            Отметить все ({{ unreadCount }})
                        </button>
                    {% endif %}
                    <a href="{{ path('app_dashboard') }}" class="btn btn-light">
                        <i class="fas fa-arrow-left me-2"></i>
                        Назад
                    </a>
                </div>
            </div>
        </div>
        
        <div class="notification-filters">
            <button class="filter-btn active" data-filter="all">
                <i class="fas fa-list me-2"></i>
                Все
            </button>
            <button class="filter-btn" data-filter="unread">
                <i class="fas fa-envelope me-2"></i>
                Непрочитанные
            </button>
            <button class="filter-btn" data-filter="read">
                <i class="fas fa-envelope-open me-2"></i>
                Прочитанные
            </button>
            <button class="filter-btn" data-filter="task">
                <i class="fas fa-tasks me-2"></i>
                Задачи
            </button>
        </div>
    </div>

    {% if notifications %}
        <div class="stats-bar">
            <div class="stat-card">
                <div class="stat-number">{{ notifications|length }}</div>
                <div class="stat-label">Всего</div>
            </div>
            <div class="stat-card">
                <div class="stat-number text-primary">{{ unreadCount }}</div>
                <div class="stat-label">Непрочитанные</div>
            </div>
            <div class="stat-card">
                <div class="stat-number text-success">{{ notifications|filter(n => n.isRead)|length }}</div>
                <div class="stat-label">Прочитанные</div>
            </div>
        </div>

        <div class="card border-0 shadow-sm">
            <div class="list-group list-group-flush" id="notifications-list">
                {% for notification in notifications %}
                <div class="list-group-item notification-item position-relative {% if not notification.isRead %}unread{% endif %}" 
                     id="notification-{{ notification.id }}"
                     data-read="{{ notification.isRead ? 'true' : 'false' }}"
                     data-type="{{ notification.task ? 'task' : 'info' }}">
                    <div class="d-flex align-items-start gap-3">
                        <div class="notification-icon {{ notification.task ? 'task' : 'info' }}">
                            <i class="fas fa-{{ notification.task ? 'tasks' : 'bell' }}"></i>
                        </div>
                        
                        <div class="flex-grow-1">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <div class="notification-title">
                                    {{ notification.title }}
                                </div>
                                <div class="notification-time">
                                    <i class="fas fa-clock"></i>
                                    {{ notification.createdAt|date('d.m.Y H:i') }}
                                </div>
                            </div>
                            
                            <p class="notification-message mb-3">
                                {{ notification.message|striptags }}
                            </p>
                            
                            <div class="notification-actions">
                                {% if notification.task %}
                                    <a href="{{ path('app_task_show', {'id': notification.task.id}) }}" 
                                       class="btn btn-notification btn-primary">
                                        <i class="fas fa-eye"></i>
                                        Просмотреть задачу
                                    </a>
                                {% endif %}
                                
                                {% if not notification.isRead %}
                                    <button class="btn btn-notification btn-success" 
                                            onclick="markAsRead({{ notification.id }})">
                                        <i class="fas fa-check"></i>
                                        Прочитано
                                    </button>
                                {% else %}
                                    <span class="badge bg-success px-3 py-2">
                                        <i class="fas fa-check me-1"></i>
                                        Прочитано
                                    </span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    {% else %}
        <div class="card border-0 shadow-sm">
            <div class="empty-state">
                <i class="fas fa-bell-slash"></i>
                <h3 class="mb-3">Уведомлений нет</h3>
                <p class="text-muted mb-4">Здесь будут отображаться ваши уведомления</p>
                <a href="{{ path('app_dashboard') }}" class="btn btn-primary">
                    <i class="fas fa-home me-2"></i>
                    На главную
                </a>
            </div>
        </div>
    {% endif %}
</div>

<script>
// Filter functionality
document.querySelectorAll('.filter-btn').forEach(btn => {
    btn.addEventListener('click', function() {
        // Update active button
        document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
        this.classList.add('active');
        
        const filter = this.dataset.filter;
        const items = document.querySelectorAll('.notification-item');
        
        items.forEach(item => {
            const isRead = item.dataset.read === 'true';
            const type = item.dataset.type;
            
            let show = false;
            
            switch(filter) {
                case 'all':
                    show = true;
                    break;
                case 'unread':
                    show = !isRead;
                    break;
                case 'read':
                    show = isRead;
                    break;
                case 'task':
                    show = type === 'task';
                    break;
            }
            
            item.style.display = show ? '' : 'none';
        });
        
        // Re-animate visible items
        const visibleItems = Array.from(items).filter(item => item.style.display !== 'none');
        visibleItems.forEach((item, index) => {
            item.style.animation = 'none';
            setTimeout(() => {
                item.style.animation = `slideIn 0.5s ease-out ${index * 0.1}s backwards`;
            }, 10);
        });
    });
});

async function markAsRead(notificationId) {
    try {
        const response = await fetch(`/notifications/mark-as-read/${notificationId}`, {
            method: 'POST',
            headers: {
                'X-Requested-With': 'XMLHttpRequest',
                'Content-Type': 'application/json'
            }
        });
        
        if (response.ok) {
            const item = document.getElementById(`notification-${notificationId}`);
            if (item) {
                item.classList.remove('unread');
                item.dataset.read = 'true';
                
                const btn = item.querySelector('.btn-success');
                if (btn) {
                    btn.remove();
                    const badge = document.createElement('span');
                    badge.className = 'badge bg-success px-3 py-2';
                    badge.innerHTML = '<i class="fas fa-check me-1"></i>Прочитано';
                    item.querySelector('.notification-actions').appendChild(badge);
                }
                
                // Update stats
                updateStats();
                
                showToast('Уведомление отмечено как прочитанное', 'success');
            }
        }
    } catch (error) {
        console.error('Error:', error);
        showToast('Ошибка при отметке уведомления', 'error');
    }
}

async function markAllAsRead() {
    if (!confirm('Отметить все уведомления как прочитанные?')) {
        return;
    }
    
    try {
        const response = await fetch('/notifications/mark-all-as-read', {
            method: 'POST',
            headers: {
                'X-Requested-With': 'XMLHttpRequest',
                'Content-Type': 'application/json'
            }
        });
        
        if (response.ok) {
            location.reload();
        }
    } catch (error) {
        console.error('Error:', error);
        showToast('Ошибка при отметке уведомлений', 'error');
    }
}

function updateStats() {
    const items = document.querySelectorAll('.notification-item');
    const unread = Array.from(items).filter(item => item.dataset.read === 'false').length;
    const read = items.length - unread;
    
    const statCards = document.querySelectorAll('.stat-card .stat-number');
    if (statCards[1]) animateNumber(statCards[1], unread);
    if (statCards[2]) animateNumber(statCards[2], read);
}

function animateNumber(element, targetNumber) {
    const start = parseInt(element.textContent) || 0;
    const duration = 500;
    const increment = (targetNumber - start) / (duration / 16);
    let current = start;
    
    const timer = setInterval(() => {
        current += increment;
        if ((increment > 0 && current >= targetNumber) || (increment < 0 && current <= targetNumber)) {
            element.textContent = targetNumber;
            clearInterval(timer);
        } else {
            element.textContent = Math.round(current);
        }
    }, 16);
}

function showToast(message, type = 'info') {
    const toastContainer = document.getElementById('toast-container') || createToastContainer();
    
    const toast = document.createElement('div');
    toast.className = `toast-notification toast-${type}`;
    toast.innerHTML = `
        <div class="toast-icon">
            <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle'}"></i>
        </div>
        <div class="toast-message">${message}</div>
        <button class="toast-close" onclick="this.parentElement.remove()">
            <i class="fas fa-times"></i>
        </button>
    `;
    
    toastContainer.appendChild(toast);
    setTimeout(() => toast.classList.add('show'), 10);
    setTimeout(() => {
        toast.classList.remove('show');
        setTimeout(() => toast.remove(), 300);
    }, 3000);
}

function createToastContainer() {
    const container = document.createElement('div');
    container.id = 'toast-container';
    container.style.cssText = `
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 9999;
        display: flex;
        flex-direction: column;
        gap: 10px;
    `;
    document.body.appendChild(container);
    return container;
}
</script>
