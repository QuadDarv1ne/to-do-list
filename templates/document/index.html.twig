{% extends 'base.html.twig' %}

{% block title %}Document Management{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <nav class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_dashboard') }}">
                            <i class="fas fa-home"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_task_index') }}">
                            <i class="fas fa-tasks"></i> Tasks
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_resource_index') }}">
                            <i class="fas fa-users"></i> Resources
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('app_document_index') }}">
                            <i class="fas fa-file-alt"></i> Documents
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_budget_index') }}">
                            <i class="fas fa-wallet"></i> Budgets
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Document Management</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#generateDocumentModal">
                            <i class="fas fa-file-medical"></i> Generate
                        </button>
                        <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#reportModal">
                            <i class="fas fa-chart-bar"></i> Reports
                        </button>
                    </div>
                </div>
            </div>

            <!-- Document Summary Cards -->
            <div class="row mb-4">
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        Templates</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">3</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-file-template fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-success shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                        Generated Docs</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">0</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-file-download fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-info shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                        Reports</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">0</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-chart-line fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-warning shadow h-100 py-2">
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                        Conversions</div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">0</div>
                                </div>
                                <div class="col-auto">
                                    <i class="fas fa-file-contract fa-2x text-gray-300"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Documents Section -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Recent Documents</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Document Name</th>
                                    <th>Type</th>
                                    <th>Created Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>No recent documents</td>
                                    <td>N/A</td>
                                    <td>-</td>
                                    <td>
                                        <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#generateDocumentModal">
                                            <i class="fas fa-file-medical"></i> Generate
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Document Templates Section -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Document Templates</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">Project Report</h5>
                                    <p class="card-text">Standard template for project reports with status, timeline, and recommendations.</p>
                                    <button class="btn btn-primary" data-template-type="report" onclick="selectTemplate(this)">Use Template</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">Task Summary</h5>
                                    <p class="card-text">Template for summarizing task details, status, and next steps.</p>
                                    <button class="btn btn-primary" data-template-type="summary" onclick="selectTemplate(this)">Use Template</button>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">Meeting Minutes</h5>
                                    <p class="card-text">Template for documenting meeting discussions and action items.</p>
                                    <button class="btn btn-primary" data-template-type="minutes" onclick="selectTemplate(this)">Use Template</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<!-- Generate Document Modal -->
<div class="modal fade" id="generateDocumentModal" tabindex="-1" aria-labelledby="generateDocumentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="generateDocumentModalLabel">Generate Document</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="generateDocumentForm">
                    <div class="mb-3">
                        <label for="templateType" class="form-label">Template Type</label>
                        <select class="form-select" id="templateType" required>
                            <option value="">Select a template type</option>
                            <option value="report">Project Report</option>
                            <option value="summary">Task Summary</option>
                            <option value="minutes">Meeting Minutes</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="taskId" class="form-label">Related Task (Optional)</label>
                        <select class="form-select" id="taskId">
                            <option value="">Select a task</option>
                            <!-- Задачи загружаются через API при открытии модального окна -->
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="additionalContent" class="form-label">Additional Content</label>
                        <textarea class="form-control" id="additionalContent" rows="4" placeholder="Дополнительная информация для документа..."></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="generateDocument()">Generate Document</button>
            </div>
        </div>
    </div>
</div>

<!-- Report Modal -->
<div class="modal fade" id="reportModal" tabindex="-1" aria-labelledby="reportModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reportModalLabel">Generate Report</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="generateReportForm">
                    <div class="mb-3">
                        <label for="reportType" class="form-label">Report Type</label>
                        <select class="form-select" id="reportType" required>
                            <option value="summary">Summary Report</option>
                            <option value="detailed">Detailed Report</option>
                            <option value="timeline">Timeline Report</option>
                            <option value="performance">Performance Report</option>
                        </select>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="startDate" class="form-label">Start Date</label>
                                <input type="date" class="form-control" id="startDate">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="endDate" class="form-label">End Date</label>
                                <input type="date" class="form-control" id="endDate">
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="reportUserId" class="form-label">Filter by User (Optional)</label>
                        <select class="form-select" id="reportUserId">
                            <option value="">All Users</option>
                            <!-- Пользователи загружаются через API -->
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="generateReport()">Generate Report</button>
            </div>
        </div>
    </div>
</div>

<script>
let selectedTemplateType = '';

function selectTemplate(button) {
    selectedTemplateType = button.getAttribute('data-template-type');
    document.getElementById('templateType').value = selectedTemplateType;
    document.getElementById('generateDocumentModal').querySelector('.btn-close').click();
    
    // Show the modal again with the selected template
    setTimeout(() => {
        var modal = new bootstrap.Modal(document.getElementById('generateDocumentModal'));
        modal.show();
    }, 300);
}

async function generateDocument() {
    const templateType = document.getElementById('templateType').value;
    const taskId = document.getElementById('taskId').value;
    const additionalContent = document.getElementById('additionalContent').value;
    
    if (!templateType) {
        alert('Please select a template type');
        return;
    }
    
    try {
        const response = await fetch('{{ path('app_document_generate') }}', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-CSRF-TOKEN': '{{ csrf_token("generate") }}'
            },
            body: JSON.stringify({
                template_type: templateType,
                task_id: taskId || null,
                additional_content: additionalContent
            })
        });
        
        const result = await response.json();
        
        if (result.success) {
            // In a real implementation, you would download the document
            alert(`Document generated successfully!\nFilename: ${result.filename}`);
            console.log('Document content:', result.content);
        } else {
            alert('Error generating document: ' + result.error);
        }
    } catch (error) {
        console.error('Error generating document:', error);
        alert('Error generating document');
    }
}

async function generateReport() {
    const reportType = document.getElementById('reportType').value;
    const startDate = document.getElementById('startDate').value;
    const endDate = document.getElementById('endDate').value;
    const userId = document.getElementById('reportUserId').value;
    
    try {
        const response = await fetch('{{ path('app_document_report') }}', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-CSRF-TOKEN': '{{ csrf_token("report") }}'
            },
            body: JSON.stringify({
                report_type: reportType,
                start_date: startDate || null,
                end_date: endDate || null,
                user_id: userId || null
            })
        });
        
        const result = await response.json();
        
        alert(`Report generated successfully!\nTotal tasks: ${result.total_tasks}`);
        console.log('Report data:', result);
    } catch (error) {
        console.error('Error generating report:', error);
        alert('Error generating report');
    }
}

// Load available tasks and users when modals open
document.getElementById('generateDocumentModal').addEventListener('shown.bs.modal', async function () {
    // In a real application, you would fetch available tasks from the backend
    console.log('Loading available tasks...');
});

document.getElementById('reportModal').addEventListener('shown.bs.modal', async function () {
    // In a real application, you would fetch available users from the backend
    console.log('Loading available users...');
});
</script>
{% endblock %}