    });
});

// –í—ã–±–æ—Ä –∏–∫–æ–Ω–∫–∏
document.querySelectorAll('.icon-option').forEach(option => {
    option.addEventListener('click', function() {
        document.querySelectorAll('.icon-option').forEach(o => o.classList.remove('selected'));
        this.classList.add('selected');
        document.getElementById('icon').value = this.dataset.value;
    });
});

// –í—ã–±–æ—Ä —Ü–≤–µ—Ç–∞
document.querySelectorAll('.color-option').forEach(option => {
    option.addEventListener('click', function() {
        document.querySelectorAll('.color-option').forEach(o => o.classList.remove('selected'));
        this.classList.add('selected');
        document.getElementById('color').value = this.dataset.value;
    });
});

function deleteHabit() {
    if (confirm('–í—ã —É–≤–µ—Ä–µ–Ω—ã, —á—Ç–æ —Ö–æ—Ç–∏—Ç–µ —É–¥–∞–ª–∏—Ç—å —ç—Ç—É –ø—Ä–∏–≤—ã—á–∫—É? –≠—Ç–æ –¥–µ–π—Å—Ç–≤–∏–µ –Ω–µ–ª—å–∑—è –æ—Ç–º–µ–Ω–∏—Ç—å.')) {
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = "{{ path('app_habits_delete', {id: habit.id}) }}";
        
        const token = document.createElement('input');
        token.type = 'hidden';
        token.name = '_token';
        token.value = '{{ csrf_token('delete' ~ habit.id) }}';
        
        form.appendChild(token);
        document.body.appendChild(form);
        form.submit();
    }
}
</script>
