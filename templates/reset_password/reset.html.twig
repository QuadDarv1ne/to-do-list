{% extends 'auth_base.html.twig' %}

{% block title %}Новый пароль{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/pages/auth-enhanced.css') }}">
{% endblock %}

{% block body %}
<div class="reset-card">
    <div class="reset-header success">
        <div class="reset-icon">
            <i class="fas fa-lock"></i>
        </div>
        <div class="reset-logo">Новый пароль</div>
        <div class="reset-subtitle">Создайте надёжный пароль</div>
    </div>
    
    <div class="reset-body">
        {% if tokenExpiresAt %}
        <div class="alert alert-warning d-flex align-items-center mb-3">
            <i class="fas fa-clock me-2"></i>
            <div>
                <small>Ссылка действительна до: <strong>{{ tokenExpiresAt|date('d.m.Y H:i') }}</strong></small>
                <div id="countdown" class="mt-1 small"></div>
            </div>
        </div>
        {% endif %}
        
        <div class="password-requirements mb-3">
            <strong><i class="fas fa-shield-alt me-2"></i>Требования к паролю:</strong>
            <ul class="mt-2 mb-0">
                <li id="req-length"><i class="fas fa-circle text-muted me-1"></i> Минимум 8 символов</li>
                <li id="req-case"><i class="fas fa-circle text-muted me-1"></i> Заглавные и строчные буквы</li>
                <li id="req-number"><i class="fas fa-circle text-muted me-1"></i> Цифры</li>
                <li id="req-special"><i class="fas fa-circle text-muted me-1"></i> Специальные символы</li>
            </ul>
        </div>
        
        {{ form_start(resetForm) }}
        
        <div class="mb-4">
            <label for="{{ resetForm.plainPassword.first.vars.id }}" class="form-label">
                <i class="fas fa-key me-2"></i>Новый пароль
            </label>
            <div class="input-group">
                {{ form_widget(resetForm.plainPassword.first, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Введите новый пароль',
                        'id': 'password-input'
                    }
                }) }}
                <button class="btn btn-outline-secondary" type="button" id="toggle-password">
                    <i class="fas fa-eye"></i>
                </button>
            </div>
            <div class="password-strength mt-2">
                <div class="password-strength-bar" id="password-strength-bar"></div>
            </div>
            <div class="password-strength-text mt-1 small" id="strength-text"></div>
        </div>
        
        <div class="mb-4">
            <label for="{{ resetForm.plainPassword.second.vars.id }}" class="form-label">
                <i class="fas fa-check-double me-2"></i>Подтвердите пароль
            </label>
            <div class="input-group">
                {{ form_widget(resetForm.plainPassword.second, {
                    'attr': {
                        'class': 'form-control',
                        'placeholder': 'Повторите новый пароль',
                        'id': 'confirm-password'
                    }
                }) }}
                <button class="btn btn-outline-secondary" type="button" id="toggle-confirm">
                    <i class="fas fa-eye"></i>
                </button>
            </div>
            <div class="password-match mt-2 small" id="match-indicator"></div>
            {{ form_errors(resetForm.plainPassword) }}
        </div>
        
        <button type="submit" class="btn btn-reset success mb-3" id="submit-btn">
            <i class="fas fa-check-circle me-2"></i>Сохранить пароль
        </button>
        
        {{ form_end(resetForm) }}
        
        <div class="reset-footer">
            <a href="{{ path('app_login') }}" class="text-decoration-none">
                <i class="fas fa-arrow-left me-1"></i>Вернуться к входу
            </a>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const passwordInput = document.getElementById('password-input');
    const confirmInput = document.getElementById('confirm-password');
    const strengthBar = document.getElementById('password-strength-bar');
    const strengthText = document.getElementById('strength-text');
    const matchIndicator = document.getElementById('match-indicator');
    const submitBtn = document.getElementById('submit-btn');
    
    // Password toggle
    document.getElementById('toggle-password')?.addEventListener('click', function() {
        const icon = this.querySelector('i');
        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            icon.classList.replace('fa-eye', 'fa-eye-slash');
        } else {
            passwordInput.type = 'password';
            icon.classList.replace('fa-eye-slash', 'fa-eye');
        }
    });
    
    document.getElementById('toggle-confirm')?.addEventListener('click', function() {
        const icon = this.querySelector('i');
        if (confirmInput.type === 'password') {
            confirmInput.type = 'text';
            icon.classList.replace('fa-eye', 'fa-eye-slash');
        } else {
            confirmInput.type = 'password';
            icon.classList.replace('fa-eye-slash', 'fa-eye');
        }
    });
    
    // Password strength indicator
    if (passwordInput && strengthBar) {
        passwordInput.addEventListener('input', function(e) {
            const password = e.target.value;
            
            let strength = 0;
            const hasLength = password.length >= 8;
            const hasCase = password.match(/[a-z]/) && password.match(/[A-Z]/);
            const hasNumber = password.match(/[0-9]/);
            const hasSpecial = password.match(/[^a-zA-Z0-9]/);
            
            // Update requirements
            updateReq('req-length', hasLength);
            updateReq('req-case', hasCase);
            updateReq('req-number', hasNumber);
            updateReq('req-special', hasSpecial);
            
            if (hasLength) strength += 25;
            if (hasCase) strength += 25;
            if (hasNumber) strength += 25;
            if (hasSpecial) strength += 25;
            
            strengthBar.style.width = strength + '%';
            
            let label = '';
            if (strength === 0) {
                strengthBar.style.backgroundColor = '#e9ecef';
            } else if (strength <= 25) {
                strengthBar.style.backgroundColor = '#dc3545';
                label = 'Слабый';
            } else if (strength <= 50) {
                strengthBar.style.backgroundColor = '#ffc107';
                label = 'Средний';
            } else if (strength <= 75) {
                strengthBar.style.backgroundColor = '#17a2b8';
                label = 'Хороший';
            } else {
                strengthBar.style.backgroundColor = '#28a745';
                label = 'Отличный';
            }
            
            strengthText.textContent = label;
            strengthText.style.color = strengthBar.style.backgroundColor;
            
            checkMatch();
        });
        
        passwordInput.focus();
    }
    
    // Password match checker
    if (confirmInput) {
        confirmInput.addEventListener('input', checkMatch);
    }
    
    function checkMatch() {
        if (!confirmInput.value) {
            matchIndicator.textContent = '';
            return;
        }
        
        if (passwordInput.value === confirmInput.value) {
            matchIndicator.textContent = '✓ Пароли совпадают';
            matchIndicator.className = 'password-match mt-2 small text-success';
        } else {
            matchIndicator.textContent = '✗ Пароли не совпадают';
            matchIndicator.className = 'password-match mt-2 small text-danger';
        }
    }
    
    function updateReq(id, valid) {
        const el = document.getElementById(id);
        if (!el) return;
        
        const icon = el.querySelector('i');
        if (valid) {
            icon.classList.replace('fa-circle', 'fa-check-circle');
            icon.classList.replace('text-muted', 'text-success');
        } else {
            icon.classList.replace('fa-check-circle', 'fa-circle');
            icon.classList.replace('text-success', 'text-muted');
        }
    }
    
    // Form submission
    const form = document.querySelector('form');
    if (form && submitBtn) {
        form.addEventListener('submit', function(e) {
            if (passwordInput.value !== confirmInput.value) {
                e.preventDefault();
                alert('Пароли не совпадают');
                confirmInput.focus();
                return;
            }
            
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Сохранение...';
        });
    }
    
    // Countdown timer
    {% if tokenExpiresAt %}
    const expiresAt = new Date('{{ tokenExpiresAt|date('Y-m-d H:i:s') }}').getTime();
    const countdownEl = document.getElementById('countdown');
    
    function updateCountdown() {
        const now = new Date().getTime();
        const distance = expiresAt - now;
        
        if (distance < 0) {
            countdownEl.innerHTML = '<span class="text-danger">Срок действия ссылки истек</span>';
            submitBtn.disabled = true;
            return;
        }
        
        const hours = Math.floor(distance / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);
        
        countdownEl.textContent = `Осталось: ${hours}ч ${minutes}м ${seconds}с`;
        
        if (distance < 300000) { // Less than 5 minutes
            countdownEl.classList.add('text-danger');
        }
    }
    
    updateCountdown();
    setInterval(updateCountdown, 1000);
    {% endif %}
    
    // Keyboard shortcut
    document.addEventListener('keydown', function(e) {
        if ((e.ctrlKey || e.metaKey) && e.key === 'Enter') {
            form?.dispatchEvent(new Event('submit', { cancelable: true }));
        }
    });
});
</script>
{% endblock %}
