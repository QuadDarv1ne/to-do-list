{# 
    Empty State Component
    Usage: {% include 'components/empty_state.html.twig' with {
        icon: 'fa-tasks',
        title: 'Нет задач',
        message: 'Создайте первую задачу',
        action_url: path('app_task_new'),
        action_text: 'Создать задачу'
    } %}
#}

<div class="empty-state fade-in-up">
    <div class="empty-state-icon">
        <i class="fas {{ icon|default('fa-inbox') }} fa-4x text-muted"></i>
    </div>
    <h3 class="empty-state-title mt-4 mb-2">{{ title|default('Ничего не найдено') }}</h3>
    <p class="empty-state-message text-muted mb-4">{{ message|default('Попробуйте изменить параметры поиска') }}</p>
    {% if action_url is defined %}
        <a href="{{ action_url }}" class="btn btn-primary btn-enhanced">
            <i class="fas fa-plus me-2"></i>{{ action_text|default('Создать') }}
        </a>
    {% endif %}
</div>

<style>
.empty-state {
    text-align: center;
    padding: 4rem 2rem;
    animation: fadeInUp 0.6s ease-out;
}

.empty-state-icon {
    opacity: 0.3;
    transition: all 0.3s ease;
}

.empty-state:hover .empty-state-icon {
    opacity: 0.5;
    transform: scale(1.1);
}

.empty-state-title {
    color: #6c757d;
    font-weight: 600;
}

.empty-state-message {
    max-width: 400px;
    margin: 0 auto 1.5rem;
}
</style>
