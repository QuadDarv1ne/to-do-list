{# 
    Empty State Component
    Usage: {% include 'components/empty_state.html.twig' with {
        icon: 'fa-tasks',
        title: 'Нет задач',
        message: 'Создайте первую задачу',
        action_url: path('app_task_new'),
        action_text: 'Создать задачу',
        action_icon: 'fa-plus'
    } %}
#}

<div class="empty-state">
    <div class="empty-state-icon">
        <i class="fas {{ icon|default('fa-inbox') }} fa-4x text-muted"></i>
    </div>
    <h3 class="empty-state-title mt-4 mb-2">{{ title|default('Ничего не найдено') }}</h3>
    <p class="empty-state-message text-muted mb-4">{{ message|default('Попробуйте изменить параметры поиска') }}</p>
    {% if action_url is defined %}
        <a href="{{ action_url }}" class="btn btn-gradient-primary">
            {% if action_icon is defined %}<i class="fas {{ action_icon }} me-2"></i>{% endif %}
            {{ action_text|default('Создать') }}
        </a>
    {% endif %}
</div>
