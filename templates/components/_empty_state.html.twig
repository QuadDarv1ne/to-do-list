{# Empty state component #}
{% set icon = icon|default('fa-inbox') %}
{% set title = title|default('Нет данных') %}
{% set message = message|default('Здесь пока ничего нет') %}

<div class="empty-state text-center py-5">
    <i class="fas {{ icon }} fa-3x mb-3 text-muted" style="opacity: 0.3;"></i>
    <h4 class="mb-2">{{ title }}</h4>
    <p class="text-muted mb-3">{{ message }}</p>
    {% if action_url is defined %}
        <a href="{{ action_url }}" class="btn btn-primary">
            {% if action_icon is defined %}<i class="{{ action_icon }} me-2"></i>{% endif %}
            {{ action_text|default('Создать') }}
        </a>
    {% endif %}
</div>
