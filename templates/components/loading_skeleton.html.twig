{# 
    Loading Skeleton Component
    Usage: {% include 'components/loading_skeleton.html.twig' with {
        type: 'card',
        count: 3
    } %}
#}

{% set skeleton_type = type|default('card') %}
{% set skeleton_count = count|default(1) %}

{% if skeleton_type == 'card' %}
    {% for i in 1..skeleton_count %}
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-body">
                <div class="skeleton skeleton-text" style="width: 60%; height: 24px; margin-bottom: 1rem;"></div>
                <div class="skeleton skeleton-text" style="width: 100%; height: 16px; margin-bottom: 0.5rem;"></div>
                <div class="skeleton skeleton-text" style="width: 90%; height: 16px; margin-bottom: 0.5rem;"></div>
                <div class="skeleton skeleton-text" style="width: 70%; height: 16px;"></div>
                <div class="d-flex gap-2 mt-3">
                    <div class="skeleton" style="width: 80px; height: 32px; border-radius: 6px;"></div>
                    <div class="skeleton" style="width: 80px; height: 32px; border-radius: 6px;"></div>
                </div>
            </div>
        </div>
    {% endfor %}
{% elseif skeleton_type == 'list' %}
    {% for i in 1..skeleton_count %}
        <div class="d-flex align-items-center p-3 border-bottom">
            <div class="skeleton skeleton-avatar me-3"></div>
            <div class="flex-grow-1">
                <div class="skeleton skeleton-text" style="width: 40%; height: 18px; margin-bottom: 0.5rem;"></div>
                <div class="skeleton skeleton-text" style="width: 60%; height: 14px;"></div>
            </div>
        </div>
    {% endfor %}
{% elseif skeleton_type == 'table' %}
    <table class="table">
        <thead>
            <tr>
                <th><div class="skeleton" style="width: 100px; height: 16px;"></div></th>
                <th><div class="skeleton" style="width: 120px; height: 16px;"></div></th>
                <th><div class="skeleton" style="width: 80px; height: 16px;"></div></th>
            </tr>
        </thead>
        <tbody>
            {% for i in 1..skeleton_count %}
                <tr>
                    <td><div class="skeleton skeleton-text" style="width: 90%; height: 16px;"></div></td>
                    <td><div class="skeleton skeleton-text" style="width: 80%; height: 16px;"></div></td>
                    <td><div class="skeleton skeleton-text" style="width: 60%; height: 16px;"></div></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endif %}
