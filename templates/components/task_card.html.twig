{# Reusable Task Card Component #}
{% set priority_colors = {
    'low': 'success',
    'medium': 'info', 
    'high': 'warning',
    'urgent': 'danger'
} %}

{% set priority_icons = {
    'low': 'arrow-down',
    'medium': 'minus',
    'high': 'arrow-up',
    'urgent': 'exclamation-triangle'
} %}

{% set status_colors = {
    'pending': 'secondary',
    'in_progress': 'primary',
    'completed': 'success',
    'cancelled': 'danger'
} %}

<div class="task-card card border-0 shadow-sm mb-3 card-hover" data-task-id="{{ task.id }}">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start mb-2">
            <div class="flex-grow-1">
                <div class="d-flex align-items-center mb-2">
                    <span class="badge bg-{{ priority_colors[task.priority] }} me-2">
                        <i class="fas fa-{{ priority_icons[task.priority] }} me-1"></i>
                        {{ task.priority|trans }}
                    </span>
                    <span class="badge bg-{{ status_colors[task.status] }}">
                        {{ task.status|trans }}
                    </span>
                    {% if task.category %}
                        <span class="badge bg-light text-dark ms-2">
                            <i class="fas fa-folder me-1"></i>
                            {{ task.category.name }}
                        </span>
                    {% endif %}
                </div>
                
                <h5 class="card-title mb-2">
                    <a href="{{ path('app_task_show', {'id': task.id}) }}" class="text-decoration-none text-dark">
                        {{ task.title }}
                    </a>
                </h5>
                
                {% if task.description %}
                    <p class="card-text text-muted small mb-2">
                        {{ task.description|length > 100 ? task.description|slice(0, 100) ~ '...' : task.description }}
                    </p>
                {% endif %}
                
                <div class="d-flex flex-wrap gap-2 align-items-center text-muted small">
                    {% if task.assignedUser %}
                        <span>
                            <i class="fas fa-user me-1"></i>
                            {{ task.assignedUser.fullName }}
                        </span>
                    {% endif %}
                    
                    {% if task.dueDate %}
                        <span class="{% if task.isOverdue %}text-danger{% elseif task.isDueSoon %}text-warning{% endif %}">
                            <i class="fas fa-calendar me-1"></i>
                            {{ task.dueDate|date('d.m.Y') }}
                            {% if task.isOverdue %}
                                <i class="fas fa-exclamation-circle ms-1"></i>
                            {% endif %}
                        </span>
                    {% endif %}
                    
                    {% if task.tags|length > 0 %}
                        <span>
                            <i class="fas fa-tags me-1"></i>
                            {% for tag in task.tags|slice(0, 2) %}
                                <span class="badge badge-sm bg-secondary">{{ tag.name }}</span>
                            {% endfor %}
                            {% if task.tags|length > 2 %}
                                <span class="badge badge-sm bg-secondary">+{{ task.tags|length - 2 }}</span>
                            {% endif %}
                        </span>
                    {% endif %}
                </div>
            </div>
            
            <div class="task-actions ms-3">
                <div class="dropdown">
                    <button class="btn btn-sm btn-light" type="button" data-bs-toggle="dropdown">
                        <i class="fas fa-ellipsis-v"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <a class="dropdown-item" href="{{ path('app_task_show', {'id': task.id}) }}">
                                <i class="fas fa-eye me-2"></i>Просмотр
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="{{ path('app_task_edit', {'id': task.id}) }}">
                                <i class="fas fa-edit me-2"></i>Редактировать
                            </a>
                        </li>
                        {% if not task.isCompleted %}
                            <li>
                                <form method="post" action="{{ path('app_task_complete', {'id': task.id}) }}" class="d-inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('complete' ~ task.id) }}">
                                    <button type="submit" class="dropdown-item text-success">
                                        <i class="fas fa-check me-2"></i>Завершить
                                    </button>
                                </form>
                            </li>
                        {% endif %}
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form method="post" action="{{ path('app_task_delete', {'id': task.id}) }}" class="d-inline" onsubmit="return confirm('Вы уверены?')">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ task.id) }}">
                                <button type="submit" class="dropdown-item text-danger">
                                    <i class="fas fa-trash me-2"></i>Удалить
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        
        {% if task.progress is defined and task.progress > 0 %}
            <div class="progress mt-2" style="height: 6px;">
                <div class="progress-bar bg-{{ priority_colors[task.priority] }}" 
                     role="progressbar" 
                     style="width: {{ task.progress }}%"
                     aria-valuenow="{{ task.progress }}" 
                     aria-valuemin="0" 
                     aria-valuemax="100">
                </div>
            </div>
            <small class="text-muted">Прогресс: {{ task.progress }}%</small>
        {% endif %}
    </div>
</div>

<style>
.task-card {
    transition: all 0.3s ease;
    border-left: 4px solid transparent !important;
}

.task-card:hover {
    transform: translateX(5px);
    border-left-color: var(--bs-primary) !important;
}

.task-card[data-priority="urgent"] {
    border-left-color: var(--bs-danger) !important;
}

.task-card[data-priority="high"] {
    border-left-color: var(--bs-warning) !important;
}

.badge-sm {
    font-size: 0.7rem;
    padding: 0.2rem 0.4rem;
}
</style>
