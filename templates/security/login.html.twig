{# templates/security/login.html.twig #}

{% extends 'auth_base.html.twig' %}

{% block title %}Вход в систему{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/pages/auth-enhanced.css') }}">
{% endblock %}

{% block body %}
<div class="auth-card">
    <div class="auth-header">
        <div class="auth-icon">
            <i class="fas fa-chart-line"></i>
        </div>
        <h2>Вход в систему</h2>
        <p>CRM система: Анализ продаж</p>
    </div>
    
    <div class="auth-body">
        {% if session_expired %}
            <div class="alert alert-warning mb-4">
                <i class="fas fa-clock me-2"></i>
                Ваша сессия истекла. Пожалуйста, войдите снова.
            </div>
        {% endif %}
        
        {% if error %}
            <div class="alert alert-danger mb-4">
                <i class="fas fa-exclamation-triangle me-2"></i>
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        
        <form method="post" action="{{ path('app_login') }}" id="loginForm">
            <div class="mb-4">
                <label for="inputEmail" class="form-label">
                    <i class="fas fa-envelope me-2"></i>Email
                </label>
                <input type="email" 
                       value="{{ last_username }}" 
                       name="email" 
                       id="inputEmail" 
                       class="form-control" 
                       placeholder="user@example.com"
                       autocomplete="email"
                       required 
                       autofocus
                       aria-describedby="emailHelp">
                <small id="emailHelp" class="form-text text-muted" style="display: none;">
                    <i class="fas fa-info-circle me-1"></i>Введите корректный email адрес
                </small>
            </div>
            
            <div class="mb-4">
                <label for="inputPassword" class="form-label">
                    <i class="fas fa-lock me-2"></i>Пароль
                </label>
                <div class="password-wrapper">
                    <input type="password" 
                           name="password" 
                           id="inputPassword" 
                           class="form-control" 
                           placeholder="Введите пароль"
                           autocomplete="current-password"
                           required
                           aria-describedby="passwordHelp">
                    <button type="button" class="password-toggle" id="togglePassword" title="Показать пароль" aria-label="Показать пароль">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
                <small id="passwordHelp" class="form-text text-muted" style="display: none;">
                    <i class="fas fa-info-circle me-1"></i>Минимум 8 символов
                </small>
            </div>
            
            <div class="mb-4 d-flex justify-content-between align-items-center">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="_remember_me" id="rememberMe">
                    <label class="form-check-label" for="rememberMe">
                        Запомнить меня
                    </label>
                </div>
                <a href="{{ path('app_forgot_password_request') }}" class="text-decoration-none">
                    <i class="fas fa-key me-1"></i>Забыли пароль?
                </a>
            </div>
            
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            
            <button type="submit" class="btn-auth" id="loginBtn">
                <span class="btn-text">
                    <i class="fas fa-sign-in-alt me-2"></i>Войти в систему
                </span>
                <span class="loading-spinner" style="display: none;">
                    <i class="fas fa-spinner fa-spin"></i>
                </span>
            </button>
        </form>
        
        <div class="auth-footer">
            <p class="text-muted mb-3">
                <i class="fas fa-info-circle me-2"></i>
                Нет аккаунта? 
                <a href="{{ path('app_register') }}" class="text-decoration-none fw-bold">
                    Зарегистрироваться
                </a>
            </p>
            <small class="text-muted">
                ООО «Дальневосточный фермер» &copy; {{ "now"|date("Y") }}
            </small>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    console.log('Login page loaded');
    
    // Password toggle with better error handling
    const togglePassword = document.getElementById('togglePassword');
    const passwordInput = document.getElementById('inputPassword');
    
    console.log('Toggle button:', togglePassword);
    console.log('Password input:', passwordInput);
    
    if (togglePassword && passwordInput) {
        togglePassword.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            
            console.log('Toggle clicked!');
            console.log('Current type:', passwordInput.type);
            
            const icon = this.querySelector('i');
            
            // Toggle password visibility
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
                this.setAttribute('title', 'Скрыть пароль');
                this.setAttribute('aria-label', 'Скрыть пароль');
                console.log('Changed to text');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
                this.setAttribute('title', 'Показать пароль');
                this.setAttribute('aria-label', 'Показать пароль');
                console.log('Changed to password');
            }
        });
        
        // Keyboard support for password toggle
        togglePassword.addEventListener('keydown', function(e) {
            if (e.key === 'Enter' || e.key === ' ') {
                e.preventDefault();
                this.click();
            }
        });
        
        console.log('Password toggle initialized');
    } else {
        console.error('Toggle button or password input not found!');
    }
    
    // Form submission with loading state
    const loginForm = document.getElementById('loginForm');
    const loginBtn = document.getElementById('loginBtn');
    
    if (loginForm && loginBtn) {
        loginForm.addEventListener('submit', function(e) {
            // Проверяем валидность полей
            const emailInput = document.getElementById('inputEmail');
            const passwordInput = document.getElementById('inputPassword');
            
            let isValid = true;
            
            if (emailInput && !emailInput.value.trim()) {
                emailInput.classList.add('is-invalid');
                isValid = false;
            }
            
            if (passwordInput && !passwordInput.value) {
                passwordInput.classList.add('is-invalid');
                isValid = false;
            }
            
            if (!isValid) {
                e.preventDefault();
                return;
            }
            
            const btnText = loginBtn.querySelector('.btn-text');
            const spinner = loginBtn.querySelector('.loading-spinner');
            if (btnText) btnText.style.display = 'none';
            if (spinner) spinner.style.display = 'inline-block';
            loginBtn.disabled = true;
            loginBtn.style.opacity = '0.7';
        });
    }
    
    // Auto-focus on email input if empty
    const emailInput = document.getElementById('inputEmail');
    if (emailInput && !emailInput.value) {
        setTimeout(() => emailInput.focus(), 100);
    }
    
    // Add input validation feedback
    const inputs = document.querySelectorAll('.form-control');
    inputs.forEach(input => {
        input.addEventListener('blur', function() {
            if (this.value && this.checkValidity()) {
                this.classList.add('is-valid');
                this.classList.remove('is-invalid');
            } else if (this.value && !this.checkValidity()) {
                this.classList.add('is-invalid');
                this.classList.remove('is-valid');
            }
        });
        
        input.addEventListener('input', function() {
            if (this.classList.contains('is-invalid')) {
                if (this.value && this.checkValidity()) {
                    this.classList.remove('is-invalid');
                    this.classList.add('is-valid');
                }
            }
        });
    });
    
    // Email validation
    if (emailInput) {
        emailInput.addEventListener('blur', function() {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (this.value && !emailRegex.test(this.value)) {
                this.classList.add('is-invalid');
                this.classList.remove('is-valid');
            } else if (this.value) {
                this.classList.add('is-valid');
                this.classList.remove('is-invalid');
            }
        });
    }
    
    // Keyboard shortcuts
    document.addEventListener('keydown', function(e) {
        // Ctrl/Cmd + Enter для отправки формы
        if ((e.ctrlKey || e.metaKey) && e.key === 'Enter') {
            if (loginForm) {
                loginForm.dispatchEvent(new Event('submit', { cancelable: true }));
            }
        }
    });
});
</script>
{% endblock %}