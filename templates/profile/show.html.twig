{% extends 'base.html.twig' %}

{% block title %}Профиль{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/pages/profile-enhanced.css') }}">
    <link rel="stylesheet" href="{{ asset('css/components/profile-icons.css') }}">
{% endblock %}

{% block body %}
<div class="container py-4">
    <!-- Profile Header -->
    <div class="card-modern shadow-lg mb-4">
        <div class="profile-cover rounded-top-4">
            <div class="profile-cover-pattern"></div>
        </div>
        <div class="card-body-modern position-relative" style="margin-top: -60px; padding-top: 80px;">
            <div class="d-flex flex-column flex-md-row align-items-center gap-4">
                <div class="position-relative">
                    <div class="profile-avatar-container rounded-circle overflow-hidden">
                        <div class="profile-avatar d-flex align-items-center justify-content-center w-100 h-100">
                            {% if app.user.avatar %}
                                <img src="{{ asset('uploads/avatars/' ~ app.user.avatar) }}" alt="{{ app.user.fullName }}" class="w-100 h-100 object-fit-cover">
                            {% else %}
                                {{ app.user.firstName|first }}{{ app.user.lastName|first }}
                            {% endif %}
                        </div>
                    </div>
                    {% if app.user.isActive %}
                    <div class="position-absolute bottom-0 end-0 rounded-circle p-1 border border-2" style="background: var(--color-success); border-color: var(--bg-primary) !important;">
                        <i class="fas fa-check fs-6" style="color: var(--text-inverse);"></i>
                    </div>
                    {% endif %}
                </div>
                
                <div class="flex-grow-1 text-center text-md-start">
                    <h1 class="profile-name mb-2">
                        {{ app.user.fullName }}
                    </h1>
                    <div class="profile-role d-flex flex-wrap justify-content-center justify-content-md-start gap-2 mb-3">
                        {% if app.user.hasRole('ROLE_ADMIN') %}
                            <span class="badge bg-warning text-dark"><i class="fas fa-crown me-1"></i>Администратор</span>
                        {% elseif app.user.hasRole('ROLE_MANAGER') %}
                            <span class="badge bg-info"><i class="fas fa-user-tie me-1"></i>Менеджер</span>
                        {% else %}
                            <span class="badge bg-secondary"><i class="fas fa-user me-1"></i>Пользователь</span>
                        {% endif %}
                        {% if app.user.isTotpEnabled %}
                            <span class="badge bg-success"><i class="fas fa-shield-alt me-1"></i>2FA включена</span>
                        {% endif %}
                    </div>
                    <div class="profile-meta d-flex flex-wrap justify-content-center justify-content-md-start gap-3 text-muted">
                        <div class="d-flex align-items-center gap-1">
                            <i class="fas fa-at"></i>
                            <span>{{ app.user.username }}</span>
                        </div>
                        <div class="d-flex align-items-center gap-1">
                            <i class="fas fa-envelope"></i>
                            <span>{{ app.user.email }}</span>
                        </div>
                    </div>
                </div>
                
                <div class="d-flex gap-2 flex-wrap justify-content-center align-items-center">
                    <!-- Анимированные иконки профиля -->
                    <ul class="profile-icons-menu horizontal mb-0">
                        <li class="profile-icon-item" data-color="blue">
                            <a href="{{ path('app_dashboard') }}">
                                <i class="fa-solid fa-house"></i>
                                <span>Главная</span>
                            </a>
                        </li>
                        <li class="profile-icon-item active" data-color="yellow">
                            <a href="{{ path('app_profile_show') }}">
                                <i class="fa-solid fa-user"></i>
                                <span>Профиль</span>
                            </a>
                        </li>
                        <li class="profile-icon-item" data-color="green">
                            <a href="{{ path('app_profile_edit') }}">
                                <i class="fa-solid fa-gear"></i>
                                <span>Настройки</span>
                            </a>
                        </li>
                        <li class="profile-icon-item" data-color="purple">
                            <a href="{{ path('app_profile_change_password') }}">
                                <i class="fa-solid fa-key"></i>
                                <span>Пароль</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Left Column - Avatar and Stats -->
        <div class="col-lg-4">
            <!-- Stats Cards -->
            <div class="row g-4">
                <div class="col-md-12">
                    <div class="card-modern text-center h-100">
                        <div class="card-body-modern p-4">
                            <div class="stat-icon mb-3">
                                <i class="fas fa-tasks text-primary fs-1"></i>
                            </div>
                            <h3 class="text-primary mb-1">{{ app.user.tasks|length }}</h3>
                            <p class="text-muted mb-0">Создано задач</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-modern text-center h-100">
                        <div class="card-body-modern p-4">
                            <div class="stat-icon mb-3">
                                <i class="fas fa-user-check text-success fs-1"></i>
                            </div>
                            <h3 class="text-success mb-1">{{ app.user.assignedTasks|length }}</h3>
                            <p class="text-muted mb-0">Назначено задач</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-modern text-center h-100">
                        <div class="card-body-modern p-4">
                            <div class="stat-icon mb-3">
                                <i class="fas fa-check-circle text-info fs-1"></i>
                            </div>
                            <h3 class="text-info mb-1">{{ app.user.assignedTasks|filter(t => t.status == 'completed')|length }}</h3>
                            <p class="text-muted mb-0">Завершено</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Right Column - Info Cards -->
        <div class="col-lg-8">
            <!-- Personal Info Card -->
            <div class="card-modern mb-4">
                <div class="card-header-modern">
                    <h5 class="mb-0 text-primary">
                        <i class="fas fa-user-circle me-2"></i>
                        Личная информация
                    </h5>
                </div>
                <div class="card-body-modern">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="form-label text-muted small">Имя</label>
                                <p class="mb-0">{{ app.user.firstName }}</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="form-label text-muted small">Фамилия</label>
                                <p class="mb-0">{{ app.user.lastName }}</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="form-label text-muted small">Email</label>
                                <p class="mb-0">{{ app.user.email }}</p>
                            </div>
                        </div>
                        {% if app.user.phone %}
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="form-label text-muted small">Телефон</label>
                                <p class="mb-0">{{ app.user.phone }}</p>
                            </div>
                        </div>
                        {% endif %}
                        {% if app.user.position %}
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="form-label text-muted small">Должность</label>
                                <p class="mb-0">{{ app.user.position }}</p>
                            </div>
                        </div>
                        {% endif %}
                        {% if app.user.department %}
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="form-label text-muted small">Отдел</label>
                                <p class="mb-0">{{ app.user.department }}</p>
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            
            <!-- Account Info Card -->
            <div class="card-modern mb-4">
                <div class="card-header-modern">
                    <h5 class="mb-0 text-primary">
                        <i class="fas fa-shield-alt me-2"></i>
                        Информация об аккаунте
                    </h5>
                </div>
                <div class="card-body-modern">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="form-label text-muted small">Роль</label>
                                <div class="d-flex align-items-center gap-2">
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <span class="badge bg-warning text-dark"><i class="fas fa-crown me-1"></i>Администратор</span>
                                    {% elseif is_granted('ROLE_MANAGER') %}
                                        <span class="badge bg-info"><i class="fas fa-user-tie me-1"></i>Менеджер</span>
                                    {% else %}
                                        <span class="badge bg-secondary"><i class="fas fa-user me-1"></i>Пользователь</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="form-label text-muted small">Дата регистрации</label>
                                <p class="mb-0"><i class="fas fa-calendar me-2 text-primary"></i>{{ app.user.createdAt|date('d.m.Y') }}</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="form-label text-muted small">Статус</label>
                                <div class="d-flex align-items-center gap-2">
                                    <span class="badge bg-success"><i class="fas fa-check-circle me-1"></i>Активен</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-group">
                                <label class="form-label text-muted small">2FA</label>
                                <div class="d-flex align-items-center gap-2">
                                    {% if app.user.isTotpEnabled %}
                                        <span class="badge bg-success"><i class="fas fa-shield-alt me-1"></i>Включена</span>
                                    {% else %}
                                        <span class="badge bg-warning"><i class="fas fa-shield-alt me-1"></i>Отключена</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Recent Activity Card -->
            <div class="card-modern">
                <div class="card-header-modern">
                    <h5 class="mb-0 text-primary">
                        <i class="fas fa-history me-2"></i>
                        Последняя активность
                    </h5>
                </div>
                <div class="card-body-modern">
                    {% set recentTasks = app.user.tasks|slice(0, 5) %}
                    {% if recentTasks is not empty %}
                        {% for task in recentTasks %}
                        <div class="activity-item d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center gap-3">
                                <div class="status-indicator {{ task.status == 'completed' ? 'completed' : (task.status == 'in_progress' ? 'in-progress' : 'pending') }}"></div>
                                <div>
                                    <div class="fw-medium">{{ task.title }}</div>
                                    <small class="text-muted">{{ task.createdAt|date('d.m.Y H:i') }}</small>
                                </div>
                            </div>
                            <a href="{{ path('app_task_show', {'id': task.id}) }}" class="btn btn-sm btn-outline-primary">
                                <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                        {% endfor %}
                    {% else %}
                        <p class="text-center text-muted mb-0 py-4">Нет активности</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
