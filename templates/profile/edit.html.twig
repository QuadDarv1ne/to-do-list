{% extends 'base.html.twig' %}

{% block title %}Редактировать профиль{% endblock %}

{% block body %}
<div class="container-fluid page-transition">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card-modern mb-4">
                <div class="card-header-modern bg-gradient-primary text-white rounded-top-4 p-4">
                    <div class="d-flex align-items-center">
                        <div class="avatar-placeholder bg-white bg-opacity-20 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px;">
                            <i class="fas fa-user-edit fa-2x text-white"></i>
                        </div>
                        <div>
                            <h1 class="mb-1 text-white">Редактировать профиль</h1>
                            <p class="text-white opacity-75 mb-0">Обновите информацию о себе</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-lg-8">
            <div class="card-modern">
                <div class="card-header-modern">
                    <h5 class="mb-0 text-primary">
                        <i class="fas fa-user-circle me-2"></i>
                        Основная информация
                    </h5>
                </div>
                <div class="card-body-modern">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="form-group-enhanced">
                                {{ form_label(form.username, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                <div class="input-group input-group-modern">
                                    <span class="input-group-text input-group-text-modern">
                                        <i class="fas fa-user"></i>
                                    </span>
                                    {{ form_widget(form.username, {'attr': {'class': 'form-control-modern', 'placeholder': 'Введите имя пользователя'}}) }}
                                </div>
                                <div class="invalid-feedback">
                                    Пожалуйста, введите корректное имя пользователя.
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-group-enhanced">
                                {{ form_label(form.email, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                <div class="input-group input-group-modern">
                                    <span class="input-group-text input-group-text-modern">
                                        <i class="fas fa-envelope"></i>
                                    </span>
                                    {{ form_widget(form.email, {'attr': {'class': 'form-control-modern', 'placeholder': 'Введите email', 'id': 'email-input'}}) }}
                                </div>
                                <div class="invalid-feedback" id="email-error">
                                    Пожалуйста, введите корректный email.
                                </div>
                                <div class="valid-feedback">
                                    Email корректен
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-group-enhanced">
                                {{ form_label(form.firstName, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                <div class="input-group input-group-modern">
                                    <span class="input-group-text input-group-text-modern">
                                        <i class="fas fa-id-card"></i>
                                    </span>
                                    {{ form_widget(form.firstName, {'attr': {'class': 'form-control-modern', 'placeholder': 'Введите имя'}}) }}
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-group-enhanced">
                                {{ form_label(form.lastName, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                <div class="input-group input-group-modern">
                                    <span class="input-group-text input-group-text-modern">
                                        <i class="fas fa-id-card"></i>
                                    </span>
                                    {{ form_widget(form.lastName, {'attr': {'class': 'form-control-modern', 'placeholder': 'Введите фамилию'}}) }}
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-group-enhanced">
                                {{ form_label(form.phone, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                <div class="input-group input-group-modern">
                                    <span class="input-group-text input-group-text-modern">
                                        <i class="fas fa-phone"></i>
                                    </span>
                                    {{ form_widget(form.phone, {'attr': {'class': 'form-control-modern', 'placeholder': '+7 (900) 123-4567', 'id': 'phone-input'}}) }}
                                </div>
                                <div class="form-text">Формат: +7 (XXX) XXX-XX-XX</div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-group-enhanced">
                                {{ form_label(form.position, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                <div class="input-group input-group-modern">
                                    <span class="input-group-text input-group-text-modern">
                                        <i class="fas fa-briefcase"></i>
                                    </span>
                                    {{ form_widget(form.position, {'attr': {'class': 'form-control-modern', 'placeholder': 'Должность'}}) }}
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12">
                            <div class="form-group-enhanced">
                                {{ form_label(form.department, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                <div class="input-group input-group-modern">
                                    <span class="input-group-text input-group-text-modern">
                                        <i class="fas fa-building"></i>
                                    </span>
                                    {{ form_widget(form.department, {'attr': {'class': 'form-control-modern', 'placeholder': 'Отдел или департамент'}}) }}
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12">
                            <div class="form-group-enhanced">
                                {{ form_label(form.notes, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                                <div class="input-group input-group-modern">
                                    <span class="input-group-text input-group-text-modern">
                                        <i class="fas fa-sticky-note"></i>
                                    </span>
                                    {{ form_widget(form.notes, {'attr': {'class': 'form-control-modern', 'rows': '4', 'placeholder': 'Дополнительная информация о себе'}}) }}
                                </div>
                                <div class="form-text">Максимум 500 символов</div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex gap-3 mt-4 pt-3 border-top border-light">
                        <button type="submit" class="btn btn-primary-modern btn-lg px-4 py-2">
                            <i class="fas fa-save me-2"></i>
                            Сохранить изменения
                        </button>
                        <a href="{{ path('app_profile_show') }}" class="btn btn-outline-secondary-modern btn-lg px-4 py-2">
                            <i class="fas fa-times me-2"></i>
                            Отмена
                        </a>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <!-- Profile Preview Card -->
            <div class="card-modern mb-4">
                <div class="card-header-modern">
                    <h5 class="mb-0 text-info">
                        <i class="fas fa-eye me-2"></i>
                        Предварительный просмотр
                    </h5>
                </div>
                <div class="card-body-modern text-center">
                    <div class="avatar-preview bg-primary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 100px; height: 100px;">
                        <i class="fas fa-user fa-3x text-primary"></i>
                    </div>
                    <h5 class="mb-1" id="previewName">{{ app.user.firstName }} {{ app.user.lastName }}</h5>
                    <p class="text-muted mb-2" id="previewUsername">@{{ app.user.username }}</p>
                    <p class="mb-3" id="previewEmail">{{ app.user.email }}</p>
                    <div class="d-grid gap-2">
                        <button class="btn btn-outline-primary-modern btn-sm">
                            <i class="fas fa-camera me-1"></i>
                            Загрузить фото
                        </button>
                    </div>
                </div>
            </div>
            
            <!-- Quick Tips -->
            <div class="card-modern">
                <div class="card-header-modern">
                    <h5 class="mb-0 text-warning">
                        <i class="fas fa-lightbulb me-2"></i>
                        Советы
                    </h5>
                </div>
                <div class="card-body-modern">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            Используйте реальное имя для лучшей идентификации
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            Укажите актуальный номер телефона
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            Добавьте информацию о вашей должности
                        </li>
                        <li class="mb-0">
                            <i class="fas fa-check-circle text-success me-2"></i>
                            Регулярно обновляйте контактные данные
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Live preview functionality
    const firstNameInput = document.getElementById('user_firstName');
    const lastNameInput = document.getElementById('user_lastName');
    const usernameInput = document.getElementById('user_username');
    const emailInput = document.getElementById('email-input');
    const phoneInput = document.getElementById('phone-input');
    
    const previewName = document.getElementById('previewName');
    const previewUsername = document.getElementById('previewUsername');
    const previewEmail = document.getElementById('previewEmail');
    
    if (firstNameInput && lastNameInput && previewName) {
        function updatePreview() {
            const fullName = `${firstNameInput.value || '{{ app.user.firstName }}'} ${lastNameInput.value || '{{ app.user.lastName }}'}`;
            previewName.textContent = fullName.trim();
        }
        
        firstNameInput.addEventListener('input', updatePreview);
        lastNameInput.addEventListener('input', updatePreview);
    }
    
    if (usernameInput && previewUsername) {
        usernameInput.addEventListener('input', function() {
            previewUsername.textContent = `@${this.value || '{{ app.user.username }}'}`;
        });
    }
    
    if (emailInput && previewEmail) {
        emailInput.addEventListener('input', function() {
            previewEmail.textContent = this.value || '{{ app.user.email }}';
            
            // Email validation
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (this.value && !emailRegex.test(this.value)) {
                this.classList.add('is-invalid');
                this.classList.remove('is-valid');
            } else if (this.value) {
                this.classList.add('is-valid');
                this.classList.remove('is-invalid');
            } else {
                this.classList.remove('is-valid', 'is-invalid');
            }
        });
    }
    
    // Phone number formatting
    if (phoneInput) {
        phoneInput.addEventListener('input', function(e) {
            let value = this.value.replace(/\D/g, '');
            
            // Limit to 11 digits (Russian format)
            if (value.length > 11) {
                value = value.substring(0, 11);
            }
            
            // Format: +7 (XXX) XXX-XX-XX
            let formatted = '';
            if (value.length > 0) {
                formatted = '+7';
                if (value.length > 1) {
                    formatted += ' (' + value.substring(1, 4);
                    if (value.length >= 4) {
                        formatted += ') ' + value.substring(4, 7);
                        if (value.length >= 7) {
                            formatted += '-' + value.substring(7, 9);
                            if (value.length >= 9) {
                                formatted += '-' + value.substring(9, 11);
                            }
                        }
                    }
                }
            }
            
            this.value = formatted;
            
            // Validate phone
            if (value.length === 11) {
                this.classList.add('is-valid');
                this.classList.remove('is-invalid');
            } else if (value.length > 0) {
                this.classList.add('is-invalid');
                this.classList.remove('is-valid');
            } else {
                this.classList.remove('is-valid', 'is-invalid');
            }
        });
    }
    
    // Form validation
    const form = document.querySelector('form');
    if (form) {
        form.addEventListener('submit', function(event) {
            let isValid = true;
            
            // Validate email
            if (emailInput && emailInput.value) {
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                if (!emailRegex.test(emailInput.value)) {
                    emailInput.classList.add('is-invalid');
                    isValid = false;
                }
            }
            
            // Validate phone if filled
            if (phoneInput && phoneInput.value) {
                const digits = phoneInput.value.replace(/\D/g, '');
                if (digits.length > 0 && digits.length !== 11) {
                    phoneInput.classList.add('is-invalid');
                    isValid = false;
                }
            }
            
            if (!isValid) {
                event.preventDefault();
                event.stopPropagation();
                
                // Scroll to first invalid field
                const firstInvalid = form.querySelector('.is-invalid');
                if (firstInvalid) {
                    firstInvalid.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    firstInvalid.focus();
                }
            }
            
            form.classList.add('was-validated');
        });
    }
    
    // Add subtle animations
    const cardElements = document.querySelectorAll('.card');
    cardElements.forEach((card, index) => {
        card.style.animationDelay = `${index * 0.1}s`;
        card.classList.add('fade-in-up');
    });
    
    // Character counter for notes
    const notesField = document.getElementById('user_notes');
    if (notesField) {
        const maxLength = 500;
        const counterDiv = document.createElement('div');
        counterDiv.className = 'form-text text-end';
        counterDiv.id = 'notes-counter';
        notesField.parentElement.appendChild(counterDiv);
        
        function updateCounter() {
            const remaining = maxLength - notesField.value.length;
            counterDiv.textContent = `Осталось символов: ${remaining}`;
            counterDiv.style.color = remaining < 50 ? '#dc3545' : '#6c757d';
        }
        
        notesField.addEventListener('input', updateCounter);
        notesField.setAttribute('maxlength', maxLength);
        updateCounter();
    }
});
</script>

<style>
.avatar-placeholder {
    transition: all 0.3s ease;
}

.avatar-placeholder:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 15px rgba(13, 110, 253, 0.2);
}

.form-group-enhanced {
    margin-bottom: 1.5rem;
}

.form-control-enhanced {
    border-radius: 8px;
    border: 2px solid #e9ecef;
    transition: all 0.3s ease;
    padding: 0.75rem 1rem;
}

