{% extends 'base_sidebar.html.twig' %}

{% block title %}Сделки{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">
            <i class="fas fa-handshake me-2"></i>Сделки
        </h1>
        <div class="d-flex gap-2">
            <a href="{{ path('app_deals_funnel') }}" class="btn btn-outline-primary">
                <i class="fas fa-filter me-2"></i>Воронка продаж
            </a>
            <a href="{{ path('app_deals_new') }}" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Новая сделка
            </a>
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="card-modern">
        <div class="card-body-modern">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Название</th>
                            <th>Клиент</th>
                            <th>Сумма</th>
                            <th>Этап</th>
                            <th>Статус</th>
                            <th>Менеджер</th>
                            <th>Ожидаемое закрытие</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for deal in deals %}
                        <tr>
                            <td>
                                <a href="{{ path('app_deals_show', {id: deal.id}) }}" class="text-decoration-none">
                                    {{ deal.title }}
                                </a>
                            </td>
                            <td>
                                <a href="{{ path('app_clients_show', {id: deal.client.id}) }}" class="text-decoration-none">
                                    {{ deal.client.companyName }}
                                </a>
                            </td>
                            <td>{{ deal.amount|number_format(2, '.', ' ') }} ₽</td>
                            <td>
                                <span class="badge bg-info">{{ deal.stageDisplayName }}</span>
                            </td>
                            <td>
                                {% if deal.status == 'in_progress' %}
                                    <span class="badge bg-primary">{{ deal.statusDisplayName }}</span>
                                {% elseif deal.status == 'won' %}
                                    <span class="badge bg-success">{{ deal.statusDisplayName }}</span>
                                {% elseif deal.status == 'lost' %}
                                    <span class="badge bg-danger">{{ deal.statusDisplayName }}</span>
                                {% else %}
                                    <span class="badge bg-secondary">{{ deal.statusDisplayName }}</span>
                                {% endif %}
                            </td>
                            <td>{{ deal.manager.fullName }}</td>
                            <td>
                                {% if deal.expectedCloseDate %}
                                    {{ deal.expectedCloseDate|date('d.m.Y') }}
                                    {% if deal.isOverdue %}
                                        <span class="badge bg-danger ms-1">Просрочено</span>
                                    {% endif %}
                                {% else %}
                                    <span class="text-muted">Не указано</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="{{ path('app_deals_show', {id: deal.id}) }}" class="btn btn-outline-primary" title="Просмотр">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_deals_edit', {id: deal.id}) }}" class="btn btn-outline-secondary" title="Редактировать">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="8" class="text-center text-muted py-4">
                                <i class="fas fa-inbox fa-3x mb-3 d-block"></i>
                                Сделок пока нет
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
