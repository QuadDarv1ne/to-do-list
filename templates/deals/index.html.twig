{% extends 'base.html.twig' %}

{% block title %}Сделки{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-handshake me-2"></i>Сделки</h1>
        <div>
            <a href="{{ path('app_deals_funnel') }}" class="btn btn-outline-primary me-2">
                <i class="fas fa-filter me-2"></i>Воронка продаж
            </a>
            <a href="{{ path('app_deals_new') }}" class="btn btn-primary">
                <i class="fas fa-plus me-2"></i>Новая сделка
            </a>
        </div>
    </div>

    {% if deals is empty %}
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            Нет сделок. <a href="{{ path('app_deals_new') }}">Создайте первую сделку</a>
        </div>
    {% else %}
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Название</th>
                                <th>Клиент</th>
                                <th>Сумма</th>
                                <th>Этап</th>
                                <th>Статус</th>
                                <th>Менеджер</th>
                                <th>Ожидаемое закрытие</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for deal in deals %}
                                <tr class="{{ deal.isOverdue ? 'table-danger' : '' }}">
                                    <td>
                                        <a href="{{ path('app_deals_show', {id: deal.id}) }}">
                                            {{ deal.title }}
                                        </a>
                                    </td>
                                    <td>{{ deal.client.companyName }}</td>
                                    <td>{{ deal.amount|number_format(2, '.', ' ') }} ₽</td>
                                    <td>
                                        <span class="badge bg-primary">
                                            {{ deal.stageDisplayName }}
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-{{ deal.status == 'won' ? 'success' : (deal.status == 'lost' ? 'danger' : 'warning') }}">
                                            {{ deal.statusDisplayName }}
                                        </span>
                                    </td>
                                    <td>{{ deal.manager.fullName }}</td>
                                    <td>
                                        {{ deal.expectedCloseDate ? deal.expectedCloseDate|date('d.m.Y') : '-' }}
                                        {% if deal.isOverdue %}
                                            <i class="fas fa-exclamation-triangle text-danger ms-1" title="Просрочена"></i>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a href="{{ path('app_deals_show', {id: deal.id}) }}" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_deals_edit', {id: deal.id}) }}" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}
