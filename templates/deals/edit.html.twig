{% extends 'base_sidebar.html.twig' %}

{% block title %}Редактирование сделки{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="d-flex align-items-center mb-4">
                <a href="{{ path('app_deals_show', {id: deal.id}) }}" class="btn btn-outline-secondary me-3">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <h1 class="h3 mb-0">
                    <i class="fas fa-edit me-2"></i>Редактирование сделки
                </h1>
            </div>

            <div class="card-modern">
                <div class="card-body-modern">
                    <form method="post">
                        <div class="mb-3">
                            <label for="title" class="form-label">Название сделки *</label>
                            <input type="text" class="form-control" id="title" name="title" value="{{ deal.title }}" required>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="amount" class="form-label">Сумма (₽) *</label>
                                <input type="number" step="0.01" class="form-control" id="amount" name="amount" value="{{ deal.amount }}" required>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="stage" class="form-label">Этап *</label>
                                <select class="form-select" id="stage" name="stage" required>
                                    <option value="lead" {% if deal.stage == 'lead' %}selected{% endif %}>Лид</option>
                                    <option value="qualification" {% if deal.stage == 'qualification' %}selected{% endif %}>Квалификация</option>
                                    <option value="proposal" {% if deal.stage == 'proposal' %}selected{% endif %}>Предложение</option>
                                    <option value="negotiation" {% if deal.stage == 'negotiation' %}selected{% endif %}>Переговоры</option>
                                    <option value="closing" {% if deal.stage == 'closing' %}selected{% endif %}>Закрытие</option>
                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="status" class="form-label">Статус *</label>
                                <select class="form-select" id="status" name="status" required>
                                    <option value="in_progress" {% if deal.status == 'in_progress' %}selected{% endif %}>В работе</option>
                                    <option value="won" {% if deal.status == 'won' %}selected{% endif %}>Успешно завершена</option>
                                    <option value="lost" {% if deal.status == 'lost' %}selected{% endif %}>Проиграна</option>
                                    <option value="postponed" {% if deal.status == 'postponed' %}selected{% endif %}>Отложена</option>
                                </select>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="expected_close_date" class="form-label">Ожидаемая дата закрытия</label>
                                <input type="date" class="form-control" id="expected_close_date" name="expected_close_date" 
                                       value="{% if deal.expectedCloseDate %}{{ deal.expectedCloseDate|date('Y-m-d') }}{% endif %}">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Описание</label>
                            <textarea class="form-control" id="description" name="description" rows="4">{{ deal.description }}</textarea>
                        </div>

                        <div class="mb-3" id="lost-reason-block" style="display: {% if deal.status == 'lost' %}block{% else %}none{% endif %};">
                            <label for="lost_reason" class="form-label">Причина проигрыша</label>
                            <textarea class="form-control" id="lost_reason" name="lost_reason" rows="3">{{ deal.lostReason }}</textarea>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Сохранить изменения
                            </button>
                            <a href="{{ path('app_deals_show', {id: deal.id}) }}" class="btn btn-outline-secondary">
                                Отмена
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.getElementById('status').addEventListener('change', function() {
    const lostReasonBlock = document.getElementById('lost-reason-block');
    if (this.value === 'lost') {
        lostReasonBlock.style.display = 'block';
    } else {
        lostReasonBlock.style.display = 'none';
    }
});
</script>
{% endblock %}
