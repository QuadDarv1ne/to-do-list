{% extends 'base_sidebar.html.twig' %}

{% block title %}Новая сделка{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="d-flex align-items-center mb-4">
                <a href="{{ path('app_deals_index') }}" class="btn btn-outline-secondary me-3">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <h1 class="h3 mb-0">
                    <i class="fas fa-handshake me-2"></i>Новая сделка
                </h1>
            </div>

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            {% endfor %}

            <div class="card-modern">
                <div class="card-body-modern">
                    <form method="post">
                        <div class="mb-3">
                            <label for="title" class="form-label">Название сделки *</label>
                            <input type="text" class="form-control" id="title" name="title" required>
                        </div>

                        <div class="mb-3">
                            <label for="client_id" class="form-label">Клиент *</label>
                            <select class="form-select" id="client_id" name="client_id" required>
                                <option value="">Выберите клиента</option>
                                {% for client in clients %}
                                    <option value="{{ client.id }}">{{ client.companyName }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="amount" class="form-label">Сумма (₽) *</label>
                                <input type="number" step="0.01" class="form-control" id="amount" name="amount" value="0.00" required>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label for="stage" class="form-label">Этап *</label>
                                <select class="form-select" id="stage" name="stage" required>
                                    <option value="lead">Лид</option>
                                    <option value="qualification">Квалификация</option>
                                    <option value="proposal">Предложение</option>
                                    <option value="negotiation">Переговоры</option>
                                    <option value="closing">Закрытие</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="expected_close_date" class="form-label">Ожидаемая дата закрытия</label>
                            <input type="date" class="form-control" id="expected_close_date" name="expected_close_date">
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Описание</label>
                            <textarea class="form-control" id="description" name="description" rows="4"></textarea>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-2"></i>Создать сделку
                            </button>
                            <a href="{{ path('app_deals_index') }}" class="btn btn-outline-secondary">
                                Отмена
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
