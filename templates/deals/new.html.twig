{% extends 'base.html.twig' %}

{% block title %}Новая сделка{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mb-4">Новая сделка</h1>

    <div class="card">
        <div class="card-body">
            <form method="post">
                <div class="mb-3">
                    <label for="title" class="form-label">Название сделки *</label>
                    <input type="text" class="form-control" id="title" name="title" required>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="client_id" class="form-label">Клиент *</label>
                        <select class="form-select" id="client_id" name="client_id" required>
                            <option value="">Выберите клиента</option>
                            {% for client in clients %}
                                <option value="{{ client.id }}">{{ client.companyName }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="amount" class="form-label">Сумма *</label>
                        <input type="number" class="form-control" id="amount" name="amount" step="0.01" required>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="stage" class="form-label">Этап</label>
                        <select class="form-select" id="stage" name="stage">
                            <option value="lead">Лид</option>
                            <option value="qualification">Квалификация</option>
                            <option value="proposal">Предложение</option>
                            <option value="negotiation">Переговоры</option>
                            <option value="closing">Закрытие</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="expected_close_date" class="form-label">Ожидаемая дата закрытия</label>
                        <input type="date" class="form-control" id="expected_close_date" name="expected_close_date">
                    </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Описание</label>
                    <textarea class="form-control" id="description" name="description" rows="4"></textarea>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_deals_index') }}" class="btn btn-secondary">Отмена</a>
                    <button type="submit" class="btn btn-primary">Создать</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
