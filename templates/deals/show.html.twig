{% extends 'base_sidebar.html.twig' %}

{% block title %}{{ deal.title }}{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="d-flex align-items-center mb-4">
        <a href="{{ path('app_deals_index') }}" class="btn btn-outline-secondary me-3">
            <i class="fas fa-arrow-left"></i>
        </a>
        <h1 class="h3 mb-0">
            <i class="fas fa-handshake me-2"></i>{{ deal.title }}
        </h1>
        <div class="ms-auto d-flex gap-2">
            <a href="{{ path('app_deals_edit', {id: deal.id}) }}" class="btn btn-primary">
                <i class="fas fa-edit me-2"></i>Редактировать
            </a>
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-lg-8">
            <div class="card-modern mb-4">
                <div class="card-body-modern">
                    <h5 class="mb-3"><i class="fas fa-info-circle me-2"></i>Информация о сделке</h5>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="text-muted small">Клиент</label>
                            <div>
                                <a href="{{ path('app_clients_show', {id: deal.client.id}) }}" class="text-decoration-none">
                                    <i class="fas fa-building me-1"></i>{{ deal.client.companyName }}
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Менеджер</label>
                            <div>
                                <i class="fas fa-user me-1"></i>{{ deal.manager.fullName }}
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="text-muted small">Сумма</label>
                            <div class="fs-4 text-success">
                                {{ deal.amount|number_format(2, '.', ' ') }} ₽
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Этап</label>
                            <div>
                                <span class="badge bg-info fs-6">{{ deal.stageDisplayName }}</span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="text-muted small">Статус</label>
                            <div>
                                {% if deal.status == 'in_progress' %}
                                    <span class="badge bg-primary fs-6">{{ deal.statusDisplayName }}</span>
                                {% elseif deal.status == 'won' %}
                                    <span class="badge bg-success fs-6">{{ deal.statusDisplayName }}</span>
                                {% elseif deal.status == 'lost' %}
                                    <span class="badge bg-danger fs-6">{{ deal.statusDisplayName }}</span>
                                {% else %}
                                    <span class="badge bg-secondary fs-6">{{ deal.statusDisplayName }}</span>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Ожидаемое закрытие</label>
                            <div>
                                {% if deal.expectedCloseDate %}
                                    {{ deal.expectedCloseDate|date('d.m.Y') }}
                                    {% if deal.isOverdue %}
                                        <span class="badge bg-danger ms-1">Просрочено</span>
                                    {% endif %}
                                {% else %}
                                    <span class="text-muted">Не указано</span>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    {% if deal.description %}
                        <div class="mb-3">
                            <label class="text-muted small">Описание</label>
                            <div class="p-3 bg-light rounded">
                                {{ deal.description|nl2br }}
                            </div>
                        </div>
                    {% endif %}

                    {% if deal.status == 'lost' and deal.lostReason %}
                        <div class="alert alert-danger">
                            <strong>Причина проигрыша:</strong><br>
                            {{ deal.lostReason }}
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="card-modern">
                <div class="card-body-modern">
                    <h5 class="mb-3"><i class="fas fa-history me-2"></i>История изменений</h5>
                    
                    {% if deal.history|length > 0 %}
                        <div class="timeline">
                            {% for entry in deal.history %}
                                <div class="timeline-item mb-3 p-3 bg-light rounded">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <strong>{{ entry.description }}</strong>
                                        </div>
                                        <small class="text-muted">
                                            {{ entry.createdAt|date('d.m.Y H:i') }}
                                        </small>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-muted text-center py-3">История изменений пуста</p>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card-modern mb-4">
                <div class="card-body-modern">
                    <h5 class="mb-3"><i class="fas fa-calendar me-2"></i>Даты</h5>
                    
                    <div class="mb-3">
                        <label class="text-muted small">Создана</label>
                        <div>{{ deal.createdAt|date('d.m.Y H:i') }}</div>
                    </div>

                    {% if deal.updatedAt %}
                        <div class="mb-3">
                            <label class="text-muted small">Обновлена</label>
                            <div>{{ deal.updatedAt|date('d.m.Y H:i') }}</div>
                        </div>
                    {% endif %}

                    {% if deal.actualCloseDate %}
                        <div class="mb-3">
                            <label class="text-muted small">Фактическое закрытие</label>
                            <div>{{ deal.actualCloseDate|date('d.m.Y') }}</div>
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="card-modern">
                <div class="card-body-modern">
                    <h5 class="mb-3"><i class="fas fa-cog me-2"></i>Действия</h5>
                    
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_deals_edit', {id: deal.id}) }}" class="btn btn-primary">
                            <i class="fas fa-edit me-2"></i>Редактировать
                        </a>
                        
                        <form method="post" action="{{ path('app_deals_delete', {id: deal.id}) }}" 
                              onsubmit="return confirm('Вы уверены, что хотите удалить эту сделку?');">
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="fas fa-trash me-2"></i>Удалить
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
