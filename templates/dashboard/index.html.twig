<script>
document.addEventListener('DOMContentLoaded', function() {
    // Load quick stats via AJAX
    loadQuickStats();
    
    // Simulate loading state for demonstration
    const recentTasksLoading = document.getElementById('recent-tasks-loading');
    const recentTasksContent = document.getElementById('recent-tasks-content');
    
    // Show loading skeleton for 2 seconds
    if (recentTasksLoading && recentTasksContent) {
        recentTasksLoading.style.display = 'block';
        recentTasksContent.style.display = 'none';
        
        setTimeout(() => {
            recentTasksLoading.style.display = 'none';
            recentTasksContent.style.display = 'block';
            
            // Add fade-in animation to content
            recentTasksContent.style.opacity = '0';
            recentTasksContent.style.transition = 'opacity 0.5s ease';
            
            setTimeout(() => {
                recentTasksContent.style.opacity = '1';
            }, 50);
        }, 2000);
    }
    
    // Add hover effects to task items
    const taskItems = document.querySelectorAll('.task-item-enhanced');
    taskItems.forEach(item => {
        item.addEventListener('mouseenter', function() {
            this.style.transform = 'translateX(8px)';
        });
        
        item.addEventListener('mouseleave', function() {
            this.style.transform = 'translateX(0)';
        });
    });
    
    // Add click animations
    const taskLinks = document.querySelectorAll('.task-title a');
    taskLinks.forEach(link => {
        link.addEventListener('click', function(e) {
            const parentItem = this.closest('.task-item-enhanced');
            if (parentItem) {
                parentItem.style.animation = 'pulse 0.3s ease';
                setTimeout(() => {
                    parentItem.style.animation = '';
                }, 300);
            }
        });
    });
    
    // Load chart data asynchronously
    loadChartData();
    
    // Refresh data every 5 minutes (300000ms) instead of 30 seconds
    // Uncomment the line below if you want auto-refresh
    // setInterval(() => {
    //     loadQuickStats();
    //     loadChartData();
    // }, 300000);
});

function loadQuickStats() {
    fetch('/tasks/api/stats')
        .then(response => response.json())
        .then(stats => {
            // Update stat numbers with smooth transitions
            updateStatNumber('total-tasks', stats.total);
            updateStatNumber('pending-tasks', stats.pending);
            updateStatNumber('in_progress-tasks', stats.in_progress || stats.pending); // Fallback for compatibility
            updateStatNumber('completed-tasks', stats.completed);
            
            // Update completion rate
            const completionRate = stats.completion_rate || 0;
            updateStatNumber('completion-rate', completionRate + '%');
            
            // Update progress bars
