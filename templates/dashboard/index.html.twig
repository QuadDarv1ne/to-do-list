    const totalCreated = createdData.reduce((a, b) => a + b, 0);
    const totalCompleted = completedData.reduce((a, b) => a + b, 0);
    
    // Calculate streak (consecutive days with completed tasks)
    let streak = 0;
    for (let i = completedData.length - 1; i >= 0; i--) {
        if (completedData[i] > 0) {
            streak++;
        } else {
            break;
        }
    }
    
    // Calculate productivity (completed / created * 100)
    const productivity = totalCreated > 0 ? Math.round((totalCompleted / totalCreated) * 100) : 0;
    
    // Animate values
    animateValue(document.getElementById('week-tasks'), 0, totalCreated, 1000);
    animateValue(document.getElementById('week-completed'), 0, totalCompleted, 1200);
    animateValue(document.getElementById('week-streak'), 0, streak, 1400);
    
    const productivityEl = document.getElementById('week-productivity');
    if (productivityEl) {
