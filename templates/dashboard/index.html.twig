{% extends 'base.html.twig' %}

{% block title %}Панель управления{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="/css/dashboard-enhanced.min.css">
{% endblock %}

{% block body %}
<div class="container-fluid page-transition">
    <!-- Enhanced Welcome Header -->
    <div class="dashboard-welcome mb-4">
        <div class="dashboard-welcome-content">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h2 class="mb-2">
                        <i class="fas fa-sun me-2"></i>
                        Добрый день, {{ app.user.firstName }}!
                    </h2>
                    <p class="mb-0 opacity-75">
                        Сегодня {{ "now"|date("d.m.Y, l") }} • 
                        У вас {{ task_stats.pending|default(0) }} активных задач
                    </p>
                </div>
                <div class="col-lg-4 text-lg-end mt-3 mt-lg-0">
                    <div class="d-flex gap-2 justify-content-lg-end">
                        <a href="{{ path('app_task_new') }}" class="btn btn-light">
                            <i class="fas fa-plus me-2"></i>Новая задача
                        </a>
                        <a href="{{ path('app_analytics_dashboard') }}" class="btn btn-outline-light">
                            <i class="fas fa-chart-line me-2"></i>Аналитика
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4" id="stats-row">
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center py-4">
                    <h2 class="mb-1">{{ task_stats.total|default(0) }}</h2>
                    <p class="text-muted mb-0 small">Всего задач</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center py-4">
                    <h2 class="mb-1 text-warning">{{ task_stats.pending|default(0) }}</h2>
                    <p class="text-muted mb-0 small">В ожидании</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center py-4">
                    <h2 class="mb-1 text-info">{{ task_stats.in_progress|default(0) }}</h2>
                    <p class="text-muted mb-0 small">В процессе</p>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center py-4">
                    <h2 class="mb-1 text-success">{{ task_stats.completed|default(0) }}</h2>
