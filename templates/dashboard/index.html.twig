function loadQuickStats() {
    fetch('/tasks/api/stats')
        .then(response => response.json())
        .then(stats => {
            // Update stat numbers with smooth transitions
            updateStatNumber('total-tasks', stats.total);
            updateStatNumber('pending-tasks', stats.pending);
            updateStatNumber('in_progress-tasks', stats.in_progress || stats.pending); // Fallback for compatibility
            updateStatNumber('completed-tasks', stats.completed);
            
            // Update completion rate
            const completionRate = stats.completion_rate || 0;
            updateStatNumber('completion-rate', completionRate + '%');
            
            // Update progress bars
            updateProgressBar('progress-bar.bg-success', completionRate);
            updateProgressBar('progress-bar.bg-warning', stats.pending / stats.total * 100);
            updateProgressBar('progress-bar.bg-info', stats.in_progress / stats.total * 100);
        })
        .catch(error => {
            console.error('Error loading quick stats:', error);
        });
}

function updateStatNumber(elementId, newValue) {
    const element = document.querySelector(`#${elementId}, .stat-number.${elementId}`);
    if (element) {
        // Animate the number change
        const currentValue = parseFloat(element.textContent.replace('%', '')) || 0;
        animateValue(element, currentValue, newValue, 1000);
    }
}

function updateProgressBar(selector, percentage) {
    const progressBar = document.querySelector(selector);
    if (progressBar) {
        // Animate the width change
        const currentWidth = parseFloat(progressBar.style.width) || 0;
        animateValue(progressBar, currentWidth, percentage, 1000, (value) => {
            progressBar.style.width = value + '%';
            progressBar.setAttribute('aria-valuenow', value);
        });
    }
}

function animateValue(element, start, end, duration, callback) {
    let startTime = null;
    
    const step = (timestamp) => {
        if (!startTime) startTime = timestamp;
        const progress = Math.min((timestamp - startTime) / duration, 1);
        
        const current = start + (end - start) * progress;
        
        if (callback) {
            callback(current);
        } else {
            if (element.textContent.includes('%')) {
                element.textContent = Math.round(current) + '%';
            } else {
                element.textContent = Math.round(current);
            }
        }
        
        if (progress < 1) {
            window.requestAnimationFrame(step);
        }
    };
    
    window.requestAnimationFrame(step);
}

function loadChartData() {
