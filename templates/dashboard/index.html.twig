{% extends 'base.html.twig' %}

{% block title %}Панель управления{% endblock %}

{% block body %}
<div class="container-fluid">

{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h1 class="h3 mb-4">
                <i class="fas fa-tachometer-alt me-2"></i>Панель управления
            </h1>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Всего задач
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ task_stats.total }}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-tasks fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Выполнено
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ task_stats.completed }}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                В работе
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ task_stats.pending }}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clock fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {% if user_stats %}
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Всего пользователей
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ user_stats.total }}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
        
        {% if task_stats.completion_rate is defined %}
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Завершено
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ task_stats.completion_rate }}%</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-percentage fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
        
        {% if task_stats.comments is defined %}
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-secondary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-secondary text-uppercase mb-1">
                                Комментариев
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">{{ task_stats.comments }}</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-comments fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
    </div>

    <div class="row">
        <!-- Recent Tasks -->
        <div class="col-xl-8 col-lg-7">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-list me-2"></i>Последние задачи
                    </h6>
                    <div class="d-flex flex-row align-items-center">
                        <a href="{{ path('app_task_index') }}" class="btn btn-primary btn-sm me-2">
                            <i class="fas fa-tasks me-1"></i>Все задачи
                        </a>
                        <a href="{{ path('app_task_export') }}" class="btn btn-success btn-sm">
                            <i class="fas fa-file-export me-1"></i>Экспорт CSV
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    {% if recent_tasks %}
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Название</th>
                                        <th>Статус</th>
                                        <th>Приоритет</th>
                                        <th>Срок</th>
                                        <th>Назначена</th>
                                        <th>Дата создания</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for task in recent_tasks %}
                                    <tr {% if task.isOverdue %}class="table-danger"{% endif %}>
                                        <td>
                                            <a href="{{ path('app_task_show', {'id': task.id}) }}" class="text-decoration-none">
                                                {{ task.name }}
                                                {% if task.isOverdue %}
                                                    <i class="fas fa-exclamation-triangle text-danger ms-1" title="Просрочено"></i>
                                                {% endif %}
                                            </a>
                                        </td>
                                        <td>
                                            {% if task.isDone %}
                                                <span class="badge bg-success">Выполнена</span>
                                            {% else %}
                                                {% if task.isOverdue %}
                                                    <span class="badge bg-danger">Просрочена</span>
                                                {% else %}
                                                    <span class="badge bg-warning">В работе</span>
                                                {% endif %}
                                            {% endif %}
                                        </td>
                                        <td>
                                            <span class="{{ task.priorityClass }}">{{ task.priorityLabel }}</span>
                                        </td>
                                        <td>
                                            {% if task.deadline %}
                                                <span {% if task.isOverdue %}class="text-danger fw-bold"{% endif %}>{{ task.deadline|date('d.m.Y') }}</span>
                                            {% else %}
                                                <span class="text-muted">Не указан</span>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if task.assignedUser %}
                                                {{ task.assignedUser.fullName }}
                                            {% else %}
                                                Не назначена
                                            {% endif %}
                                        </td>
                                        <td>{{ task.createdAt|date('d.m.Y H:i') }}</td>
                                    </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <p class="text-muted">Нет недавних задач для отображения.</p>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="col-xl-4 col-lg-5">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-history me-2"></i>Недавняя активность
                    </h6>
                </div>
                <div class="card-body">
                    {% if recent_activity %}
                    <div class="timeline">
                        {% for activity in recent_activity[:5] %}
                        <div class="timeline-item mb-3 p-3 border-start border-primary border-3 rounded">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="mb-1">{{ activity.action }}</h6>
                                    <small class="text-muted">
                                        <i class="fas fa-user me-1"></i>{{ activity.user.fullName }} • 
                                        <i class="fas fa-clock me-1"></i>{{ activity.createdAt|date('d.m.Y H:i') }}
                                    </small>
                                    {% if activity.description %}
                                    <div class="mt-2 text-muted small">{{ activity.description }}</div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    {% else %}
                    <p class="text-muted">Нет недавней активности.</p>
                    {% endif %}
                </div>
            </div>
            
            <!-- User Info -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-user me-2"></i>Информация о пользователе
                    </h6>
                </div>
                <div class="card-body text-center">
                    <img src="{{ user.avatarUrl }}" alt="Avatar" class="rounded-circle mb-3" width="100" height="100">
                    <h5 class="card-title">{{ user.fullName }}</h5>
                    <p class="card-text text-muted">{{ user.email }}</p>
                    <p class="card-text">
                        {% if user.position %}
                            <small class="text-muted"><i class="fas fa-briefcase me-1"></i>{{ user.position }}</small>
                        {% endif %}
                        {% if user.department %}
                            <br>
                            <small class="text-muted"><i class="fas fa-building me-1"></i>{{ user.department }}</small>
                        {% endif %}
                    </p>
                    <div class="mt-3">
                        <a href="{{ path('app_profile_show') }}" class="btn btn-primary btn-sm me-2">
                            <i class="fas fa-user-circle me-1"></i>Профиль
                        </a>
                        <a href="{{ path('app_profile_change_password') }}" class="btn btn-warning btn-sm">
                            <i class="fas fa-key me-1"></i>Пароль
                        </a>
                    </div>
                </div>
            </div>

            {% if user_stats %}
            <!-- User Stats for Admins -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-bar me-2"></i>Статистика пользователей
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center mb-3">
                        <div class="col-6 border-end">
                            <div class="text-success">{{ user_stats.active }}</div>
                            <small class="text-muted">Активных</small>
                        </div>
                        <div class="col-6">
                            <div class="text-info">{{ user_stats.admins }}</div>
                            <small class="text-muted">Администраторов</small>
                        </div>
                    </div>
                    <div class="row text-center">
                        <div class="col-6 border-end">
                            <div class="text-warning">{{ user_stats.managers }}</div>
                            <small class="text-muted">Менеджеров</small>
                        </div>
                        <div class="col-6">
                            <div class="text-secondary">{{ user_stats.total - user_stats.active }}</div>
                            <small class="text-muted">Неактивных</small>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
        
        <!-- Task Completion Trends Chart -->
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">
                        <i class="fas fa-chart-line me-2"></i>Тренды выполнения задач
                    </h6>
                </div>
                <div class="card-body">
                    <canvas id="trendsChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Trends Chart Script -->
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const trendsCtx = document.getElementById('trendsChart').getContext('2d');
        
        {% if completion_trends %}
        const trendsData = {
            labels: {{ completion_trends.labels|json_encode|raw }},
            datasets: {{ completion_trends.datasets|json_encode|raw }}
        };
        
        const trendsConfig = {
            type: 'line',
            data: trendsData,
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: 'Тренды выполнения задач за последние 30 дней'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        };
        
        new Chart(trendsCtx, trendsConfig);
        {% endif %}
    });
</script>
{% endblock %}