<script>
document.addEventListener('DOMContentLoaded', function() {
    // Load quick stats via AJAX
    loadQuickStats();
    
    // Simulate loading state for demonstration
    const recentTasksLoading = document.getElementById('recent-tasks-loading');
    const recentTasksContent = document.getElementById('recent-tasks-content');
    
    // Show loading skeleton for 2 seconds
    if (recentTasksLoading && recentTasksContent) {
        recentTasksLoading.style.display = 'block';
        recentTasksContent.style.display = 'none';
        
        setTimeout(() => {
            recentTasksLoading.style.display = 'none';
            recentTasksContent.style.display = 'block';
            
            // Add fade-in animation to content
            recentTasksContent.style.opacity = '0';
            recentTasksContent.style.transition = 'opacity 0.5s ease';
            
            setTimeout(() => {
                recentTasksContent.style.opacity = '1';
            }, 50);
        }, 2000);
    }
    
    // Add hover effects to task items
    const taskItems = document.querySelectorAll('.task-item-enhanced');
    taskItems.forEach(item => {
        item.addEventListener('mouseenter', function() {
            this.style.transform = 'translateX(8px)';
        });
        
        item.addEventListener('mouseleave', function() {
            this.style.transform = 'translateX(0)';
        });
    });
    
    // Add click animations
    const taskLinks = document.querySelectorAll('.task-title a');
    taskLinks.forEach(link => {
        link.addEventListener('click', function(e) {
            const parentItem = this.closest('.task-item-enhanced');
            if (parentItem) {
                parentItem.style.animation = 'pulse 0.3s ease';
                setTimeout(() => {
                    parentItem.style.animation = '';
                }, 300);
            }
        });
    });
    
    // Load chart data asynchronously
    loadChartData();
    
    // Refresh data every 5 minutes (300000ms) instead of 30 seconds
    // Uncomment the line below if you want auto-refresh
    // setInterval(() => {
    //     loadQuickStats();
    //     loadChartData();
    // }, 300000);
});

function loadQuickStats() {
    fetch('/tasks/api/stats')
        .then(response => response.json())
        .then(stats => {
            // Update stat numbers with smooth transitions
            updateStatNumber('total-tasks', stats.total);
            updateStatNumber('pending-tasks', stats.pending);
            updateStatNumber('in_progress-tasks', stats.in_progress || stats.pending); // Fallback for compatibility
            updateStatNumber('completed-tasks', stats.completed);
            
            // Update completion rate
            const completionRate = stats.completion_rate || 0;
            updateStatNumber('completion-rate', completionRate + '%');
            
            // Update progress bars
            updateProgressBar('progress-bar.bg-success', completionRate);
            updateProgressBar('progress-bar.bg-warning', stats.pending / stats.total * 100);
            updateProgressBar('progress-bar.bg-info', stats.in_progress / stats.total * 100);
        })
        .catch(error => {
            console.error('Error loading quick stats:', error);
        });
}

function updateStatNumber(elementId, newValue) {
    const element = document.querySelector(`#${elementId}, .stat-number.${elementId}`);
    if (element) {
        // Animate the number change
        const currentValue = parseFloat(element.textContent.replace('%', '')) || 0;
        animateValue(element, currentValue, newValue, 1000);
    }
}

function updateProgressBar(selector, percentage) {
    const progressBar = document.querySelector(selector);
    if (progressBar) {
        // Animate the width change
        const currentWidth = parseFloat(progressBar.style.width) || 0;
        animateValue(progressBar, currentWidth, percentage, 1000, (value) => {
            progressBar.style.width = value + '%';
            progressBar.setAttribute('aria-valuenow', value);
        });
    }
}

function animateValue(element, start, end, duration, callback) {
    let startTime = null;
    
    const step = (timestamp) => {
        if (!startTime) startTime = timestamp;
        const progress = Math.min((timestamp - startTime) / duration, 1);
        
        const current = start + (end - start) * progress;
        
        if (callback) {
            callback(current);
        } else {
            if (element.textContent.includes('%')) {
                element.textContent = Math.round(current) + '%';
            } else {
                element.textContent = Math.round(current);
            }
        }
        
        if (progress < 1) {
            window.requestAnimationFrame(step);
        }
    };
    
    window.requestAnimationFrame(step);
}

function loadChartData() {
    fetch('/analytics/api/data')
        .then(response => response.json())
        .then(data => {
            renderCharts(data);
        })
        .catch(error => {
            console.error('Error loading analytics:', error);
        });
}

function renderCharts(data) {
    // Destroy existing charts to prevent memory leaks
    if (window.statusChart) window.statusChart.destroy();
    if (window.priorityChart) window.priorityChart.destroy();
    if (window.tagChart) window.tagChart.destroy();
    
    // Task Status Distribution Chart
    const statusCtx = document.getElementById('statusChart').getContext('2d');
    window.statusChart = new Chart(statusCtx, {
        type: 'pie',
        data: {
            labels: ['Завершено', 'В процессе', 'В ожидании'],
            datasets: [{
                data: [
                    data.quickStats?.completed || 0,
                    data.quickStats?.in_progress || 0,
                    data.quickStats?.pending || 0
                ],
                backgroundColor: [
                    'rgba(40, 167, 69, 0.8)', // green for completed
                    'rgba(23, 162, 184, 0.8)', // teal for in progress
                    'rgba(255, 193, 7, 0.8)'   // yellow for pending
                ],
                borderColor: [
                    'rgba(40, 167, 69, 1)',
                    'rgba(23, 162, 184, 1)',
                    'rgba(255, 193, 7, 1)'
                ],
                borderWidth: 1,
                hoverOffset: 15
            }]
        },
        options: {
            responsive: true,
            animation: {
                animateRotate: true,
                animateScale: true,
                duration: 1000
            },
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        padding: 20,
                        usePointStyle: true,
                        pointStyle: 'circle'
                    }
                },
                tooltip: {
                    backgroundColor: 'rgba(0, 0, 0, 0.8)',
                    titleFont: {
                        size: 14,
                        weight: 'bold'
                    },
                    bodyFont: {
                        size: 13
                    },
                    callbacks: {
                        label: function(context) {
                            const label = context.label || '';
                            const value = context.raw || 0;
                            const total = context.chart.getDatasetMeta(0).total;
                            const percentage = Math.round((value / total) * 100);
                            return `${label}: ${value} задач (${percentage}%)`;
                        }
                    }
                }
            }
        }
    });

    // Task Priority Distribution Chart
    const priorityCtx = document.getElementById('priorityChart').getContext('2d');
    window.priorityChart = new Chart(priorityCtx, {
        type: 'bar',
        data: {
            labels: ['Низкий', 'Средний', 'Высокий'],
            datasets: [{
                label: 'Количество задач',
                data: [
                    data.quickStats?.low_priority || 0,
                    data.quickStats?.medium_priority || 0,
                    data.quickStats?.high_priority || 0
                ],
                backgroundColor: [
                    'rgba(40, 167, 69, 0.8)',  // green for low
                    'rgba(255, 193, 7, 0.8)',  // yellow for medium
                    'rgba(220, 53, 69, 0.8)'   // red for high
                ],
                borderColor: [
                    'rgba(40, 167, 69, 1)',
                    'rgba(255, 193, 7, 1)',
                    'rgba(220, 53, 69, 1)'
                ],
                borderWidth: 1,
                borderRadius: 6,
                borderSkipped: false
            }]
        },
        options: {
            responsive: true,
            animation: {
                duration: 1500,
                easing: 'easeInOutQuart'
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        precision: 0
                    },
                    grid: {
                        color: 'rgba(0, 0, 0, 0.05)'
                    }
                },
                x: {
                    grid: {
                        display: false
                    }
                }
            },
            plugins: {
                legend: {
                    display: false
                },
                tooltip: {
                    backgroundColor: 'rgba(0, 0, 0, 0.8)',
                    callbacks: {
                        label: function(context) {
                            return `Задач: ${context.raw}`;
                        }
                    }
                }
            }
        }
    });
    
    // Task Tag Distribution Chart
    if (typeof tag_stats !== 'undefined' && tag_stats.length > 0) {
        const tagCtx = document.getElementById('tagChart').getContext('2d');
        window.tagChart = new Chart(tagCtx, {
            type: 'doughnut',
            data: {
                labels: tag_stats.slice(0, 10).map(tag => tag.name),
                datasets: [{
                    data: tag_stats.slice(0, 10).map(tag => tag.taskCount),
                    backgroundColor: tag_stats.slice(0, 10).map(tag => tag.color),
                    borderColor: tag_stats.slice(0, 10).map(() => 'rgba(255, 255, 255, 1)'),
                    borderWidth: 2,
                    hoverOffset: 10
                }]
            },
            options: {
                responsive: true,
                cutout: '60%',
                animation: {
                    animateRotate: true,
                    animateScale: true,
                    duration: 1200
                },
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            padding: 20,
                            usePointStyle: true,
                            pointStyle: 'circle',
                            font: {
                                size: 12
                            }
                        }
                    },
                    tooltip: {
                        backgroundColor: 'rgba(0, 0, 0, 0.8)',
                        titleFont: {
                            size: 14,
                            weight: 'bold'
                        },
                        bodyFont: {
                            size: 13
                        },
                        callbacks: {
                            label: function(context) {
                                const label = context.label || '';
                                const value = context.raw || 0;
                                const total = context.chart.getDatasetMeta(0).total;
                                const percentage = Math.round((value / total) * 100);
                                return `${label}: ${value} задач (${percentage}%)`;
                            }
                        }
                    }
                }
            }
        });
    }
    
    // Add click interaction to charts
    statusChart.canvas.onclick = function(evt) {
        const activePoints = statusChart.getElementsAtEventForMode(evt, 'nearest', { intersect: true }, true);
        if (activePoints.length > 0) {
            const firstPoint = activePoints[0];
            const label = statusChart.data.labels[firstPoint.index];
            const statusMap = {
                'Завершено': 'completed',
                'В процессе': 'in_progress',
                'В ожидании': 'pending'
            };
            
            if (statusMap[label]) {
                window.location.href = `{{ path('app_task_index') }}?status=${statusMap[label]}`;
            }
        }
    };
    
    priorityChart.canvas.onclick = function(evt) {
        const activePoints = priorityChart.getElementsAtEventForMode(evt, 'nearest', { intersect: true }, true);
        if (activePoints.length > 0) {
            const firstPoint = activePoints[0];
            const label = priorityChart.data.labels[firstPoint.index];
            const priorityMap = {
                'Низкий': 'low',
                'Средний': 'medium',
                'Высокий': 'high'
            };
            
            if (priorityMap[label]) {
                window.location.href = `{{ path('app_task_index') }}?priority=${priorityMap[label]}`;
            }
        }
    };
    
    // Initialize dependency visualization
    loadDependencyVisualization();
}

// Dependency Visualization Functions
async function loadDependencyVisualization() {
    try {
        const response = await fetch('/api/tasks/all');
        const tasks = await response.json();
        
        // Filter tasks that have dependencies
        const tasksWithDeps = tasks.filter(task => {
            // Look for tasks that either depend on others or block others
            return task.id; // We'll check dependencies separately
        });
        
        // Calculate dependency statistics
        let blockingTasks = 0;
        let blockedTasks = 0;
        
        tasksWithDeps.forEach(task => {
            if (task.dependencies && task.dependencies.length > 0) {
                blockedTasks++;
                // Count how many dependencies are not satisfied
                const unsatisfied = task.dependencies.filter(dep => !dep.is_satisfied);
                if (unsatisfied.length > 0) {
                    blockingTasks++;
                }
            }
        });
        
        // Update dependency stats in the dashboard
        updateDependencyStats(blockingTasks, blockedTasks, tasks.length);
        
    } catch (error) {
        console.error('Error loading dependency visualization:', error);
    }
}

function updateDependencyStats(blockingTasks, blockedTasks, totalTasks) {
    // Update dependency stats in existing elements
    const totalDepEl = document.getElementById('total-dependencies');
    const blockingDepEl = document.getElementById('blocking-dependencies');
    const satisfiedDepEl = document.getElementById('satisfied-dependencies');
    const unsatisfiedDepEl = document.getElementById('unsatisfied-dependencies');
    
    if (totalDepEl) totalDepEl.textContent = totalTasks;
    if (blockingDepEl) blockingDepEl.textContent = blockingTasks;
    if (satisfiedDepEl) satisfiedDepEl.textContent = blockedTasks - blockingTasks;
    if (unsatisfiedDepEl) unsatisfiedDepEl.textContent = blockingTasks;
}
</script>

