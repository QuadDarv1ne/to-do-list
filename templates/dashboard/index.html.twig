                                <div class="stat-circle" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                    <div class="stat-value">{{ goals_stats.on_track }}</div>
                                </div>
                                <small class="text-muted d-block mt-2">На пути</small>
                            </div>
                        </div>
                        
                        {% for goal in active_goals %}
                            <div class="goal-mini-card mb-2">
                                <div class="d-flex justify-content-between align-items-center mb-1">
                                    <span class="fw-medium">{{ goal.title }}</span>
                                    <span class="badge bg-primary">{{ goal.progress|number_format(0) }}%</span>
                                </div>
