<!-- CRM Sales Analytics Metrics -->
<div class="row mb-4">
    <div class="col-12">
        <h4 class="mb-4 fw-bold">
            <i class="fas fa-chart-line me-2 text-primary"></i>
            Ключевые показатели продаж (KPI)
        </h4>
    </div>
</div>

<div class="row mb-4">
    <!-- Conversion Rate -->
    <div class="col-md-3 mb-4">
        <div class="crm-metric-card success">
            <div class="d-flex justify-content-between align-items-start mb-2">
                <div class="metric-icon">
                    <i class="fas fa-percentage fa-2x text-success"></i>
                </div>
                {% if crm_metrics.conversion_trend > 0 %}
                    <span class="metric-trend up">
                        <i class="fas fa-arrow-up me-1"></i>
                        {{ crm_metrics.conversion_trend|abs|number_format(1) }}%
                    </span>
                {% elseif crm_metrics.conversion_trend < 0 %}
                    <span class="metric-trend down">
                        <i class="fas fa-arrow-down me-1"></i>
                        {{ crm_metrics.conversion_trend|abs|number_format(1) }}%
                    </span>
                {% endif %}
            </div>
            <div class="metric-label">Конверсия</div>
            <div class="metric-value text-success">{{ crm_metrics.conversion_rate }}%</div>
            <div class="progress mt-3" style="height: 8px;">
                <div class="progress-bar bg-success" role="progressbar" 
                     style="width: {{ crm_metrics.conversion_rate }}%"></div>
            </div>
        </div>
    </div>

    <!-- Win Rate -->
    <div class="col-md-3 mb-4">
        <div class="crm-metric-card primary">
            <div class="d-flex justify-content-between align-items-start mb-2">
                <div class="metric-icon">
                    <i class="fas fa-trophy fa-2x text-primary"></i>
                </div>
            </div>
            <div class="metric-label">Процент успеха</div>
            <div class="metric-value text-primary">{{ crm_metrics.win_rate }}%</div>
            <div class="progress mt-3" style="height: 8px;">
                <div class="progress-bar" role="progressbar" 
                     style="width: {{ crm_metrics.win_rate }}%; background: var(--primary-gradient);"></div>
            </div>
        </div>
    </div>

    <!-- Pipeline Value -->
    <div class="col-md-3 mb-4">
        <div class="crm-metric-card info">
            <div class="d-flex justify-content-between align-items-start mb-2">
                <div class="metric-icon">
                    <i class="fas fa-funnel-dollar fa-2x text-info"></i>
                </div>
            </div>
            <div class="metric-label">Активные сделки</div>
            <div class="metric-value text-info">{{ crm_metrics.pipeline_value }}</div>
            <small class="text-muted">
                <i class="fas fa-chart-bar me-1"></i>
                В работе
            </small>
        </div>
    </div>

    <!-- Average Cycle -->
    <div class="col-md-3 mb-4">
        <div class="crm-metric-card warning">
            <div class="d-flex justify-content-between align-items-start mb-2">
                <div class="metric-icon">
                    <i class="fas fa-clock fa-2x text-warning"></i>
                </div>
            </div>
            <div class="metric-label">Средний цикл</div>
            <div class="metric-value text-warning">{{ crm_metrics.avg_cycle_days }}</div>
            <small class="text-muted">
                <i class="fas fa-calendar-alt me-1"></i>
                дней
            </small>
        </div>
    </div>
</div>

<!-- Additional Metrics Row -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="card border-0 shadow-sm h-100" style="border-radius: 12px;">
            <div class="card-body text-center">
                <i class="fas fa-handshake fa-2x text-success mb-3"></i>
                <h5 class="mb-1">{{ crm_metrics.won_deals }}</h5>
                <p class="text-muted mb-0 small">Выигранные сделки</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card border-0 shadow-sm h-100" style="border-radius: 12px;">
            <div class="card-body text-center">
                <i class="fas fa-spinner fa-2x text-info mb-3"></i>
                <h5 class="mb-1">{{ crm_metrics.active_deals }}</h5>
                <p class="text-muted mb-0 small">Активные сделки</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card border-0 shadow-sm h-100" style="border-radius: 12px;">
            <div class="card-body text-center">
                <i class="fas fa-hourglass-half fa-2x text-warning mb-3"></i>
                <h5 class="mb-1">{{ crm_metrics.pending_deals }}</h5>
                <p class="text-muted mb-0 small">Ожидающие</p>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-3">
        <div class="card border-0 shadow-sm h-100" style="border-radius: 12px;">
            <div class="card-body text-center">
                <i class="fas fa-briefcase fa-2x text-primary mb-3"></i>
                <h5 class="mb-1">{{ crm_metrics.total_deals }}</h5>
                <p class="text-muted mb-0 small">Всего сделок</p>
            </div>
        </div>
    </div>
</div>
