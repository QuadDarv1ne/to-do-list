{# templates/dashboard/enhanced.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}{{ page_title }} | CRM{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
{% endblock %}

{% block body %}
<div class="dashboard-enhanced py-4">
    <div class="container-fluid">
        <!-- Заголовок -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="h3 mb-1">
                            <i class="fas fa-chart-line me-2"></i>
                            {{ page_title }}
                        </h1>
                        <p class="text-muted mb-0">
                            Добро пожаловать, {{ app.user.firstName }}!
                        </p>
                    </div>
                    <div>
                        <button class="btn btn-outline-primary" onclick="refreshStats()">
                            <i class="fas fa-sync-alt me-2"></i>
                            Обновить
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Карточки сводки -->
        <div class="row g-4 mb-4">
            <div class="col-xl-3 col-md-6">
                <div class="card stat-card stat-card-primary h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <p class="text-muted mb-1 small text-uppercase fw-bold">Всего задач</p>
                                <h3 class="mb-0">{{ stats.summary.total }}</h3>
                            </div>
                            <div class="stat-icon">
                                <i class="fas fa-tasks"></i>
                            </div>
                        </div>
                        <div class="mt-3">
                            <div class="progress" style="height: 4px;">
                                <div class="progress-bar" role="progressbar" 
                                     style="width: {{ stats.summary.completion_rate }}%"></div>
                            </div>
                            <small class="text-muted">
                                {{ stats.summary.completion_rate }}% выполнено
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="card stat-card stat-card-success h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <p class="text-muted mb-1 small text-uppercase fw-bold">Выполнено</p>
                                <h3 class="mb-0">{{ stats.summary.completed }}</h3>
                            </div>
                            <div class="stat-icon">
                                <i class="fas fa-check-circle"></i>
                            </div>
                        </div>
                        <div class="mt-3">
                            <small class="text-success">
                                <i class="fas fa-arrow-up"></i>
                                {{ stats.productivityStats.completed_today }} сегодня
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="card stat-card stat-card-warning h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <p class="text-muted mb-1 small text-uppercase fw-bold">В процессе</p>
                                <h3 class="mb-0">{{ stats.summary.in_progress }}</h3>
                            </div>
                            <div class="stat-icon">
                                <i class="fas fa-spinner"></i>
                            </div>
                        </div>
                        <div class="mt-3">
                            <small class="text-muted">
                                {{ stats.productivityStats.completed_this_week }} на этой неделе
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3 col-md-6">
                <div class="card stat-card stat-card-danger h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <p class="text-muted mb-1 small text-uppercase fw-bold">Просрочено</p>
                                <h3 class="mb-0">{{ stats.summary.overdue }}</h3>
                            </div>
                            <div class="stat-icon">
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                        </div>
                        <div class="mt-3">
                            <small class="text-danger">
                                <i class="fas fa-clock"></i>
                                {{ stats.summary.high_priority }} высоких приоритетов
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Графики -->
        <div class="row g-4 mb-4">
            <div class="col-lg-8">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-white border-0 pb-0">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-chart-area me-2"></i>
                            Продуктивность (7 дней)
                        </h5>
                    </div>
                    <div class="card-body">
                        <canvas id="productivityChart" height="80"></canvas>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-white border-0 pb-0">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-chart-pie me-2"></i>
                            По статусам
                        </h5>
                    </div>
                    <div class="card-body">
                        <canvas id="statusChart" height="200"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Дополнительная статистика -->
        <div class="row g-4 mb-4">
            <div class="col-lg-6">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-white border-0 pb-0">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-fire me-2"></i>
                            Продуктивность
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-6">
                                <div class="text-center p-3 bg-light rounded">
                                    <div class="display-6 text-primary mb-2">
                                        <i class="fas fa-clock"></i>
                                    </div>
                                    <h4 class="mb-0">{{ stats.productivityStats.avg_completion_days }}</h4>
                                    <small class="text-muted">дней на задачу</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="text-center p-3 bg-light rounded">
                                    <div class="display-6 text-success mb-2">
                                        <i class="fas fa-fire"></i>
                                    </div>
                                    <h4 class="mb-0">{{ stats.productivityStats.streak_days }}</h4>
                                    <small class="text-muted">дней подряд</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="text-center p-3 bg-light rounded">
                                    <div class="display-6 text-info mb-2">
                                        <i class="fas fa-calendar-day"></i>
                                    </div>
                                    <h4 class="mb-0">{{ stats.productivityStats.completed_today }}</h4>
                                    <small class="text-muted">сегодня</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="text-center p-3 bg-light rounded">
                                    <div class="display-6 text-warning mb-2">
                                        <i class="fas fa-calendar-week"></i>
                                    </div>
                                    <h4 class="mb-0">{{ stats.productivityStats.completed_this_week }}</h4>
                                    <small class="text-muted">на неделе</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-white border-0 pb-0 d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-clock me-2"></i>
                            Предстоящие дедлайны
                        </h5>
                        <a href="{{ path('app_task_index') }}" class="btn btn-sm btn-outline-primary">
                            Все задачи
                        </a>
                    </div>
                    <div class="card-body p-0">
                        {% if stats.upcomingDeadlines|length > 0 %}
                        <div class="list-group list-group-flush">
                            {% for deadline in stats.upcomingDeadlines %}
                            <div class="list-group-item d-flex justify-content-between align-items-center p-3">
                                <div class="flex-grow-1">
                                    <h6 class="mb-1">{{ deadline.task.title }}</h6>
                                    <small class="text-muted">
                                        <i class="fas fa-calendar me-1"></i>
                                        {{ deadline.due_date|date('d.m.Y') }}
                                    </small>
                                </div>
                                <span class="badge bg-{{ deadline.urgency == 'overdue' ? 'danger' : (deadline.urgency == 'today' ? 'warning' : 'secondary') }}">
                                    {% if deadline.urgency == 'overdue' %}
                                        <i class="fas fa-exclamation-triangle me-1"></i>
                                        Просрочено
                                    {% elseif deadline.urgency == 'today' %}
                                        Сегодня
                                    {% elseif deadline.urgency == 'tomorrow' %}
                                        Завтра
                                    {% else %}
                                        {{ deadline.days_left }} дн.
                                    {% endif %}
                                </span>
                            </div>
                            {% endfor %}
                        </div>
                        {% else %}
                        <div class="text-center p-4">
                            <i class="fas fa-check-circle text-success display-4 mb-3"></i>
                            <p class="text-muted mb-0">Нет предстоящих дедлайнов!</p>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Быстрые действия -->
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            <i class="fas fa-bolt me-2"></i>
                            Быстрые действия
                        </h5>
                        <div class="d-flex gap-2 flex-wrap">
                            <a href="{{ path('app_task_new') }}" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>
                                Новая задача
                            </a>
                            <a href="{{ path('app_kanban_board') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-columns me-2"></i>
                                Канбан
                            </a>
                            <a href="{{ path('app_calendar') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-calendar me-2"></i>
                                Календарь
                            </a>
                            <a href="{{ path('app_export_index') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-download me-2"></i>
                                Экспорт
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .stat-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        border-radius: 16px;
    }
    
    .stat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15) !important;
    }
    
    .stat-card .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
    }
    
    .stat-card-primary .stat-icon {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }
    
    .stat-card-success .stat-icon {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
    }
    
    .stat-card-warning .stat-icon {
        background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        color: white;
    }
    
    .stat-card-danger .stat-icon {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        color: white;
    }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Цветовая схема
    const colors = {
        primary: '#667eea',
        success: '#10b981',
        warning: '#f59e0b',
        danger: '#ef4444',
        info: '#3b82f6',
        purple: '#764ba2'
    };

    // График продуктивности
    const productivityCtx = document.getElementById('productivityChart').getContext('2d');
    const productivityData = {{ stats.completedTasksTrend|json_encode|raw }};
    
    new Chart(productivityCtx, {
        type: 'line',
        data: {
            labels: productivityData.map(d => d.label),
            datasets: [{
                label: 'Выполнено задач',
                data: productivityData.map(d => d.count),
                borderColor: colors.primary,
                backgroundColor: 'rgba(102, 126, 234, 0.1)',
                fill: true,
                tension: 0.4,
                pointRadius: 4,
                pointHoverRadius: 6
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: false
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        stepSize: 1
                    }
                }
            }
        }
    });

    // Круговая диаграмма статусов
    const statusCtx = document.getElementById('statusChart').getContext('2d');
    const statusData = {{ stats.tasksByStatus|json_encode|raw }};
    
    new Chart(statusCtx, {
        type: 'doughnut',
        data: {
            labels: Object.keys(statusData).map(k => k.replace('_', ' ')),
            datasets: [{
                data: Object.values(statusData),
                backgroundColor: [
                    colors.primary,
                    colors.success,
                    colors.warning
                ],
                borderWidth: 0
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom'
                }
            }
        }
    });

    // Автообновление каждые 5 минут
    setInterval(refreshStats, 300000);
});

function refreshStats() {
    fetch('{{ path('app_dashboard_api_stats') }}')
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            }
        })
        .catch(err => console.error('Error refreshing stats:', err));
}
</script>
{% endblock %}
