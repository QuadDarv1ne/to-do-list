{# templates/dashboard/widgets_enhanced.html.twig #}
{# Enhanced Dashboard Widgets with Modern UI #}

<div class="dashboard-widgets-enhanced">
    {# Metrics Row #}
    <div class="metrics-row">
        {# Total Tasks Widget #}
        <div class="metric-card metric-primary" data-animate="slide-up" data-delay="0">
            <div class="metric-icon">
                <i class="fas fa-tasks"></i>
            </div>
            <div class="metric-content">
                <div class="metric-value" data-counter="{{ stats.totalTasks|default(0) }}">0</div>
                <div class="metric-label">Всего задач</div>
            </div>
            <div class="metric-trend {{ stats.tasksTrend > 0 ? 'up' : 'down' }}">
                <i class="fas fa-arrow-{{ stats.tasksTrend > 0 ? 'up' : 'down' }}"></i>
                {{ stats.tasksTrend|default(0)|abs }}%
            </div>
        </div>

        {# Completed Tasks Widget #}
        <div class="metric-card metric-success" data-animate="slide-up" data-delay="100">
            <div class="metric-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="metric-content">
                <div class="metric-value" data-counter="{{ stats.completedTasks|default(0) }}">0</div>
                <div class="metric-label">Выполнено</div>
            </div>
            <div class="metric-trend up">
                <i class="fas fa-arrow-up"></i>
                {{ stats.completedTrend|default(0) }}%
            </div>
        </div>

        {# In Progress Widget #}
        <div class="metric-card metric-warning" data-animate="slide-up" data-delay="200">
            <div class="metric-icon">
                <i class="fas fa-clock"></i>
            </div>
            <div class="metric-content">
                <div class="metric-value" data-counter="{{ stats.inProgressTasks|default(0) }}">0</div>
                <div class="metric-label">В процессе</div>
            </div>
            <div class="metric-progress">
                <div class="progress-enhanced">
                    <div class="progress-bar warning" data-value="{{ stats.inProgressPercent|default(0) }}"></div>
                </div>
            </div>
        </div>

        {# Overdue Widget #}
        <div class="metric-card metric-danger" data-animate="slide-up" data-delay="300">
            <div class="metric-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <div class="metric-content">
                <div class="metric-value" data-counter="{{ stats.overdueTasks|default(0) }}">0</div>
                <div class="metric-label">Просрочено</div>
            </div>
            <div class="metric-alert">
                <span class="badge-enhanced badge-danger">Требует внимания</span>
            </div>
        </div>
    </div>

    {# Charts Row #}
    <div class="charts-row">
        {# Activity Chart #}
        <div class="chart-card" data-animate="fade-in" data-delay="400">
            <div class="chart-header">
                <h5 class="chart-title">
                    <i class="fas fa-chart-line me-2"></i>
                    Активность
                </h5>
                <div class="chart-actions">
                    <select class="chart-period-selector">
                        <option value="week">Неделя</option>
                        <option value="month">Месяц</option>
                        <option value="year">Год</option>
                    </select>
                </div>
            </div>
            <div class="chart-body">
                <canvas id="activityChart" height="80"></canvas>
            </div>
        </div>

        {# Tasks by Status #}
        <div class="chart-card" data-animate="fade-in" data-delay="500">
            <div class="chart-header">
                <h5 class="chart-title">
                    <i class="fas fa-chart-pie me-2"></i>
                    Статус задач
                </h5>
            </div>
            <div class="chart-body">
                <canvas id="tasksStatusChart" height="200"></canvas>
            </div>
        </div>
    </div>

    {# Recent Tasks & Activity #}
    <div class="content-row">
        {# Recent Tasks #}
        <div class="content-card" data-animate="slide-up" data-delay="600">
            <div class="card-header-enhanced">
                <h5 class="card-title">
                    <i class="fas fa-list me-2"></i>
                    Последние задачи
                </h5>
                <a href="{{ path('app_task_index') }}" class="card-link">
                    Все задачи <i class="fas fa-arrow-right"></i>
                </a>
            </div>
            <div class="card-body-enhanced">
                <div class="tasks-list">
                    {% for task in recentTasks|default([]) %}
                        <div class="task-item" data-task-id="{{ task.id }}">
                            <div class="task-checkbox">
                                <input type="checkbox" class="task-complete-checkbox" 
                                       {{ task.completed ? 'checked' : '' }}
                                       data-url="{{ path('app_task_toggle_complete', {id: task.id}) }}">
                            </div>
                            <div class="task-content">
                                <div class="task-title {{ task.completed ? 'completed' : '' }}">
                                    {{ task.title }}
                                </div>
                                <div class="task-meta">
                                    <span class="task-due-date">
                                        <i class="fas fa-calendar"></i>
                                        {{ task.dueDate|date('d.m.Y') }}
                                    </span>
                                    <span class="task-priority priority-{{ task.priority }}">
                                        <i class="fas fa-flag"></i>
                                        {{ task.priority|trans }}
                                    </span>
                                </div>
                            </div>
                            <div class="task-actions">
                                <a href="{{ path('app_task_edit', {id: task.id}) }}" 
                                   class="btn-icon" title="Редактировать">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button class="btn-icon btn-delete" 
                                        data-url="{{ path('app_task_delete', {id: task.id}) }}"
                                        title="Удалить">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    {% else %}
                        <div class="empty-state">
                            <i class="fas fa-tasks empty-icon"></i>
                            <p class="empty-text">Нет активных задач</p>
                            <a href="{{ path('app_task_new') }}" class="btn-enhanced btn-primary mt-3">
                                <i class="fas fa-plus"></i>
                                Создать задачу
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

        {# Recent Activity #}
        <div class="content-card" data-animate="slide-up" data-delay="700">
            <div class="card-header-enhanced">
                <h5 class="card-title">
                    <i class="fas fa-history me-2"></i>
                    Недавняя активность
                </h5>
                <a href="{{ path('app_activity') }}" class="card-link">
                    Вся активность <i class="fas fa-arrow-right"></i>
                </a>
            </div>
            <div class="card-body-enhanced">
                <div class="activity-timeline">
                    {% for activity in recentActivity|default([]) %}
                        <div class="activity-item">
                            <div class="activity-marker {{ activity.type }}"></div>
                            <div class="activity-content">
                                <div class="activity-text">
                                    {{ activity.description }}
                                </div>
                                <div class="activity-time">
                                    <i class="fas fa-clock"></i>
                                    {{ activity.createdAt|time_diff }}
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="empty-state">
                            <i class="fas fa-history empty-icon"></i>
                            <p class="empty-text">Нет недавней активности</p>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    {# Team Members Widget #}
    {% if teamMembers is defined %}
    <div class="team-row" data-animate="fade-in" data-delay="800">
        <div class="team-card">
            <div class="card-header-enhanced">
                <h5 class="card-title">
                    <i class="fas fa-users me-2"></i>
                    Команда
                </h5>
                <a href="{{ path('app_user_index') }}" class="card-link">
                    Все участники <i class="fas fa-arrow-right"></i>
                </a>
            </div>
            <div class="card-body-enhanced">
                <div class="team-members-grid">
                    {% for member in teamMembers|slice(0, 8) %}
                        <div class="team-member" title="{{ member.fullName }}">
                            <div class="member-avatar avatar-enhanced">
                                {% if member.avatar %}
                                    <img src="{{ asset('uploads/avatars/' ~ member.avatar) }}" alt="{{ member.firstName }}">
                                {% else %}
                                    {{ member.firstName|first }}{{ member.lastName|first }}
                                {% endif %}
                                <span class="avatar-status {{ member.isOnline ? 'online' : 'offline' }}"></span>
                            </div>
                            <div class="member-name">{{ member.firstName }}</div>
                        </div>
                    {% endfor %}
                    {% if teamMembers|length > 8 %}
                        <div class="team-member more-members">
                            <div class="member-avatar avatar-enhanced">
                                +{{ teamMembers|length - 8 }}
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    {% endif %}
</div>

{# Styles #}
<style>
.dashboard-widgets-enhanced {
    display: grid;
    gap: 1.5rem;
    --metric-card-bg: var(--bg-primary);
    --metric-text: var(--text-primary);
}

/* Metrics Row */
.metrics-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
}

.metric-card {
    background: var(--metric-card-bg);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    box-shadow: var(--shadow);
    display: flex;
    align-items: center;
    gap: 1rem;
    transition: all var(--duration-normal) var(--ease-smooth);
    position: relative;
    overflow: hidden;
}

.metric-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
}

.metric-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
}

.metric-primary::before { background: linear-gradient(90deg, var(--primary), var(--primary-light)); }
.metric-success::before { background: linear-gradient(90deg, var(--success), var(--success-light)); }
.metric-warning::before { background: linear-gradient(90deg, var(--warning), var(--warning-light)); }
.metric-danger::before { background: linear-gradient(90deg, var(--danger), var(--danger-light)); }

.metric-icon {
    width: 56px;
    height: 56px;
    border-radius: var(--radius-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    color: #fff;
}

.metric-primary .metric-icon { background: linear-gradient(135deg, var(--primary), var(--primary-dark)); }
.metric-success .metric-icon { background: linear-gradient(135deg, var(--success), var(--success-dark)); }
.metric-warning .metric-icon { background: linear-gradient(135deg, var(--warning), var(--warning-dark)); }
.metric-danger .metric-icon { background: linear-gradient(135deg, var(--danger), var(--danger-dark)); }

.metric-content {
    flex: 1;
}

.metric-value {
    font-size: 1.75rem;
    font-weight: var(--font-weight-bold);
    color: var(--metric-text);
    line-height: 1;
    margin-bottom: 0.25rem;
}

.metric-label {
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
}

.metric-trend {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    padding: 0.25rem 0.5rem;
    border-radius: 9999px;
}

.metric-trend.up {
    background: var(--success-100);
    color: var(--success-700);
}

.metric-trend.down {
    background: var(--danger-100);
    color: var(--danger-700);
}

.metric-progress {
    width: 100px;
}

.metric-alert {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

/* Charts Row */
.charts-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 1.5rem;
}

.chart-card,
.content-card,
.team-card {
    background: var(--bg-primary);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow);
    overflow: hidden;
}

.chart-header,
.card-header-enhanced {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.25rem 1.5rem;
    border-bottom: 1px solid var(--border-primary);
}

.chart-title,
.card-title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--text-primary);
    margin: 0;
    display: flex;
    align-items: center;
}

.chart-actions {
    display: flex;
    gap: 0.5rem;
}

.chart-period-selector {
    padding: 0.5rem 1rem;
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
    background: var(--bg-primary);
    color: var(--text-primary);
    font-size: var(--font-size-sm);
    cursor: pointer;
}

.chart-body {
    padding: 1.5rem;
}

.card-body-enhanced {
    padding: 1.5rem;
}

/* Tasks List */
.tasks-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.task-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1rem;
    border-radius: var(--radius-lg);
    background: var(--bg-secondary);
    transition: all var(--duration-fast) var(--ease-out);
}

.task-item:hover {
    background: var(--bg-hover);
}

.task-checkbox input[type="checkbox"] {
    width: 20px;
    height: 20px;
    cursor: pointer;
}

.task-content {
    flex: 1;
    min-width: 0;
}

.task-title {
    font-weight: var(--font-weight-medium);
    color: var(--text-primary);
    margin-bottom: 0.5rem;
    transition: all var(--duration-fast) var(--ease-out);
}

.task-title.completed {
    text-decoration: line-through;
    color: var(--text-tertiary);
}

.task-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
}

.task-due-date,
.task-priority {
    display: flex;
    align-items: center;
    gap: 0.25rem;
}

.task-actions {
    display: flex;
    gap: 0.5rem;
}

.btn-icon {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-lg);
    background: transparent;
    border: none;
    color: var(--text-tertiary);
    cursor: pointer;
    transition: all var(--duration-fast) var(--ease-out);
}

.btn-icon:hover {
    background: var(--bg-primary);
    color: var(--primary);
}

.btn-icon.btn-delete:hover {
    color: var(--danger);
}

/* Empty State */
.empty-state {
    text-align: center;
    padding: 3rem 1.5rem;
}

.empty-icon {
    font-size: 3rem;
    color: var(--text-tertiary);
    margin-bottom: 1rem;
}

.empty-text {
    color: var(--text-secondary);
    margin-bottom: 0;
}

/* Activity Timeline */
.activity-timeline {
    position: relative;
    padding-left: 2rem;
}

.activity-timeline::before {
    content: '';
    position: absolute;
    left: 8px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: var(--border-primary);
}

.activity-item {
    position: relative;
    padding-bottom: 1.5rem;
}

.activity-item:last-child {
    padding-bottom: 0;
}

.activity-marker {
    position: absolute;
    left: -2rem;
    width: 18px;
    height: 18px;
    border-radius: 50%;
    background: var(--primary);
    border: 3px solid var(--bg-primary);
}

.activity-marker.completed { background: var(--success); }
.activity-marker.warning { background: var(--warning); }
.activity-marker.danger { background: var(--danger); }

.activity-content {
    padding-top: 0.25rem;
}

.activity-text {
    color: var(--text-primary);
    margin-bottom: 0.25rem;
}

.activity-time {
    font-size: var(--font-size-sm);
    color: var(--text-tertiary);
    display: flex;
    align-items: center;
    gap: 0.25rem;
}

/* Team Members */
.team-members-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
    gap: 1rem;
}

.team-member {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
}

.member-avatar {
    width: 48px;
    height: 48px;
}

.member-name {
    font-size: var(--font-size-xs);
    color: var(--text-primary);
    text-align: center;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 100%;
}

.more-members .member-avatar {
    background: var(--bg-tertiary);
    color: var(--text-secondary);
}

/* Responsive */
@media (max-width: 768px) {
    .metrics-row {
        grid-template-columns: 1fr;
    }
    
    .charts-row {
        grid-template-columns: 1fr;
    }
    
    .team-members-grid {
        grid-template-columns: repeat(auto-fill, minmax(60px, 1fr));
    }
}
</style>
