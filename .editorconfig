# editorconfig.org
# Документация: https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

# PHP файлы
[*.php]
indent_size = 4
indent_style = space

# Twig шаблоны
[*.twig]
indent_size = 4
indent_style = space

# JavaScript файлы
[*.{js,mjs}]
indent_size = 4
indent_style = space

# TypeScript файлы
[*.ts]
indent_size = 4
indent_style = space

# JSON файлы
[*.json]
indent_size = 2
indent_style = space

# YAML файлы
[*.{yaml,yml}]
indent_size = 2
indent_style = space

# Docker файлы
[{Dockerfile,Dockerfile.*}]
indent_size = 4
indent_style = space

# Bash скрипты
[*.sh]
indent_size = 4
indent_style = space

# SQL файлы
[*.sql]
indent_size = 4
indent_style = space

# CSS/SCSS файлы
[*.{css,scss}]
indent_size = 4
indent_style = space

# Markdown файлы
[*.md]
trim_trailing_whitespace = false
max_line_length = 0

# HTML файлы
[*.html]
indent_size = 4
indent_style = space

# XML файлы
[*.xml]
indent_size = 4
indent_style = space

# Makefile
[{Makefile,makefile,GNUmakefile}]
indent_size = 4
indent_style = tab

# .env файлы
[*.env]
indent_size = 2
indent_style = space

# Исключения для vendor и var
[{vendor,var,node_modules}/**]
insert_final_newline = false
trim_trailing_whitespace = false
