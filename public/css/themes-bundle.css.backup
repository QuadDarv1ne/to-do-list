    color: var(--text-secondary);
}

[data-theme='dark'] .dropdown-divider {
    border-color: var(--border);
    opacity: 0.3;
}

/* Scrollbar from dark-theme.css */
::-webkit-scrollbar {
    width: 8px;
    height: 8px;
}

::-webkit-scrollbar-track {
    background: var(--bg-body);
}

::-webkit-scrollbar-thumb {
    background: var(--border);
    border-radius: 4px;
}

::-webkit-scrollbar-thumb:hover {
    background: var(--text-secondary);
}

/* Form Controls from dark-theme.css */
[data-theme='dark'] .form-control:focus,
[data-theme='dark'] .form-select:focus {
    outline: none;
    border-color: var(--primary) !important;
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1) !important;
}

[data-theme='dark'] input[type="checkbox"] {
    accent-color: var(--primary);
}

/* Animations from dark-theme.css */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes slideIn {
    from {
        transform: translateX(-20px);
        opacity: 0;
    }
    to {
        transform: translateX(0);
        opacity: 1;
    }
}

@keyframes shimmer {
    0% {
        background-position: 200% 0;
    }
    100% {
        background-position: -200% 0;
    }
}

/* Skeleton Loading from dark-theme.css */
.skeleton {
    background: linear-gradient(90deg, var(--bg-body) 25%, var(--bg-card) 50%, var(--bg-body) 75%);
    background-size: 200% 100%;
    animation: shimmer 1.5s infinite;
    border-radius: 8px;
}

/* Hover Effects from dark-theme.css */
[data-theme='dark'] tr:hover {
    background: var(--bg-body) !important;
}

.stat-card.sales:hover {
    box-shadow: 0 8px 24px rgba(77, 212, 172, 0.3);
}

.stat-card.orders:hover {
    box-shadow: 0 8px 24px rgba(255, 217, 61, 0.3);
}

.stat-card.bonuses:hover {
    box-shadow: 0 8px 24px rgba(255, 107, 203, 0.3);
}

.stat-card.clients:hover {
    box-shadow: 0 8px 24px rgba(139, 127, 244, 0.3);
}

/* Mobile Menu from dark-theme.css */
@media (max-width: 768px) {
    .sidebar {
        width: 60px;
    }
    
    .sidebar.open {
        transform: translateX(0);
    }
}
/* ============================================
   DARK THEME IMPROVEMENTS
   Улучшения тёмной темы v2
   ============================================ */

/* ============================================
   DARK THEME VARIABLES
   ============================================ */

[data-theme="dark"] {
    /* Primary colors */
    --primary: #3b82f6;
    --primary-light: #60a5fa;
    --primary-dark: #2563eb;
    
    /* Background colors */
    --bg-body: #0f172a;
    --bg-card: #1e293b;
    --bg-elevated: #334155;
    
    /* Text colors */
    --text-primary: #f1f5f9;
    --text-secondary: #cbd5e1;
    --text-muted: #64748b;
    
    /* Border colors */
    --border: #334155;
    --border-light: #475569;
    
    /* Status colors */
    --success: #10b981;
    --success-bg: rgba(16, 185, 129, 0.1);
    --warning: #f59e0b;
    --warning-bg: rgba(245, 158, 11, 0.1);
    --danger: #ef4444;
    --danger-bg: rgba(239, 68, 68, 0.1);
    --info: #3b82f6;
    --info-bg: rgba(59, 130, 246, 0.1);
    
    /* Shadow colors */
    --shadow-sm: rgba(0, 0, 0, 0.3);
    --shadow: rgba(0, 0, 0, 0.4);
    --shadow-lg: rgba(0, 0, 0, 0.5);
    
    /* Input colors */
    --input-bg: #1e293b;
    --input-border: #475569;
    --input-text: #f1f5f9;
    --input-placeholder: #64748b;
    
    /* Hover colors */
    --hover-bg: rgba(255, 255, 255, 0.05);
    --hover-border: #475569;
}

/* ============================================
   BODY & BASE
   ============================================ */

[data-theme="dark"] body {
    background: var(--bg-body);
    color: var(--text-primary);
}

[data-theme="dark"] .card {
    background: var(--bg-card);
    border-color: var(--border);
    box-shadow: 0 2px 8px var(--shadow);
}

[data-theme="dark"] .card-header {
    background: var(--bg-elevated);
    border-bottom-color: var(--border);
}

[data-theme="dark"] .card-footer {
    background: var(--bg-elevated);
    border-top-color: var(--border);
}

/* ============================================
   NAVBAR
   ============================================ */

[data-theme="dark"] .navbar {
    background: var(--bg-card);
    border-bottom-color: var(--border);
}

[data-theme="dark"] .navbar-brand-enhanced {
    color: var(--text-primary);
}

[data-theme="dark"] .nav-link-enhanced {
    color: var(--text-secondary);
}

[data-theme="dark"] .nav-link-enhanced:hover,
[data-theme="dark"] .nav-link-enhanced.active {
    color: var(--primary);
}

[data-theme="dark"] .dropdown-menu-enhanced {
    background: var(--bg-card);
    border-color: var(--border);
    box-shadow: 0 10px 40px var(--shadow-lg);
}

[data-theme="dark"] .dropdown-item-enhanced {
    color: var(--text-secondary);
}

[data-theme="dark"] .dropdown-item-enhanced:hover {
    background: var(--hover-bg);
    color: var(--primary);
}

[data-theme="dark"] .dropdown-header-enhanced {
    color: var(--text-muted);
}

[data-theme="dark"] .dropdown-divider-enhanced {
    border-top-color: var(--border);
}

/* ============================================
   BUTTONS
   ============================================ */

[data-theme="dark"] .btn {
    border-color: var(--border-light);
}

[data-theme="dark"] .btn-primary {
    background: var(--primary);
    border-color: var(--primary);
}

[data-theme="dark"] .btn-primary:hover {
    background: var(--primary-dark);
    border-color: var(--primary-dark);
}

[data-theme="dark"] .btn-outline-primary {
    color: var(--primary);
    border-color: var(--primary);
}

[data-theme="dark"] .btn-outline-primary:hover {
    background: var(--primary);
    border-color: var(--primary);
}

[data-theme="dark"] .btn-outline-secondary {
    color: var(--text-secondary);
    border-color: var(--border-light);
}

[data-theme="dark"] .btn-outline-secondary:hover {
    background: var(--hover-bg);
    color: var(--text-primary);
    border-color: var(--border-light);
}

[data-theme="dark"] .btn-light {
    background: var(--bg-elevated);
    color: var(--text-primary);
    border-color: var(--border-light);
}

[data-theme="dark"] .btn-light:hover {
    background: var(--hover-bg);
}

/* ============================================
   FORMS
   ============================================ */

[data-theme="dark"] .form-control,
[data-theme="dark"] .form-select {
    background: var(--input-bg);
    border-color: var(--input-border);
    color: var(--input-text);
}

[data-theme="dark"] .form-control:focus,
[data-theme="dark"] .form-select:focus {
    background: var(--input-bg);
    border-color: var(--primary);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
}

[data-theme="dark"] .form-control::placeholder {
    color: var(--input-placeholder);
}

[data-theme="dark"] .form-check-input {
    background: var(--input-bg);
    border-color: var(--input-border);
}

[data-theme="dark"] .form-check-input:checked {
    background: var(--primary);
    border-color: var(--primary);
}

[data-theme="dark"] .form-check-label {
    color: var(--text-secondary);
}

[data-theme="dark"] .form-label {
    color: var(--text-secondary);
}

/* ============================================
   BADGES
   ============================================ */

[data-theme="dark"] .badge {
    background: var(--bg-elevated);
    color: var(--text-secondary);
}

[data-theme="dark"] .badge.bg-light {
    background: var(--bg-elevated) !important;
    color: var(--text-secondary);
}

[data-theme="dark"] .badge.bg-warning {
    color: #000;
}

/* ============================================
   LISTS
   ============================================ */

[data-theme="dark"] .list-group-item {
    background: var(--bg-card);
    border-color: var(--border);
    color: var(--text-secondary);
}

[data-theme="dark"] .list-group-item-action {
    color: var(--text-secondary);
}

[data-theme="dark"] .list-group-item-action:hover {
    background: var(--hover-bg);
    color: var(--text-primary);
}

[data-theme="dark"] .list-group-item.active {
    background: var(--primary);
    border-color: var(--primary);
}

/* ============================================
   TABLES
   ============================================ */

[data-theme="dark"] .table {
    color: var(--text-secondary);
}

[data-theme="dark"] .table thead th {
    border-bottom-color: var(--border-light);
    background: var(--bg-elevated);
}

[data-theme="dark"] .table tbody tr {
    border-bottom-color: var(--border);
}

[data-theme="dark"] .table tbody tr:hover {
    background: var(--hover-bg);
}

[data-theme="dark"] .table-striped tbody tr:nth-of-type(odd) {
    background: rgba(255, 255, 255, 0.02);
}

/* ============================================
   TASK ITEMS
   ============================================ */

[data-theme="dark"] .task-item,
[data-theme="dark"] .list-group-item.task-item-enhanced {
    background: var(--bg-card);
    border-color: var(--border) !important;
}

[data-theme="dark"] .task-item:hover,
[data-theme="dark"] .list-group-item.task-item-enhanced:hover {
    background: var(--hover-bg);
}

[data-theme="dark"] .task-title a {
    color: var(--text-primary);
}

[data-theme="dark"] .task-meta {
    color: var(--text-muted);
}

[data-theme="dark"] .task-description {
    color: var(--text-secondary);
}

/* ============================================
   MODALS
   ============================================ */

[data-theme="dark"] .modal-content {
    background: var(--bg-card);
    border-color: var(--border);
}

[data-theme="dark"] .modal-header {
    border-bottom-color: var(--border);
}

[data-theme="dark"] .modal-footer {
    border-top-color: var(--border);
}

[data-theme="dark"] .modal-title {
    color: var(--text-primary);
}

[data-theme="dark"] .btn-close {
    filter: invert(1) grayscale(100%) brightness(200%);
}

/* ============================================
   TOOLTIPS & POPOVERS
   ============================================ */

[data-theme="dark"] .tooltip-inner {
    background: var(--bg-elevated);
    color: var(--text-primary);
}

[data-theme="dark"] .bs-tooltip-top .tooltip-arrow::before {
    border-top-color: var(--bg-elevated);
}

[data-theme="dark"] .bs-tooltip-bottom .tooltip-arrow::before {
    border-bottom-color: var(--bg-elevated);
}

/* ============================================
   PROGRESS BARS
   ============================================ */

[data-theme="dark"] .progress {
    background: var(--bg-elevated);
}

[data-theme="dark"] .progress-bar {
    background: var(--primary);
}

/* ============================================
   SKELETON LOADERS
   ============================================ */

[data-theme="dark"] .skeleton {
    background: linear-gradient(
        90deg,
        var(--bg-elevated) 0%,
        var(--bg-card) 50%,
        var(--bg-elevated) 100%
    );
}

/* ============================================
   SCROLLBARS
   ============================================ */

[data-theme="dark"] ::-webkit-scrollbar {
    width: 10px;
    height: 10px;
}

[data-theme="dark"] ::-webkit-scrollbar-track {
    background: var(--bg-body);
}

[data-theme="dark"] ::-webkit-scrollbar-thumb {
    background: var(--border-light);
    border-radius: 5px;
}

[data-theme="dark"] ::-webkit-scrollbar-thumb:hover {
    background: var(--text-muted);
}

/* Firefox */
[data-theme="dark"] * {
    scrollbar-color: var(--border-light) var(--bg-body);
}

/* ============================================
   QUICK ACTION BUTTONS
   ============================================ */

[data-theme="dark"] .quick-action-btn-enhanced {
    background: var(--bg-elevated);
    color: var(--text-secondary);
    border-color: var(--border-light);
}

[data-theme="dark"] .quick-action-btn-enhanced:hover {
    background: var(--primary);
    color: #fff;
    border-color: var(--primary);
}

[data-theme="dark"] .notification-badge-enhanced {
    background: var(--danger);
}

/* ============================================
   USER AVATAR
   ============================================ */

[data-theme="dark"] .user-avatar-enhanced {
    background: var(--bg-elevated);
    color: var(--text-secondary);
    border-color: var(--border-light);
}

/* ============================================
   FILTER CHIPS
   ============================================ */

[data-theme="dark"] .filter-chip {
    background: var(--bg-elevated);
    border-color: var(--border-light);
    color: var(--text-secondary);
}

[data-theme="dark"] .filter-chip:hover,
[data-theme="dark"] .filter-chip.active {
    background: var(--primary);
    border-color: var(--primary);
    color: #fff;
}

/* ============================================
   INLINE EDIT DROPDOWN
   ============================================ */

[data-theme="dark"] .inline-edit-dropdown {
    background: var(--bg-card);
    border-color: var(--border);
    box-shadow: 0 10px 40px var(--shadow-lg);
}

[data-theme="dark"] .inline-edit-dropdown-item:hover {
    background: var(--hover-bg);
}

/* ============================================
   TOAST NOTIFICATIONS
   ============================================ */

[data-theme="dark"] .toast {
    background: var(--bg-card);
    border-color: var(--border);
    box-shadow: 0 10px 40px var(--shadow-lg);
}

[data-theme="dark"] .toast-header {
    border-bottom-color: var(--border);
}

/* ============================================
   BREADCRUMBS
   ============================================ */

[data-theme="dark"] .breadcrumb-item a {
    color: var(--text-secondary);
}

[data-theme="dark"] .breadcrumb-item.active {
    color: var(--text-muted);
}

[data-theme="dark"] .breadcrumb-item + .breadcrumb-item::before {
    color: var(--text-muted);
}

/* ============================================
   PAGINATION
   ============================================ */

[data-theme="dark"] .page-link {
    background: var(--bg-card);
    border-color: var(--border);
    color: var(--text-secondary);
}

[data-theme="dark"] .page-link:hover {
    background: var(--hover-bg);
    border-color: var(--border-light);
    color: var(--text-primary);
}

[data-theme="dark"] .page-item.active .page-link {
    background: var(--primary);
    border-color: var(--primary);
}

[data-theme="dark"] .page-item.disabled .page-link {
    background: var(--bg-elevated);
    border-color: var(--border);
    color: var(--text-muted);
}

/* ============================================
   CONTRAST & ACCESSIBILITY
   ============================================ */

/* Ensure minimum contrast ratio of 4.5:1 for text */
[data-theme="dark"] .text-muted {
    color: #94a3b8 !important;
}

[data-theme="dark"] .text-secondary {
    color: #cbd5e1 !important;
}

/* High contrast mode */
@media (prefers-contrast: high) {
    [data-theme="dark"] {
        --border: #64748b;
        --text-muted: #94a3b8;
    }
    
    [data-theme="dark"] .card,
    [data-theme="dark"] .btn,
    [data-theme="dark"] .form-control {
        border-width: 2px;
    }
}

/* ============================================
   TRANSITIONS
   ============================================ */

[data-theme="dark"] .card,
[data-theme="dark"] .btn,
[data-theme="dark"] .form-control,
[data-theme="dark"] .nav-link {
    transition: background-color 0.2s ease, border-color 0.2s ease, color 0.2s ease;
}

/* ============================================
   PRINT STYLES
   ============================================ */

@media print {
    [data-theme="dark"] body {
        background: #fff;
        color: #000;
    }
    
    [data-theme="dark"] .card,
    [data-theme="dark"] .navbar,
    [data-theme="dark"] .modal {
        background: #fff;
        border-color: #000;
    }
}


/* === CALENDAR FIXES FOR ALL THEMES === */
.calendar-day-number {
    color: var(--text-primary) !important;
}

.calendar-day {
    color: var(--text-primary) !important;
}

.calendar-header {
    color: var(--text-primary) !important;
}

[data-theme='dark'] .calendar-day {
    background: var(--bg-card);
    border-color: var(--border);
}

[data-theme='dark'] .calendar-day:hover {
    background: var(--bg-elevated, #374151);
}

[data-theme='dark'] .calendar-day.today {
    background: rgba(59, 130, 246, 0.2);
    border-color: var(--primary);
}


/* === CHART/GRAPH TEXT FIXES === */
.analytics-chart,
.chart-container,
canvas {
    color: var(--text-primary) !important;
}

/* Для Chart.js и других библиотек */
[data-theme='dark'] canvas {
    filter: brightness(0.9);
}
