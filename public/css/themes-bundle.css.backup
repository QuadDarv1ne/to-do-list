/* ============================================
   MULTI-THEME SYSTEM
   Light, Dark, Orange, Purple, Custom
   ============================================ */

/* === BASE THEME VARIABLES === */
:root {
    /* Light Theme (Default) */
    --primary: #667eea;
    --primary-dark: #5568d3;
    --primary-light: #7c8ef0;
    --success: #28a745;
    --warning: #ffc107;
    --danger: #dc3545;
    --info: #17a2b8;
    --text-primary: #212529;
    --text-secondary: #6c757d;
    --text-muted: #adb5bd;
    --border: #e0e0e0;
    --bg-body: #f5f5f5;
    --bg-card: #ffffff;
    --shadow: 0 1px 2px rgba(0,0,0,0.05);
    --shadow-hover: 0 2px 8px rgba(0,0,0,0.08);
    
    /* Brand Colors from dark-theme.css */
    --color-sales: #4dd4ac;
    --color-orders: #ffd93d;
    --color-bonuses: #ff6bcb;
    --color-clients: #8b7ff4;
}

/* === DARK THEME === */
[data-theme='dark'] {
    --primary: #3b82f6;
    --primary-dark: #2563eb;
    --primary-light: #60a5fa;
    --success: #10b981;
    --warning: #f59e0b;
    --danger: #ef4444;
    --info: #06b6d4;
    --text-primary: #f9fafb;
    --text-secondary: #9ca3af;
    --text-muted: #6b7280;
    --border: #374151;
    --bg-body: #111827;
    --bg-card: #1f2937;
    --shadow: 0 1px 2px rgba(0,0,0,0.3);
    --shadow-hover: 0 2px 8px rgba(0,0,0,0.4);
}

/* === ORANGE THEME === */
[data-theme='orange'] {
    --primary: #f97316;
    --primary-dark: #ea580c;
    --primary-light: #fb923c;
    --success: #22c55e;
    --warning: #eab308;
    --danger: #ef4444;
    --info: #06b6d4;
    --text-primary: #1c1917;
    --text-secondary: #78716c;
    --text-muted: #a8a29e;
    --border: #e7e5e4;
    --bg-body: #fef3f2;
    --bg-card: #ffffff;
    --shadow: 0 1px 2px rgba(249,115,22,0.1);
    --shadow-hover: 0 2px 8px rgba(249,115,22,0.15);
}

/* === PURPLE THEME === */
[data-theme='purple'] {
    --primary: #a855f7;
    --primary-dark: #9333ea;
    --primary-light: #c084fc;
    --success: #22c55e;
    --warning: #f59e0b;
    --danger: #ef4444;
    --info: #06b6d4;
    --text-primary: #1e1b4b;
    --text-secondary: #6b7280;
    --text-muted: #9ca3af;
    --border: #e9d5ff;
    --bg-body: #faf5ff;
    --bg-card: #ffffff;
    --shadow: 0 1px 2px rgba(168,85,247,0.1);
    --shadow-hover: 0 2px 8px rgba(168,85,247,0.15);
}

/* === CUSTOM THEME (User-defined) === */
[data-theme='custom'] {
    --primary: var(--custom-primary, #667eea);
    --primary-dark: var(--custom-primary-dark, #5568d3);
    --primary-light: var(--custom-primary-light, #7c8ef0);
    --success: var(--custom-success, #28a745);
    --warning: var(--custom-warning, #ffc107);
    --danger: var(--custom-danger, #dc3545);
    --info: var(--custom-info, #17a2b8);
    --text-primary: var(--custom-text-primary, #212529);
    --text-secondary: var(--custom-text-secondary, #6c757d);
    --text-muted: var(--custom-text-muted, #adb5bd);
    --border: var(--custom-border, #e0e0e0);
    --bg-body: var(--custom-bg-body, #f5f5f5);
    --bg-card: var(--custom-bg-card, #ffffff);
}

/* Custom Theme Navbar */
[data-theme='custom'] .navbar {
    background: linear-gradient(135deg, var(--custom-primary, #667eea) 0%, var(--custom-primary-dark, #5568d3) 100%);
    color: white;
}

[data-theme='custom'] .navbar .nav-link-enhanced {
    color: rgba(255,255,255,0.9);
}

[data-theme='custom'] .navbar .nav-link-enhanced:hover,
[data-theme='custom'] .navbar .nav-link-enhanced:focus {
    background: rgba(255,255,255,0.15);
