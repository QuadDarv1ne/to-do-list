# Example environment configuration file
# Copy this file to .env and update with your actual values

###> symfony/framework-bundle ###
APP_ENV=dev
APP_SECRET=change_this_to_a_random_secret_value
APP_SHARE_DIR=var/share
###< symfony/framework-bundle ###

###> symfony/routing ###
DEFAULT_URI=http://localhost
###< symfony/routing ###

###> doctrine/doctrine-bundle ###
# SQLite (default for development)
DATABASE_URL="sqlite:///%kernel.project_dir%/var/data.db"

# PostgreSQL (recommended for production)
# DATABASE_URL="postgresql://username:password@127.0.0.1:5432/database_name?serverVersion=16&charset=utf8"

# MySQL
# DATABASE_URL="mysql://username:password@127.0.0.1:3306/database_name?serverVersion=8.0.32&charset=utf8mb4"
###< doctrine/doctrine-bundle ###

###> symfony/messenger ###
# Doctrine transport (default)
MESSENGER_TRANSPORT_DSN=doctrine://default?auto_setup=0

# Redis transport (for production)
# MESSENGER_TRANSPORT_DSN=redis://localhost:6379/messages

# RabbitMQ transport
# MESSENGER_TRANSPORT_DSN=amqp://guest:guest@localhost:5672/%2f/messages
###< symfony/messenger ###

###> symfony/mailer ###
# Development (Mailpit/MailHog)
MAILER_DSN=smtp://localhost:1025

# Production (SMTP)
# MAILER_DSN=smtp://username:password@smtp.example.com:587

# Gmail
# MAILER_DSN=gmail+smtp://username:password@default

# SendGrid
# MAILER_DSN=sendgrid://KEY@default
###< symfony/mailer ###

###> Redis (optional for caching) ###
# REDIS_URL=redis://localhost:6379
###< Redis ###
