{
  "name": "todo-list-app",
  "version": "2.0.0",
  "description": "To-Do List Application with Symfony - Enhanced Design System",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "minify:js": "node scripts/minify.js",
    "minify:css": "node scripts/minify.js",
    "minify:all": "node scripts/minify.js",
    "minify:design": "cleancss -o public/css/design-system.min.css public/css/design-system.css",
    "build:prod": "npm run minify:all && npm run minify:design",
    "build": "npm run minify:all",
    "lint": "eslint assets/**/*.js",
    "format": "prettier --write \"assets/**/*.js\""
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "terser": "^5.36.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "assets/controllers/**/*.js",
      "assets/**/*.js"
    ],
    "testMatch": [
      "<rootDir>/tests/js/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/js/setup.js"
    ]
  }
}