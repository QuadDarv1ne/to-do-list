{
  "name": "todo-list-app",
  "version": "1.0.0",
  "description": "To-Do List Application with Symfony",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "minify:js": "terser public/js/*.js --compress --mangle --output-dir public/js/min",
    "minify:css": "cleancss -o public/css/min public/css/*.css"
  },
  "devDependencies": {
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "terser": "^5.36.0",
    "clean-css-cli": "^5.6.3"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "assets/controllers/**/*.js",
      "assets/**/*.js"
    ],
    "testMatch": [
      "<rootDir>/tests/js/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/js/setup.js"
    ]
  }
}