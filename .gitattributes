# Set the default behavior, in case people don't have core.autocrlf set.
* text=auto eol=lf

# Explicitly declare source files
*.php text diff=php
*.twig text
*.js text
*.mjs text
*.ts text
*.css text
*.scss text
*.less text

# Denote all files that are truly binary and should not be modified.
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.webp binary
*.svg text
*.ico binary

*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary

# Archives
*.zip binary
*.tar binary
*.gz binary

# Documents
*.pdf binary
*.doc binary
*.docx binary
*.xls binary
*.xlsx binary

# Lock files
composer.lock text
package-lock.json text
yarn.lock text

# Config files
*.json text
*.yaml text
*.yml text
*.xml text
*.ini text
*.env text
*.neon text

# Shell scripts
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf

# Markdown
*.md text

# SQL
*.sql text

# HTML
*.html text

# Git files
.gitignore text
.gitattributes text
.editorconfig text

# Docker
Dockerfile text
docker-compose*.yaml text

# Symfony
.php-cs-fixer.dist.php text
phpstan.neon text
phpunit.*.xml text

# Tests
tests/** text

# Documentation
docs/** text

# Vendor and node_modules should not be tracked
/vendor/** -text
/node_modules/** -text
/var/** -text
/public/build/** -text
/public/assets/** -text
